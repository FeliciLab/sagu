class BusinessAdminGroupUser extends sBusiness implements IGroup
{
    /**
     *
     * @var int
     */
    public $idUser;
    
    /**
     *
     * @var int
     */
    public $idGroup;
    
    /**
     *
     * @var int
     */
    public $unitId;
    
    /**
     * miolo_group.m_group
     *
     * @var string
     */
    public $groupName;

    public function __construct($data = NULL)
    {
        parent::__construct( 'admin', $data );
        
        $this->_bclass = 'groupuser';
    }
    
    public function getIdUser()
    {
        return $this->idUser;
    }

    public function setIdUser($idUser)
    {
        $this->idUser = $idUser;
    }

    public function getIdGroup()
    {
        return $this->idGroup;
    }

    public function setIdGroup($idGroup)
    {
        $this->idGroup = $idGroup;
    }

    public function getUnitId()
    {
        return $this->unitId;
    }

    public function setUnitId($unitId)
    {
        $this->unitId = $unitId;
    }

    public function getGroupName()
    {
        return $this->groupName;
    }

    public function setGroupName($groupName)
    {
        $this->groupName = $groupName;
    }

        
    public function setData($data)
    {
        $this->idUser = $data->idUser;
        $this->idGroup = $data->idGroup;
    }

    public function listRange($range = NULL)
    {
        $criteria = $this->getCriteria();
        $criteria->setRange( $range );
        return $criteria->retrieveAsQuery();
    }

    public function listAll()
    {
        $criteria = $this->getCriteria();
        return $criteria->retrieveAsQuery();
    }

    public function getById($id)
    {
    }
    
    /**
     * @return BusinessAdminGroupUser
     */
    public function getByUserId($idUser)
    {
        $sql = new MSQL();
        $sql->setTables('miolo_groupuser gu')
            ->addInnerJoin('miolo_group g', 'g.idgroup = gu.idgroup')
            ->setColumns( array(
                 'gu.idgroup',
                 'gu.iduser',
                 'gu.unitid',
                 'g.m_group AS groupName'
             ) )
            ->setWhere('gu.idUser = ?', array($idUser));
        
        $rows = SDatabase::queryObject($sql, $this);
        return $rows;
    }

    public function deleteGroupUser($idgroup)
    {
        $MIOLO = MIOLO::getInstance();
        $db = $this->getDatabase();

        $sql= 'DELETE FROM miolo_groupuser
                     WHERE idgroup = ?';

        $params = array($iduser);
        $result = $db->execute(SAGU::prepare($sql, $params));

        return $result;
    }

    public function deleteUserGroup($iduser)
    {
        $MIOLO = MIOLO::getInstance();
        $db = $this->getDatabase();

        $sql= 'DELETE FROM miolo_groupuser
                     WHERE iduser = ?';

        $params = array($iduser);
        $result = $db->execute(SAGU::prepare($sql, $params));

        return $result;
    }

    public function insertUserInGroups(BusinessAdminGroupUser $user)
    {
        $MIOLO = MIOLO::getInstance();
        $db = $this->getDatabase();

        $tableData = array(
            'iduser' => $user->getIdUser(),
            'idgroup' => $user->getIdGroup(),
            'unitid' => $user->getUnitId(),
        );
        
        // Apaga grupos
        if ( strlen($user->getUnitId()) > 0 )
        {
            $sql = MSQL::deleteTable('miolo_groupuser', array_filter($tableData));
            $ok = $db->execute($sql);
        }
        
        // Insere dados
        $sql = MSQL::insertTable('miolo_groupuser', array_filter($tableData));
        $result = $db->execute($sql);

        return $result;
    }

    public function updateUserGroups($idUser, $groups)
    {
        $MIOLO = MIOLO::getInstance();
        $db = $this->getDatabase( 'admin' );
        
        $sql = 'BEGIN';
        $db->execute($sql);
        
        $sql = new MSQL('', 'miolo_groupuser', "idUser = {$idUser}");
        $db->execute($sql->delete());
        
        foreach ( $groups as $group )
        {
            $sql = new MSQL('idUser, idGroup', 'miolo_groupuser');
            $db->execute($sql->insert(array( $idUser,
                                             $group )));
        }
        
        $sql = 'COMMIT';
        $ok = $db->execute($sql);

        return $ok;
    }
    
    public function updateGroupUsers($idGroup, $users)
    {
        $MIOLO = MIOLO::getInstance();
        $db = $this->getDatabase();
        
        $sql = 'BEGIN';
        $db->execute($sql);
        
        $sql = new MSQL('', 'miolo_groupuser', "idGroup = {$idGroup}");
        $db->execute($sql->delete());
        
        foreach ( $users as $user )
        {
            $sql = new MSQL('idUser, idGroup', 'miolo_groupuser');
            $db->execute($sql->insert(array( $user,
                                             $idGroup )));
        }
        
        $sql = 'COMMIT';
        $db->execute($sql);
    }

    public function listUsersByGroup($idGroup)
    {
        $criteria = $this->getCriteria();
        $criteria->setDistinct(true);
        $criteria->addColumnAttribute('users.idUser');
        $criteria->addColumnAttribute('users.login');
        $criteria->addCriteria('idGroup','=', "$idGroup");
        return $criteria->retrieveAsQuery();
    }

    public function search($filters = null)
    {
        $MIOLO = MIOLO::getInstance();
        $db = $this->getDatabase();

        $sql = 'SELECT idUser,
                       idGroup,
                       unitId
                  FROM miolo_groupUser';

        $args = array();
        $where = '';
        if ( strlen($filters->idUser) > 0 )
        {
            $args[] = $filters->idUser;
            $where .= ' AND idUser = ?';
        }

        if ( strlen($filters->idGroup) > 0 )
        {
            $args[] = $filters->idGroup;
            $where .= ' AND idGroup = ? ';
        }
        
        if ( strlen($filters->unitId) > 0 )
        {
            $args[] = $filters->unitId;
            $where .= ' AND unitId = ? ';
        }

        $result = null;
        if ( strlen($where) > 0 )
        {
            $sql .= ' WHERE ' . substr($where, 4);

            $result = $db->query(SAGU::prepare($sql, $args));
        }

        return $result;
    }
}
