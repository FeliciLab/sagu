class grdLog extends MGrid
{
    var $MIOLO;

    /**
     * Class constructor
     **/
    function __construct()
    {
        $this->MIOLO = MIOLO::getInstance();
        $module = $this->MIOLO->getCurrentModule();
        
        $columns = array ( new MGridColumn('', 'left', false, 0, false),
                           new MGridColumn(_M('IP',$module),       'right',    null, '15%', true, null, true),
                           new MGridColumn(_M('Data', $module),     'center',   null, '15%', true, null, true),
                           new MGridColumn(_M('Horário', $module),     'right',    null, '15%', true, null, true),
                           new MGridColumn(_M('Modulo',$module),   'right',    null, '20%', true, null, true),
                           new MGridColumn(_M('Usuário', $module),     'right',    null, '20%', true, null, true),
                           new MGridColumn(_M('Tipo de SQL', $module), 'left',     null, '20%', true, null, true)
                         );

        parent::__construct( null, $columns, $this->MIOLO->getCurrentURL(), '20' ); 
//        $args = array('pointer' => '%0%',
//                      'mod'     => '%4%');
//        $href = $this->MIOLO->getActionURL($module, $this->MIOLO->getCurrentAction(), null, $args);
        $href = "javascript:doInfo(%0%,\'%4%\');";
        $this->addActionText(_M('info'), _M('Info'), $href);
    }

}
