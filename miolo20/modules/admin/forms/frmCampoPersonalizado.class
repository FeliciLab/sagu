class frmCampoPersonalizado extends SManagementForm
{
    public function __construct()
    {
        $MIOLO = MIOLO::getInstance();
        $MIOLO->uses('/ui/controls/msubdetail.class');

        parent::__construct(NULL, NULL, NULL, _M('Campos personalizados', MIOLO::getCurrentModule()));
    }

    public function defineFields()
    {
        $MIOLO = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();
        $function = MIOLO::_request('function');

        $fields[] = MMessage::getMessageContainer();

        $customFields = NULL;

        if ( in_array($function, array(SForm::FUNCTION_UPDATE, SForm::FUNCTION_DELETE)) )
        {
            $identifier = MIOLO::_REQUEST('identifier');

            if ( $this->isSubDetailEditMode() )
            {
                $customFields = MCustomField::listByIdentifier($identifier);
            }
        }
        elseif ( $this->isSubDetailEditMode() )
        {
            MSubDetail::clearData('customFields');
        }

        $fieldFormats = MCustomField::listFormatFields();
        $listNoYes = array(
            'f' => _M('No'),
            't' => _M('Sim'),
        );

        $fields[] = new MTextField('identifier', $identifier, _M('Identificador', $module), SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE'));

        $sFields[] = $sid = new MTextField('sId', NULL, _M('Cdigo', $module), SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE'));
        $sFields[] = new MTextField('sName', NULL, _M('Nome', $module), SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE'));

        $sFields[] = $ff = new MSelection('fieldFormat', NULL, _M('Formato do campo', $module), array());
        $ff->options = $fieldFormats;
        $ff->addAttribute('onchange', $this->getAjaxAction('atualizarValoresPossiveis', 'divPossibleValues', FALSE));

        $sFields[] = new MDiv('divPossibleValues', NULL);

        $sFields[] = new MTextField('regexp', NULL, _M('Expresso regular', $module), SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE'));
        $sFields[] = new MTextField('minLength', NULL, _M('Tamanho mnimo', $module), SAGU::getParameter('BASIC', 'FIELD_ID_SIZE'));
        $sFields[] = new MTextField('maxLength', NULL, _M('Tamanho mximo', $module), SAGU::getParameter('BASIC', 'FIELD_ID_SIZE'));
        $sFields[] = $r = new MSelection('required', NULL, _M('Obrigatrio', $module), array());
        $sFields[] = new MTextField('position', '0', _M('Posio', $module), SAGU::getParameter('BASIC', 'FIELD_ID_SIZE'));
        $sFields[] = new MTextField('defaultValue', NULL, _M('Valor padro', $module), SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE'));
        $sFields[] = $e = new MSelection('editable', 't', _M('Editvel', $module), array());
        $sFields[] = $v = new MSelection('sVisible', 't', _M('Visvel', $module), array());

        $r->options = $listNoYes;
        $e->options = $listNoYes;
        $v->options = $listNoYes;

        $columns[] = new MGridColumn(_M('Cdigo', $module), 'left', true, NULL, false, 'sId');
        $columns[] = new MGridColumn(_M('Nome', $module), 'left', true, NULL, true, 'sName');
        $columns[] = new MGridColumn(_M('Formato do campo', $module), 'left', true, NULL, true, 'fieldFormat', false, $fieldFormats);
        $columns[] = new MGridColumn(_M('Valores possveis', $module), 'left', true, NULL, false, 'possibleValues');
        $columns[] = new MGridColumn(_M('Expresso regular', $module), 'left', true, NULL, false, 'regexp');
        $columns[] = new MGridColumn(_M('Tamanho mnimo', $module), 'left', true, NULL, false, 'minLength');
        $columns[] = new MGridColumn(_M('Tamanho mximo', $module), 'left', true, NULL, false, 'maxLength');
        $columns[] = new MGridColumn(_M('Obrigatrio', $module), 'left', true, NULL, true, 'required', false, $listNoYes);
        $columns[] = new MGridColumn(_M('Posio', $module), 'left', true, NULL, true, 'position');
        $columns[] = new MGridColumn(_M('Valor padro', $module), 'left', true, NULL, true, 'defaultValue');
        $columns[] = new MGridColumn(_M('Editvel', $module), 'left', true, NULL, true, 'editable', false, $listNoYes);
        $columns[] = new MGridColumn(_M('Visvel', $module), 'left', true, NULL, true, 'sVisible', false, $listNoYes);

        $fields[] = $sub = new MSubDetail('customFields', _M('Campos', $module), $columns, $sFields, array('edit', 'remove'));
        $sub->addActionEvent(MSubDetail::EVENT_ADD, 'esconderValoresPossiveis', __CLASS__);
        $sub->addActionEvent(MSubDetail::EVENT_EDIT, 'corrigirValoresPossiveis', __CLASS__);

        $sValids[] = new MRequiredValidator('sId', _M('Cdigo', $module));
        $sValids[] = new MRequiredValidator('sName', _M('Nome', $module));
        $sValids[] = new MRequiredValidator('fieldFormat', _M('Formato do campo', $module));
        $sValids[] = new MIntegerValidator('minLength', _M('Tamanho mnimo', $module));
        $sValids[] = new MIntegerValidator('maxLength', _M('Tamanho mximo', $module));
        $sValids[] = new MIntegerValidator('position', _M('Posio', $module));
        $sub->setValidators($sValids);

        if ( $customFields )
        {
            $sub->setData($customFields);
        }

        $fields[] = new MSeparator();
        $valids[] = new MRequiredValidator('identifier');

        parent::defineFields($fields, $valids);
    }

    public function atualizarValoresPossiveis($args)
    {
        $MIOLO = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();
        $container = NULL;

        if ( $args->fieldFormat == MCustomField::FORMAT_LIST )
        {
            $possibleValues = new MMultilineField('possibleValues', NULL, _M('Valores possveis', $module), NULL, SAGU::getParameter('BASIC', 'FIELD_MULTILINE_NUM_ROWS'), SAGU::getParameter('BASIC', 'FIELD_MULTILINE_NUM_COLS'));
            $container = new MFormContainer(NULL, array($possibleValues));
        }

        $js = "document.getElementById('divPossibleValues').style.display = 'inline';";
        $MIOLO->page->addAJAXJsCode($js);

        return $container;
    }

    public function esconderValoresPossiveis($data)
    {
        $MIOLO = MIOLO::getInstance();
        $js = "document.getElementById('divPossibleValues').style.display = 'none';";
        $MIOLO->page->addAJAXJsCode($js);
        return $data;
    }

    public function corrigirValoresPossiveis($data)
    {
        $MIOLO = MIOLO::getInstance();

        if ( $data->fieldFormat == MCustomField::FORMAT_LIST )
        {
            $js = "document.getElementById('divPossibleValues').style.display = 'inline';";
        }
        else
        {
            $js = "document.getElementById('divPossibleValues').style.display = 'none';";
        }

        $MIOLO->page->addAJAXJsCode($js);
        return $data;
    }

    public function tbBtnSave_click()
    {
        $module = MIOLO::getCurrentModule();

        $formData = $this->getData();
        $sData = MSubDetail::getData('customFields');

        if ( count($sData) == 0 )
        {
            new MMessageWarning(_M('Pelo menos um campo deve ser adicionado', $module));
            return;
        }

        // Subdetail
        foreach ( $sData as $data )
        {
            $data->id = $data->sId;
            $data->name = $data->sName;
            $data->visible = $data->sVisible;

            if ( !isset($data->position) )
            {
                $data->position = 0;
            }

            $customField = new MCustomField($data);
            $customField->identifier = $formData->identifier;

            if ( $data->removeData )
            {
                $customField->delete();
            }
            else
            {
                if ( MIOLO::_REQUEST('function') == SForm::FUNCTION_UPDATE )
                {                    
                    if ( is_numeric($customField->id) )
                    {
                        $customField->update();
                    }
                    else
                    {
                        $customField->insert();
                    }
                }
                else
                {
                    $customField->insert();
                }
            }
        }
        
        if ( MIOLO::_REQUEST('function') == SForm::FUNCTION_UPDATE )
        {
            $this->displayMessageUpdate();
        }
        else
        {
            $this->displayMessageInsert();
        }
    }
}

?>