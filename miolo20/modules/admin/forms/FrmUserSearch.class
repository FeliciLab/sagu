class FrmUserSearch extends SSearchForm
{

    function __construct($data)
    {
        $module = SAGU::getFileModule(__FILE__);
        parent::__construct(_M('Pesquisar', $module), new AdmUser(), array('idUser'), 'BusUser');
    }

    function defineFields()
    {
        $MIOLO = MIOLO::getInstance();
        $module = SAGU::getFileModule(__FILE__);
        
        // Field user ID
        $userId = new MTextField('idUserS', $this->idUserS->value, _M('Cdigo do usurio', $module), SAGU::getParameter('BASIC', 'FIELD_ID_SIZE'));
        $userId->setJsHint(_M('Informe o codigo do usurio', $module ));
        $validators[] = new MIntegerValidator('idUserS', _M('Cdigo do usurio', $module), 'optional');
        $fields[] = $userId;

        // Field user login
        $loginName = new MTextField('loginS', $this->loginS->value, _M('Login do usurio', $module), SAGU::getParameter('BASIC', 'FIELD_ID_SIZE'));
        $loginName->setJsHint(_M('Informe o login do usurio', $module));
        $fields[] = $loginName;

        // Field user name
        $userName = new MTextField('nameS', $this->nameS->value, _M('Nome do usurio', $module), SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE'));
        $userName->setJsHint(_M('Informe o nome do usurio', $module));
        $fields[] = $userName;

        parent::defineFields($fields, $module, 'GrdUser', $validators);        
    }

    public function getTypesData()
    {
        $data = parent::getTypesData();
        $data->login = $this->GetFormValue('loginS');

        return $data;
    }
}
