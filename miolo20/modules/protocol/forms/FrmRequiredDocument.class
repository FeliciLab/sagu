class FrmRequiredDocument extends FrmSubjectFather
{
    /**
     * Class constructor
     **/
    public function __construct($steps = null)
    {
        $module = 'protocol';

        parent::__construct(_M('Documentos', $module), $steps, __CLASS__, new PtcSubjectSector(), array('subjectId, sectorId, level'));

        $this->toolbar->disableButton(MToolBar::BUTTON_SAVE);
        
    }

/**
 * Default method to define fields
 **/
    public function createFields()
    {
        $MIOLO = MIOLO::getInstance();
        $module	= SAGU::getFileModule(__FILE__);
        $action	= MIOLO::getCurrentAction();
        $function = MIOLO::_REQUEST('function');

        $cols[] = new MGridColumn(_M('Cdigo', $module), 'left', true, null, false, 'requiredDocumentId');
        $cols[] = new MGridColumn(_M('Documento', $module), 'left', true, null, true, 'description');
        $cols[] = new MGridColumn(_M('Upload requerido', $module), 'left', true, null, true, 'upload');
        $cols[] = new MGridColumn(_M('Descrio requerida', $module), 'left', true, null, true, 'descriptionreq');

        /**
         * Field description
         */
        $subFields[] = new MHiddenField('requiredDocumentId');
        $subFields[] = new MDiv('upload');
        $subFields[] = new MDiv('descriptionreq');

        $descriptionLabel = new MText('descriptionLabel', _M('Descrio', $module).':');
        $descriptionLabel->setWidth(SAGU::getParameter('BASIC', 'FIELD_CONTAINER_SIZE'));
        $descriptionLabel->setClass('m-caption m-caption-required');

        $description = new MTextField('description', null, null, SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE'));
        $description->setJsHint('Informe os documentos que sero requeridos para resolver este assunto');
        $validators[] = new MRequiredValidator('description', _M('Descrio', $module));
        $subFields[] = new MHContainer('hctDescription', array($descriptionLabel, $description));
        
        $uploadRequired = new MSelection('uploadRequired', null, _M('Upload requerido'), SAGU::listTrueFalse());
        $validators[] = new MRequiredValidator('uploadRequired', _M('Upload requerido', $module));
        $ajaxAction = SForm::getAjaxAction('FrmRequiredDocument::uploadRequiredChange', 'upload', false);
        $uploadRequired->addAttribute('onChange', $ajaxAction);
        $subFields[] = $uploadRequired;
        
        $descriptionRequired = new MSelection('descriptionRequired', null, _M('Descrio requerida'), SAGU::listTrueFalse());
        $ajaxAction = SForm::getAjaxAction('FrmRequiredDocument::descriptionRequiredChange', 'descriptionreq', false);
        $descriptionRequired->addAttribute('onChange', $ajaxAction);
        $subFields[] = $descriptionRequired;
		
        $fields[] = $sub = new MSubDetail('requiredDocuments', null, $cols, $subFields, array('remove'));

        $sub->setValidators($validators);

        if ( $this->isFirstAccess() )
        {
            MSubDetail::clearData('requiredDocuments');
            
            $stepData = $this->getStepDataByForm('FrmSubject');

            try
            {
                $business = new BusinessProtocolBusRequiredDocument();

                $filters = new stdClass();
                $filters->subjectId = $stepData->subjectId;
                $searchData = $business->searchRequiredDocument($filters);
            }
            catch ( Exception $e )
            {
                $this->addError($e->getMessage());
            }

            $subData = array();
            if ( count($searchData) > 0 )
            {
                foreach ( $searchData as $row )
                {
                    $subRow = new stdClass();
                    $subRow->requiredDocumentId = $row[0];
                    $subRow->description = $row[2];
                    $subRow->upload = $row[3] == DB_TRUE ? 'Sim' : 'No';
                    $subRow->descriptionreq = $row[4] == DB_TRUE ? 'Sim' : 'No';
                    $subData[] = clone($subRow);
                }
            }

            if (count($subData) > 0)
            {
                $sub->setData($subData);
            }
        }

        $this->setFields($fields);
    }
    
    public function uploadRequiredChange($args)
    {
        if ( $args->uploadRequired == DB_TRUE )
        {
            $fields[] = new MHiddenField('upload', 'Sim');
        }
        else
        {
            $fields[] = new MHiddenField('upload', 'No');
        }
        
        return $fields;
    }
    
    public function descriptionRequiredChange($args)
    {
        if ( $args->descriptionRequired == DB_TRUE )
        {
            $fields[] = new MHiddenField('descriptionreq', 'Sim');
        }
        else
        {
            $fields[] = new MHiddenField('descriptionreq', 'No');
        }
        
        return $fields;
    }
}
