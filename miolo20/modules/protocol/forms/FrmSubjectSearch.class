/**
 * Form to search the basSubject table
 */
class FrmSubjectSearch extends SSearchForm
{
    /**
     * Class constructor
     */
    public function __construct()
    {
        parent::__construct(_M('Localizar', 'basic'), new PtcSubject(), array('subjectId'), 'BusSubject');
    }

    /**
     *  Default method to define fields
     */
    public function defineFields()
    {
        $MIOLO  = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();
        $action = MIOLO::getCurrentAction();
        $business = new BusinessProtocolBusSubject();

        //Field subject code
        $subjectIdS = new MTextField('subjectIdS', $this->subjectIdS->value, _M('Cdigo', $module), SAGU::getParameter('BASIC', 'FIELD_ID_SIZE'));
        $subjectIdS->setJsHint(_M('Informe o cdigo do assunto', $module));
        $fields[] = $subjectIdS;

        //Field description 
        $descriptionS = new MTextField('descriptionS', $this->descriptionS->value, _M('Descrio', $module), SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE'));
        $descriptionS->setJsHint(_M('Informe a Descrio', $module));
        $fields[] = $descriptionS;
        
        //Field sector        
        $sectorIdS = new MLookupTextField('sectorIdS', $this->getFormValue('sectorIdS',$data->sectorIdS), _M('Setor', $module), SAGU::getParameter('BASIC', 'FIELD_ID_SIZE'), null, null, 'sectorNameS', 'basic', 'Sector', null, null, true);
        $sectorIdS->setJsHint(_M('Informe o cdigo do Setor',$module));
        $sectorNameS = new MTextField('sectorNameS', $this->sectorNameS->value, '', SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE'));
        $sectorNameS->setReadOnly(true);
        $sectorNameS->setJsHint(_M('Nome da pessoa', $module));
        $hctSector = new MHContainer('hctSector', array($sectorIdS, $sectorNameS), MContainer::FORM_MODE_SHOW_SIDE);
        $fields[]  = $hctSector;

        //Field taxvalue 
        $taxValueS = new MTextField('taxValueS', $this->taxValueS->value, _M('Taxa', $module), SAGU::getParameter('BASIC', 'FIELD_ID_SIZE'), _M('Ex.: 1.00', $module));
        $taxValueS->setJsHint(_M('Informe a taxa', $module));
        $fields[] = $taxValueS;

        //Field term(prazo) 
        $termS = new MTextField('termS', $this->termS->value, _M('Prazo', $module), SAGU::getParameter('BASIC', 'FIELD_ID_SIZE'));
        $termS->setJsHint(_M('Informe o prazo', $module));
        $fields[] = $termS;

        //Field isactive
        $isActiveS = new MSelection('isActiveS', $this->isActiveS->value, _M('Ativo', $module), $business->obterListaComboAtivo());
        $isActiveS->setJsHint(_M('Informe o status', $module));
        $fields[] = $isActiveS;

        //Validadres
        $validators[] = new MIntegerValidator('subjectIdS', _M('Cdigo',$module), 'optional');
        $validators[] = new MIntegerValidator('sectorIdS', _M('Setor', $module), 'optional');
        $validators[] = new MIntegerValidator('termS', _M('Prazo',$module), 'optional');
        $validators[] = new MFloatValidator('taxValueS', '', SAGU::getParameter('BASIC', 'FLOAT_SEPARATOR'), SAGU::getParameter('BASIC', 'REAL_ROUND_VALUE'), 'optional');
        
        parent::defineFields($fields, $module, 'GrdSubject', $validators);
    }
}
