class FrmInformacoesExtras extends FrmSubjectFather
{   
    /**
     * Class constructor
     **/
    public function __construct($steps = null)
    {
        $module = 'protocol';

        parent::__construct(_M('Informaes Extras', $module), $steps, __CLASS__, new PtcSubjectSector(), array('subjectId, sectorId, level'));

        $this->toolbar->disableButton(MToolBar::BUTTON_SAVE);
        
    }

    /**
     * Default method to define fields
     **/
    public function createFields()
    {
        $MIOLO = MIOLO::getInstance();
        $module	= SAGU::getFileModule(__FILE__);
        $action	= MIOLO::getCurrentAction();
        $function = MIOLO::_REQUEST('function');

        $columns = array(
            new MGridColumn( _M('Cdigo'), 'right', true, null, true, null, false ),
            new MGridColumn( _M('Label'), 'left',  true, null, true, null, false ),
            new MGridColumn( _M('Nome'), 'left',  true, null, true, null, false ),
            new MGridColumn( _M('Formato'), 'left',  true, null, true, MCustomField::listFormatFields(), false ),
            new MGridColumn( _M('Valores possveis'), 'left',  true, null, true, null, false ),
            new MGridColumn( _M('Obrigatrio'), 'center',  true, null, true, SAGU::listYesNo(), false ),
        );

        $dados = $this->infoExtraDados = BasCustomField::searchForGrid( MIOLO::_REQUEST('subjectId') );
        
        $grid = $this->infoExtraGrid = new SGrid(null, $columns);
        $grid->addActionSelect();
        $grid->disablePagination();
        $grid->setData($dados);
        
        // define as checkboxes marcadas
        if ( !$MIOLO->page->isPostBack() )
        {
            foreach ( $dados as $key => $val )
            {
                if ( $val[6] == DB_TRUE )
                {
                    $grid->selecteds[] = $key;
                }
            }
        }
        
        $fields[] = $grid;
        
        $this->setFields($fields);
    }
}
