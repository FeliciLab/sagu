/**
 * Grid used by form to display search results
 **/
class GrdSubject extends SGrid
{
    /**
     * Class constructor
     **/
    public function __construct($filters)
    {
        $module = MIOLO::getCurrentModule();
        $business = new BusinessProtocolBusSubject();

        $columns = array( new MGridColumn( _M('Cdigo', $module), 'right', true, null, true, null, true ),
                          new MGridColumn( _M('Descrio', $module), 'left',  true, null, true, null, true ),
                          new MGridColumn( _M('Setor', $module), 'left',  true, null, true, null, true ),
                          new MGridColumn( _M('Taxa	', $module), 'right',  true, null, true, null, true ),
                          new MGridColumn( _M('Prazo	', $module), 'right',  true, null, true, null, true ),
                          new MGridColumn( _M('Ativo', $module),  'left',  true, null, true, $business->obterListaComboAtivo(), true )
                        );

        $primaryKey = array('subjectId' => '%0%');

        parent::__construct($filters, $columns, 'GrdSubject', $primaryKey);
    }
}
