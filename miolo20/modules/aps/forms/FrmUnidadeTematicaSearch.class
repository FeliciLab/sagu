class FrmUnidadeTematicaSearch extends SSearchForm
{
    public function __construct($data)
    {
        parent::__construct(null, new ApsUnidadeTematica(), array('unidadeTematicaId'));
    }

    public function defineFields()
    {
        $MIOLO = MIOLO::getInstance();
        $module = SAGU::getFileModule(__FILE__);

        // Obtm os dados
        $data = $this->getTypesData();

        // Campo cdigo
        $unidadeTematicaId = new MTextField('unidadeTematicaIdS', $this->getFormValue('unidadeTematicaIdS', $data->unidadeTematicaId), _M('Cdigo', $module), SAGU::getParameter('basic', 'FIELD_ID_SIZE'));
        $unidadeTematicaId->setJsHint(_M('Informe o cdigo da rodzio', $module));
        $fields[] = $unidadeTematicaId;
        $validators[] = new MIntegerValidator('unidadeTematicaIdS', 'c', 'optional');

        // Campo descrio
        $descricao = new MTextField('descricaoS', $this->getFormValue('descricaoS', $data->descricao), _M('Descrio', $module), SAGU::getParameter('basic', 'FIELD_DESCRIPTION_SIZE'));
        $descricao->addAttribute('maxlength', '255');
        $descricao->setJsHint(_M('Informe a descrio', $module));
        $fields[] = $descricao;

        // Campo perodo
        $periodos = ApsUnidadeTematica::listPeriodos();
        $campoPeriodo = new MSelection('periodoS', $this->getFormValue('periodoS', $data->periodo), _M('Perodo', $module), $periodos);
        $campoPeriodo->setJsHint(_M('Informe o perodo', $module));
        $fields[] = $campoPeriodo;

        // Campo tipo
        $tipos = ApsUnidadeTematica::listTipos();
        $campoTipo = new MSelection('tipoS', $this->getFormValue('tipoS', $data->tipo), _M('Tipo', $module), $tipos);
        $campoTipo->setJsHint(_M('Informe o tipo', $module));
        $fields[] = $campoTipo;

        // Campo ncleos profissionais
        $nucleosProfissionais = new MMultiSelection('nucleosProfissionaisS', $this->getFormValue('nucleosProfissionaisS', $data->nucleosProfissionais), _M('Ncleo profissional'), ApsNucleoProfissional::listRecords());
        $nucleosProfissionais->setJsHint(_M('Informe o(s) ncleo(s) profissional(is)'));
        $fields[] = $nucleosProfissionais;

        // Campo nfases
        $enfases = new MMultiSelection('enfasesS', $this->getFormValue('enfasesS', $data->enfases), _M('nfases'), ApsEnfase::listRecords());
        $enfases->setJsHint(_M('Informe a(s) nfase(s)'));
        $fields[] = $enfases;

        parent::defineFields($fields, $module, 'GrdUnidadeTematicaSearch', $validators);
    }

    public function getTypesData()
    {
        $data = new stdClass();
        $data->unidadeTematicaId = MIOLO::_REQUEST('unidadeTematicaIdS');
        $data->descricao = MIOLO::_REQUEST('descricaoS');
        $data->periodo = MIOLO::_REQUEST('periodoS');
        $data->tipo = MIOLO::_REQUEST('tipoS');
        $data->nucleosProfissionais = (array)MIOLO::_REQUEST('nucleosProfissionaisS');
        $data->enfases = (array)MIOLO::_REQUEST('enfasesS');

        return $data;
    }
}
