class FrmTemaSearch extends SSearchForm
{
    public function __construct($data)
    {
        parent::__construct(null, new ApsTema(), array('temaId'));
    }

    public function defineFields()
    {
        $MIOLO = MIOLO::getInstance();
        $module = SAGU::getFileModule(__FILE__);
        $action = MIOLO::getCurrentAction();
        $fields[] = $temaIdS = new MTextField('temaIdS', $this->getFormValue('temaIdS', $data->temaIdS), _M('Cdigo', $module), SAGU::getParameter('BASIC','FIELD_ID_SIZE'));
        $temaIdS->setJsHint(_M('Informe o cdigo', $module));
        $fields[] = $descricaoS = new MTextField('descricaoS', $this->getFormValue('descricaoS', $data->descricaoS), _M('Descrio', $module), SAGU::getParameter('BASIC','FIELD_DESCRIPTION_SIZE'));
        $descricaoS->addAttribute('maxlength', '255');
        $descricaoS->setJsHint(_M('Informe a descrio', $module));
        $validators[] = new MIntegerValidator('temaIdS', _M('Cdigo'), 'optional');
        parent::defineFields($fields, $module, 'GrdTemaSearch', $validators);
    }
}


