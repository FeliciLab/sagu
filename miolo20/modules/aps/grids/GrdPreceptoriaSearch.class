class GrdPreceptoriaSearch extends SGrid
{
    public function __construct($filters)
    {
        $module = MIOLO::getCurrentModule();

        $columns = array();
        $columns[] = new MGridColumn( _M('#id', $module), 'center',  true, null, true, null, true );
        $columns[] = new MGridColumn( _M('Nome', $module), 'left',  true, null, true, null, true );
        $columns[] = new MGridColumn( _M('Tipo', $module), 'left',  true, null, true, ApsPreceptoria::retornaTiposSupervisores(), true );
        $columns[] = new MGridColumn( _M('Ncleo profissional'), 'center', true, null, true, null, true );
        $columns[] = new MGridColumn( _M('nfase'), 'center', true, null, true, null, true );
        $columns[] = new MGridColumn( _M('E-mail', $module), 'center', true, null, true, null, true );
        $columns[] = new MGridColumn( _M('Incio da Preceptoria', $module), 'center', true, null, true, null, true );
        $columns[] = new MGridColumn( _M('Trmino da Preceptoria', $module), 'center', true, null, true, null, true );
        $columns[] = new MGridColumn( _M('Situao', $module), 'center', true, null, true, null, true );


        $primaryKeys = array('preceptorId' => '%0%', );
        parent::__construct($filters, $columns, __CLASS__, $primaryKeys);
        
        $args = array('preceptorId' => '%0%');
    }
}
