class FrmDegreeEquivalenceSearch extends SSearchForm
{
    public function __construct($data)
    {
        parent::__construct(null, new TraDegreeEquivalence(), array('degreeEquivalenceId'));
    }


    public function defineFields()
    {
        $MIOLO  = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();
        $action = MIOLO::getCurrentAction();

        //Codigo
        $fields[] = $degreeEquivalenceIdS = new MTextField('degreeEquivalenceIdS', $this->getFormValue('degreeEquivalenceIdS', $data->degreeEquivalenceIdS), _M('Cdigo',$module), SAGU::getParameter('BASIC', 'FIELD_ID_SIZE'));
        $degreeEquivalenceIdS->setJsHint(_M('Informe o cdigo da Equivalncia de notas e conceito', $module));
        $validators[] = new MIntegerValidator('degreeEquivalenceIdS', _M('Cdigo', $module));

        //Descricao
        $fields[] = $descriptionS = new MTextField('descriptionS', $this->getFormValue('descriptionS', $data->descriptionS), _M('Descrio',$module), SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE'));
        $descriptionS->setJsHint(_M('Informe a descrio da Equivalncia de notas e conceito', $module));

        //Data inicial
        $beginDateLabel = new MText('beginDateLabel', _M('Data inicial', $module) . ':');
        $beginDateLabel->setWidth( SAGU::getParameter('BASIC', 'FIELD_CONTAINER_SIZE') );
        $beginDate = new MCalendarField('beginDateS', null, null, SAGU::getParameter('BASIC', 'FIELD_DATE_SIZE'));
        $beginDate->setJsHint(_M('Informe a data a partir da qual esta tabela de equivalncias passar a valer.', $module));
        $beginDate->setClass('m-caption m-caption-required');
        $fields[] = new MHContainer('beginDateCnt', array($beginDateLabel, $beginDate));
        $validators[] = new MDateDMYValidator('beginDateS', _M('Data inicial', $module));

        //Data final
        $endDateLabel = new MText('endDateLabel', _M('Data final', $module) . ':');
        $endDateLabel->setWidth( SAGU::getParameter('BASIC', 'FIELD_CONTAINER_SIZE') );
        $endDate = new MCalendarField('endDateS', null, null, SAGU::getParameter('BASIC', 'FIELD_DATE_SIZE'));
        $endDate->setJsHint(_M('Data a partir da qual esta tabela deixou de ter validade. Poder ser nulo, indicando que a tabela est ativa indefinidamente.', $module));
        $endDate->setClass('m-caption m-caption-required');
        $fields[] = new MHContainer('endDateCnt', array($endDateLabel, $endDate));
        $validators[] = new MDateDMYValidator('endDateS', _M('Data final', $module));

        parent::defineFields($fields, $module, 'GrdDegreeEquivalenceSearch', $validators);
    }
}
