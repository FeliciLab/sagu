class FrmTrainingBadge extends SForm
{
    public function __construct()
    {
        $MIOLO = MIOLO::getInstance();
        $module = SAGU::getFileModule(__FILE__);
        $action = MIOLO::getCurrentAction();

        parent::__construct(_M('Crach', $module), null, null);

        // Desabilita os botes da toolbar
        $this->toolbar->disableButton(MToolBar::BUTTON_SAVE);
        $this->toolbar->disableButton(MToolBar::BUTTON_NEW);
        $this->toolbar->disableButton(MToolBar::BUTTON_SEARCH);
        $this->toolbar->disableButton(MToolBar::BUTTON_DELETE);
        $this->toolbar->setButtonURL(MToolBar::BUTTON_PRINT, $MIOLO->getActionURL($module, $action, null, array('event'=>'generateReport')));
        $this->toolbar->setIsPost(MToolBar::BUTTON_PRINT, true);
    }

    public function defineFields()
    {
        $MIOLO = MIOLO::getInstance();
        $module = SAGU::getFileModule(__FILE__);
        $action = MIOLO::getCurrentAction();
        $function = MIOLO::_REQUEST('function');

        // Field limbo
        $fields[] = new MHiddenField('limbo');

        // Field request (lookup)
        $fields[] = new MLookupTextField('requestId', '', _M('Solicitao', $module), SAGU::getParameter('BASIC', 'FIELD_LOOKUPFIELD_SIZE'), '', null, 'requestId, subscriptionPersonId, subscriptionPersonName, unitId, unitDescription, courseId, courseDescription, areaId, areaDescription, beginDate, endDate,trainingTypeId', $module, 'Request');

        // Field subscription (lookup)
        $subscription = new MLookupContainer('subscriptionPersonId', 'subscriptionPersonName', '', _M('Estagirio',$module), 'subscriptionPersonId, subscriptionPersonName, unitId, unitDescription, limbo, limbo, areaId, areaDescription, requestId, beginDate, endDate, trainingTypeId', $module, 'Subscription', array('personId' => 'subscriptionPersonId'), true, SAGU::getParameter('BASIC', 'FIELD_LOOKUPFIELD_SIZE'), SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE'), !$this->page->isPostBack());
        $subscription->setLookupJsHint(_M('Informe o cdigo do estagirio', $module));
        $subscription->setDescriptionJsHint(_M('Nome do estagirio', $module));
        $fields[] = $subscription;
        $validators[] = new MIntegerValidator('subscriptionPersonId', _M('Estagirio',$module), 'optional');

        // Field preceptor (lookup)
        //$preceptor = new MLookupContainer('preceptorPersonId', 'preceptorPersonName', '', _M('Preceptor',$module), 'preceptorPersonId, preceptorPersonName', $module, 'Preceptor', array('preceptorId' => 'preceptorPersonId'), true, SAGU::getParameter('BASIC', 'FIELD_LOOKUPFIELD_SIZE'), SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE'), !$this->page->isPostBack());
        //$preceptor->setLookupJsHint(_M('Informe o cdigo do preceptor', $module));
        //$preceptor->setDescriptionJsHint(_M('Nome do preceptor', $module));
        //$fields[] = $preceptor;
        //$validators[] = new MIntegerValidator('preceptorPersonId', _M('Preceptor',$module), 'optional');

        // Field training type (modalidade)
        $fields[] = $trainingType = new MSelection('trainingTypeId', '', _M('Modalidade', $module), TraTrainingType::listRecords());
        $trainingType->setJsHint(_M('Cdigo da modalidade', $module));

        // Field unit
        $fields[] = $unit = new MSelection('unitId', '', _M('Unidade', $module), TraUnit::listUnit());
        $unit->setJsHint(_M('Informe a unidade', $module));
        $validators[] = new MRequiredValidator('unitId',  _M('Unidade', $module));

        // Field area
        $fields[] = $area = new MSelection('areaId', '', _M('rea', $module), TraArea::listArea());
        $area->setJsHint(_M('Informe a rea', $module));

        // Field begin date
        $fields[] = $beginDate = new MCalendarField('beginDate', '', _M('Data inicial', $module), SAGU::getParameter('BASIC', 'FIELD_DATE_SIZE'));
        $beginDate->setJsHint(_M('Informe a data inicial', $module));

        // Field end date
        $fields[] = $endDate = new MCalendarField('endDate', '', _M('Data final', $module), SAGU::getParameter('BASIC', 'FIELD_DATE_SIZE'));
        $endDate->setJsHint(_M('Informe a data final', $module));

        // Formato
        $fields[] = $reportFormat = new MSelection('reportFormat', $this->getFormValue('reportFormat') ? $this->getFormValue('reportFormat') : 'PDF', _M('Formato', $module), SReport::listReportFormat());
        $validators[] = new MRequiredValidator('reportFormat', _M('Formato do relatrio', $module));

        // Separator
        $fields[] = new MSeparator('');

        $this->setValidators($validators);
        $this->setFields($fields);
        
        parent::defineFields();
    }

    /**
     * Mtodo para gerao do Relatrio
     */
    public function generateReport($args)
    {
        $MIOLO = MIOLO::getInstance();
        $module = SAGU::getFileModule(__FILE__);

        $data = $this->getTypesData();
        $options['module'] = $module;
        $options['reportName'] = 'trainingBadge';

        if ( strlen($data->preceptorPersonId) > 0 )
        {
            $options['parameters']['preceptorPersonId'] = $data->preceptorPersonId;
        }

        if ( strlen($data->requestId) > 0 )
        {
            $options['parameters']['requestId'] = $data->requestId;
        }

        if ( strlen($data->areaId) > 0 )
        {
            $options['parameters']['areaId'] = $data->areaId;
        }

        if ( strlen($data->unitId) > 0 )
        {
            $options['parameters']['unitId'] = $data->unitId;
        }

        if ( strlen($data->trainingTypeId) > 0 )
        {
            $options['parameters']['trainingTypeId'] = $data->trainingTypeId;
        }

        if ( strlen($data->beginDate) > 0 )
        {
            $options['parameters']['beginDate'] = $data->beginDate;
        }

        if ( strlen($data->endDate) > 0 )
        {
            $options['parameters']['endDate'] = $data->endDate;
        }

        if ( strlen($data->reportFormat) > 0 )
        {
            $options['fileType'] = $data->reportFormat;
        }

        $sreport = new SReport($options);

        if ( !$sreport->generate() )
        {
            $this->addError(_M('Nenhum registro encontrado.', $module ));
        }
    }

    /**
     * Mtodo que obtem os dados do formulrio.
     */
    public function getTypesData() 
    {
        $data = new stdClass();
        $data->preceptorPersonId = $this->GetFormValue('preceptorPersonId');
        $data->requestId = $this->GetFormValue('requestId');
        $data->areaId = $this->GetFormValue('areaId');
        $data->unitId = $this->GetFormValue('unitId');
        $data->trainingTypeId = $this->GetFormValue('trainingTypeId');
        $data->beginDate = $this->GetFormValue('beginDate');
        $data->endDate = $this->GetFormValue('endDate');
        $data->reportFormat = $this->GetFormValue('reportFormat');

        return $data;
    }
}
