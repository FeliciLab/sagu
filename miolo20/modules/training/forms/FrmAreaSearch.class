class FrmAreaSearch extends SSearchForm
{
    /**
     * Class constructor
     */
    public function __construct()
    {
        parent::__construct(null, new TraArea(), array('areaId'));
    }

    /**
     * Default method to define fields
     */
    public function defineFields()
    {
        $MIOLO = MIOLO::getInstance();
        $module = SAGU::getFileModule(__FILE__);

        // Field area id
        $fields[] = $areaId = new MTextField('areaIdS', null, _M('Cdigo', $module), SAGU::getParameter('BASIC', 'FIELD_ID_SIZE'));
        $areaId->setJsHint( _M('Informe o cdigo da rea', $module) );

        // Field description
        $fields[] = $description = new MTextField('descriptionS', null, _M('Descrio', $module), SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE'));
        $description->setJsHint( _M('Informe a descrio da rea', $module) );
        
        parent::defineFields($fields, $module, 'GrdAreaSearch', $validators);
    }
}
