class FrmEvaluationItemSearch extends SSearchForm
{
    public function __construct($data)
    {
        parent::__construct(null, new TraEvaluationGroup(), array('evaluationGroupId'));
    }


    public function defineFields()
    {
        $MIOLO  = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();
        $action = MIOLO::getCurrentAction();

        //Codigo
        $fields[] = $evaluationGroupIdS = new MTextField('evaluationGroupIdS', $this->GetFormValue('evaluationGroupIdS', MIOLO::_REQUEST('evaluationGroupIdS')), _M('Cdigo', $module), SAGU::getParameter('BASIC', 'FIELD_ID_SIZE'));
        $validators[] = new MIntegerValidator('evaluationGroupIdS', _M('Cdigo', $module));

        //Descricao
        $fields[] = $descriptionS = new MTextField('descriptionS', $this->getFormValue('descriptionS', MIOLO::_REQUEST('descriptionS')), _M('Descrio', $module), SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE'));
        $descriptionS->setJsHint( _M('Descrio do grupo', $module) );

        parent::defineFields($fields, $module, 'GrdEvaluationItemSearch', $validators);
    }
}
