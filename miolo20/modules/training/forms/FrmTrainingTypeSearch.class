/**
 * Form to search the tra.trainingType table
 */
class FrmTrainingTypeSearch extends SSearchForm
{
    /**
     * Class constructor
     */
    public function __construct($data)
    {
        parent::__construct(null, new TraTrainingType(), array('trainingTypeId'), null);
    }

    /**
     *  Default method to define fields
     */
    public function defineFields()
    {
        $MIOLO = MIOLO::getInstance();
        $module = SAGU::getFileModule(__FILE__);

        // Get data
        $data = $this->getTypesData();
        
        $counterpartTypeId = new MTextField('trainingTypeIdS', $data->trainingTypeId, _M('Cdigo',$module), SAGU::getParameter('BASIC', 'FIELD_ID_SIZE'));
        $counterpartTypeId->setJsHint(_M('Informe o cdigo da modalidade',$module));
        $fields[] = $counterpartTypeId;
        $validators[] = new MIntegerValidator('trainingTypeIdS', '', 'optional');

        // Field description
        $description = new MTextField('descriptionS', $data->description, _M('Descrio',$module), SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE'));
        $description->setJsHint(_M("Informe a descrio da modalidade", $module));
        $fields[] = $description;

        // Field long description
        $longDescription = new MMultiLineField('longDescriptionS', $data->longDescription, _M('Descrio complementar', $module), null, 5, 40);
        $longDescription->setJsHint(_M('Informe a descrio complementar da modalidade',$module));
        $fields[] = $longDescription;

        // Forma de avaliacao
        $fields[] = $evaluationTypeId = new MSelection('evaluationTypeIdS', $data->evaluationTypeId, _M('Forma de avaliao', $module), TraEvaluationType::listEvaluationType());
        
        //
        $fields[] = new MSelection('degreeEquivalenceIdS', $data->degreeEquivalenceId, _M('Equivalncia de notas e conceito', $module), TraDegreeEquivalence::listDegreeEquivalence());
        
        // Field minimum interval
        $minimumInterval = new MTextField('minimumIntervalS', $data->minimumInterval, _M('Intervalo mnimo para nova solicitao',$module), SAGU::getParameter('BASIC', 'FIELD_ID_SIZE'), _M('Dias', $module));
        $minimumInterval->setJsHint(_M('Informe o nmero mnimo de dias aps a concluso de um estgio que a pessoa deve aguardar para solicitar um novo estgio.',$module));
        $fields[] = $minimumInterval;

        parent::defineFields($fields, $module, 'GrdTrainingTypeSearch', $validators);
    }
}
