class FrmTrainingLocationSearch extends SSearchForm
{
    public function __construct($data)
    {
        parent::__construct(null, new TraSubscription(), array('subscriptionId'));

        $this->toolbar->disableButton( MToolBar::BUTTON_NEW );
    }

    public function defineFields()
    {
        $MIOLO = MIOLO::getInstance();
        $module = SAGU::getFileModule(__FILE__);

        if ( SAGU::userIsFromServices() ) //Se vem do portal
        {
            try
            {
                $loginUser = $MIOLO->GetLogin();

                $busPhysicalPerson = new BusinessBasicBusPhysicalPerson();

                $physicalPerson = $busPhysicalPerson->getPhysicalPersonByMioloUserName($loginUser->id);

                if( !( strlen($physicalPerson->personId) > 0 ) )
                {
                    throw new Exception( _M('O usurio logado no est associado  uma pessoa fsica', $module) );
                }

                //Se no for um preceptor
                if ( !TraTeam::isTeamPreceptor($physicalPerson->personId) )
                {
                    throw new Exception( _M('O usurio logado no  um preceptor.', $module) );
                }
            }
            catch ( Exception $e )
            {
                $MIOLO->error($e->getMessage());
            }

            //Preceptor (label)
            $preceptorLabel = new MText('preceptorLabel', _M('Preceptor', $module) . ':');
            $preceptorLabel->setWidth(SAGU::getParameter('BASIC', 'FIELD_CONTAINER_SIZE'));
            $preceptorId = new MText('preceptorId', $physicalPerson->personId);
            $preceptorId->setBold(true);
            $separator = new MText('separator', "-");
            $separator->setBold(true);
            $preceptorName = new MText('preceptorName', $physicalPerson->name);
            $preceptorName->setBold(true);
            $fields[] = $hctPreceptor = new MHContainer('hctPreceptor', array( $preceptorLabel, $preceptorId, $separator, $preceptorName ));
        }
        else
        {
            //Preceptor lookup
            $preceptorLabel = new MText('preceptorLabel', _M('Preceptor', $module) . ':');
            $preceptorLabel->setWidth(SAGU::getParameter('BASIC', 'FIELD_CONTAINER_SIZE'));
            $preceptorId = new MLookupTextField('preceptorId', $this->getFormValue('preceptorId', $data->preceptorId), '', SAGU::getParameter('BASIC', 'FIELD_LOOKUPFIELD_SIZE'), null, null, 'preceptorId, preceptorName', $module, 'preceptor', null, null, true);
            $preceptorId->setJsHint(_M('Informe o cdigo do preceptor', $module));
            $preceptorName = new MTextField('preceptorName', null, '', SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE'));
            $preceptorName->setReadOnly(true);
            $preceptorName->setJsHint(_M('Nome do preceptor', $module));
            $fields[] = $hctPreceptor = new MHContainer('hctPreceptor', array( $preceptorLabel, $preceptorId, $preceptorName ));
            $hctPreceptor->setShowLabel(true);
            $validators[] = new MIntegerValidator('preceptorId', _M('Preceptor', $module), 'optional');
        }
  
       /**
        * Periodo
        */
        //Field beginDate
        $beginDateLabel = new MLabel(_M('De', $module) . ':');
        $beginDateLabel->setWidth(SAGU::getParameter('BASIC', 'FIELD_CONTAINER_SIZE'));
        $beginDate = new MCalendarField('beginDate', $this->getFormValue('beginDate', $data->beginDate), null, SAGU::getParameter('BASIC', 'FIELD_DATE_SIZE'));
        $beginDate->setJsHint(_M('Informe a data de incio do perodo de estgio',$module));
        $dateStage[] = new MHContainer('beginDateCnt', array( $beginDateLabel, $beginDate ));
        //Field endDate
        $endDateLabel = new MLabel(_M('At', $module) . ':');
        $endDateLabel->setWidth(SAGU::getParameter('BASIC', 'FIELD_CONTAINER_SIZE'));
        $endDate = new MCalendarField('endDate', $this->getFormValue('endDate', $data->endDate), null, SAGU::getParameter('BASIC', 'FIELD_DATE_SIZE'));
        $endDate->setJsHint(_M('Informe a data de fim do perodo de estgio',$module));
        $dateStage[] = new MHContainer('endDateCnt', array( $endDateLabel, $endDate ));
        //container
        $fields[] = new MBaseGroup('bsgPeriod', _M('Perodo',$module), $dateStage, 'vertical');

        // personName
        $fields[] = $trainingNameS = new MTextField('personNameS', null, _M('Nome', $module), SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE'));
        $trainingNameS->setJsHint(_M('Nome da pessoa', $module));

        // teamId lookup
        $teamLabel = new MText('teamLabel', _M('Equipe', $module) . ':');
        $teamLabel->setWidth(SAGU::getParameter('BASIC', 'FIELD_LABEL_SIZE'));
        $teamId = new MLookupTextField('teamId', $this->getFormValue('teamId', $data->teamId), '', SAGU::getParameter('BASIC', 'FIELD_LOOKUPFIELD_SIZE'), null, null, 'teamId, teamDescription', $module, 'team', null, null, true);
        $teamId->setJsHint(_M('Informe o cdigo da equipe', $module));
        $teamDescription = new MTextField('teamDescription', null, '', SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE'));
        $teamDescription->setReadOnly(true);
        $teamDescription->setJsHint(_M('Descrio da equipe', $module));
        $hctTeam = new MHContainer('hctTraining', array( $teamLabel, $teamId, $teamDescription ));
        $hctTeam->setShowLabel(true);
        $validators[] = new MIntegerValidator('teamId', _M('Equipe', $module), 'optional');
        $fields[] = $hctTeam;
        
        parent::defineFields($fields, $module, 'GrdTrainingLocationSearch', $validators);

        if (  SAGU::userIsFromServices() )
        {
            $button[] = new MButton('back', _M('Voltar', $module), $this->toolbar->getButtonUrl(MToolBar::BUTTON_BACK));
            $this->addFields($button);
        }
    }
    

    public function  getTypesData()
    {
        $data = parent::getTypesData();
        $data->preceptorId = MIOLO::_REQUEST('preceptorId');
        $data->personName = MIOLO::_REQUEST('personNameS');
        $data->teamId = MIOLO::_REQUEST('teamId');
        $data->beginDate = MIOLO::_REQUEST('beginDate');
        $data->endDate = MIOLO::_REQUEST('endDate');
        return $data;
    }
    
    
    public function searchObject($filters)
    {
        $data = TraSubscription::searchGridLocation($filters);
        return $data;
    }
}
?>