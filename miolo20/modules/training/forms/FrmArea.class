class FrmArea extends SManagementForm
{
    /**
     * Class constructor
     **/
    public function __construct()
    {
        parent::__construct(new TraArea(), array('areaId'), null);
    }

    /**
     * Default method to define fields
     **/
    public function defineFields()
    {
        $MIOLO = MIOLO::getInstance();
        $module = SAGU::getFileModule(__FILE__);
        $function = MIOLO::_REQUEST('function');
        
        if ( in_array($function, array(SForm::FUNCTION_UPDATE, SForm::FUNCTION_DELETE)) )
        {
            $areaId = MIOLO::_REQUEST('areaId');
            $data = new TraArea($areaId);
            $data->descriptionArea = $data->description;
            
            $fields[] = $areaId = new MTextField('areaId', $areaId, _M('Cdigo',$module), SAGU::getParameter('BASIC', 'FIELD_ID_SIZE'), null, null, true);
            $areaId->setJsHint(_M('Cdigo da rea',$module));
        }

        // Field description
        $fields[] = $description = new MTextField('descriptionArea', $data->descriptionArea, _M('Descrio', $module), SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE'));
        $description->setJsHint(_M('Informe a descrio da rea', $module));
        $validators[] = new MRequiredValidator('descriptionArea', _M('Descrio', $module));

        parent::defineFields($fields, $validators, $data);
    }

    /**
     * Pega os dados do form (e da subdetail)
     */
    public function getTypesData()
    {
        $data = parent::getTypesData();
        $data->description = MIOLO::_REQUEST('descriptionArea');
        $data->documents = array();
        return $data;
    }
}
