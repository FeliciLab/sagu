/**
 * Form to search the tra.counterpartType table
 */
class FrmCounterpartTypeSearch extends SSearchForm
{
    /**
     * Class constructor
     */
    public function __construct($data)
    {
        parent::__construct(null, new TraCounterpartType(), array('counterpartTypeId'), null);
    }

    /**
     *  Default method to define fields
     */
    public function defineFields()
    {
        $MIOLO = MIOLO::getInstance();
        $module = SAGU::getFileModule(__FILE__);

        // Get data
        $data = $this->getTypesData();
        
        $counterpartTypeId = new MTextField('counterpartTypeIdS', $data->counterpartTypeId, _M('Cdigo',$module), SAGU::getParameter('BASIC', 'FIELD_ID_SIZE'));
        $counterpartTypeId->setJsHint(_M('Informe o cdigo do tipo de contrapartida',$module));
        $fields[] = $counterpartTypeId;
        $validators[] = new MIntegerValidator('counterpartTypeIdS', '', 'optional');

        $description = new MTextField('descriptionS', $data->description, _M('Descrio',$module), SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE'));
        $description->setJsHint(_M('Informe a descrio do tipo de contrapartida',$module));
        $fields[] = $description;

        parent::defineFields($fields, $module, 'GrdCounterpartTypeSearch', $validators);
    }
}
