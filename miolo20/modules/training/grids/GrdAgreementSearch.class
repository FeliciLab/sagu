class GrdAgreementSearch extends SGrid
{
    public function __construct($filters)
    {
        $MIOLO = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();

        $columns = array();
        $columns[] = new MGridColumn(_M('Convnio', $module), 'right', true, NULL, true, NULL, true);
        $columns[] = new MGridColumn(_M('Conveniada', $module), 'right', true, NULL, true, NULL, true);
        $columns[] = new MGridColumn(_M('Nome da conveniada', $module), 'left', true, NULL, true, NULL, true);
        $columns[] = new MGridColumn(_M('Incio', $module), 'left', true, NULL, true, NULL, true);
        $columns[] = new MGridColumn(_M('Fim', $module), 'left', true, NULL, true, NULL, true);
        $columns[] = new MGridColumn(_M('Resciso', $module), 'left', true, NULL, true, NULL, true);
        $columns[] = new MGridColumn(_M('Objeto', $module), 'left', true, NULL, true, NULL, true);

        $primaryKeys = array('agreementId' => '%0%');

        parent::__construct($filters, $columns, __CLASS__, $primaryKeys);

        // Termos aditivos
        $params = array('agreementId' => '%0%');
        $href = SForm::getAjaxAction('showAddendum', 'divPopup', true, $params, false, null, true, false);
        $this->addActionIcon(_M('Visualizar termos aditivos', $module), 'visualizar-16x16.png', $href);
    }
}
