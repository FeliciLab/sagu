class GrdAddendumSearch extends SGrid
{
    public function __construct($filters)
    {
        $MIOLO = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();

        $columns[] = new MGridColumn(_M('Convnio', $module), 'right', true, NULL, true, NULL, true);
        $columns[] = new MGridColumn(_M('Termo aditivo', $module), 'right', true, NULL, true, NULL, true);
        $columns[] = new MGridColumn(_M('Incio', $module), 'left', true, NULL, true, NULL, true);
        $columns[] = new MGridColumn(_M('Fim', $module), 'left', true, NULL, true, NULL, true);
        foreach ( $columns as $col )
        {
            $col->order = false;
        }

        $primaryKeys = array('agreementId' => '%0%', 'addendumId' => '%1%');
        parent::__construct($filters, $columns, __CLASS__, $primaryKeys);

        $this->pageLength = 0;

        // Contrapartidas
        $href = $MIOLO->getActionURL($module, 'main:counterpart', null, $primaryKeys);
        $this->addActionIcon(_M('Contrapartidas', $module), 'visualizar-16x16.png', $href);
    }
}
