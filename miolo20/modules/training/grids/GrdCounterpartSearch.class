class GrdCounterpartSearch extends SGrid
{
    public function __construct($filters)
    {
        $MIOLO = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();
        $action = MIOLO::getCurrentAction();

        $columns[] = new MGridColumn(_M('Cdigo', $module), 'left', true, NULL, false, NULL, false);
        $columns[] = new MGridColumn(_M('Tipo', $module), 'left', true, NULL, true, NULL, false);
        $columns[] = new MGridColumn(_M('Ordem', $module), 'right', true, NULL, true, NULL, false);
        $columns[] = new MGridColumn(_M('Descrio', $module), 'left', true, NULL, true, NULL, false);
        $columns[] = new MGridColumn(_M('Disponvel', $module), 'center', true, NULL, true, SAGU::listYesNo(), false);

        $primaryKeys = array('counterpartId' => '%0%');
        parent::__construct($filters, $columns, __CLASS__, $primaryKeys);

        //Desabilita acoes
        $this->actions = array();
        $this->pageLength = 0;

        //Visualizar utilizao
        $href = $MIOLO->getActionURL($module, 'main:counterpartuse', null, array('counterpartId' => '%0%'));
        $this->addActionIcon(_M('Visualizar utilizao', $module), 'visualizar-16x16.png', $href);

        //Tornar disponivel OU indisponivel, de acordo com o resourceAvailable (true ou false)
        $this->addActionIcon(null, null, null);

        $this->setRowMethod($this, 'myRowMethod');
    }


    /**
     * Metodo chamado para cada linha da grid
     *
     * @param int $i
     * @param int $row
     * @param array $actions
     * @param array $columns
     */
    public function myRowMethod($i, $row, $actions, $columns)
    {
        list($colId,
                $colType,
                $colOrder,
                $colDescription,
                $colResourceAvailable) = $columns;

        list($valueId,
                $valueType,
                $valueOrder,
                $valueDescription,
                $valueResourceAvailable) = $this->data[$i];

        list($actionViewCounterpart, //Acao Visualizar utilizacao
                $actionPadlock //Acao de cadeado
        ) = $actions;

        //Altera acao de cadeado
        if ( $valueResourceAvailable == DB_TRUE ) //Tornar indisponivel
        {
            $actionPadlock->value = 'unlock.png'; //Altera imagem icone da acao
            $actionPadlock->alt = _M('Tornar indisponvel'); //Altera o alt da acao
            $actionPadlock->href = SForm::getAjaxAction('setResourceAvailable', 'divPopup', true, array('counterpartId' => '%0%', 'setTo' => DB_FALSE), false);
        }
        else //Tornar disponivel
        {
            $actionPadlock->value = 'lock.png';
            $actionPadlock->alt = _M('Tornar disponvel', $module);
            $actionPadlock->href = SForm::getAjaxAction('setResourceAvailable', 'divPopup', true, array('counterpartId' => '%0%', 'setTo' => DB_TRUE), false);
        }
    }
}
