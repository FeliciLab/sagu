class GrdCourseArea extends SGrid
{
    public function __construct($filters)
    {
        $MIOLO = MIOLO::getInstance();
        $module = SAGU::getFileModule(__FILE__);
        $action = MIOLO::getCurrentAction();

        // Campo plano de atividades do curso
        $courseActivitiesPlanField = new MTextField('courseActivitiesPlan');

        // Campo durao mnima do treinamento
        $trainingMinimumDurationField = new MTextField('trainingMinimumDuration',  null, '', SAGU::getParameter('BASIC', 'FIELD_ID_SIZE'));

        // Campo durao mxima do treinamento
        $trainingMaximumDurationField = new MTextField('trainingMaximumDuration',  null, '', SAGU::getParameter('BASIC', 'FIELD_ID_SIZE'));

        // Campo semestre mnimo
        $minimumSemesterField = new MTextField('minimumSemester',  null, '', SAGU::getParameter('BASIC', 'FIELD_ID_SIZE'));

        $columns = array();
        $columns[] = new MGridColumn(_M('Contador', $module), 'right', true, null, false, null, true);
        $columns[] = new MGridColumn(_M('Cdigo do Curso', $module), 'left', true, null, false, null, true);
        $columns[] = new MGridColumn(_M('Cdigo da rea', $module), 'left', true, null, false, null, true);
        $columns[] = new MGridColumn(_M('rea', $module), 'left', true, null, true, null, false);
        $columns[] = new MGridControl($trainingMinimumDurationField, _M('Durao mnima', $module).' ('._M('dias', $module).')', 'center', false, null);
        $columns[] = new MGridControl($trainingMaximumDurationField, _M('Durao mxima', $module).' ('._M('dias', $module).')', 'center', false, null);
        $columns[] = new MGridControl($minimumSemesterField, _M('Semestre mnimo', $module), 'center', false, null);
        // Coluna necessria para o funcionamento do AJAX das aes da Grid
        $columns[] = $grdCtrlCAPF = new MGridControl($courseActivitiesPlanField, '&nbsp;', 'center', false, null, true);
        $grdCtrlCAPF->setHidden(true);

        parent::__construct($filters, $columns, __CLASS__);

        // Remove a paginao e as aes da Grid
        $this->pageLength = 0;
        $this->actions = array();

        // Adiciona ao de visualizar plano de atividades
        $href = SForm::getAjaxAction('getCourseActivitiesPlan_click', 'divPopup', true, array('counter' => '%0%'), false);
        $this->addActionIcon(_M('Visualizar plano de atividades do curso.', $module), 'search-20x20.png', $href);

        $this->setRowMethod($this, 'myRowMethod');
    }

    /**
     * Executed before line renderization.
     * Method to be executed before each line renderization.
     *
     * @param $i - line index
     * @param $row - array containing the row data - initial index = 0
     * @param $actions - array containing the action's data
     * @param $columns - array containing the column's data
     */
    public function myRowMethod($i, $row, $actions, $columns)
    {
        // Define os dados da coluna durao mnima
        $columns[4]->control[$i]->setValue($this->data[$i][4]);

        // Define os dados da coluna durao mxima
        $columns[5]->control[$i]->setValue($this->data[$i][5]);

        // Define os dados da coluna semestre mnimo
        $columns[6]->control[$i]->setValue($this->data[$i][6]);

        // Define os dados da coluna plano de atividades do curso
        $columns[7]->control[$i]->setValue($this->data[$i][7]);
    }
}
