class ResOfertaDeUnidadeTematicaInformation extends SInformationField
{
    /**
     *  obrigatrio a passagem do objeto ResOfertaDeUnidadeTematica ou ofertaDeUnidadeTematicaId
     */
    public function  __construct($options = array( ))
    {
        $MIOLO = MIOLO::getInstance();
        $module = SAGU::getFileModule(__FILE__);

        $object = $options['ofertaDeUnidadeTematica'] ? $options['ofertaDeUnidadeTematica'] : new ResOfertaDeUnidadeTematica($options['ofertaDeUnidadeTematicaId']);
        $tipos = ResUnidadeTematica::listTipos();
        $periodos = ResUnidadeTematica::listPeriodos();

        $options = array_merge(array(
            'ofertaDeUnidadeTematicaId' => null,
            'value' => array(
                _M('Nome', $module) => $object->nome,
                _M('Carga horria', $module) => $object->cargaHoraria .'H',
                _M('Perodo', $module) => $periodos[$object->unidadeTematica->periodo],
                _M('Incio', $module) => $object->inicio,
                _M('Fim', $module) => $object->fim,
            ),
            'title' => _M('Dados da oferta de atividade do mdulo', $module),
            'columns' => 2,
        ), $options);

        parent::__construct($options);
    }
}
