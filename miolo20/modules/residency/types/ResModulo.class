class ResModulo extends SType
{
    protected $_utilizaNovoPadrao = true;

    const MODULO_TIPO_TRANSVERSAL = 'T';
    const MODULO_TIPO_ESPECIFICO = 'E';
    
    protected $_defaultOrder = 'resmodulo.moduloid';
    
    /**
     * @AttributeType integer
     * 
     */
    protected $moduloId;
    /**
     * @AttributeType character varying
     * 
     */
    protected $nome;


    protected $tipo;

    public function getTableName()
    {
        return 'res.modulo';
    }
    
    /**
     * @return array
     */
    public static function listarModulos($tipo = null)
    {
        $modulo = new ResModulo();
        if (!is_null($tipo)) {
            $modulo->tipo = $tipo;
        }

        return $modulo->findList();
    }

    public static function listTiposModulo()
    {
        return array(
            self::MODULO_TIPO_TRANSVERSAL => _M('TRANSVERSAL'),
            self::MODULO_TIPO_ESPECIFICO => _M('ESPECFICO')
        );
    }
}
