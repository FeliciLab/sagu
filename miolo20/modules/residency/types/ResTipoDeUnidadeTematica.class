class ResTipoDeUnidadeTematica extends SType
{
    protected $_utilizaNovoPadrao = true;
    protected $_tableName = 'res.tipodeunidadetematica';
    
    public $tipoDeUnidadeTematicaId;
    public $descricao;
    public $frequenciaMinima;

    const TIPO_UNIDADE_PRATICA = 'P';
    const TIPO_UNIDADE_TEORICO_CONCEITUAL = 'C';
    const TIPO_UNIDADE_TEORICO_PRATICA = 'T';
    
    public function insert( $data )
    {
        $sql = "INSERT INTO res.tipoDeUnidadeTematica
                           (tipoDeUnidadeTematicaId,
                            descricao,
                            frequenciaMinima)
                     VALUES (?, ?, ?);";
        
        $args[] = $data->tipoDeUnidadeTematicaId;
        $args[] = $data->descricao;
        $args[] = $data->frequenciaMinima;
        
        $ok = SDatabase::execute($sql, $args);
        
        return $ok;
    }
    
    public static function listTipos()
    {
        $sql = "SELECT tipoDeUnidadeTematicaId,
                       descricao
                  FROM res.tipoDeUnidadeTematica";
        
        $tipos = SDatabase::query($sql);
        
        $result = array();
        foreach ($tipos as $tipo)
        {
            $result[$tipo[0]] = $tipo[1];
        }
        
        return $result;
    }
 }

