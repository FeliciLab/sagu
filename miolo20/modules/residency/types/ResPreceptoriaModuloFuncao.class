class ResPreceptoriaModuloFuncao extends SType
{
    protected $_utilizaNovoPadrao = true;
    
    protected $_defaultOrder = 'MOD.nome';
    
    public $preceptoriamodulofuncaoid;
    public $preceptoriaid;
    public $funcao;
    public $moduloid;
    
    const FUNCAO_PRECEPTOR = 'P';
    const FUNCAO_TUTOR = 'T';

    public function getTableName()
    {
        return 'res.preceptoriamodulofuncao';
    }
    
    public function beforeFind(MSQL $sql)
    {
        // adicionado join para fins de ordenacao
        $sql->addLeftJoin('res.modulo MOD', 'MOD.moduloid = respreceptoriamodulofuncao.moduloid');
    }
        
    /**
     * @return array
     */
    public static function listarFuncoes()
    {
        $lista = array();
        $lista[self::FUNCAO_PRECEPTOR] = _M('Preceptor');
        $lista[self::FUNCAO_TUTOR] = _M('Tutor');
        
        return $lista;
    }
    
    /**
     * @return array
     */
    public static function obterPorPreceptor($preceptorId)
    {
        $object = new ResPreceptoriaModuloFuncao();
        $msql = $object->msql()->addEqualCondition('respreceptoriamodulofuncao.preceptoriaid', $preceptorId);
        
        return $object->findMany( $msql );
    }
    
    public static function searchFuncao($filters)
    {
        $sql = 'SELECT
                    A.moduloid, B.personId, A.funcao
                FROM res.preceptoriamodulofuncao A INNER JOIN res.preceptoria B
                ON B.preceptorid = A.preceptoriaid ';
        $where = '';

        foreach ( $filters  as  $key => $value )
        {
            if ( (is_scalar($value))  &&  (strlen($value)  >  0) )
            {
                $where.=" AND {$key} = '{$value}'";
            }
        }

        if ( strlen($where)  >  0 )
        {
            $sql.=' WHERE '.substr($where, 5);
        }

        $sql.=' ORDER BY A.moduloid ';

        $result = SDatabase::query($sql);

        return $result;
    }
}
