class GrdUnidadesTematicasFinalizadas extends SGrid
{

    public function __construct($filters)
    {
        $MIOLO = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();
        
        $columns[] = new MGridColumn(_M('Cdigo', $module), 'right', true, NULL, false);
        $columns[] = new MGridColumn(_M('Status atual', $module), 'left', true, NULL, true, NULL, true);
        $columns[] = new MGridColumn(_M('Cdigo', $module), 'right', true, NULL, true, NULL, true);
        $columns[] = new MGridColumn(_M('Mdulo', $module), 'left', true, NULL, true, ResModulo::listarModulos(), true);
        $columns[] = new MGridColumn(_M('Atividade do mdulo', $module), 'left', true, NULL, true, NULL, true);
        $columns[] = new MGridColumn(_M('Nome da oferta', $module), 'left', true, NULL, true, NULL, true);
        $columns[] = new MGridColumn(_M('Perodo', $module), 'left', true, NULL, true, ResUnidadeTematica::listPeriodos(), true);
        $columns[] = new MGridColumn(_M('Incio', $module), 'left', true, NULL, true, NULL, true);
        $columns[] = new MGridColumn(_M('Fim', $module), 'left', true, NULL, true, NULL, true);

        foreach ( $columns as $col )
        {
            $col->order = false;
        }

        $primaryKeys = array('ofertaDeUnidadeTematicaId'=>'%0%');
        parent::__construct($filters, $columns, __CLASS__, $primaryKeys);

        $this->clearActions();

        // Acao Mais informacoes
        $href = SForm::getPopupLink(array('args' => $primaryKeys, 'method' => 'showInformation', 'encodeArgs' => false));
        $this->addActionIcon(_M('Mais informaes', $module), 'find.png', $href);
    }
}
