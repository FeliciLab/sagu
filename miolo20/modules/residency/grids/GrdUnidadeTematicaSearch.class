class GrdUnidadeTematicaSearch extends SGrid
{
    public function __construct($filters)
    {
        $module = SAGU::getFileModule(__FILE__);

        $columns = array();
        $columns[] = new MGridColumn(_M('Cdigo', $module), 'right', true, null, true, null, true);
        $columns[] = new MGridColumn(_M('Tipo do Mdulo', $module), 'left', true, null, true, ResModulo::listTiposModulo(), true);
        $columns[] = new MGridColumn(_M('Mdulo', $module), 'left', true, null, true, null, true);
        $columns[] = new MGridColumn(_M('Descrio', $module), 'left', true, null, true, null, true);
        $columns[] = new MGridColumn(_M('Perodo', $module), 'center', true, null, true, ResUnidadeTematica::listPeriodos(), true);
        $columns[] = new MGridColumn(_M('Carga horria', $module), 'center', true, null, true, null, true);

        $primaryKeys = array( 'unidadeTematicaId' => '%0%' );

        parent::__construct($filters, $columns, __CLASS__, $primaryKeys);



        $href = SForm::getPopupLink(array('args' => $primaryKeys, 'method' => 'showInformation', 'encodeArgs' => false));
        $this->addActionIcon(_M('Mais informaes', $module), 'find.png', $href);

        $this->setRowMethod(__CLASS__, 'myRowMethod');
    }


}
