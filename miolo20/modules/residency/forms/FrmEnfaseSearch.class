class FrmEnfaseSearch extends SSearchForm
{
    public function __construct($data)
    {
        parent::__construct(null, new ResEnfase(), array('enfaseId'));
    }

    public function defineFields()
    {
        $MIOLO = MIOLO::getInstance();
        $module = SAGU::getFileModule(__FILE__);
        $action = MIOLO::getCurrentAction();

        //Cdigo da nfase
        $fields[] = $enfaseIdS = new MTextField('enfaseIdS', $this->getFormValue('enfaseIdS', $data->enfaseIdS), _M('Cdigo', $module), SAGU::getParameter('basic', 'FIELD_ID_SIZE'));
        $enfaseIdS->setJsHint(_M('Informe o cdigo', $module));

        //Descrio da nfase
        $fields[] = $descricaoS = new MTextField('descricaoS', $this->getFormValue('descricaoS', $data->descricaoS), _M('Descrio', $module), SAGU::getParameter('basic','FIELD_DESCRIPTION_SIZE'));
        $descricaoS->addAttribute('maxlength', '255');
        $descricaoS->setJsHint(_M('Informe a descricao', $module));
        
        //Componente        
        $fields[] = $componente = new MSelection('componenteIdS', $this->getFormValue('componenteIdS', $data->componenteIdS), _M('Componente'), ResComponente::listRecords());
        $componente ->setJsHint(_M('Escolha uma opo para o componente'));

        //Abreviatura da nfase
        $fields[] = $abreviaturaS = new MTextField('abreviaturaS', $this->getFormValue('abreviaturaS', $data->abreviaturaS), _M('Abreviatura', $module), SAGU::getParameter('basic','FIELD_ZIPCODE_SIZE'));
        $abreviaturaS->addAttribute('maxlength', '30');
        $abreviaturaS->setJsHint(_M('Informe a abreviatura', $module));

        //Validadores
        $validators[] = new MIntegerValidator('enfaseIdS', _M('Cdigo'), 'optional');

        parent::defineFields($fields, $module, 'GrdEnfaseSearch', $validators);
    }
}
