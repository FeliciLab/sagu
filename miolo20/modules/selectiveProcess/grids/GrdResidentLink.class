class GrdResidentLink extends SGrid
{
    private $ctrGroup;
    private $listOptionNucleoEnfaseByEnfaseNucleo;

    public function __construct($data)
    {
        $MIOLO = MIOLO::getInstance();
        $action = MIOLO::getCurrentAction();
        $module = SAGU::getFileModule(__FILE__);

        /*
         * Cria selection ou text com o Nucleo profissional/enfase
         */
        $selectiveProcessId = MIOLO::_REQUEST('selectiveProcessId');
        $listOptionNucleoEnfase = (array) SprOptionNucleoEnfase::listForResidentLink( $selectiveProcessId );

        $this->listOptionNucleoEnfaseByEnfaseNucleo = array();
        foreach ( $listOptionNucleoEnfase as $key => $one )
        {
            list($optionId, $enfaseId, $nucleoProfissionalId) = explode('_', $key);
            $this->listOptionNucleoEnfaseByEnfaseNucleo[ $enfaseId . '_' . $nucleoProfissionalId ] = $key;
        }

        $ctrNucleoEnfase = new MSelection('nucleoEnfase');
        $ctrNucleoEnfase->options = $listOptionNucleoEnfase;

        $ctrPersonId = new MTextField('personIdList');

        $ctrSubscriptionId = new MTextField('subscriptionIdList');

        $columns = array(
            new MGridColumn(_M('Posio', $module), 'right', true, null, true),
            new MGridColumn(_M('Cdigo da inscrio', $module), 'right', true, null, true),
            new MGridColumn(_M('Cdigo da pessoa', $module), 'right', true, null, true),
            new MGridColumn(_M('Nome', $module), 'left', true, null, true),
            new MGridControl($ctrNucleoEnfase, _M('Ncleo profissional/nfase'), 'center', true),
            new MGridColumn(_M('Possui vnculo', $module), 'center', true, null, true, SAGU::listYesNo()),
            new MGridColumn('selectedOptionId', 'center', true, null, false),
            new MGridColumn('enfaseId_nucleoProfissionalId', 'center', true, null, false),
            $gcPerson = new MGridControl($ctrPersonId, 'personIdList', 'center', true, null, true),
            $gcSubscription = new MGridControl($ctrSubscriptionId, 'subscriptionIdList', 'center', true, null, true),
        );

        //
        $gcPerson->setHidden(true);
        $gcSubscription->setHidden(true);

        parent::__construct($data, $columns, __CLASS__, null);
        $this->setRowMethod($this, 'myRowMethod');

        $this->addActionSelect();
        $this->clearActions();
        $this->pageLength = 999999999;
        $this->pageNumber = 0;
        $this->showExportAsCSV = false;
    }

    public function myRowMethod($i, $row, $actions, $columns)
    {
        $MIOLO = MIOLO::getInstance();
        $module = SAGU::getFileModule(__FILE__);

        list($null, $null, $null, $null, $colEnfaseNucleo, $null, $null, $null, $colPersonIdList, $colSubscriptionIdList) = $columns;
        list($null, $valSubscriptionId, $valPersonId, $null, $null, $possuiVinculo, $valOptionId, $valEnfaseNucleo) = $row;

        //Define valor no SELECTION
        $controlEnfaseNucleo = $colEnfaseNucleo->control[$i];
        $controlEnfaseNucleo->setValue( $this->listOptionNucleoEnfaseByEnfaseNucleo[$valEnfaseNucleo] );
        $controlEnfaseNucleo->setReadOnly( $possuiVinculo == DB_TRUE );

        //
        $controlPersonIdList = $colPersonIdList->control[$i];
        $controlPersonIdList->setValue($valPersonId);

        //
        $controlSubscriptionIdList = $colSubscriptionIdList->control[$i];
        $controlSubscriptionIdList->setValue($valSubscriptionId);
    }
}
