class GrdSelectiveProcessSearch extends SGrid
{
    /**
     * Class constructor
     **/
    public function __construct($filters)
    {
        $module = MIOLO::getCurrentModule();

        $columns = array(
            new SGridColumn('selectiveProcessId', _M('Cdigo', $module), 'right', array('nowrap' => false)),
            new SGridColumn('description', _M('Descrio', $module), 'left', array('nowrap' => false)),
            new SGridColumn('subscriptionStartDate', _M('Data inicial', $module), 'left', array('nowrap' => false)),
            new SGridColumn('subscriptionEndDate', _M('Data final', $module), 'left', array('nowrap' => false)),
            new SGridColumn('endOfProcessDate', _M('Data final do processo', $module), 'left', array('nowrap' => false)),
            new SGridColumn('numberOfOptions', _M('Nmero de opes', $module), 'right', array('nowrap' => false)),
            new SGridColumn('minimumNumberOfOptions', _M('Nmero mnimo de opes', $module), 'right', array('nowrap' => false)),
            new SGridColumn('totalSteps', _M('Etapas', $module), 'right', array('nowrap' => false)),
            new SGridColumn('totalSubscriptions', _M('Inscritos', $module), 'right', array('nowrap' => false)),
        );

        $primaryKey = array('selectiveProcessId' => '%0%');

        parent::__construct($filters, $columns, __CLASS__, $primaryKey);
    }
}
