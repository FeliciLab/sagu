/**
 * Grid used by form to display search results
 **/
class GrdStatisticForSubscriptionCity extends SGrid
{
    /**
     * Class constructor
     **/
    public function __construct($filters)
    {
        $module = MIOLO::getCurrentModule();

        $columns = array( new MGridColumn( _M('Cdigo da cidade', $module), 'right', true, null, true, null, true ),
                          new MGridColumn( _M('Nome', $module), 'left', true, null, true, null, true ),
                          new MGridColumn( _M('Total de inscritos', $module), 'right', true, null, true, null, true ) );

        parent::__construct($filters, $columns, 'GrdStatisticForSubscriptionCity');
    }
}
