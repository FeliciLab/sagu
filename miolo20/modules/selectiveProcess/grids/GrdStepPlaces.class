class GrdStepPlaces extends SGrid
{
    /**
     * Class constructor
     */
    public function __construct($data)
    {
        $MIOLO = MIOLO::getInstance();
        $action = MIOLO::getCurrentAction();
        $module = SAGU::getFileModule(__FILE__);

        $columns = array();
        $columns[] = new MGridColumn(_M('Cdigo da etapa', $module), 'right', true, null, false);
        $columns[] = new MGridColumn(_M('Cdigo do recurso fsico', $module), 'right', true, null, false);
        $columns[] = new MGridColumn(_M('Verso do recurso fsico', $module), 'right', true, null, false);
        $columns[] = new MGridColumn(_M('Cdigo do local', $module), 'right', true, null, false);
        $columns[] = new MGridColumn(_M('Cdigo da cidade', $module), 'left', true, null, false);
        $columns[] = new MGridColumn(_M('Cidade', $module), 'left', true, null, true);
        $columns[] = new MGridColumn(_M('Prdio', $module), 'left', true, null, true);
        $columns[] = new MGridColumn(_M('Sala', $module), 'left', true, null, true);
        $columns[] = new MGridColumn(_M('Inscries', $module), 'left', true, null, true);
        $columns[] = new MGridColumn(_M('Vagas', $module), 'left', true, null, true);

        parent::__construct($data, $columns, 'GrdStepPlaces', null);
        $this->clearActions();
        
        $optsExam = array( 'stepId' => '%0%', 
                           'physicalResourceId' => '%1%', 
                           'physicalResourceVersion' => '%2%',
                           'locationId' => '%3%',
                           'cityId' => '%4%',
                           'building' => '%6%',
                           'room' => '%7%',
                           'event' => 'generateReport',
                           'report' => 'examAct');
        
        $optsStu = array( 'stepId' => '%0%', 
                          'physicalResourceId' => '%1%', 
                          'physicalResourceVersion' => '%2%',
                          'locationId' => '%3%',
                          'cityId' => '%4%',
                          'building' => '%6%',
                          'room' => '%7%',
                          'event' => 'generateReport',
                          'report' => 'studentsOfRoom');
        
        $optsLab = array( 'stepId' => '%0%', 
                          'physicalResourceId' => '%1%', 
                          'physicalResourceVersion' => '%2%',
                          'locationId' => '%3%',
                          'cityId' => '%4%',
                          'building' => '%6%',
                          'room' => '%7%',
                          'event' => 'generateReport',
                          'report' => 'label');
        
        $optsRed  = array( 'stepId' => '%0%', 
                           'physicalResourceId' => '%1%', 
                           'physicalResourceVersion' => '%2%',
                           'locationId' => '%3%',
                           'cityId' => '%4%',
                           'building' => '%6%',
                           'room' => '%7%',
                           'event' => 'generateReport',
                           'report' => 'redacoes');
        
        $actionLinkExam	= $MIOLO->getActionURL($module, $action, null, $optsExam);
        $actionLinkStu	= $MIOLO->getActionURL($module, $action, null, $optsStu);
        $actionLinkLab	= $MIOLO->getActionURL($module, $action, null, $optsLab);
        $actionLinkRed	= $MIOLO->getActionURL($module, $action, null, $optsRed);
        
        $this->addActionIcon( _M('Ata de exame', $module ), 'document-16x16.png', $actionLinkExam );
        $this->addActionIcon( _M('Alunos da sala', $module ), 'document-16x16.png', $actionLinkStu );
        $this->addActionIcon( _M('Etiquetas de Mesa', $module ), 'document-16x16.png', $actionLinkLab);
        $this->addActionIcon( _M('Lista de redaes', $module ), 'document-16x16.png', $actionLinkRed);
    }
}
