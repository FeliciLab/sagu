class GrdOptionCoursePedagogico extends SGrid {

    private $ctrGroup;
    private $isReadOnly;
    private $fields;

    public function __construct($data)
    {
        $MIOLO = MIOLO::getInstance();
        $action = MIOLO::getCurrentAction();
        $module = SAGU::getFileModule(__FILE__);

        $this->fields[] = $ctrVacancies = new MTextField('_vacancies', null, null, 5);
        $this->fields[] = $ctrQuotes = new MTextField('_quotes', null, null, 5);
        $this->fields[] = $ctrMaximumSubstitutes = new MTextField('_maximumSubstitutes', null, null, 5);
        $this->fields[] = $ctrDescription = new MTextField('_description', null, null, 20);
        $ctrOptionId = new SHiddenField('_optionId');
        $ctrOldOptionId = new SHiddenField('_oldOptionId');
        $this->fields[] = $grdControlOptionId = new MGridControl($ctrOptionId, ' ', 'center', true, null, true);
        $this->fields[] = $grdControlOldOptionId = new MGridControl($ctrOldOptionId, ' ', 'center', true, null, true);

        $columns = array(
            new MGridColumn(_M('Nmero', $module), 'right', true, null, true),
            new MGridColumn(_M('Turma', $module), 'left', true, null, true),
            new MGridColumn(_M('Nome', $module), 'left', true, null, true),
            new MGridColumn(_M('Unidade', $module), 'left', true, null, true),
            new MGridControl($ctrVacancies, _M('Vagas para classificados', $module), 'center', true),
            new MGridControl($ctrQuotes, _M('Vagas para cotistas', $module), 'center', true),
            new MGridControl($ctrMaximumSubstitutes, _M('Vagas para suplentes', $module), 'center', true),
            new MGridControl($ctrDescription, _M('Opo', $module), 'center', true),
            $grdControlOptionId,
            $grdControlOldOptionId,
        );
        $grdControlOptionId->setHidden(true);
        $grdControlOldOptionId->setHidden(true);

        parent::__construct($data, $columns, __CLASS__, null);

        $this->setRowMethod(__CLASS__, 'myRowMethodPedagogico');

        $this->pageLength = 0;
        $this->pageNumber = 0;
        $this->actions = array();
    }

    public function myRowMethodPedagogico($i, $row, $actions, $columns)
    {
        $MIOLO = MIOLO::getInstance();
        $module = SAGU::getFileModule(__FILE__);

        //Organiza os dados de forma humana
        $cols = array(
            'number',
            null,
            null,
            null,
            '_vacancies',
            '_quotes',
            '_maximumSubstitutes',
            '_description',
            '_optionId',
            '_oldOptionId');
        $values = array();
        $controls = array();
        foreach ($cols as $x => $col)
        {
            if ($col)
            {
                $values[$col] = & $row[$x];
                $controls[$col] = & $columns[$x]->control[$i];
            }
        }

        //
        //Agrupar com
        //
        //Chama funcao tambem no onload, para exibir/ocultar corretamente os campos

        $controls['_description']->setValue($values['_description']);
        $controls['_vacancies']->setValue($values['_vacancies']);
        $controls['_quotes']->setValue($values['_quotes']);
        $controls['_maximumSubstitutes']->setValue($values['_maximumSubstitutes']);
        $controls['_optionId']->setValue($values['_optionId']);
        $controls['_oldOptionId']->setValue($values['_oldOptionId']);

        //Adiciona div por fora do control, para poder chamar pelo ID na hora de esconder/exibir
        $controls['_vacancies'] = new MDiv("div_vacancies{$i}", $controls['_vacancies']);
        $controls['_quotes'] = new MDiv("div_quotes{$i}", $controls['_quotes']);
        $controls['_maximumSubstitutes'] = new MDiv("div_maximumSubstitutes{$i}", $controls['_maximumSubstitutes']);
        $controls['_description'] = new MDiv("div_description{$i}", $controls['_description']);
    }

    public function setGroupByOptions(array $options)
    {
        $this->ctrGroup->options = $options;
    }

    public function getIsReadOnly()
    {
        return $this->isReadOnly;
    }

    public function setIsReadOnly($isReadOnly)
    {
        foreach ($this->fields as $f)
        {
            $f->setReadOnly($isReadOnly);
        }

        $this->isReadOnly = $isReadOnly;
    }

}

