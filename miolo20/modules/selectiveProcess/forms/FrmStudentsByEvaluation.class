class FrmStudentsByEvaluation extends SForm
{    
    /**
     * Mtodo contrutor
     */
    public function __construct($data)
    {
        $MIOLO = MIOLO::getInstance();
        $module = SAGU::getFileModule(__FILE__);
        $action = MIOLO::getCurrentAction();
        
        parent::__construct(_M('Relatrio de alunos por avaliao', $module), null, null);

        // Disable toolbar buttons
        $this->toolbar->disableButton(MToolBar::BUTTON_NEW);
        $this->toolbar->disableButton(MToolBar::BUTTON_DELETE);
        $this->toolbar->disableButton(MToolBar::BUTTON_SAVE);
        $this->toolbar->disableButton(MToolBar::BUTTON_SEARCH);
    }

    /**
     * Mtodo padro para definio dos campos
     */
    public function defineFields()
    {
        $MIOLO = MIOLO::getInstance();
        $module = SAGU::getFileModule(__FILE__);
        $action = MIOLO::getCurrentAction();
        $function = MIOLO::_request('function');
        
        // Field selective process (lookup selective process)
        $selectiveProcessLabel = new MText('selectiveProcessLabel', _M('Processo seletivo', $module) . ':');
        $selectiveProcessLabel->setWidth(SAGU::getParameter('BASIC', 'FIELD_LABEL_SIZE'));
        $selectiveProcessLabel->setClass('m-caption m-caption-required');
        $selectiveProcessId = new MLookupTextField('selectiveProcessId', $this->getFormValue('selectiveProcessId',$data->selectiveProcessId), null, SAGU::getParameter('BASIC', 'FIELD_LOOKUPFIELD_SIZE'), null, null, 'selectiveProcessDescription', $module, 'selectiveProcess', null, null, true);
        $selectiveProcessId->setJsHint(_M('Informe o cdigo do processo seletivo',$module));
        $selectiveProcessDescription = new MTextField('selectiveProcessDescription', $this->getFormValue('selectiveProcessDescription', $data->selectiveProcessDescription), null, SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE'));
        $selectiveProcessDescription->setReadOnly(true);
        $selectiveProcessDescription->setJsHint(_M('Descrio do processo seletivo',$module));
        $fields[] = $selectiveProcess = new MHContainer('selectiveProcessCnt',array($selectiveProcessLabel, $selectiveProcessId, $selectiveProcessDescription));
        $selectiveProcess->showLabel = true;
        $validators[] = new MIntegerValidator('selectiveProcessId', _M('Processo seletivo', $module), 'required');

        // Field step (lookup step)
        $stepLabel = new MText('stepLabel', _M('Etapa', $module) . ':');
        $stepLabel->setWidth(SAGU::getParameter('BASIC', 'FIELD_LABEL_SIZE'));
        $stepId = new MLookupTextField('stepId', $this->getFormValue('stepId',$data->stepId), null, SAGU::getParameter('BASIC', 'FIELD_LOOKUPFIELD_SIZE'), null, null, 'stepDescription, selectiveProcessId, selectiveProcessDescription', $module, 'step', null, array('selectiveProcessId'=>'selectiveProcessId'), true);
        $stepId->setJsHint(_M('Informe o cdigo da etapa',$module));
        $stepDescription = new MTextField('stepDescription', $this->getFormValue('stepDescription', $data->stepDescription), null, SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE'));
        $stepDescription->setReadOnly(true);
        $stepDescription->setJsHint(_M('Descrio da etapa',$module));
        $fields[] = $step = new MHContainer('stepCnt',array($stepLabel, $stepId, $stepDescription));
        $step->showLabel = true;
        $validators[] = new MIntegerValidator('stepId', _M('Etapa', $module));

        // Field evaluation (lookup evaluation)
        $evaluationLabel = new MText('evaluationLabel', _M('Avaliao', $module) . ':');
        $evaluationLabel->setWidth(SAGU::getParameter('BASIC', 'FIELD_LABEL_SIZE'));
        $evaluationId = new MLookupTextField('evaluationId', $this->getFormValue('evaluationId',$data->evaluationId), null, SAGU::getParameter('BASIC', 'FIELD_LOOKUPFIELD_SIZE'), null, null, 'evaluationDescription, stepId, stepDescription, selectiveProcessId, selectiveProcessDescription', $module, 'evaluation', null, array('selectiveProcessId'=>'selectiveProcessId'), true);
        $evaluationId->setJsHint(_M('Informe o cdigo da avaliao',$module));
        $evaluationDescription = new MTextField('evaluationDescription', $this->getFormValue('evaluationDescription', $data->evaluationDescription), null, SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE'));
        $evaluationDescription->setReadOnly(true);
        $evaluationDescription->setJsHint(_M('Descrio da avaliao',$module));
        $fields[] = $evaluation = new MHContainer('evaluationCnt',array($evaluationLabel, $evaluationId, $evaluationDescription));
        $evaluation->showLabel = true;
        $validators[] = new MIntegerValidator('evaluationId', _M('Avaliao', $module));

        $fields[] = new MSeparator('');
        $fields[] = new MButton('btnGenerate', _M('Localizar', $module));
        $fields[] = new MSeparator('');
        
        $data = $this->getTypesData();

        $selectiveProcessId = $data->selectiveProcessId;
        $stepId = $data->stepId;
        $evaluationId = $data->evaluationId;

        if ( strlen($selectiveProcessId) > 0 )
        {
            // Verifica se tem o cdigo do processo seletivo, e filtra por processo seletivo:
            if ( strlen($selectiveProcessId) > 0 )
            {
                $filters = new stdClass();
                $filters->selectiveProcessId = $selectiveProcessId;

                // Se tem cdigo da etapa, filtra pela etapa
                if ( strlen($stepId) > 0 )
                {
                    $filters->stepId = $stepId;
                }

                // Se tem o cdigo da avalio, filtra pela avaliao
                if ( strlen($data->evaluationId) > 0 )
                {
                    $filters->evaluationId = $evaluationId;
                }

                $subscriptionsEvaluationOption = SprReports::searchStudentsByEvaluation($filters);

                if ( count($subscriptionsEvaluationOption) > 0 )
                {
                    $grdResults = $MIOLO->getUI()->getGrid ($module, 'GrdStudentsByEvaluation', $filters);
                    $grdResults->setData($subscriptionsEvaluationOption);
                    $grdResults->setClose(null);
                    unset($grdResults->actions);
                    $grdResults->setTitle(_M('Relatrio de alunos por avaliao', $module));
                }
                else
                {
                    $this->Error(_M('Nenhum registro encontrado.', $module));
                }
            }
            else
            {
                $this->Error(_M('Voc precisa informar um processo seletivo.', $module));
            }

            if ( !$grdResults )
            {
                $this->Error(_M('Nenhum registro encontrado.', $module));
            }
            else
            {
                $fields[] = $grdResults;
            }
        }
        
        $this->setFields($fields);
        $this->setValidators($validators);

        parent::defineFields();
    }
    
    /**
     * Method to gather all information from the form fields
     * and put them on a database compatible object
     */
    public function getTypesData()
    {
        $data->selectiveProcessId = $this->getFormValue('selectiveProcessId');
        $data->stepId = $this->getFormValue('stepId');
        $data->evaluationId = $this->getFormValue('evaluationId');
        
        return $data;
    }
}
?>