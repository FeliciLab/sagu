class FrmDetailedEvaluationOption extends SStepByStepForm
{
    public function __construct($steps = null)
    {
        if ( !$steps->disableConstruct )
        {
            parent::__construct(null, $steps, __CLASS__);

            $this->toolbar->disableButton(MToolBar::BUTTON_SAVE);
            $this->toolbar->disableButton(MToolBar::BUTTON_SEARCH);
            
        }
    }

    public function createFields()
    {
        $MIOLO = MIOLO::getInstance();
        $module = SAGU::getFileModule(__FILE__);
        $action = MIOLO::getCurrentAction();
        $function = MIOLO::_REQUEST('function');

        // Load data
        $allData = $this->getStepData();
        $stepData = $this->getStepDataByForm(__CLASS__);

        if ( $this->isFirstAccess() )
        {
            MSubDetail::clearData('evaluationOptions');

            if ( strlen($allData->evaluationId) > 0 )
            {
                $sprEvaluation = new SprEvaluation($allData->evaluationId);
            }
        }

        // Cdigo da avaliao
        $_fields[] = new SHiddenField('evaluationOptionId');

        // Descrio
        $descriptionLabel = new MText('descriptionLabel', _M('Descrio', $module) . ':');
        $descriptionLabel->setWidth(SAGU::getParameter('BASIC', 'FIELD_CONTAINER_SIZE'));
        $descriptionLabel->setClass('m-caption m-caption-required');
        $description = new MTextField('description', null, null, SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE'));
        $description->setJsHint(_M('Informe a descrio', $module));
        $_validators[] = new MRequiredValidator('description', _M('Descrio', $module), 'required');
        $_fields[] = new MHContainer('descriptionCnt', array($descriptionLabel, $description));

        // Caso a avaliao tenha true como valor na coluna enableDesiredScoreField
        if ( $sprEvaluation->enableDesiredScoreField == DB_TRUE )
        {
            // Forma de pontuao
            $scoringInfoLabel = new MText('scoringInfoLabel', _M('Forma de pontuao', $module) . ':');
            $scoringInfoLabel->setWidth(SAGU::getParameter('BASIC', 'FIELD_CONTAINER_SIZE'));
            $scoringInfo = new MMultiLineField('scoringInfo', null, null, SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE'), 5, 40);
            $scoringInfo->setJsHint(_M('Informe a forma de pontuao', $module));
            $_fields[] = new MHContainer('scoringInfoCnt', array($scoringInfoLabel, $scoringInfo));
        }
        
        // Pontuacao maxima
        $maximumScoreLabel = new MText('maximumScoreLabel', _M('Pontuao mxima', $module) . ':');
        $maximumScoreLabel->setWidth(SAGU::getParameter('BASIC', 'FIELD_CONTAINER_SIZE'));
        $maximumScoreLabel->setClass('m-caption');
        $maximumScore = new MTextField('maximumScore', null, _M('Pontuao mxima', $module), SAGU::getParameter('BASIC', 'FIELD_ID_SIZE'));
        $maximumScore->setJsHint( _M('Informe a pontuao mxima', $module) );          
        $_validators[] = new MFloatValidator('maximumScore', _M('Pontuao mxima para esse item', $module));
        $_fields[] = new MHContainer('maximumScoreCnt', array($maximumScoreLabel, $maximumScore));

        $_columns[] = new sSubDetailColumn('evaluationOptionId', array('visible' => false));
        $_columns[] = new sSubDetailColumn('description', array('label' => _M('Descrio', $module)));
        // Caso a avaliao tenha true como valor na coluna enableDesiredScoreField
        if ( $sprEvaluation->enableDesiredScoreField == DB_TRUE )
        {
            $_columns[] = new sSubDetailColumn('scoringInfo', array('label' => _M('Forma de pontuao', $module)));
        }
        $_columns[] = new sSubDetailColumn('maximumScore', array('label' => _M('Pontuao mxima', $module)));

        $fields[] = $sub = new MSubDetail('evaluationOptions', _M('Opes', $module), $_columns, $_fields, array('remove', 'edit'));
        $sub->setValidators($_validators);

        if ( count($sprEvaluation->evaluationOptions) > 0 )
        {
            $sub->setData(SAGU::convertSTypeToSubDetail($_columns, $sprEvaluation->evaluationOptions));
        }

        $this->setFields($fields);
        $this->setValidators($validators);
    }

    public function finalizeButton_click($args)
    {
        $MIOLO = MIOLO::getInstance();
        $module = SAGU::getFileModule(__FILE__);
        $action = MIOLO::getCurrentAction();
        $allData = $this->getStepData();
        $data = $this->getData();

        try
        {
            SDatabase::beginTransaction();
            $sprEvaluation = new SprEvaluation($allData->evaluationId);

            $evaluationOptions = array();
            foreach ( (array)$data->evaluationOptions as $opt )
            {
                if ( $opt->removeData )
                {
                    if ( strlen($opt->evaluationOptionId) > 0 )
                    {
                        $sprEvaluationOption = new SprEvaluationOption($opt->evaluationOptionId);
                        $sprEvaluationOption->delete();
                    }
                }
                else
                {
                    $sprEvaluationOption = new SprEvaluationOption();
                    if ( strlen($opt->evaluationOptionId) > 0 )
                    {
                        $sprEvaluationOption->evaluationOptionId = $opt->evaluationOptionId;
                    }
                    $sprEvaluationOption->description = $opt->description;
                    // Caso a avaliao tenha true como valor na coluna enableDesiredScoreField
                    if ( $sprEvaluation->enableDesiredScoreField == DB_TRUE )
                    {
                        $sprEvaluationOption->scoringInfo = $opt->scoringInfo;
                    }
                    $sprEvaluationOption->maximumScore = $opt->maximumScore;
                    
                    $evaluationOptions[] = $sprEvaluationOption;
                }
            }

            $sprEvaluation->evaluationOptions = $evaluationOptions;

            $sprEvaluation->save();
            SDatabase::commit();

            parent::finalizeButton_click($args);
            
            $goto = $MIOLO->getActionURL($module, $action);
            SAGU::information(SAGU::getParameter('BASIC', 'MSG_RECORD_UPDATED'), $goto);
        }
        catch ( Exception $e )
        {
            parent::finalizeButton_click($args);
            
            $this->AddError($e->getMessage());
        }
    }
}
