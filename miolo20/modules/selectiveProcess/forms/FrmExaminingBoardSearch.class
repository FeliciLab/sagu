/**
 * Form to manipulate a uploadCsvFileNote
 **/
class FrmExaminingBoardSearch extends SSearchForm
{
    /**
     * Class constructor
     **/
    public function __construct($data)
    {
        parent::__construct(_M('Localizar', $module), new SprExaminingBoard(), array('examiningBoardId'));
    }

    /**
     * Default method to define fields
     **/
    public function defineFields()
    {
        $MIOLO = MIOLO::getInstance();
        $module = SAGU::getFileModule(__FILE__);

        // Field selective process (lookup selective process)
        $selectiveProcessLabelS = new MText('selectiveProcessLabelS', _M('Processo seletivo', $module) . ':');
        $selectiveProcessLabelS->setWidth(SAGU::getParameter('BASIC', 'FIELD_LABEL_SIZE'));
        $selectiveProcessIdS = new MLookupTextField('selectiveProcessIdS', $this->getFormValue('selectiveProcessIdS',$data->selectiveProcessIdS), null, SAGU::getParameter('BASIC', 'FIELD_LOOKUPFIELD_SIZE'), null, null, 'selectiveProcessDescriptionS', $module, 'selectiveProcess', null, null, true);
        $selectiveProcessIdS->setJsHint(_M('Informe o cdigo do processo seletivo',$module));
        $selectiveProcessDescriptionS = new MTextField('selectiveProcessDescriptionS', $this->getFormValue('selectiveProcessDescriptionS', $data->selectiveProcessDescriptionS), null, SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE'));
        $selectiveProcessDescriptionS->setJsHint(_M('Informe a descrio do processo seletivo',$module));
        $fields[] = $selectiveProcessS = new MHContainer('selectiveProcessCntS',array($selectiveProcessLabelS, $selectiveProcessIdS, $selectiveProcessDescriptionS));
        $selectiveProcessS->showLabel = true;
        $validators[] = new MIntegerValidator('selectiveProcessIdS', _M('Processo seletivo', $module));

        // Field step (lookup step)
        $stepLabelS = new MText('stepLabelS', _M('Etapa', $module) . ':');
        $stepLabelS->setWidth(SAGU::getParameter('BASIC', 'FIELD_LABEL_SIZE'));
        $stepIdS = new MLookupTextField('stepIdS', $this->getFormValue('stepIdS',$data->stepIdS), null, SAGU::getParameter('BASIC', 'FIELD_LOOKUPFIELD_SIZE'), null, null, 'stepDescriptionS, selectiveProcessIdS, selectiveProcessDescriptionS', $module, 'step', null, array('selectiveProcessId'=>'selectiveProcessIdS'), true);
        $stepIdS->setJsHint(_M('Informe o cdigo da etapa',$module));
        $stepDescriptionS = new MTextField('stepDescriptionS', $this->getFormValue('stepDescriptionS', $data->stepDescriptionS), null, SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE'));
        $stepDescriptionS->setJsHint(_M('Informe a descrio da etapa',$module));
        $fields[] = $stepS = new MHContainer('stepCntS',array($stepLabelS, $stepIdS, $stepDescriptionS));
        $stepS->showLabel = true;
        $validators[] = new MIntegerValidator('stepIdS', _M('Etapa', $module));

        // Field description
        $fields[] = $descriptionS = new MTextField('descriptionS', null, _M('Descrio', $module), SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE'));
        $descriptionS->setJsHint( _M('Informe a descrio da banca examinadora', $module) );
        
        // Field person (lookup physical person)
        $personLabelS = new MText('personLabelS', _M('Pessoa', $module).':');
        $personLabelS->setWidth(SAGU::getParameter('BASIC', 'FIELD_LABEL_SIZE'));
        $personIdS = new MLookupTextField('personIdS', $this->getFormValue('personIdS', $data->personIdS), _M('Cdigo',$module), SAGU::getParameter('BASIC', 'FIELD_ID_SIZE'), null, null, 'personNameS', 'basic', 'PhysicalPerson', null, null, true);
        $personIdS->setJsHint(_M('Informe o cdigo da pessoa fsica',$module));
        $validators[] = new MIntegerValidator('personIdS', _M('Pessoa', $module));
        $personNameS = new MTextField('personNameS', $this->getFormValue('personNameS',$data->personNameS), _M('Nome',$module), SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE'));
        $personNameS->setJsHint(_M('Informe o nome da pessoa fsica',$module));
        $hctPersonS = new MHContainer('hctPersonS', array($personLabelS, $personIdS, $personNameS));
        $hctPersonS->setShowLabel(false);
        $fields[] = $hctPersonS;

        parent::defineFields($fields, $module, 'GrdExaminingBoardSearch', $validators);
    }

    public function getTypesData()
    {
        $fields[] = 'selectiveProcessId';
        $fields[] = 'selectiveProcessDescription';
        $fields[] = 'stepId';
        $fields[] = 'stepDescription';
        $fields[] = 'personId';
        $fields[] = 'personName';
        $fields[] = 'description';

        foreach ($fields as $field)
        {
            if ( strlen(MIOLO::_REQUEST($field.'S')) > 0 )
            {
                $data->$field= MIOLO::_REQUEST($field.'S');
            }
        }

        return $data;
    }
}
?>