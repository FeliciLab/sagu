class FrmSelectiveProcessSearch extends SSearchForm
{
    public function __construct($data)
    {
        $module = SAGU::getFileModule(__FILE__);
        
        parent::__construct(_M('Localizar', $module), new SprSelectiveProcess(), array('selectiveProcessId'));
    }


    public function defineFields()
    {
        $MIOLO  = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();
        $action = MIOLO::getCurrentAction();

        $selectiveProcessIdS = new MTextField('selectiveProcessIdS', null, _M('Cdigo', $module), SAGU::getParameter('BASIC', 'FIELD_ID_SIZE'));
        $selectiveProcessIdS->setJsHint(_M('Informe o cdigo do processo seletivo',$module));
        $fields[] = $selectiveProcessIdS;
        $validators[] = new MIntegerValidator('selectiveProcessIdS', '', 'optional');

        //Descricao
        $fields[] = $descriptionS = new MTextField('descriptionS', null, _M('Descrio', $module), SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE'));
        $descriptionS->setJsHint( _M('Informe a descrio do processo seletivo', $module) );

        parent::defineFields($fields, $module, 'GrdSelectiveProcessSearch', $validators);
    }

    
    public function getTypesData()
    {
        $_SESSION['selectiveProcessId'] = $data->selectiveProcessId;
        
        $data->selectiveProcessId = MIOLO::_REQUEST('selectiveProcessIdS');
        $data->description = MIOLO::_REQUEST('descriptionS');
        return $data;
    }
}
