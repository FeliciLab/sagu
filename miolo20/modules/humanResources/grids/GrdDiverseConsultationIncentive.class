/**
 * Grid used by form to display search results
 **/
class GrdDiverseConsultationIncentive extends SGrid
{
    /**
     * Class constructor
     **/
    public function __construct($filters)
    {
        $MIOLO  = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();
        $action = MIOLO::getCurrentAction();
        
        $columns = array( 
                          new MGridColumn( _M('Código do contrato',             $module), 'right',  true,  null, true, null, true),
                          new MGridColumn( _M('Data inicial',              $module), 'center', true,  null, true, null, true),
                          new MGridColumn( _M('Data de cancelamento',                $module), 'center', true,  null, true, null, true),
                          new MGridColumn( _M('Valor',                   $module), 'right',  true,  null, true, null, true),
                          new MGridColumn( _M('Valor é percentual',        $module), 'center', true,  null, true, array( DB_TRUE => _M('Sim',$module), DB_FALSE => _M('Não',$module) ), true),
                          new MGridColumn( _M('Aglutinar',             $module), 'center', true,  null, true, array( DB_TRUE => _M('Sim',$module), DB_FALSE => _M('Não',$module) ), true),
                          new MGridColumn( _M('Código do centro de custo',          $module), 'center', true,  null, true, null, true),
                          new MGridColumn( _M('Descrição do centro de custo', $module), 'left',   false, null, true, null, true),
                          new MGridColumn( _M('Tipo de incentivo',          $module), 'left',   false, null, true, null, true)
                         );
        
        parent::__construct( $filters, $columns, 'gridDiverseConsultationIncentive' );
        
        $this->clearActions();
        $this->setRowMethod('GrdDiverseConsultationIncentive', 'myRowMethod');
    }
   
    /*
     * Event to execute for each row of grid
     */
    public function myRowMethod($i, $row, $actions, $columns )
    {
        $MIOLO = MIOLO::getInstance();
    }
}
