class MedResidenteInformation extends SInformationField
{
    /**
     *  obrigatrio a passagem do objeto MedResidente j instanciado (OU) residenteId
     * 
     * Exibe infos da turma, caso o residente esteja cadastrado em uma.
     */
    public function  __construct($options = array( ))
    {
        $MIOLO = MIOLO::getInstance();
        $module = SAGU::getFileModule(__FILE__);
        
        $residente = $options['residente'] ? $options['residente'] : new MedResidente($options['residenteId']);
        
        $resTurma = new MedTurma($residente->turmaId);
        
        //Aplica duraao da turma caso residente esteja alocado
        if (strlen ($residente->turmaId) > 0)
        {
            $duracao = $resTurma->quantidadePeriodo . ' anos';
        }
        
        $options = array_merge(array(
            'residenteId' => null,
            'value' => array(
                _M('Nome', $module) => $residente->physicalPerson->personId . ' - ' . $residente->physicalPerson->name,
                _M('nfase') => $residente->enfase->descricao,
                _M('Ncleo profissional') => $residente->nucleoProfissional->descricao,
                _M('Perodo letivo', $module) => $residente->inicio . ' a ' . $residente->fimPrevisto,
                _M('Turma', $module) => $resTurma->descricao,
                _M('Perodo de durao', $module) => $duracao,
            ),
            'title' => _M('Dados do residente', $module),
            'columns' => 1,
        ), $options);
        
        parent::__construct($options, $width = '500');
    }
}
