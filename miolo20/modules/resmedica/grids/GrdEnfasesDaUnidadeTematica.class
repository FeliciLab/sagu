class GrdEnfasesDaUnidadeTematica extends SGrid
{
    public function __construct($filters)
    {
        $module = SAGU::getFileModule(__FILE__);

        $columns = array();
        $columns[] = new MGridColumn(_M('Cdigo', $module), 'right', true, null, true, null, false);
        $columns[] = new MGridColumn(_M('nfase'), 'left', true, null, true, null, false);

        $primaryKey = array( 'enfaseId' => '%0%' );

        parent::__construct($filters, $columns, __CLASS__, $primaryKey);

        // Remove as aes da Grid
        $this->clearActions();

        // Adiciona a coluna dos checkBox
        $this->addActionSelect();

        // Desabilita CSV e paginador
        $this->showExportAsCSV = false;
        $this->pageLength = 0;
    }
}
