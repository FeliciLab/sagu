class GrdPreceptoriaSearch extends SGrid
{
    public function __construct($filters)
    {
        $module = MIOLO::getCurrentModule();

        $columns = array();
        $columns[] = new MGridColumn( _M('Cdigo', $module), 'right',  true, null, false, null, true );
        $columns[] = new MGridColumn( _M('Nome', $module), 'left',  true, null, true, null, true );
        $columns[] = new MGridColumn( _M('Registro', $module), 'right', true, null, true, null, true );
        $columns[] = new MGridColumn( _M('CPF', $module), 'left',  true, null, true, null, true );
        $columns[] = new MGridColumn( _M('Profisso', $module), 'right', true, null, true, null, true );
        $columns[] = new MGridColumn( _M('Titulao', $module), 'left',  true, null, true, null, true );
        $columns[] = new MGridColumn( _M('Carga horria mensal', $module), 'right', true, null, true, null, true );
        $columns[] = new MGridColumn( _M('Carga horria semanal', $module), 'right', true, null, true, null, true );
        $columns[] = new MGridColumn( _M('Telefone res/cel', $module), 'left',  true, null, true, null, true );
        $columns[] = new MGridColumn( _M('E-mail', $module), 'left', true, null, true, null, true );
        $columns[] = new MGridColumn( _M('Incio da Preceptoria', $module), 'right', true, null, true, null, true );
        $columns[] = new MGridColumn( _M('Trmino da Preceptoria', $module), 'right', true, null, true, null, true );
        $columns[] = new MGridColumn( _M('Situao', $module), 'left', true, null, true, null, true );
        $columns[] = new MGridColumn( _M('Ncleo profissional'), 'left', true, null, true, null, true );
        $columns[] = new MGridColumn( _M('nfase'), 'left', true, null, true, null, true );
        $columns[] = new MGridColumn( _M('Responsvel por ncleo/nfase'), 'left', true, null, true, SAGU::listYesNo(0), true );
        $columns[] = new MGridColumn( _M(' responsvel', $module), 'left', true, null, true, SAGU::listYesNo(0), true );

        $primaryKeys = array('preceptorId' => '%0%', );
        parent::__construct($filters, $columns, __CLASS__, $primaryKeys);
        
        $args = array('preceptorId' => '%0%');
        
        $href = SAGU::getActionURL($module, 'main:register:penalidadesPreceptor', $args);
        $href = "javascript:doIt('" . urldecode($href) . "')";
        $this->addActionIcon(_M('Penalidades do preceptor', $module), 'penalidade-16x16.png', $href);
    }
}
