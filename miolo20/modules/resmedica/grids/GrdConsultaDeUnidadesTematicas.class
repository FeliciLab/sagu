class GrdConsultaDeUnidadesTematicas extends SGrid
{

    public function __construct($filters)
    {
        $MIOLO = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();
        
        $columns[] = new MGridColumn(_M('Cdigo da oferta do rodizio', $module), 'right', true, NULL, true, NULL, true);
        $columns[] = new MGridColumn(_M('Cdigo do rodizio', $module), 'right', true, NULL, false, NULL, true);
        $columns[] = new MGridColumn(_M('Descrio', $module), 'left', true, NULL, true, NULL, true);
        $columns[] = new MGridColumn(_M('Perodo', $module), 'left', true, NULL, true, MedUnidadeTematica::listPeriodos(), true);
        $columns[] = new MGridColumn(_M('Tipo', $module), 'left', true, NULL, true, MedUnidadeTematica::listTipos(), true);
        $columns[] = new MGridColumn(_M('Carga horria prevista', $module), 'right', true, NULL, true, NULL, true);
        $columns[] = new MGridColumn(_M('Frequncia mnima', $module), 'right', true, NULL, true, NULL, true);
        $columns[] = new MGridColumn(_M('Carga horria realizada', $module), 'right', true, NULL, true, NULL, true);
        $columns[] = new MGridColumn(_M('Frequncia atual', $module), 'right', true, NULL, true, NULL, true);
        $columns[] = new MGridColumn(_M('Nota mxima', $module), 'left', true, NULL, true, NULL, true);
        $columns[] = new MGridColumn(_M('Nota mnima para aprovao', $module), 'left', true, NULL, true, NULL, true);
        $columns[] = new MGridColumn(_M('Nota atual', $module), 'left', true, NULL, true, NULL, true);

        foreach ( $columns as $col )
        {
            $col->order = false;
        }

        $primaryKeys = array('ofertaDeUnidadeTematicaId'=>'%0%');
        parent::__construct($filters, $columns, __CLASS__, $primaryKeys);

        $this->clearActions();

        // Acao Mais informacoes
        $href = SForm::getPopupLink(array('args' => $primaryKeys, 'method' => 'showInformation', 'encodeArgs' => false));
        $this->addActionIcon(_M('Mais informaes', $module), 'find.png', $href);

        $href = SForm::getPopupLink(array('args' => $primaryKeys, 'method' => 'autoAvaliacao', 'encodeArgs' => false));
        $this->addActionIcon(_M('Autoavaliao do residente', $module), 'register-16x16.png', $href);
    }
}
