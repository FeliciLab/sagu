class GrdConsultaDeResidencias extends SGrid
{
    public function __construct($filters)
    {
        $MIOLO = MIOLO::getInstance();
        $module = SAGU::getFileModule(__FILE__);
        $action = MIOLO::getCurrentAction();

        $columns[] = new MGridColumn(_M('Cdigo', $module), 'right', true, NULL, false, NULL, true);
        $columns[] = new MGridColumn(_M('Cdigo', $module), 'right', true, NULL, false, NULL, true);
        $columns[] = new MGridColumn(_M('Pessoa', $module), 'right', true, NULL, false, NULL, true);
        $columns[] = new MGridColumn(_M('Nome', $module), 'left', true, NULL, false, NULL, true);
        $columns[] = new MGridColumn(_M('Incio', $module), 'center', true, NULL, true, NULL, true);
        $columns[] = new MGridColumn(_M('Fim', $module), 'center', true, NULL, true, NULL, true);
        $columns[] = new MGridColumn(_M('Ncleo'), 'left', true, NULL, true, NULL, true);
        $columns[] = new MGridColumn(_M('Especialidade'), 'left', true, NULL, true, NULL, true);
        $columns[] = new MGridColumn(_M('Status', $module), 'left', true, NULL, true, NULL, true);

        $primaryKey = array('residenteId' => '%1%');

        parent::__construct($filters, $columns, __CLASS__, $primaryKey);
        $this->actions = array();
        
        $this->setRowMethod($this, 'myRowMethod');
        $href = $MIOLO->getActionURL( MIOLO::getCurrentModule(), $action, null, $primaryKey );
        $this->addActionIcon(_M('Abrir', $module), 'find.png', $href);
    }
}
