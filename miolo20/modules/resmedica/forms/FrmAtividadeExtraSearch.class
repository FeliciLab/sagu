class FrmAtividadeExtraSearch extends SSearchForm
{
    public function __construct($data)
    {
        parent::__construct(null, new MedAtividadeExtra(), array('atividadeExtraId'));
    }

    public function defineFields()
    {
        $MIOLO = MIOLO::getInstance();
        $module = SAGU::getFileModule(__FILE__);
        $action = MIOLO::getCurrentAction();
        $fields[] = $atividadeExtraIdS = new MTextField('atividadeExtraIdS', $this->getFormValue('atividadeExtraIdS', $data->atividadeExtraIdS), _M('Cdigo', $module), SAGU::getParameter('BASIC', 'FIELD_ID_SIZE'));
        $atividadeExtraIdS->setJsHint(_M('Informe o cdigo', $module));
        
        $fields[] = $descricaoS = new MTextField('descricaoS', $this->getFormValue('descricaoS', $data->descricaoS), _M('Descrio', $module), SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE'));
        $descricaoS->addAttribute('maxlength', '255');
        $descricaoS->setJsHint(_M('Informe a desrio', $module));
        
        $opts = array(
                'label' => _M('Perodo de ocorrncia', $module),
                'baseGroup' => false,
                'disposition' => 'horizontal',
                'type' => 'timestamp',
                'begin' => array_merge(array('label' => _M('entre', $module)), array('dateId' => 'beginDateMin', 'timeId' => 'beginTimeMin')),
                'end' => array_merge(array('label' => _M('e', $module)), array('dateId' => 'beginDateMax', 'timeId' => 'beginTimeMax')),
        );
        $fields[] = new SBeginEndPeriod($opts);

        $validators[] = new MDATEDMYValidator('beginDateMin', _M('Data inicial @1', $module, _M('minima', $module)), 'optional');
        $validators[] = new MTIMEValidator('beginTimeMin', _M('Hora inicial @1', $module, _M('minima', $module)), 'optional');
        $validators[] = new MDATEDMYValidator('beginDateMax', _M('Data final @1', $module, _M('mxima', $module)), 'optional');
        $validators[] = new MTIMEValidator('beginTimeMax', _M('Hora final @1', $module, _M('mxima', $module)), 'optional');

        $options = array(
            'item'=>'Residente',
            'label'=>_M('Participante', $module),
            'descriptionName'=>'residentNameS',
            'descriptionReadOnly' => false);
        $fields[] = new SLookupContainer('residentIdS', null, $options);
        
        $validators[] = new MIntegerValidator('atividadeExtraIdS', _M('Cdigo', $module), 'optional');
        
        parent::defineFields($fields, $module, 'GrdAtividadeExtraSearch', $validators);
    }
    
    public function getTypesData()
    {
        $data = parent::getTypesData();
        $data->atividadeExtraId = $this->getFormValue('atividadeExtraIdS', MIOLO::_REQUEST('atividadeExtraIdS'));
        $data->descricao = $this->getFormValue('descricaoS', MIOLO::_REQUEST('descricaoS'));
        if( strlen($this->getFormValue('beginDateMin', MIOLO::_REQUEST('beginDateMin'))) > 0 )
        {
            $data->inicio = $this->getFormValue('beginDateMin', MIOLO::_REQUEST('beginDateMin')).' '.( strlen($this->getFormValue('beginTimeMin', MIOLO::_REQUEST('beginTimeMin'))) > 0 ? $this->getFormValue('beginTimeMin', MIOLO::_REQUEST('beginTimeMin')) : '00:00' );
        }
        if( strlen($this->getFormValue('beginDateMax', MIOLO::_REQUEST('beginDateMax'))) > 0 )
        {
            $data->fim = $this->getFormValue('beginDateMax', MIOLO::_REQUEST('beginDateMax')).' '.( strlen($this->getFormValue('beginTimeMax', MIOLO::_REQUEST('beginTimeMax'))) > 0 ? $this->getFormValue('beginTimeMax', MIOLO::_REQUEST('beginTimeMax')) : '23:59' );
        }
        $data->residentId = $this->getFormValue('residentIdS', MIOLO::_REQUEST('residentIdS'));
        $data->residentName = $this->getRequestValue('residentNameS');

        return $data;
    }
}


