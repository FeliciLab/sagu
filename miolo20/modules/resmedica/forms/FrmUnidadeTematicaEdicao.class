MIOLO::uses('ui/controls/msubdetail.class');
class FrmUnidadeTematicaEdicao extends SForm
{
    public function __construct()
    {
        $MIOLO = MIOLO::getInstance();
        $module = SAGU::getFileModule(__FILE__);

        parent::__construct(_M('Atualizar', $module), new MedUnidadeTematica(), array('unidadeTematicaId'));

        // Desabilita alguns botes da MToolbar
        $this->toolbar->disableButton(MToolBar::BUTTON_PRINT);
        
    }

    /**
     * Monta o formulrio de abas
     */
    public function defineFields()
    {
        $MIOLO = MIOLO::getInstance();
        $module = SAGU::getFileModule(__FILE__);

        // Obtm o cdigo do registro a ser atualizado
        $unidadeTematicaId = MIOLO::_REQUEST('unidadeTematicaId');
        // Instancia a unidade temtica
        $unidadeTematica = new MedUnidadeTematica($unidadeTematicaId);

        // Cria os campos da aba 1
        $aba1 = FrmUnidadeTematicaMed::CreateFieldsPasso1($unidadeTematica);
        // Cria os campos da aba 2
        $aba2 = FrmUnidadeTematicaMed::CreateFieldsPasso2($unidadeTematica);
        // Cria os campos da aba 3
        $aba3 = FrmUnidadeTematicaMed::CreateFieldsPasso3($unidadeTematica);

        $unidadeTematicaEdicao = new MTabbedBaseGroup('unidadeTematicaTab');
        $unidadeTematicaEdicao->createTab('dadosGerais', _M('Dados gerais', $module), $aba1->camposDoFormulario);
        $unidadeTematicaEdicao->createTab('nucleosProfissionais', _M('Ncleos profissionais'), $aba2->camposDoFormulario);
        $unidadeTematicaEdicao->createTab('enfases', _M('nfases'), $aba3->camposDoFormulario);
        $fields[] = $unidadeTematicaEdicao;

        $this->setFields($fields);
        $this->setValidators($aba1->validadoresDoFormulario);
        parent::defineFields();
    }

    /**
     * Save
     * @param type $sender
     */
    public function tbBtnSave_click($sender = NULL, $success = NULL, $opts = NULL)
    {
        $MIOLO = MIOLO::getInstance();
        $module = SAGU::getFileModule(__FILE__);

        // Obtm os dados
        $data = $this->getTypesData();
        
        if ( strlen($msg = FrmUnidadeTematicaMed::verificaNotaMaximaEMinima($data)) > 0 )
        {
            $this->Error($msg);
            return;
        }
                
        $MIOLO->session->set('nucleosProfissionais', (array)MIOLO::_REQUEST('selectGrdNucleosProfissionaisDaUnidadeTematica'));
        $MIOLO->session->set('enfases', (array)MIOLO::_REQUEST('selectGrdEnfasesDaUnidadeTematica'));
        FrmUnidadeTematicaMed::saveButton_click($data);
    }

    /**
     * Delete
     * @param type $sender
     */
    public function tbBtnDelete_confirm($sender = NULL)
    {
        $MIOLO = MIOLO::getInstance();

        // Cdigo da unidade temtica
        $unidadeTematicaId = MIOLO::_REQUEST('unidadeTematicaId');

        try
        {
            $unidadeTematica = new MedUnidadeTematica($unidadeTematicaId);
            $ok = $unidadeTematica->delete();
        }
        catch ( Exception $e )
        {
            $MIOLO->error($e->getMessage());
        }

        parent::tbBtnDelete_confirm($sender, $ok);
    }

    /**
     * Obtm os dados do form
     */
    public function getTypesData()
    {
        $data = new stdClass();
        $data->unidadeTematicaId = MIOLO::_REQUEST('unidadeTematicaId');
        $data->periodo = MIOLO::_REQUEST('periodo');
        $data->descricao = MIOLO::_REQUEST('descricao');
        $data->sumula = MIOLO::_REQUEST('sumula');
        $data->cargaHoraria = MIOLO::_REQUEST('cargaHoraria');
        $data->frequenciaMinima = MIOLO::_REQUEST('frequenciaMinima');
        $data->tipo = MIOLO::_REQUEST('tipo');
        $data->notaMaxima = MIOLO::_REQUEST('notaMaxima');
        $data->notaMinimaParaAprovacao = MIOLO::_REQUEST('notaMinimaParaAprovacao');
        $data->justificativaNota = MIOLO::_REQUEST('justificativaNota');

        return $data;
    }
}
