class FrmGeracaoDeCracha extends SForm
{
    public function __construct()
    {
        $MIOLO = MIOLO::getInstance();
        $module = SAGU::getFileModule(__FILE__);
        $action = MIOLO::getCurrentAction();

        parent::__construct(_M('Gerao de crach', $module), null, null);

        // Desabilita os botes da toolbar
        $this->toolbar->disableButton(MToolBar::BUTTON_SAVE);
        $this->toolbar->disableButton(MToolBar::BUTTON_NEW);
        $this->toolbar->disableButton(MToolBar::BUTTON_SEARCH);
        $this->toolbar->disableButton(MToolBar::BUTTON_DELETE);
        $this->toolbar->setButtonURL(MToolBar::BUTTON_PRINT, $MIOLO->getActionURL($module, $action, null, array('event'=>'generateReport')));
        $this->toolbar->setIsPost(MToolBar::BUTTON_PRINT, true);
    }

    public function defineFields()
    {
        $MIOLO = MIOLO::getInstance();
        $module = SAGU::getFileModule(__FILE__);

        // Campo residente
        $options = array(
            'label' => _M('Residente', $module),
            'module' => $module,
            'item' => 'Residente',
            'hint' => _M('Informe o cdigo do residente', $module),
            'descriptionHint' => _M('Nome do residente', $module)
        );
        $fields[] = new SLookupContainer('residenteId', $this->getFormValue('residenteId'), $options);

        // Campo ncleo profissional
        $nucleoProfissional = new MSelection('nucleoProfissionalId', $this->getFormValue('nucleoProfissionalId'), _M('Ncleo profissional'), MedNucleoProfissional::listRecords());
        $nucleoProfissional->setJsHint(_M('Informe o ncleo profissional'));
        $fields[] = $nucleoProfissional;

        // Campo nfase
        $enfase = new MSelection('enfaseId', $this->getFormValue('enfaseId'), _M('nfase'), MedEnfase::listRecords());
        $enfase->setJsHint(_M('Informe a nfase'));
        $fields[] = $enfase;

        // Campo perodo de residncia
        $options = array(
            'label' => _M('Perodo de residncia', $module),
            'disposition' => 'horizontal',
            'baseGroup' => false,
            'begin' => array(
                'dateHint' => _M('Informe a data de incio', $module),
                'label' => _M('De', $module)),
            'end' => array(
                'dateHint' => _M('Informe a data de fim', $module),
                'label' => _M('At', $module)),
        );
        $fields[] = new SBeginEndPeriod($options);

        // Formato
        $fields[] = $reportFormat = new MSelection('reportFormat', $this->getFormValue('reportFormat', 'PDF'), _M('Formato', $module), SReport::listReportFormat());
        $validators[] = new MRequiredValidator('reportFormat', _M('Formato do relatrio', $module));

        // Separator
        $fields[] = new MSeparator('');

        $this->setValidators($validators);
        $this->setFields($fields);

        parent::defineFields();
    }

    /**
     * Mtodo para gerao do Relatrio
     */
    public function generateReport($args)
    {
        $MIOLO = MIOLO::getInstance();
        $module = SAGU::getFileModule(__FILE__);

        $data = $this->getTypesData();
        $options['module'] = $module;
        $options['reportName'] = 'cracha';

        if ( strlen($data->residenteId) > 0 )
        {
            $options['parameters']['residenteId'] = (integer)$data->residenteId;
        }

        if ( strlen($data->enfaseId) > 0 )
        {
            $options['parameters']['enfaseId'] = (integer)$data->enfaseId;
        }

        if ( strlen($data->nucleoProfissionalId) > 0 )
        {
            $options['parameters']['nucleoProfissionalId'] = (integer)$data->nucleoProfissionalId;
        }

        if ( strlen($data->beginDate) > 0 )
        {
            $options['parameters']['beginDate'] = (string)$data->beginDate;
        }

        if ( strlen($data->endDate) > 0 )
        {
            $options['parameters']['endDate'] = (string)$data->endDate;
        }

        if ( strlen($data->reportFormat) > 0 )
        {
            $options['fileType'] = $data->reportFormat;
        }

        $sreport = new SReport($options);

        if ( !$sreport->generate() )
        {
            $this->addError(_M('Nenhum registro encontrado.', $module ));
        }
    }

    /**
     * Mtodo que obtem os dados do formulrio.
     */
    public function getTypesData()
    {
        $data = new stdClass();
        $data->residenteId = $this->GetFormValue('residenteId');
        $data->enfaseId = $this->GetFormValue('enfaseId');
        $data->nucleoProfissionalId = $this->GetFormValue('nucleoProfissionalId');
        $data->beginDate = $this->GetFormValue('beginDate');
        $data->endDate = $this->GetFormValue('endDate');
        $data->reportFormat = $this->GetFormValue('reportFormat');

        return $data;
    }
}
