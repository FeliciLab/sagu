class FrmDocumentoTermoDeOutorga extends SForm
{
    public function __construct($data)
    {
        $MIOLO = MIOLO::getInstance();
        $module = SAGU::getFileModule(__FILE__);
        $action = MIOLO::getCurrentAction();

        parent::__construct(_M('Termo de outorga'), null, null);

        // Desabilita os botes da toolbar
        $this->toolbar->disableButton(MToolBar::BUTTON_SAVE);
        $this->toolbar->disableButton(MToolBar::BUTTON_NEW);
        $this->toolbar->disableButton(MToolBar::BUTTON_SEARCH);
        $this->toolbar->disableButton(MToolBar::BUTTON_DELETE);
        $this->toolbar->setButtonURL(MToolBar::BUTTON_PRINT, $MIOLO->getActionURL($module, $action, null, array('event'=>'generateReport')));
        $this->toolbar->setIsPost(MToolBar::BUTTON_PRINT, true);
    }

    public function defineFields()
    {
        $MIOLO = MIOLO::getInstance();
        $module = SAGU::getFileModule(__FILE__);

        $residenteId = MIOLO::_REQUEST('residenteId');
        $reportFormat = MIOLO::_REQUEST('reportFormat');

        // Se j tem os dados, gera o PDF (essa tela  chamada por uma Grid)
        if ( strlen($residenteId) > 0 && strlen($reportFormat) > 0  )
        {
            $this->generateReport();
        }
        else // Caso contrrio exibe os campos para a gerao do documento
        {
            // Campo residente
            $options = array(
                'label' => _M('Residente', $module),
                'item' => 'Residente',
                'related' => 'residenteIdDescription',
                'hint' => _M('Informe o cdigo do residente', $module),
                'descriptionHint' => _M('Nome do residente', $module)
            );
            $fields[] = new SLookupContainer('residenteId', $this->getFormValue('residenteId'), $options);

            // Campo ncleo profissional
            $nucleoProfissional = new MSelection('nucleoProfissionalId', $this->getFormValue('nucleoProfissionalId'), _M('Ncleo profissional'), MedNucleoProfissional::listRecords());
            $nucleoProfissional->setJsHint(_M('Informe o ncleo profissional'));
            $fields[] = $nucleoProfissional;

            // Campo nfase
            $enfase = new MSelection('enfaseId', $this->getFormValue('enfaseId'), _M('nfase'), MedEnfase::listRecords());
            $enfase->setJsHint(_M('Informe a nfase'));
            $fields[] = $enfase;

            // Campo perodo de residncia
            $options = array(
                'title' => _M('Perodo de residncia', $module),
                'begin' => array(
                    'dateHint' => _M('Data inicial', $module),
                    'label' => _M('Incio', $module)
                ),
                'end' => array(
                    'dateHint' => _M('Data final', $module),
                    'label' => _M('Fim', $module)
                )
            );
            $fields[] = new SBeginEndPeriod($options);

            // Campo formato
            $fields[] = new MSelection('reportFormat', $this->getFormValue('reportFormat') ? $this->getFormValue('reportFormat') : 'PDF', _M('Formato', $module), SReport::listReportFormat());
            $validators[] = new MRequiredValidator('reportFormat', _M('Formato do relatrio', $module));

            $fields[] = new MSeparator();

            parent::defineFields(array(
                'fields' => $fields,
                'validators' => $validators)
            );
        }
    }

    /**
     * Gera o documento
     * @param type $args
     */
    public function generateReport($args = null)
    {
        $MIOLO = MIOLO::getInstance();
        $module = SAGU::getFileModule(__FILE__);

        $residenteId = MIOLO::_REQUEST('residenteId');
        $nucleoProfissionalId = MIOLO::_REQUEST('nucleoProfissionalId');
        $enfaseId = MIOLO::_REQUEST('enfaseId');
        $beginDate = MIOLO::_REQUEST('beginDate');
        $endDate = MIOLO::_REQUEST('endDate');

        $options['module'] = $module;
        $options['reportName'] = 'termoDeOutorga';
        $reportFormat = MIOLO::_REQUEST('reportFormat');
        if ( strlen($reportFormat) > 0 )
        {
            $options['fileType'] = $reportFormat;
        }

        if ( strlen($residenteId) > 0 )
        {
            $options['parameters']['residenteId'] = (int)$residenteId;
        }

        if ( strlen($nucleoProfissionalId) > 0 )
        {
            $options['parameters']['nucleoProfissionalId'] = (int)$nucleoProfissionalId;
        }

        if ( strlen($enfaseId) > 0 )
        {
            $options['parameters']['enfaseId'] = (int)$enfaseId;
        }

        if ( strlen($beginDate) > 0 )
        {
            $options['parameters']['dataInicio'] = (string)$beginDate;
        }

        if ( strlen($endDate) > 0 )
        {
            $options['parameters']['dataFimPrevisto'] = (string)$endDate;
        }

        $sreport = new SReport($options);
        if ( !$sreport->generate() )
        {
            $this->addError(_M('Nenhum registro encontrado.', $module ));
        }
    }
}
