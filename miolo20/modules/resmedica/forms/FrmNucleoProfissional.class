class FrmNucleoProfissional extends SManagementForm
{
    public function __construct()
    {
        parent::__construct(new MedNucleoProfissional(), array('nucleoProfissionalId'));
    }

    public function defineFields()
    {
        $MIOLO = MIOLO::getInstance();
        $module = SAGU::getFileModule(__FILE__);
        $action = MIOLO::getCurrentAction();
        $function = MIOLO::_REQUEST('function');

        if ( in_array($function,  array(SForm::FUNCTION_UPDATE,  SForm::FUNCTION_DELETE)) )
        {
            $nucleoProfissionalId = MIOLO::_REQUEST('nucleoProfissionalId');            
            $data = new $this->object($nucleoProfissionalId);
            $fields[] = new MTextLabel('nucleoProfissionalId', $nucleoProfissionalId, _M('Cdigo', $module));
            $fields[] = new MHiddenField('nucleoProfissionalId', $nucleoProfissionalId);
        }
        $fields[] = $descricao = new MTextField('descricao', $this->getFormValue('descricao', $data->descricao), _M('Descrio', $module), SAGU::getParameter('BASIC','FIELD_DESCRIPTION_SIZE'));
        $descricao->addAttribute('maxlength', '255');
        $descricao->setJsHint(_M('Informe a descrio', $module));
        $fields[] = $abreviatura = new MTextField('abreviatura', $this->getFormValue('abreviatura', $data->abreviatura), _M('Abreviatura', $module), SAGU::getParameter('BASIC','FIELD_ZIPCODE_SIZE'));
        $abreviatura->addAttribute('maxlength', '30');
        $abreviatura->setJsHint(_M('Informe a abreviatura', $module));
        $validators[] = new MRequiredValidator('descricao', _M('Descrio', $module));
        $validators[] = new MRequiredValidator('abreviatura', _M('Abreviatura', $module));
        parent::defineFields($fields, $validators, $data);
    }
}


