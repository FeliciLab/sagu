class FrmTipoDeCargaHorariaComplementarSearch extends SSearchForm
{
    public function __construct($data)
    {
        parent::__construct(null, new MedTipoDeCargaHorariaComplementar(), array('tipoDeCargaHorariaComplementarId'));
    }

    public function defineFields()
    {
        $MIOLO = MIOLO::getInstance();
        $module = SAGU::getFileModule(__FILE__);
        $action = MIOLO::getCurrentAction();

        //Campo cdigo do tipode de carga horria complementar
        $fields[] = $tipoDeCargaHorariaComplementarIdS = new MTextField('tipoDeCargaHorariaComplementarIdS', $this->getFormValue('tipoDeCargaHorariaComplementarIdS', $data->tipoDeCargaHorariaComplementarIdS), _M('Cdigo', $module), SAGU::getParameter('BASIC', 'FIELD_ID_SIZE'));
        $tipoDeCargaHorariaComplementarIdS->setJsHint(_M('Informe o cdigo do tipo de carga horria complementar', $module));

        //Campo descrio
        $fields[] = $descricaoS = new MTextField('descricaoS', $this->getFormValue('descricaoS', $data->descricaoS), _M('Descricao', $module), SAGU::getParameter('BASIC','FIELD_DESCRIPTION_SIZE'));
        $descricaoS->addAttribute('maxlength', '255');
        $descricaoS->setJsHint(_M('Informe o descricao', $module));

        //Validadores
        $validators[] = new MIntegerValidator('tipoDeCargaHorariaComplementarIdS', '', 'optional');

        parent::defineFields($fields, $module, 'GrdTipoDeCargaHorariaComplementarSearch', $validators);
    }
}
