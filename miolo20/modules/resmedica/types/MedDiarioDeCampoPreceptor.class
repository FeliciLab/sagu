class MedDiarioDeCampoPreceptor extends SType
{
    protected $_tableName = 'med.diariodecampopreceptor';
    
    protected $_virtualColumns = array(
        '_cargahoraria' => 'TO_CHAR((cargahoraria::varchar || \' hour\')::interval, \'HH24:MI\')',
    );
    
    public $diariodecampoid;
    
    public $inicio;
    
    public $fim;
    
    public $cargahoraria;
    
    public $conteudoabordado;

    public $ofertadeunidadetematicaid;
    
    public $preceptorid;
    
    /**
     * Obtem a carga horaria total do preceptor + oferta
     * 
     * @return float
     */
    public static function obterCHTotal($preceptorid, $ofertadeunidadetematicaid)
    {
        $sql = "SELECT TO_CHAR((SUM(cargahoraria)::varchar || ' hour')::interval, 'HH24:MI')
                  FROM med.diariodecampopreceptor
                 WHERE preceptorid = ?
                   AND ofertadeunidadetematicaid = ?
               ";
        
        $result = SDatabase::query($sql, array($preceptorid, $ofertadeunidadetematicaid));
        
        return $result[0][0];
    }
}

