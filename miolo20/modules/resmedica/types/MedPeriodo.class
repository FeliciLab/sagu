class MedPeriodo extends SType
{
    public $periodoId;
    public $periodo;
    public $descricao;
    public $anosDeDuracao;


    public static function listaPeriodos()
    {
        $sql = "SELECT periodoid,
                       descricao
                  FROM med.periodo
              ORDER BY periodoid";

        $result = (array) SDatabase::query($sql);

        $list = array();
        foreach ( $result as $row )
        {
            $list[ $row[0] ] = $row[1];
        }

        return $list;
    }
    
}