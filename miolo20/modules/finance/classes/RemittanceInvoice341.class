    {
        switch ( $wallet )
        {
            case '147':
                $code = 'E';
                break;
            case '150':
                $code = 'U';
                break;
            /* 
             * 112, 115, 104, 188, 108, 109, 121, 180, 175, 198, 142, 143, 174,
