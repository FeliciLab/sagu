/**
 * Class to generate the bank remittance
 */
class ReturnInvoice
{
    var $data;

    /**
     * Import the return of file
     *
     * @param: $data (object): Information about import bank return
     */
    public function returnInvoice($data = null)
    {
        $MIOLO = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();

        switch ( $data->bankId )
        {
            // 748 - Sicredi without register
            case 748:
            {
                $MIOLO->getClass($module, 'returnInvoice748');
                $importReturn = new returnInvoice748($data);
                break;
            }
            default:
            {
                $error = _M('A importao para esse banco ainda no foi implementada.', $module);
                break;
            }
        }

        $this->data = $importReturn->processInfo;
    }

    /**
     * Verify if exists this specific return
     *
     * @param: $bankId
     * @return (boolean): True if exists otherwise false
     */
    public function returnExists($bankId)
    {
        $MIOLO = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();

        if ( file_exists($MIOLO->getModulePath($module, 'classes/ReturnInvoice' . $bankId . '.class')) )
        {
            $ok = true;
        }
        else
        {
            $ok = false;
        }

        return $ok;
    }
}
