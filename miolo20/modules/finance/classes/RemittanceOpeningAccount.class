/**
 * Class to generate the bank remittance
 */
class RemittanceOpeningAccount
{
    /**
     * Function that returns array containing data information about banks
     *
     * @param: No parameters needed
     * 
     * @return: Return information
     *
     */
    public function returnBankInformation()
    {
        $bankData['001']['remittanceClass'] = 'RemittanceMCIF001';
        return $bankData;
    }
     
    /**
     * Verify if the specific remittance exists
     *
     */
    public function remittanceExists($bankId)
    {
        $MIOLO = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();
        $data = RemittanceOpeningAccount::returnBankInformation();
        if (is_array($data[$bankId]))
        {
            if (file_exists($MIOLO->getModulePath('finance', 'classes/'.$data[$bankId]['remittanceClass'].'.class')))
            { 
                return true;
            }
            else
            {
                return false;
            }        
        }
    }
}
