/**
 * Class to manipulate the Bank table
 **/

class BusinessFinanceBusDadosBancariosDaPessoa extends sBusiness
{
    
    public function insertDadosBancariosDaPessoa($data)
    {
        $sql = " INSERT INTO finDadosBancariosDaPessoa
                            (personId,
                             bankId,
                             agencia,
                             digitoDaAgencia,
                             conta,
                             digitoDaConta,
                             observacao)
                      VALUES(?,?,?,?,?,?,?) "; 
        
        $args = array($data->personId,
                      $data->bankId,
                      $data->agencia,
                      $data->digitoDaAgencia,
                      $data->conta,
                      $data->digitoDaConta,
                      $data->observacao);
        
        $db = $this->getDatabase();
        $return = $db->execute(SAGU::prepare($sql, $args));
        
        return $return;
    }
    
    public function updateDadosBancariosDaPessoa($data)
    {
        $sql = " UPDATE finDadosBancariosDaPessoa 
                     SET bankId = ?,
                         agencia = ?,
                         digitoDaAgencia = ?,
                         conta = ?,
                         digitoDaConta = ?,
                         observacao = ?
                   WHERE personId = ? "; 
        
        $args = array($data->bankId,
                      $data->agencia,
                      $data->digitoDaAgencia,
                      $data->conta,
                      $data->digitoDaConta,
                      $data->observacao,
                      $data->personId);
        
        $db = $this->getDatabase();
        $return = $db->execute(SAGU::prepare($sql, $args));
        
        return $return;
    }
    
