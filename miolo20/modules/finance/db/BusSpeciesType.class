/**
 * Class to manipulate the finSpecies table
 **/
class BusinessFinanceBusSpeciesType extends sBusiness
{
    
    public function listSpeciesType($isMaintenance = false)
    {
        $db  = $this->getDatabase();
        $sql = ' SELECT speciesTypeId,
                        description
                   FROM finSpeciesType ';
        
        if ( $isMaintenance )
        {
            $function   = MIOLO::_REQUEST('function');
            $busSpecies = new BusinessFinanceBusSpecies();
            $finSpecies = new FinSpecies(MIOLO::_REQUEST('speciesId'));
            $bankSpecie = SAGU::getParameter('FINANCE', 'BANK_MOVEMENT_SPECIESTYPE_ID');
            $specieBank = $busSpecies->verificaSeExisteEspecieDeTipoBanco();
        
            if ( ( $specieBank && ( $function === 'insert' ) ) ||
                 ( ( $function === 'update' ) && ( $specieBank && $finSpecies->speciesTypeId != $bankSpecie ) ) )
            {
                $sql .= "WHERE speciesTypeId <> {$bankSpecie}::int";
            }
        }

        $ret = $db->query($sql);
        
        return $ret;
    }

}

