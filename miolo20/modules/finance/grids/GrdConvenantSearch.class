/**
 * Grid used by form to display search results
 **/
class GrdConvenantSearch extends SGrid
{
    /**
     * Class constructor
     **/
    public function __construct($filters)
    {
        $module = MIOLO::getCurrentModule();

        $columns[] = new MGridColumn( _M('Cdigo', $module), 'right' );
        $columns[] = new MGridColumn( _M('Descrio', $module));
        $columns[] = new MGridColumn( _M('Valor', $module), 'right');
        $columns[] = $c = new MGridColumn( _M(' percentual', $module), 'center');
        $c->options = SAGU::listTrueFalse(0);
        $columns[] = new MGridColumn( _M('Dias', $module), 'right');
        $columns[] = $c = new MGridColumn( _M('Antes ou depois do vencimento', $module), 'center' );
        $c->options = array('B' => _M('Antes', $module), 'A' => _M('Depois', $module) );
        $columns[] = $c = new MGridColumn('', 'left', false, 0, false);
        $c->visible = false;
        $columns[] = new MGridColumn(_M('Operao de convnio', $module));

        foreach ($columns as $c)
        {
            $c->order = true;
        }

        $primaryKey = array('convenantId' => '%0%');

        parent::__construct($filters, $columns, 'GrdConvenantSearch', $primaryKey);
    }
}
