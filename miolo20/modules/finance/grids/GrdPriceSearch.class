/**
 * Grid used by form to display search results
 **/
class GrdPriceSearch extends SGrid
{
    /**
     * Class constructor
     **/
    public function __construct($filters)
    {
        $module = MIOLO::getCurrentModule();
        
        $columns[] = new MGridColumn( _M('Cdigo do curso', $module), 'left');
        $columns[] = new MGridColumn( _M('Verso do curso', $module), 'right');
        $columns[] = $turnId = new MGridColumn( _M('Cdigo do turno', $module), 'right' );
        $columns[] = new MGridColumn( _M('Turno', $module), 'left' );
        $columns[] = $unitId = new MGridColumn( _M('Cdigo da unidade', $module), 'right');
        $columns[] = new MGridColumn( _M('Unidade', $module), 'left' );
        $columns[] = new MGridColumn( _M('Data inicial', $module), 'right');
        $columns[] = new MGridColumn( _M('Data final', $module), 'right');
        $columns[] = new MGridColumn( _M('Valor', $module), 'right');
        $columns[] = new MGridColumn( _M('Cdigo', $module), 'right');
        $columns[] = new MGridColumn( _M('Conta bancria', $module), 'left');

//        $turnId->visible = false;
//        $unitId->visible = false;

        foreach ($columns as $c)
        {
            $c->order = true;
        }

        $primaryKey = array(
            'courseId' => '%0%',
            'courseVersion' => '%1%',
            'turnId' => '%2%',
            'unitId' => '%4%',
            'startDate' => '%6%'
        );

        parent::__construct($filters, $columns, 'GrdPriceSearch', $primaryKey);
    }
}
