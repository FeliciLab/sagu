/**
 * Grid used by form to display search results
 **/
class GrdNegotiationSearch extends SGrid
{
    /**
     * Class constructor
     **/
    public function __construct($filters)
    {
        $MIOLO = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();

        $columns = array(
                          new MGridColumn( _M('Cdigo', $module), 'right', false, null, true, null, true ),
                          new MGridColumn( _M('Cdigo da pessoa', $module), 'right', false, null, true, null, true ),
                          new MGridColumn( _M('Nome da pessoa', $module), 'left', false, null, true, null, true ),
                          new MGridColumn( _M('Data', $module), 'center', false, null, true, null, true ),
                          new MGridColumn( _M('Cdigo da poltica', $module), 'right', false, null, false, null, true ),
                          new MGridColumn( _M('Poltica', $module), 'left',  false, null, true, null, true ),
                          new MGridColumn( _M('Usurio', $module), 'left',  false, null, true, null, true ),
                          new MGridColumn( _M('Liberao de juros', $module), 'left',  false, null, true, SAGU::listYesNo(), true ),
                          new MGridColumn( _M('Liberao de multas', $module), 'left',  false, null, true, SAGU::listYesNo(), true ),
                          new MGridColumn( _M('Liberao da taxa administrativa', $module), 'left',  false, null, true, SAGU::listYesNo(), true ),
                          new MGridColumn( _M('Desconto', $module), 'right',  false, null, true, null, true ),
                          new MGridColumn( _M('Observaes', $module), 'left',  false, null, true, null, true ),
                          new MGridColumn( _M('Tipo de negociaes', $module), 'left',  false, null, true, FinNegotiation::listRecordType(), true )
                        );

        $primaryKey = array('negotiationId' => '%0%', 'recordType' => '%12%');

        parent::__construct($filters, $columns, 'GrdNegotiationSearch', $primaryKey);
        
        $this->setRowMethod( __CLASS__, 'myRowMethod' );
        
        
        $this->clearActions(); //Limpa as aes padro da grid

        // Desfazer negociao
        $action = 'main:process:negotiation';
        $optsUndo = array( 'negotiationId' => '%0%' , 'function'=>'update', 'event'=>'undoNegotiation' );
        $hrefUndo = $MIOLO->getActionURL( $module, $action, null, $optsUndo );
        $this->addActionIcon( _M('Desfazer', $module ), $MIOLO->getUI()->getImage($module, 'reverse_icon.png'), $hrefUndo );
        
        // Detalhes
        $hrefDetalhes = SForm::getAjaxAction('popupDetalhes', 'divDetalhes', false, $primaryKey, false, false);
        $this->addActionIcon( _M('Detalhes', $module ), $MIOLO->getUI()->getImage($module, 'visualizar.png'), $hrefDetalhes );
        
        // Consultas diversas
        $hrefConsultasDiversas = $MIOLO->getActionURL('finance', 'main:diverseConsultation', null, array('personId' => '%1%'));
        $this->addActionIcon( _M('Consultas Diversas', $module), $MIOLO->getUI()->getImage('basic', 'search-20x20.png'), $hrefConsultasDiversas);
    }
    
    public function myRowMethod($i, $row, $actions, $columns)
    {
        $module = MIOLO::getCurrentModule();
        $MIOLO = MIOLO::getInstance();
        
        $businessInvoice = new BusinessFinanceBusInvoice();
        $busEntry = new BusinessFinanceBusEntry();

        $filtro = new stdClass();
        $filtro->negotiationId = $row[0];
        $filtro->generated = DB_TRUE;
                
        $data = FinNegotiationGeneratedEntries::searchGrid($filtro);
        
        if( count($data) > 0 )
        {
            $entry = $busEntry->getEntry($data[0][1]);
            if(!count($busEntry->getPaymentsEntry($entry->invoiceId))==0 && (!$businessInvoice->getInvoiceBalance($entry->invoiceId)>0))
            {   
                $actions[0]->enabled = false;
                $actions[0]->value = str_replace('reverse_icon.png','reverse_disable_icon.png',$actions[0]->value);
            }
        }
    }
    
}
