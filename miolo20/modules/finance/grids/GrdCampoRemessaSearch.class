$MIOLO->Uses( 'classes/auditoria.class', 'basic' );

class GrdCampoRemessaSearch extends SGrid
{
    public function __construct($filters)
    {
        $module = MIOLO::getCurrentModule();
        
        $this->setTableName('fincamporemessa');

        $columns = array(
            'fincamporemessa.camporemessaid' => new MGridColumn( _M('Cdigo', $module)),
            'fincamporemessa.tiporegistro' => new MGridColumn( _M('Tipo de registro', $module), null, null, null, true, FinCampoRemessa::listarTiposDeRegistro()),
            'fincamporemessa.linha' => new MGridColumn( _M('Linha', $module)),
            'fincamporemessa.posicao' => new MGridColumn( _M('Posio', $module) ),
            'fincamporemessa._posicaoreal' => new MGridColumn( _M('Posio arquivo', $module), 'center' ),
            'fincamporemessa.tamanho' => new MGridColumn( _M('Tamanho', $module) ),
            'fincamporemessa.alinhamento' => new MGridColumn( _M('Alinhamento', $module), null, null, null, true, FinCampoRemessa::listarAlinhamentos()),
            'fincamporemessa.completar' => new MGridColumn( _M('Completar com', $module), null, null, null, true, FinCampoRemessa::listarCompletarCom()),
            'fincamporemessa.tipovalor' => new MGridColumn( _M('Tipo valor', $module), null, null, null, true, FinCampoRemessa::listarTiposDeValor()),
            'fincamporemessa.valor' => new MGridColumn( _M('Valor', $module) ),
            'fincamporemessa.tipovalorvariavelremessaid' => new MGridColumn( _M('Tipo de registro', $module), null, null, null, true, FinTipoValorVariavelRemessa::listarTipos()),
        );

        $args = array('camporemessaid' => '%fincamporemessa.camporemessaid%', 'cobrancabancariaid' => '%configuracaobancaria.cobrancabancariaid%');
        parent::__construct($filters, $columns, __CLASS__, $args);
        
        $this->setIsContextualGrid();
    }
}
