/**
 * Grid used by form to display search results
 */
class GrdGenerateMultiplePrice extends MGrid
{
    /**
     * Class constructor
     */
    public function __construct($filters)
    {
        $MIOLO = MIOLO::getInstance();
        $module = SAGU::getFileModule(__FILE__);
        $action = MIOLO::getCurrentAction();

        // Columns
        $columns = array();
        $columns[] = new MGridColumn(_M('Cdigo do checkbox', $module), 'left', true, null, false, null, true);
        $columns[] = new MGridColumn(_M('Cdigo do curso', $module), 'left', true, null, true, null, true);
        $columns[] = new MGridColumn(_M('Verso do curso', $module), 'right', true, null, true, null, true);
        $columns[] = new MGridColumn(_M('Nome do curso', $module), 'left', true, null, true, null, true);
        $columns[] = new MGridColumn(_M('Cdigo do turno', $module), 'right', true, null, false, null, true);
        $columns[] = new MGridColumn(_M('Turno', $module), 'left', true, null, true, null, true);
        $columns[] = new MGridColumn(_M('Cdigo da unidade', $module), 'right', true, null, false, null, true);
        $columns[] = new MGridColumn(_M('Unidade', $module), 'left', true, null, true, null, true);
        $columns[] = new MGridColumn(_M('Data inicial', $module), 'left', true, null, true, null, true);
        $columns[] = new MGridColumn(_M('Data final', $module), 'left', true, null, true, null, true);
        $columns[] = new MGridColumn(_M('Valor', $module), 'left', true, null, true, null, true);

        // Parmetros passados para o formulrio FrmPrice
        unset($opts);
        $opts = array(
            'function' => 'insert',
            'backTo' => 'main:process:generateMultiplePrice',
            'courseId' => '%1%',
            'courseVersion' => '%2%',
            'turnId' => '%4%',
            'unitId' => '%6%',
            'startDate' => '%8%',
            'endDate' => '%9%',
            'value' => '%10%'
        );
        // Ao de cadastrar novo preo
        $href_add = $MIOLO->getActionURL($module, 'main:register:price', null, $opts);

        $opts['function'] = 'update';
        // Ao de editar o preo
        $href_edit = $MIOLO->getActionURL( $module, 'main:register:price', null, $opts );

        $url = $MIOLO->getActionURL($module, $action, null, $opts);
        parent::__construct(null, $columns, $url, null, 0, 'gridGenerateMultiplePrice');

        $this->addActionSelect();
        $this->addActionIcon(_M('Adicionar', $module), 'add', $href_add);
        $this->addActionUpdate($href_edit);
        $this->setRowMethod('GrdGenerateMultiplePrice', 'myRowMethod');
        $this->setLinkType('hyperlink');
        $this->eventHandler();
    }

    /**
     * Event to execute for each row of grid
     */
    public function myRowMethod($i, $row, $actions, $columns )
    {
        $MIOLO = MIOLO::getInstance();

        // Caso tenha startDate, endDate e value permite editar este preo
        if ( isset($row[8]) && isset($row[9]) && isset($row[10]) )
        {
            $actions[1]->enabled = true;
        }
        else
        {
            // J seleciona os registros que no tem um preo cadastrado
            $actions[1]->enabled = false;
            $actions[0]->grid->selecteds[] = $i;
        }
    }
}
