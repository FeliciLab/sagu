/**
 * Grid used by form to display search results
 **/
class GrdReleaseSearch extends SGrid
{
    /**
     * Class constructor
     **/
    public function __construct($filters)
    {
        $module = MIOLO::getCurrentModule();

        $columns = array(
                          new MGridColumn( _M('Cdigo', $module),     'right', true, null, true, null, true ),
                          new MGridColumn( _M('Ttulo', $module),     'right', true, null, true, null, true ),
                          new MGridColumn( _M('Pessoa', $module),     'right',  true, null, true, null, true ),
                          new MGridColumn( _M('Nome da pessoa', $module),     'left',  true, null, true, null, true ),
                          new MGridColumn( _M('Liberar juros e multas', $module), 'center',  true, null, true, SAGU::listYesNo(0), true ),
                          new MGridColumn( _M('Aplicar convnio', $module), 'center',  true, null, true, SAGU::listYesNo(0), true ),
                          new MGridColumn( _M('Valor de desconto', $module),    'right',  true, null, true, null, true ),
                          new MGridColumn( _M(' percentual', $module), 'center',  true, null, true, SAGU::listYesNo(0), true ),
                          new MGridColumn( _M('Operao', $module), 'left',  true, null, false, null, true ),
                          new MGridColumn( _M('Data inicial', $module), 'left',  true, null, false, null, true ),
                          new MGridColumn( _M('Data final', $module), 'left',  true, null, true, null, true )
                        );

        $primaryKey = array('releaseId' => '%0%');

        parent::__construct($filters, $columns, 'GrdReleaseSearch', $primaryKey);
    }
}
