/**
 * Grid used by form to display search results
 **/
class GrdGnutecaFines extends SGrid
{
    /**
     * Class constructor
     **/
    public function __construct($filters)
    {
        $MIOLO = MIOLO::getInstance();
        $module = MIOLO::_request( 'module' );
        $action = MIOLO::getCurrentAction();
        
        $columns = array( new MGridColumn( _M('Código', $module ), 'right', true, null, true, null, false ),
                          new MGridColumn( _M('Código do empréstimo', $module ), 'right', true, null, true, null, false ),
                          new MGridColumn( _M('Valor', $module ), 'right', true, null, true, null, false ),
                          new MGridColumn( _M('Observação', $module ), 'left', true, null, true, null, false ),
                          new MGridColumn( _M('Data', $module ), 'center', true, null, true, null, false )
                        );
        
        $primaryKey = array('fineId' => '%0%');
        parent::__construct($filters, $columns, 'GrdGnutecaFines', $primaryKey);
        $this->actions = null;

        //Pay fine
        $newAction = 'main:process:payGnutecaFine';
        $opts = array('event'=>'payGnutecaFine', 'fineId' => '%0%' );
        $hrefPayFine = $MIOLO->getActionURL( $module, $newAction, null, $opts );
        $this->addActionIcon( _M('Pagar multa', $module ), 'close', $hrefPayFine );
    }
}
