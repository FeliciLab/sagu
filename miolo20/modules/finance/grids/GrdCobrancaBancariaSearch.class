class GrdCobrancaBancariaSearch extends SGrid
{
    public function __construct($filters)
    {
        $module = MIOLO::getCurrentModule();
        $bankAccount = new FinBankAccount();
        
        $columns = array(
            'fincobrancabancaria.cobrancabancariaid' => new MGridColumn( _M('Cdigo', $module)),
            'fincobrancabancaria.descricao' => new MGridColumn( _M('Descrio', $module)),
            'fincobrancabancaria.leiaute' => new MGridColumn( _M('Leiaute', $module), null, null, null, true, FinCobrancaBancaria::obterLeiautes()),
            'fincobrancabancaria.bankaccountid' => new MGridColumn( _M('Conta bancria', $module), null, null, null, true, $bankAccount->findList()),
            'fincobrancabancaria.envio' => new MGridColumn( _M('Envio', $module), null, null, null, true, FinCobrancaBancaria::obterEnvioTipo()),
            'fincobrancabancaria.formatodata' => new MGridColumn( _M('Formato data', $module), null, null, null, true, FinCobrancaBancaria::obterFormatoDatas()),
        );

        parent::__construct($filters, $columns, __CLASS__, array('cobrancabancariaid' => '%fincobrancabancaria.cobrancabancariaid%'));
    }
}
