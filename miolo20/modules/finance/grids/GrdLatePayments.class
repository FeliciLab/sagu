/**
 * Grid used by form to display search results
 **/
class GrdLatePayments extends MGrid
{

    /**
     * Class constructor
     **/
    public function __construct($filters)
    {
        $MIOLO = MIOLO::getInstance();
        $module = MIOLO::_request( 'module' );
        
        $columns = array( new MGridColumn( _M('Cdigo do ttulo', $module ), 'right', true, null, true, null, false ), 
                                       new MGridColumn( _M('Data de vencimento', $module ), 'center', true, null, true, null, false ),
                                       new MGridColumn( _M('Data de lanamento', $module ), 'center', true, null, true, null, false ), 
                                       new MGridColumn( _M('Operao', $module ), 'left', true, null, true, null, false ),
                                       new MGridColumn( _M('Valor do lanamento', $module ), 'right', true, null, true, null, false ) );
        
        // this foreach is necessary until the getActionURL function is
        // able to handle an object parameter
        $opts = array( 'invoiceId' => '%0%' );
        $hrefVerify = $MIOLO->getActionURL( $module, 'main:report:receivableInvoiceConsult', null, $opts );
        
        unset( $opts );
        if (is_array( $filters ))
        {
            foreach ( $filters as $k => $v )
            {
                $opts[$k] = $v;
            }
        }
        $url = $MIOLO->getActionURL( $module, "main", null, $opts );
        parent::__construct( null, $columns, $url, null, 0, 'grdLatePayments' );
        $this->setLinkType( 'hyperlink' );
        $this->setIsScrollable();
        
        // Item 1 - Receivable invoice consult
        $opts = array( 'invoiceId' => '%0%' );
        $hrefConsult = $MIOLO->getActionURL( $module, "main:report:receivableInvoiceConsult", null, $opts );
        $this->addActionIcon( _M('Consulta', $module ), 'find', $hrefConsult );
        $this->eventHandler();
    }
}
