/**
 * Grid utilizada no caixa para fazer operaes com a movimentao bancria para
 * pagamentos
 *
 */
class GrdCounterMovementMovBancarias extends SGrid
{
    /**
     * Construtor da classe
     * 
     */
    public function __construct($filters)
    {
        $module = MIOLO::getCurrentModule();
        
        $columns = array(
                new MGridColumn( _M('Conta bancria', $module), 'left',  true, null, true, null, false ),
                new MGridColumn( _M('Data da movimentao', $module), 'center', true, null, true, null, false ),
                new MGridColumn( _M('Valor', $module), 'right',  true, null, true, null, false, null, true ),
                new MGridColumn( _M('Informaes', $module), 'left',  true, null, true, null, false )
            );
        
        $primaryKey = array("%0%");
        
        parent::__construct($filters, $columns, "GrdCounterMovementMovBancarias", $primaryKey);        
        
        $this->setShowHeaders(false);
        $this->disablePagination();
        $this->clearActions();
        $this->addActionDelete();
        $this->addActionUpdate();
        
        $this->setRowMethod($this, "configura");
    }
    
    public function configura($i, $row, $actions, $columns)
    {
        $hrefExcluir = SForm::getAjaxAction("excluirMovimentacaoBancaria", "divOperacoesCadastroMovBank", false, array("idNaGrid" => "$i"), false, false);
        $hrefEditar = SForm::getAjaxAction("editarMovimentacaoBancaria", "divOperacoesCadastroMovBank", false, array("idNaGrid" => "$i"), false, false);
        
        // Ao excluir
        $actions[0]->href = $hrefExcluir;
        
        // Ao editar
        $actions[1]->href = $hrefEditar;
    }
        
}
