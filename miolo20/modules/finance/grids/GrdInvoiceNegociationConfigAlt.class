/**
 * Grid used by form to display search results
 **/
class GrdInvoiceNegociationConfigAlt extends SGrid
{
    /**
     * Class constructor
     **/
    public function __construct($filters)
    {
        $MIOLO = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();
        $action = MIOLO::getCurrentAction();

        $columns = array( 
            new MGridColumn( _M('Código', $module), 'right', true, '5%', true, null, true ),
            new MGridColumn( _M('Descrição', $module), 'left', true, '85%', true, null, true ),
            new MGridColumn( _M('Permite negociação', $module), 'left',  true, '10%', true, SAGU::listYesNo(), true )
        );
        
         $primaryKey = array('perfilnegociacaoid' => '%0%');

        parent::__construct($filters, $columns, __CLASS__, $primaryKey);
    }
}
