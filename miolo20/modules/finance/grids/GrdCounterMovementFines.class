/**
 *
 *  Grid utilizada no caixa para selecionar multar a serem pagas
 *
 **/
class GrdCounterMovementFines extends SGrid
{
    /**
     * Class constructor
     **/
    public function __construct($filters)
    {
        $module = MIOLO::getCurrentModule();

        $columns = array(
                          new MGridColumn( _M('Cdigo', $module), 'right', true, null, true, null, false ),
                          new MGridColumn( _M('Cdigo do emprstimo', $module), 'right', true, null, true, null, false ),
                          new MGridColumn( _M('Valor', $module), 'left',  true, null, true, null, false ),
                          new MGridColumn( _M('Observao', $module), 'left',  true, null, false, null, false ),
                          new MGridColumn( _M('Data', $module), 'center',  true, null, true, null, false ),
            );
        
        $primaryKey = array('item' => '%0%');
        
        parent::__construct($filters, $columns, 'GrdCounterMovementFines', $primaryKey);        
        $this->actions = array(); //limpa os botoes padres da grid
        $this->addActionSelect();
        $this->select->addAttribute('onClick', SForm::getAjaxAction('updateTotal', 'divTotalFines', true, null, true, false));
        $this->select->addAttribute('checked', 'checked');       
        $this->showExportAsCSV = false;
        $this->setPageLength(null);
        $this->eventHandler();
    }
}
