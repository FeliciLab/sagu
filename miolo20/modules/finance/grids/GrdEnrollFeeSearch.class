/**
 * Grid used by form to display search results
 **/
class GrdEnrollFeeSearch extends SGrid
{
    /**
     * Class constructor
     **/
    public function __construct($filters)
    {
        $MIOLO = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();

        $columns = array( 
            new MGridColumn( _M('Período letivo', $module),    'right', true, null, true, null, true ),
            new MGridColumn( _M('Descrição', $module),           'left',  true, null, true, null, true ),
            new MGridColumn( _M('Operação', $module),          'right',  true, null, true, null, true ),
            new MGridColumn( _M('Descrição', $module),           'left',  true, null, true, null, true ),
            new MGridColumn( _M('É calouro', $module),           'left',  true, null, true, SAGU::listYesNo(), true ),
            new MGridColumn( _M('Valor é percentual', $module),      'left',  true, null, true, SAGU::listYesNo(), true ),
            new MGridColumn( _M('Valor', $module),                 'right',  true, null, true, null, true ),
            new MGridColumn( _M('Número de parcelas', $module),        'right',  true, null, true, null, true ),
            new MGridColumn( _M('Operação de cancelamento', $module), 'right',  true, null, true, null, true ),
            new MGridColumn( _M('Descrição', $module),           'left',  true, null, true, null, true )
        );

        $pkeys = array(
            'learningPeriodId' =>'%0%',
            'operationId'         =>'%2%',
            'isFreshMan'          =>'%4%',
        );
        
        parent::__construct($filters, $columns, __CLASS__, $pkeys);
    }
}

