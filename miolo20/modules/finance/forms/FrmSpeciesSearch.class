class FrmSpeciesSearch extends SSearchForm
{

    /**
     * Class constructor
     */
    public function __construct()
    {
        parent::__construct(_M('Localizar', 'basic'), new FinSpecies(), array('speciesId'), 'BusSpecies');
    }

    /**
     *  Default method to define fields
     */
    public function defineFields()
    {
        $MIOLO = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();
        $action = MIOLO::getCurrentAction();
        
        $speciesIdS = new MTextField('speciesIdS', $this->speciesIdS->value, _M('Código', $module), SAGU::getParameter('BASIC', 'FIELD_ID_SIZE'));
        $speciesIdS->setJsHint(_M('Informe o código da espécie', $module));
        $fields[] = $speciesIdS;
        $validators[] = new MIntegerValidator('speciesIdS', _M('Código', $module));
        
        $descriptionS = new MTextField('descriptionS', $this->speciesNameS->value, _M('Descrição', $module), SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE'));
        $descriptionS->setJsHint(_M('Informe a descrição da espécie', $module));
        $fields[] = $descriptionS;
        
        parent::defineFields($fields, $module, 'GrdSpeciesSearch', $validators);
    }
}

