/**
 * Form to search the finBankAccount table
 */
class FrmBankAccountSearch extends SSearchForm
{
    /**
     * Class constructor
     */
    public function __construct($data)
    {
        parent::__construct(_M('Localizar', $module), new FinBankAccount(), array('bankAccountId'), 'BusBankAccount');
    }

    /**
     *  Default method to define fields
     */
    public function defineFields()
    {
        $MIOLO  = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();
        $action = MIOLO::getCurrentAction();

        //Bank account
        $bankAccountIdS = new MTextField('bankAccountIdS', $this->bankAccountIdS->value, _M('Cdigo',$module), SAGU::getParameter('BASIC', 'FIELD_ID_SIZE'));
        $validators[]   = new MIntegerValidator('bankAccountIdS');
        $bankAccountIdS->setJsHint(_M('Informe o cdigo da conta bancria',$module));
        $fields[]       = $bankAccountIdS;

        //Description
        $descriptionS = new MTextField('descriptionS', $this->descriptionS->value, _M('Descrio',$module), SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE'));
        $descriptionS->setJsHint(_M('Informe a descrio da conta',$module));
        $fields[] = $descriptionS;

        //Lookup of the bank
        $bankLabelS = new MText('bankLabelS', _M('Banco',$module). ':');
        $bankLabelS->setWidth(SAGU::getParameter('BASIC', 'FIELD_CONTAINER_SIZE'));
        $bankIdS    = new MLookupTextField('bankIdS', $this->getFormValue('bankIdS', $data->bankIdS), '', SAGU::getParameter('BASIC', 'FIELD_ID_SIZE'), null, null, 'bankNameS', 'finance', 'Bank', null, null, true);
        $bankIdS->setJsHint(_M('Informe o cdigo do banco',$module));
        $validators[] = new MIntegerValidator('bankIdS', _M('Banco',$module));
        $bankNameS = new MTextField('bankNameS', $this->getFormValue('bankNameS', $data->bankNameS), '', SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE'));
        $bankNameS->setJsHint(_M('Nome do banco',$module));
        $bankNameS->setReadOnly(true);
        $hctBankS  = new MHContainer('hctBankS', array($bankLabelS, $bankIdS, $bankNameS));
        $hctBankS->setShowLabel(true);
        $fields[] = $hctBankS;

        // Branch
        $branchNumberLabelS = new MText('branchNumberLabelS', _M('Agncia', $module).':');
        $branchNumberLabelS->setWidth(SAGU::getParameter('BASIC', 'FIELD_CONTAINER_SIZE'));
        $branchNumberS = new MTextField('branchNumberS', $this->getFormValue('branchNumberS',$data->branchNumberS), '', 5);
        $branchNumberS->setJsHint(_M('Informe o nmero da agncia',$module));
        $branchNumberTraceS = new MText('branchNumberTrace', '-');
        $branchNumberDigitS = new MTextField('branchNumberDigitS', $this->getFormValue('branchNumberDigitS',$data->branchNumberDigitS), '', 3);
        $branchNumberDigitS->setJsHint(_M('Informe o dgito da agncia',$module));
        $fields[] = new MHContainer('hctBranch', array($branchNumberLabelS, $branchNumberS, $branchNumberTraceS, $branchNumberDigitS));

        // Account
        $accountNumberLabelS = new MText('accountNumberLabelS', _M('Nmero da conta', $module).':');
        $accountNumberLabelS->setWidth(SAGU::getParameter('BASIC', 'FIELD_CONTAINER_SIZE'));
        $accountNumberS = new MTextField('accountNumberS', $this->getFormValue('accountNumberS',$data->accountNumberS), '', 13);
        $accountNumberS->setJsHint(_M('Informe o nmero da conta', $module));
        $accountNumberTraceS = new MText('accountNumberTrace', '-');
        $validators[] = new MRangeValidator('accountNumberS', _M('Nmero da conta', $module), '1', '9999999999999', 'i');
        $accountNumberDigitS = new MTextField('accountNumberDigitS', $this->getFormValue('accountNumberDigitS', $data->accountNumberDigitS), '', 3);
        $accountNumberDigitS->setJsHint(_M('Informe o dgito do nmero da conta', $module));
        $fields[] = new MHContainer('hctAccountNumberS', array($accountNumberLabelS, $accountNumberS, $accountNumberTraceS, $accountNumberDigitS));

        parent::defineFields($fields, $module, 'GrdBankAccountSearch');
    }

    /**
     * Nao remova este metodo! Foi definido para nao fazer as automagicas do SForm e mexer nos campos.
     * 
     * @param MFormControl $field
     */
    public function setFieldDefaults($field = null)
    {
    }
}
