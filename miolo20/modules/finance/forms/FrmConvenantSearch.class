/**
 * Form to search the finConvenant table
 */
class FrmConvenantSearch extends SSearchForm
{
    /**
     * Class constructor
     */
    public function __construct()
    {
        $module = MIOLO::getCurrentModule();
        parent::__construct(_M('Localizar', $module), new FinConvenant(), array('convenantId'), 'BusConvenant');
    }

    /**
     *  Default method to define fields
     */
    public function defineFields()
    {
        $MIOLO  = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();
        $action = MIOLO::getCurrentAction();

        // Field convenantId
        $convenantId = new MTextField('convenantIdS', $this->getFormValue('convenantIdS', $data->convenantId), _M('Cdigo',$module));
        $convenantId->setJsHint(_M('Informe o cdigo',$module));
        $fields[] = $convenantId;
        $validators[] = new MIntegerValidator('convenantIdS', _M('Cdigo',$module), 'optional');

        // Field description
        $description = new MTextField('descriptionS', $this->getFormValue('descriptionS', $data->description), _M('Descrio',$module), SAGU::getParameter('basic', 'FIELD_DESCRIPTION_SIZE'));
        $description->setJsHint(_M('Informe a descrio',$module));
        $fields[] = $description;

        // Field value
        $value = new MTextField('valueS', $this->getFormValue('valueS', $data->value), _M('Valor',$module), SAGU::getParameter('basic', 'FIELD_MONETARY_SIZE'), 'Ex: 1.00');
        $value->setJsHint(_M('Informe o valor', $module));
        $fields[] = $value;
        $validators[] = new MFloatValidator('valueS', _M('Valor', $module));

        //is percentual
        $isPercentualLabel = new MText('isPercentLabel', _M(' percentual', $module) . ':');
        $isPercentualLabel->setWidth(SAGU::getParameter('BASIC', 'FIELD_CONTAINER_SIZE'));
        $isPercentual = new MRadioButtonGroup('isPercentS', '', SAGU::listTrueFalse(1), null, null, 'horizontal');
        $isPercentual->SetShowLabel(false);
        $hctIsPercentual = new MHContainer('hctIsPercent', array($isPercentualLabel, $isPercentual));
        $fields[] = $hctIsPercentual;

        // Field daysToDiscount
        $daysToDiscount = new MTextField('daysToDiscountS', $this->getFormValue('daysToDiscountS', $data->daysToDiscount), _M('Dias', $module));
        $daysToDiscount->setJsHint(_M('Informe o numero de dias a descontar',$module) );
        $fields[] = $daysToDiscount;
        $validators[] = new MIntegerValidator('daysToDiscountS', _M('Dias', $module), 'optional');

        // Field beforeafter
        $beforeAfterLabel = new MText('beforeAfterLabel', _M('Antes ou depois do vencimento', $module));
        $beforeAfterLabel->setWidth(SAGU::getParameter('BASIC', 'FIELD_CONTAINER_SIZE'));
        $beforeAfter = new MRadioButtonGroup('beforeAfterS', '', array( array( _M('Antes',$module), 'B' ), array( _M('Depois', $module),'A' ) ), null, null, 'horizontal');
        $beforeAfter->setShowLabel(false);
        $htcBeforeAfter = new MHContainer('htcBeforeAfter', array($beforeAfterLabel, $beforeAfter));
        $fields[] = $htcBeforeAfter;

        //Field operation
        $label = new MText('convenantOperationLabelS', _M('Operao de convnio', $module) . ':');
        $label->setWidth(SAGU::getParameter('BASIC', 'FIELD_CONTAINER_SIZE'));
//        $operationIdLabel->setClass('m-caption m-caption-required');
        $convenantOperation = new MLookupTextField('convenantOperationS', $this->getFormValue('convenantOperationS', $data->convenantOperationS), '', SAGU::getParameter('BASIC', 'FIELD_ID_SIZE'), null, null, 'convenantOperationDescriptionS', 'finance', 'Operation', null, null, true);
        $convenantOperation->setJsHint(_M('Informe o cdigo da operao', $module));
        $validators[] = new MIntegerValidator('convenantOperationS', _M('Operao de convnio', $module));
        $description = new MTextField('convenantOperationDescriptionS', $this->convenantOperationDescriptionS->value, '', SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE'));
        $description->setReadOnly(true);
        $description->setJsHint(_M('Descrio da operao', $module));
        $hctCO = new MHContainer('hctCO', array($label, $convenantOperation, $description));
        $hctCO->setShowLabel(true);
        $fields[] = $hctCO;

        parent::defineFields($fields, $module, 'GrdConvenantSearch', $validators);
    }
}
