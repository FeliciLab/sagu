class FrmRemittanceFilesSearch extends SSearchForm
{
    public function __construct($data)
    {
        $module = MIOLO::getCurrentModule();
        parent::__construct(_M('Localizar', $module), new FinBankAccount(), array('ourNumber'), 'BusFile', 'basic');
    }   

    /**
     *  Default method to define fields
     */
    public function defineFields()
    {
        $MIOLO  = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();
        $action = MIOLO::getCurrentAction();

        //Campo nosso nmero
        $ourNumberLabelS = new MText('ourNumberLabelS', _M('Nosso nmero', $module).':');
        $ourNumberLabelS->setWidth(SAGU::getParameter('BASIC', 'FIELD_CONTAINER_SIZE'));
        $ourNumberS = new MTextField('ourNumberS', $this->ourNumber->value, '', SAGU::getParameter('BASIC', 'FIELD_ID_SIZE'));
        $ourNumberS->setJsHint(_M('Informe o cdigo do nosso nmero', $module));
        $fields[] = new MHContainer('hctOurNumber', array($ourNumberLabelS, $ourNumberS));

        //Campo ttulo
        $invoiceLabelS = new MText('invoiceLabel', _M('Ttulo', $module).':');
        $invoiceLabelS->setWidth(SAGU::getParameter('BASIC', 'FIELD_CONTAINER_SIZE'));
        $invoiceS = new MTextField('invoiceIdS', $this->invoiceIdS->value, '', SAGU::getParameter('BASIC', 'FIELD_ID_SIZE'));
        $invoiceS->setJsHint(_M('Informe o cdigo do ttulo', $module));
        $fields[] = new MHContainer('hctinvoice', array($invoiceLabelS, $invoiceS));
        $validators[] = new MIntegerValidator('invoiceIdS', _M('Ttulo', $module), 'optional');

        // Perodo
        $beginDateLabel = new MText('beginDateLabel', _M('Perodo', $module) . ':');
        $beginDateLabel->setWidth(SAGU::getParameter('BASIC', 'FIELD_CONTAINER_SIZE'));
        $beginDate = new MCalendarField('beginDate', $this->getFormValue('beginDate', $data->beginDate), '', SAGU::getParameter('BASIC', 'FIELD_DATE_SIZE'));
        $endDateLabel = new MText('endDateLabel', _M('', $module) . ':');
        $endDate = new MCalendarField('endDate', $this->getFormValue('endDate', $data->endEmissionDate), '', SAGU::getParameter('BASIC', 'FIELD_DATE_SIZE'));
        
        $validators[] = new MDATEDMYValidator('beginDate', _M('Data inicial', $module), 'optional');
        $validators[] = new MDATEDMYValidator('endDate', _M('Data final', $module), 'optional');
        
        $fields[] = new MHContainer('hctBeginEmissionDate', array( $beginDateLabel, $beginDate, $endDateLabel, $endDate ));

        parent::defineFields($fields, $module, 'GrdRemittanceFilesSearch');
        $this->setValidators($validators);
    }
    
    /**
     * Obtm os dados do formulrio
     *
     * @return object
     */
    public function getTypesData()
    {
        $data = parent::getTypesData();
        $data->ourNumber = MIOLO::_REQUEST('ourNumberS');
        $data->invoiceId = MIOLO::_REQUEST('invoiceIdS');
        $data->beginDate = MIOLO::_REQUEST('beginDate');
        $data->endDate = MIOLO::_REQUEST('endDate');
        
        return $data;
    }

}
