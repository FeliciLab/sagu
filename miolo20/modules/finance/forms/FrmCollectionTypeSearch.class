/**
 * Form to search the finCollectionType table
 */
class FrmCollectionTypeSearch extends SSearchForm
{
    public function __construct($data)
    {
        $module = MIOLO::getCurrentModule();
        parent::__construct(_M('Localizar', $module), new FinCollectionType(), array('collectionTypeId'), 'BusCollectionType');
    }

    /**
     *  Default method to define fields
     */
    public function defineFields()
    {
        $MIOLO  = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();
        $action = MIOLO::getCurrentAction();

        $collectionTypeIdS = new MTextField('collectionTypeIdS', $this->collectionTypeIdS->value, _M('Código', $module), SAGU::getParameter('BASIC', 'FIELD_ID_SIZE'));
        $validators[] = new MIntegerValidator('collectionTypeIdS');
        $collectionTypeIdS->setJsHint(_M('Informe o código do tipo de cobrança',$module));
        $fields[] = $collectionTypeIdS;

        $descriptionS = new MTextField('descriptionS', $this->descriptionS->value, _M('Descrição', $module), SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE'));
        $descriptionS->setJsHint(_M('Informe a descrição do tipo de cobrança', $module));
        $fields[] = $descriptionS;

        parent::defineFields($fields, $module, 'GrdCollectionTypeSearch');
    }
}
