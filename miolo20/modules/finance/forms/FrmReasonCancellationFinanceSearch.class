/**
 * Form to search the finReasonCancellation table
 */
class FrmReasonCancellationFinanceSearch extends SSearchForm
{
    private $home;
    private $module;

    /**
     * Class constructor
     */
    public function __construct($data)
    {
    	$module = MIOLO::getCurrentModule();
        parent::__construct(_M('Localizar', $module), new FinReasonCancellationFinance(), array('reasonCancellationId'), 'BusReasonCancellationFinance');
    }

    /**
     *  Default method to define fields
     */
    public function defineFields()
    {
        $MIOLO  = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();
        $action = MIOLO::getCurrentAction();

        //Field reason cancellation
        $reasonCancellationIdS = new MTextField('reasonCancellationIdS', $this->reasonCancellationIdS->value, _M('Código', $module), SAGU::getParameter('BASIC', 'FIELD_ID_SIZE'));
        $reasonCancellationIdS->setJsHint(_M('Informe o código do motivo do cancelamento', $module));
        $fields[] = $reasonCancellationIdS;
        
        $validators[] = new MIntegerValidator('reasonCancellationIdS');

        //Field reason cencellation description
        $descriptionS = new MTextField('descriptionS', $this->descriptionS->value, _M('Descrição', $module), SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE'));
        $descriptionS->setJsHint(_M('Informo a descrição do motivo do cancelamento', $module));
        $fields[] = $descriptionS;
        
        parent::defineFields($fields, $module, 'GrdReasonCancellationFinanceSearch', $validators);
    }
}

