/**
 * Form to search the finRelease table
 */
class FrmReleaseSearch extends SSearchForm
{

    /**
     * Class constructor
     */
    public function __construct($data)
    {
        $module = MIOLO::getCurrentModule();
        parent::__construct(_M('Localizar', $module), new FinRelease(), array('releaseId'), 'BusRelease');
    }

    /**
     *  Default method to define fields
     */
    public function defineFields()
    {
        $MIOLO  = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();
        $action = MIOLO::getCurrentAction();

        //Campo cdigo
        $releaseLabel = new MText('releaseLabel', _M('Cdigo', $module) . ':');
        $releaseLabel->setWidth(SAGU::getParameter('BASIC', 'FIELD_LABEL_SIZE'));
        $releaseField = new MTextField('releaseIdS', $this->getFormValue('releaseIdS'), '', SAGU::getParameter('BASIC', 'FIELD_ID_SIZE'));
        $releaseField->setJsHint(_M('Cdigo', $module));
        $htcRelease = new MHContainer('hctRelease', array($releaseLabel, $releaseField));
        $htcRelease->setShowLabel(true);
        $fields[] = $htcRelease;

        $validators[] = new MIntegerValidator('releaseIdS');

        //lookup para pessoas
        $fieldsPersonLabel = new MText('personLabel', _M('Pessoa', $module) . ':');
        $fieldsPersonLabel->setWidth(SAGU::getParameter('BASIC', 'FIELD_LABEL_SIZE'));
        $fieldsPerson = new MLookupTextField('personIdS', $data->personIdS, '', SAGU::getParameter('BASIC', 'FIELD_ID_SIZE'), null, null, 'personNameS', 'basic', 'Person', null, null, true);
        $fieldsPerson->setJsHint(_M('Informe o cdigo da pessoa', $module));
        $fieldsPersonName = new MTextField('personNameS', $this->getFormValue('personNameS'), '', SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE'));
        $fieldsPersonName->setJsHint(_M('Nome da pessoa', $module));        
        $htcFieldsPerson = new MHContainer('hctPerson', array($fieldsPersonLabel, $fieldsPerson, $fieldsPersonName));
        $htcFieldsPerson->setShowLabel(true);
        $fields[] = $htcFieldsPerson;
        $validators[] = new MIntegerValidator('personIdS', _M('Pessoa', $module), 'optional');

        parent::defineFields($fields, $module, 'GrdReleaseSearch', $validators);
    }
}
