class FinCounterMovement extends SType
{

    public $counterMovementId;

    public $openCounterId;

    public $value;

    public $movementDate;

    public $operation;

    public $speciesId;

    public $observation;

    public $invoiceId;

    public $operationId;

    public $costCenterId;

    public $costCenterDescription;
    
    public $voucher;    
    
    public $bankAccountId;
    
    public $counterMovement;
    
    public $transferenciaDeCaixaId;
    
    public $movimentacaoEstornada;
    
    /**
     * Dado um identificador de caixa, pega as movimentaes deste
     * 
     * @param Integer $openCounterId Identificador do caixa "em movimento"
     * 
     * @return Array Dados das movimentaes do dado caixa
     */
    public static function getMovimentacaoDoCaixaParaGrid($openCounterId)
    {
        $parametros = array();
        
        $sql = "
             SELECT '',
                    TO_CHAR(datetime, GETPARAMETER('BASIC', 'MASK_TIMESTAMP_DEFAULT')),
                    '',
                    '',
                    (SELECT description FROM finspecies WHERE speciesid = '" . SAGU::getParameter('FINANCE', 'MONEY_SPECIES_ID') . "') as especie,
                    ROUND(value, 2),
                    operation,
                    'Abertura de caixa',
                    TRUE as cap,
                    't' as movimentacaoEstornada,
                    'f' as transferenciaDeCaixa
               FROM finopencounter
              WHERE opencounterid = ?
              UNION 
             SELECT fcm.counterMovementId::text,
                    TO_CHAR(fcm.movementDate, GETPARAMETER('BASIC', 'MASK_TIMESTAMP_DEFAULT')),
                    GETPERSONNAME(COALESCE(cs.fornecedorid ,fri.personid)), 
                    TO_CHAR(COALESCE(ct.vencimento, fri.maturitydate)::date, GETPARAMETER('BASIC', 'MASK_DATE')),
                    ES.description as especie,
                    ROUND(fcm.value, 2), 
                    fcm.operation,
                    ( SELECT description
                        FROM finoperation fo
                       WHERE COALESCE(cl.operationid, fcm.operationid) = fo.operationid ) || ' - ' || COALESCE(cl.operationid, fcm.operationid) AS operacao,
                    fcm.tituloid IS NOT NULL as cap,
                    fcm.movimentacaoEstornada,
                    (fcm.transferenciaDeCaixaId IS NOT NULL) as transferenciaDeCaixa
               FROM fincountermovement fcm 
          LEFT JOIN finreceivableinvoice fri
                 ON fcm.invoiceid = fri.invoiceid
          LEFT JOIN caplancamento cl
                 ON fcm.counterMovementId = cl.counterMovementId
          LEFT JOIN captitulo ct
                 ON fcm.tituloid = ct.tituloid
          LEFT JOIN capsolicitacaoparcela csp
                 ON ct.solicitacaoparcelaid = csp.solicitacaoparcelaid
          LEFT JOIN capsolicitacao cs
                 ON csp.solicitacaoid = cs.solicitacaoid
          LEFT JOIN finSpecies ES
                 ON fcm.speciesid = ES.speciesid
              WHERE fcm.openCounterId = ?
              
           ORDER BY 1

        ";
        
        $parametros[] = $openCounterId;
        $parametros[] = $openCounterId;
        
        return SDatabase::query($sql, $parametros);
        
    }
    
    /**
     * Retorna a consulta das movimentaes do mdulo Financeiro
     * 
     * @return String
     */
    private static function getSQLMovimentacaoFin()
    {
        return " (SELECT 
            fm.counterMovementId as id, 
            TO_CHAR(fm.movementDate, '" . SAGU::getParameter('BASIC', 'MASK_TIMESTAMP_DEFAULT') . "'),
            GETPERSONNAME(fri.personid), 
            TO_CHAR(fri.maturitydate::date, '" . SAGU::getParameter('BASIC', 'MASK_DATE') . "'), 
            ROUND(fm.value, 2), 
            fm.operation, 
            fm.operationid || ' - ' || (SELECT description FROM finoperation fo WHERE fm.operationid = fo.operationid) as operacao,
            FALSE as cap
        FROM fincountermovement fm 
        INNER JOIN finreceivableinvoice fri 
            ON fri.invoiceid = fm.invoiceid
        WHERE fm.openCounterId = ?) ";
        
    }
    
    /**
     * Retorna a consulta das movimentaes do mdulo Contas a pagar
     * 
     * @return String
     */
    private static function getSQLMovimentacoesCAP()
    {
        return " (SELECT
            fm.counterMovementId as id, 
            TO_CHAR(fm.movementDate, '" . SAGU::getParameter('BASIC', 'MASK_TIMESTAMP_DEFAULT') . "'),
            GETPERSONNAME(s.fornecedorid), 
            TO_CHAR(t.vencimento::date, '" . SAGU::getParameter('BASIC', 'MASK_DATE') . "'),  
            ROUND(fm.value, 2),
            fm.operation, 
            cl.operationid || ' - ' || (SELECT description FROM finoperation fo WHERE cl.operationid = fo.operationid) as operacao,
            TRUE as cap
        FROM captitulo t
        INNER JOIN capsolicitacaoparcela sp
            ON t.solicitacaoparcelaid = sp.solicitacaoparcelaid
        INNER JOIN capsolicitacao s
            ON sp.solicitacaoid = s.solicitacaoid
        INNER JOIN fincountermovement fm
            ON fm.tituloid = t.tituloid
        INNER JOIN caplancamento cl
            ON t.tituloid = cl.tituloid
        WHERE fm.openCounterId = ?) ";
        
    }    
}
