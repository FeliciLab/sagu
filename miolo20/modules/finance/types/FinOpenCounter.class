class FinOpenCounter extends SType
{
    public $openCounterId;
    public $counterId;
    public $counterDescription;
    public $unitDescription;
    public $operatorId;
    public $operatorName;
    public $value;
    public $operation;
    public $date;
    public $observation;
    public $responsibleUserName;
    public $maxBalance;    

    public static function getInformacaoCaixasAbertos()
    {
        $sql = "
             SELECT foc.opencounterid,
                    'Caixa ' || foc.counterid::text,
                    getpersonname(foc.operatorid),
                    ROUND((foc.value + COALESCE(focB.RECEBIDO, 0)), 2)
               FROM finopencounter foc
          LEFT JOIN (SELECT fcm.openCounterId,
                            SUM(CASE WHEN fcm.operation = 'C' THEN fcm.value ELSE fcm.value * -1 END) AS RECEBIDO
                       FROM finCounterMovement fcm
                      WHERE fcm.speciesid = GETPARAMETER('FINANCE', 'MONEY_SPECIES_ID')::integer
                   GROUP BY fcm.openCounterId
                     ) focB ON ( foc.openCounterId = focB.openCounterId )
              WHERE (SELECT count(*) FROM finclosecounter fcc WHERE fcc.opencounterid = foc.opencounterid) = 0 -- Verifica se o caixa no est fechado
        ";
        
        return SDatabase::query($sql);
        
    }
    
}
