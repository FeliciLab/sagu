class FinOcorrenciaDoConvenio extends SType
{
    public $ocorrenciaDoConvenioId;
    public $convenantId;
    public $courseId;
    public $courseVersion;
    public $turnId;
    public $unitId;
    
    /**
     * Busca Ocorrencias do convenio conforme filtros
     * @param type $filters
     * @param type $returnSubDetailData retorna dados para popular subdetail
     * @return type 
     */
    public static function search($filters, $returnSubDetailData = false)
    {
        $msql = new MSQL();
        $msql->setColumns("A.ocorrenciaDoConvenioId,
                           A.convenantId,
                           A.courseId,
                           A.courseVersion,
                           A.turnId,
                           A.unitId,
                           B.name,
                           C.description,
                           D.description");   
        $msql->setTables("FinOcorrenciaDoConvenio A
                INNER JOIN acdCourse B ON A.courseid = B.courseid
                INNER JOIN basTurn C ON A.turnid = C.turnid
                INNER JOIN basUnit D ON A.unitid = D.unitid");

        if ( strlen($filters->convenantId) > 0 )
        {
            $msql->setWhereAnd('convenantId = ?');
            $parameter[] = $filters->convenantId;
        }
        
        $sql = $msql->select($parameter);
        $result = SDatabase::query($sql);
        
        $return = $result;
        if ($returnSubDetailData)
        {   
            unset($return);
            foreach($result as $subData)
            {
                $data = new stdClass();
                
                list( $data->ocorrenciaDoConvenioId,
                      $data->convenantId,
                      $data->courseId,
                      $data->courseVersion,
                      $data->turnId,
                      $data->unitId,
                      $data->courseName,        
                      $data->turnDescription,
                      $data->unitDescription) = $subData;
                
                    $return[] = $data;
            }
        }
        return $return;
    }
}
