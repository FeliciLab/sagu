/**
 * Grid used by form to display search results
 **/
class GrdOptionSearch extends SGrid
{
    /**
     * Class constructor
     **/
    public function __construct($filters)
    {
        $MIOLO = MIOLO::getInstance();
        $module = SAGU::getFileModule(__FILE__);
        
        /*
         * MGridColumn constructor parameters:
         *    $title = ''
         *    $align = 'left'
         *    $nowrap = false
         *    $width = 0
         *    $visible = true
         *    $options = null
         *    $order = false
         *    $filter = false
         */
        
        $busAT = new BusinessResearchBusAnswerType();
        
        $columns = array( new MGridColumn( _M('Cdigo da opo', $module), 'center', true, null, true, null, true ),
                          new MGridColumn( _M('Cdigo da questo', $module), 'center', true, null, true, null, true ),
                          new MGridColumn( _M('Tipo de resposta', $module), 'left', true, null, true, $busAT->listAnswerType(0), true ),
                          new MGridColumn( _M('Descrio da questo', $module), 'left', true, null, true, null, true ),
                          new MGridColumn( _M('Descrio da opo', $module), 'left', true, null, true, null, true )
            );

        $primaryKey = array( 'optionId' => '%0%' );

        parent::__construct($filters, $columns, 'GrdOptionSearch', $primaryKey);
    }
}
