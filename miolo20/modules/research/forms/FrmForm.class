/**
 * Form to manipulate a form
 **/
class FrmForm extends SManagementForm
{
    /**
     * Class constructor
     **/
    public function __construct()
    {
        parent::__construct(new RshForm(), array('formId'), 'BusForm');
    }

    /**
     * Default method to define fields
     **/
    public function defineFields()
    {
        $MIOLO = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();
        $action = MIOLO::getCurrentAction();
        $function = MIOLO::_request('function');

        if ( in_array($function, array(SForm::FUNCTION_UPDATE, SForm::FUNCTION_DELETE)) )
        {
            $pk = $this->getObjectPk();

            // Field form id
            $fields[] = new MTextLabel('', $pk->formId, _M('Cdigo do formulrio', $module));
            $fields[] = new MHiddenField('formId', $pk->formId);

            $data = $this->busObject->getForm($pk->formId);
        }

        // Field form description
        $description = new MTextField('description', $this->getFormValue('description', $data->description), _M('Descrio', $module), SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE'));
        $description->setJsHint( _M('Informe a descrio do formulrio', $module) );
        $fields[] = $description;
        $validators[] = new MRequiredValidator('description');

        // Field short description
        $shortDescription = new MTextField('shortDescription', $this->getFormValue('shortDescription', $data->shortDescription), _M('Abreviatura', $module), 20);
        $shortDescription->setJsHint(_M('Informe a abreviatura do formulrio', $module));
        $fields[] = $shortDescription;
        $validators[] = new MRequiredValidator('shortDescription');

        $fields[] = new MSeparator();

        // Field is restrict
        $isRestrictedLabel = new MText('isRestrictedLabel', _M(' restrito',$module) . '?');
        $isRestrictedLabel->setWidth(SAGU::getParameter('BASIC', 'FIELD_CONTAINER_SIZE'));
        $flds[] = $isRestrictedLabel;
        $isRestrictedOptions = SAGU::listYesNo(1);
        $value = strlen($this->getFormValue('isRestricted', $data->isRestricted)) > 0 ? $this->getFormValue('isRestricted', $data->isRestricted) : DB_FALSE;
        $isRestricted = new MRadioButtonGroup('isRestricted', '', $isRestrictedOptions, $value, null, 'horizontal');
        $isRestricted->setShowLabel(false);
        $flds[] = $isRestricted;
        $hctIsRestricted = new MHContainer('hctIsRestricted', $flds);
        $hctIsRestricted->setShowLabel(false);
        $fields[] = $hctIsRestricted;
        unset($flds);

        // Field is identificable
        $isIdentifiedLabel = new MText('isIdentifiedLabel', _M('Exige identificao',$module) . '?');
        $isIdentifiedLabel->setWidth(SAGU::getParameter('BASIC', 'FIELD_CONTAINER_SIZE'));
        $flds[] = $isIdentifiedLabel;
        $isIdentifiedOptions = SAGU::listYesNo(1);
        $value = strlen($this->getFormValue('isIdentified', $data->isIdentified)) > 0 ? $this->getFormValue('isIdentified', $data->isIdentified) : DB_TRUE;
        $isIdentified = new MRadioButtonGroup('isIdentified', '', $isIdentifiedOptions, $value, null, 'horizontal');
        $isIdentified->setShowLabel(false);
        $flds[] = $isIdentified;
        $hctIsIdentified = new MHContainer('hctIsIdentified', $flds);
        $hctIsIdentified->setShowLabel(false);
        $fields[] = $hctIsIdentified;
        unset($flds);

        parent::defineFields($fields, $validators, $data);
    }
}
?>