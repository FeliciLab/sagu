/**
 * Form to search the rshAnswer table
 */
class FrmAnswerSearch extends SSearchForm
{
    /**
     * Class constructor
     */
    public function __construct($data)
    {
        parent::__construct(_M('Localizar', 'basic'), new RshAnswer(), array('answerId'), 'BusAnswer');
    }

    /**
     *  Default method to define fields
     */
    public function defineFields()
    {
        $MIOLO = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();
        $action = MIOLO::getCurrentAction();

        // Field person id
        $personIdLabelS = new MText('personIdLabelS', _M('Pessoa', $module) . ':');
        $personIdLabelS->setWidth(SAGU::getParameter('BASIC', 'FIELD_CONTAINER_SIZE'));
        $flds[] = $personIdLabelS;
        $personIdS = new MLookupTextField('personIdS', $this->personIdS->value, '', SAGU::getParameter('BASIC', 'FIELD_LOOKUPFIELD_SIZE'), null, null, 'personNameS', 'basic', 'PhysicalPerson', null, null, true);
        $personIdS->setJsHint(_M('Informe o cdigo da pessoa',$module));
        $flds[] = $personIdS;
        $validators[] = new MIntegerValidator('personIdS', _M('Pessoa', $module));

        // Field person name
        $personNameS = new MTextField('personNameS', $this->personNameS->value, '', SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE'));
        $personNameS->setJsHint(_M('Informe o nome da pessoa',$module));
        $flds[] = $personNameS;
        $hctPersonS = new MHContainer('hctPersonS', $flds);
        $hctPersonS->setShowLabel(false);
        $fields[] = $hctPersonS;

        $busForm = new BusinessResearchBusForm();

        // Field form id
        $formLabel = new MText('formLabel', _M('Formulrio', $module));
        $formLabel->setWidth(SAGU::getParameter('BASIC', 'FIELD_CONTAINER_SIZE'));
        $formIdS = new MComboBox('formIdS', $this->getFormValue('formIdS'), '', $busForm->listForm());
        $formIdS->setJsHint(_M('Informe o cdigo do formulrio', $module));
        $validators[] = new MIntegerValidator('formIdS', _M('Formulrio', $module));
        $cntForm = new MHContainer('cntForm', array($formLabel, $formIdS));
        $cntForm->setShowLabel(true);
        $fields[] = $cntForm;

        parent::defineFields($fields, $module, 'GrdAnswerSearch', $validators);
    }

    public function getTypesData()
    {
        $data = parent::getTypesData();

        $data->personName = MIOLO::_REQUEST('personNameS');
        $data->formId = MIOLO::_REQUEST('formIdS');

        return $data;
    }
}
