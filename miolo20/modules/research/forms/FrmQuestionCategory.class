/**
 * Form to manipulate a course
 **/
class FrmQuestionCategory extends SManagementForm
{
    /**
     * Class constructor
     **/
    public function __construct()
    {
        parent::__construct(new RshQuestionCategory(), array('questionCategoryId'), 'BusQuestionCategory');
    }

    /**
     * Default method to define fields
     **/
    public function defineFields()
    {
        $MIOLO = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();
        $action = MIOLO::getCurrentAction();
        $function = MIOLO::_request('function');

        if ( in_array($function, array(SForm::FUNCTION_UPDATE, SForm::FUNCTION_DELETE)) )
        {
            $pk = $this->getObjectPk();

            // Field question category id
            $fields[] = new MTextLabel('', $pk->questionCategoryId, _M('Cdigo da categoria da questo', $module));
            $fields[] = new MHIddenField('questionCategoryId', $pk->questionCategoryId);

            $data = $this->busObject->getQuestionCategory($pk->questionCategoryId);
        }

        // Field question category description
        $description = new MTextField('description', $this->getFormValue('description', $data->description), _M('Descrio', $module), SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE'));
        $description->setJsHint( _M('Informe a descrio da questo', $module) );
        $fields[] = $description;
        $validators[] = new MRequiredValidator('description');

        parent::defineFields($fields, $validators, $data);
    }
}
