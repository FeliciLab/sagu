/**
 * Form to search the basCountry table
 */
class FrmOptionSearch extends SSearchForm
{
    /**
     * Class constructor
     */
    public function __construct($data)
    {
        parent::__construct(_M('Localizar', 'basic'), new RshOption(), array('optionId'), 'BusOption');
    }

    /**
     *  Default method to define fields
     */
    public function defineFields()
    {
        $MIOLO = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();
        $action = MIOLO::getCurrentAction();

        //Field option code
        $optionIdS = new MTextField('optionIdS', $this->optionIdS->value, _M('Opo', $module), SAGU::getParameter('BASIC', 'FIELD_ID_SIZE'));
        $optionIdS->setJsHint(_M('Informe o cdigo da opo', $module));
        $fields[] = $optionIdS;
        $validators[] = new MIntegerValidator('optionIdS');

        //Field question
        $business = new BusinessResearchBusQuestion();
        $questionIdS = new MComboBox('questionIdS', $this->getFormValue('questionIdS', $data->questionIdS), _M('Questo',$module), $business->listQuestion());
        $questionIdS->setJsHint(_M('Selecione uma questo', $module));
        $fields[] = $questionIdS;
        $validators[] = new MIntegerValidator('questionIdS');

        //Field option description
        $descriptionS = new MTextField('descriptionS', $this->descriptionS->value, _M('Descrio', $module), SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE'));
        $descriptionS->setJsHint(_M('Informe a descrio da opo', $module));
        $fields[] = $descriptionS;

        parent::defineFields($fields, $module, 'GrdOptionSearch', $validators);
    }
}
