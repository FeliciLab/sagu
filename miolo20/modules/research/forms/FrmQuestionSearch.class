/**
 * Form to search the basCountry table
 */
class FrmQuestionSearch extends SSearchForm
{
    /**
     * Class constructor
     */
    public function __construct($data)
    {
        parent::__construct(_M('Localizar', 'basic'), new RshQuestion(), array('questionId'), 'BusQuestion');
    }

    /**
     *  Default method to define fields
     */
    public function defineFields()
    {
        $MIOLO = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();
        $action = MIOLO::getCurrentAction();

        // Field question id
        $questionIdS = new MTextField('questionIdS', $this->questionIdS->value, _M('Cdigo', $module), SAGU::getParameter('BASIC', 'FIELD_ID_SIZE'));
        $questionIdS->setJsHint(_M('Informe o cdigo da questo', $module));
        $fields[] = $questionIdS;
        $validators[] = new MIntegerValidator('questionIdS');

        // Field question description
        $descriptionS = new MTextField('descriptionS', $this->descriptionS->value, _M('Descrio', $module), SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE'));
        $descriptionS->setJsHint(_M('Informe a descrio da questo', $module));
        $fields[] = $descriptionS;

        // Field answer type
        $answerTypeLabelS = new MText('answerTypeIdLabelS', _M('Tipo de resposta',$module) . '?');
        $answerTypeLabelS->setWidth(SAGU::getParameter('BASIC', 'FIELD_CONTAINER_SIZE'));
        $flds[] = $answerTypeLabelS;
        $busAnswerType = new BusinessResearchBusAnswerType();
        $answerTypeOptions = $busAnswerType->listAnswerType();
        $answerTypeId = new MSelection('answerTypeIdS', $this->getFormValue('answerTypeIdS', $data->answerTypeIdS), "", $answerTypeOptions, null, null, null);
        $flds[] = $answerTypeId;
        $hctanswerTypeS = new MHContainer('hctanswerTypeIdS', $flds);
        $hctanswerTypeS->setShowLabel(false);
        $fields[] = $hctanswerTypeS;
        unset($flds);

        $business = new BusinessResearchBusForm();
        $fields[] = new MComboBox('formIdS', $this->getFormValue('formIdS', $data->formIdS), _M('Formulrio',$module), $business->listForm());
        $validators[] = new MIntegerValidator('formIdS');

        $business = new BusinessResearchBusQuestionCategory();
        $fields[] = new MComboBox('questionCategoryIdS', $this->getFormValue('questionCategoryIdS', $data->questionCategoryIdS), _M('Categoria da questo',$module), $business->listQuestionCategory());
        $validators[] = new MIntegerValidator('questionCategoryIdS');

        parent::defineFields($fields, $module, 'GrdQuestionSearch', $validators);
    }

    
    public function getTypesData()
    {
        $data = parent::getTypesData();
        $data->answerTypeId = MIOLO::_REQUEST('answerTypeIdS');

        return $data;
    }
}
