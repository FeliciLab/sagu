/**
 * Form to search the basCountry table
 */
class FrmFormSearch extends SSearchForm
{
    /**
     * Class constructor
     */
    public function __construct($data)
    {
        parent::__construct(_M('Localizar', 'basic'), new RshForm(), array('formId'), 'BusForm');
    }

    /**
     *  Default method to define fields
     */
    public function defineFields()
    {
        $MIOLO = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();
        $action = MIOLO::getCurrentAction();

        // Field form id
        $formIdS = new MTextField('formIdS', $this->formIdS->value, _M('Cdigo do formulrio', $module), 10);
        $formIdS->setJsHint(_M('Informe o cdigo do formulrio', $module));
        $fields[] = $formIdS;
        $validators[] = new MIntegerValidator('formIdS');

        // Field form description
        $descriptionS = new MTextField('descriptionS', $this->descriptionS->value, _M('Descrio', $module), SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE'));
        $descriptionS->setJsHint(_M('Informe a descrio do formulrio', $module));
        $fields[] = $descriptionS;

        // Field form short description
        $shortDescriptionS = new MTextField('shortDescriptionS', $this->shortDescriptionS->value, _M('Abreviatura', $module), 20);
        $shortDescriptionS->setJsHint(_M('Informe a abreviatura do formulrio', $module));
        $fields[] = $shortDescriptionS;

        // Field separator
        $separatorS = new MText('separatorS');
        $fields[] = $separatorS;

        // Field is Restricted
        $isRestrictedLabelS = new MText('isRestrictedLabelS', _M(' restrito',$module) . '?');
        $isRestrictedLabelS->setWidth(SAGU::getParameter('BASIC', 'FIELD_CONTAINER_SIZE'));
        $flds[] = $isRestrictedLabelS;
        $isRestrictedOptionsS = SAGU::listTrueFalseIndifferent(1);
        $isRestrictedS = new MRadioButtonGroup('isRestrictedS', '', $isRestrictedOptionsS, $data->isRestrictedS, null, 'horizontal');
        $isRestrictedS->setShowLabel(false);
        $flds[] = $isRestrictedS;
        $hctIsRestrictedS = new MHContainer('hctIsRestrictedS', $flds);
        $hctIsRestrictedS->setShowLabel(false);
        $fields[] = $hctIsRestrictedS;
        unset($flds);

        // Field is identificable
        $isIdentifiedLabelS = new MText('isIdentifiedLabelS', _M('Exige identificao',$module) . '?');
        $isIdentifiedLabelS->setWidth(SAGU::getParameter('BASIC', 'FIELD_CONTAINER_SIZE'));
        $flds[] = $isIdentifiedLabelS;
        $isIdentifiedOptionsS = SAGU::listTrueFalseIndifferent(1);
        $isIdentifiedS = new MRadioButtonGroup('isIdentifiedS', '', $isIdentifiedOptionsS, $data->isIdentifiedS, null, 'horizontal');
        $isIdentifiedS->setShowLabel(false);
        $flds[] = $isIdentifiedS;
        $hctIsIdentifiedS = new MHContainer('hctIsIdentifiedS', $flds);
        $hctIsIdentifiedS->setShowLabel(false);
        $fields[] = $hctIsIdentifiedS;
        unset($flds);

        parent::defineFields($fields, $module, 'GrdFormSearch', $validators);
    }
}
?>