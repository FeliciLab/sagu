$MIOLO = MIOLO::getInstance();
$busFile = new BusinessBasicBusFile();
$fileId = MIOLO::_REQUEST('fileId');

try
{
	if ( !$busFile->checkFilePermission($fileId) )
	{
		throw new Exception( _M('Voc no tem permisso para baixar este arquivo.', $module) );
	}

	$file = $busFile->getFile($fileId);

	if ( !$file->fileId )
	{
		throw new Exception( _M('O arquivo passado para download  invlido.', $module) );
	}

	$busFile->getFileAsDownload($fileId, $file->contentType);
}
catch (Exception $e)
{
    exit;
//    $MIOLO->error( $e->getMessage() );
