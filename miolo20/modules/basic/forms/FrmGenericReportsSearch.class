/**
 * Form to search for generic reports
 */
class FrmGenericReportsSearch extends SForm
{
    /**
     * Class constructor
     */
    public function __construct($data)
    {
        $module = MIOLO::getCurrentModule();

        parent::__construct( _M('Localizar', $module), NULL, NULL );
    }

    /**
     *  Default method to define fields
     */
    public function defineFields()
    {
        $MIOLO = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();
        $action = MIOLO::getCurrentAction();

        // Field report id
        $reportIdS = new MTextField('reportIdS', $this->getFormValue('reportIdS', $this->reportIdS->value), _M('Cdigo do relatrio',$module), SAGU::getParameter('BASIC', 'FIELD_ID_SIZE'));
        $reportIdS->setJsHint(_M('Informe o cdigo do relatrio', $module));
        $fields[] = $reportIdS;
        $validators[] = new MIntegerValidator('reportIdS');

        // Field report name
        $reportNameS = new MTextField('reportNameS', $this->reportNameS->value, _M('Relatrio', $module), SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE'));
        $reportNameS->setJsHint(_M('Informe o nome do relatrio', $module));
        $fields[] = $reportNameS;

        // Field module
        $moduleS = new MSelection('moduleS', $this->getFormValue('moduleS'), _M('Mdulo', $module), SAGU::listModules(0));
        $moduleS->setJsHint(_M('Informe o mdulo', $module));
        $fields[] = $moduleS;

        // Field enabled
        $options = SAGU::listYesNo('1');
        $enabledLabelS = new MText('enabledLabelS', _M('Habilitado', $module) . ':');
        $enabledLabelS->setWidth(SAGU::getParameter('BASIC', 'FIELD_CONTAINER_SIZE'));
        $enabledItS = new MRadioButtonGroup('enabledItS', '', $options, $this->getFormValue('enabledItS'), null, 'horizontal');
        $enabledItS->setShowLabel(false);
        $hctEnabled = new MHContainer('hctEnabled', array ($enabledLabelS, $enabledItS ));
        $fields[] = $hctEnabled;

        $fields[] = new MButton('btnSearch', _M('Localizar', $module));
        
        parent::defineFields( array( 'fields' =>$fields, 'validators' => $validators ) );
        
        // get filters values
        $filters->reportId = $this->reportIdS->value;
        $filters->name = $this->reportNameS->value;
        $filters->enabled = $this->enabledItS->value;
        $filters->module = $this->moduleS->value;
        $grdResults = $MIOLO->getUI()->getGrid($module, 'GrdGenericReportsSearch', $filters);
        $business = new BusinessBasicBusGenericReports();
        $data = $business->searchReport($filters);
        $grdResults->setData($data);
        $this->addField($grdResults);
        $this->setLabelWidth(SAGU::getParameter('BASIC', 'FIELD_LABEL_SIZE'));
        $this->page->onLoad('document.' . $this->name . '.reportNameS.focus();');
        
        $grdResults->setTableName('basReport');
        
        $this->toolbar->disableButton(MToolBar::BUTTON_SAVE);
        $this->toolbar->disableButton(MToolBar::BUTTON_DELETE);
        $this->toolbar->disableButton(MToolBar::BUTTON_PRINT);
    }
}
