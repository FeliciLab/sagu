/**
 * Form to search the basConfig table
 */
class FrmParametersTableSearch extends SSearchForm
{
    /**
     * Class constructor
     */
    public function __construct($data)
    {
        parent::__construct(_M('Localizar', 'basic'), new BasConfig(), array('moduleconfig', 'parameter'), 'BusConfig');
        
        $this->toolbar->disableButton(MToolBar::BUTTON_NEW);
    }

    /**
     *  Default method to define fields
     */
    public function defineFields()
    {
        $MIOLO = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();
        $action = MIOLO::getCurrentAction();

        // Module
        $business = new BusinessBasicBusConfig();
        $moduleConfigS = new MComboBox('moduleConfigS', $this->moduleConfigS->value, _M('Mdulo',$module), $business->listModules());
        $moduleConfigS->setJsHint(_M('Escolha o mdulo',$module));
        $fields[] = $moduleConfigS;

        // Parameter
        $parameterS = new MTextField('parameterS', $this->parameterS->value, _M('Parmetro',$module), 20);
        $parameterS->setJsHint(_M('Informe o parmetro do mdulo',$module));
        $fields[] = $parameterS;

        // Value
        $valueS = new MTextField('valueS', $this->valueS->value, _M('Valor',$module), 20);
        $valueS->setJsHint(_M('Informe o valor do parmetro',$module));
        $fields[] = $valueS;

        // Short Descriptiom
        $shortDescriptionS = new MTextField('labelS', $this->labelS->value, _M('Abreviatura',$module), SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE'));
        $shortDescriptionS->setJsHint(_M('Informe uma breve descrio do parmetro',$module));
        $fields[] = $shortDescriptionS;

        // Description
        $descriptionS = new MTextField('descriptionS', $this->descriptionS->value, _M('Descrio',$module), SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE'));
        $descriptionS->setJsHint(_M('Informe a descrio do parmetro',$module));
        $fields[] = $descriptionS;

        // Type
        $typeS = new MComboBox('typeS', $this->typeS->value, _M('Tipo do campo',$module), $business->listTypes());
        $typeS->setJsHint(_M('Informe o tipo de campo',$module));
        $fields[] = $typeS;
        
        // groupBy
        $groupByS = new MTextField('groupByS', $this->groupByS->value, _M('Agrupar por',$module), SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE'));
        $groupByS->setJsHint(_M('Informe o agrupamento',$module));
        $fields[] = $groupByS;
        
        // orderBy
        $orderByS = new MTextField('orderByS', $this->orderByS->value, _M('Ordenar por',$module), SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE'));
        $orderByS->setJsHint(_M('Informe a ordenao',$module));
        $fields[] = $orderByS;
        
        // filter only by unit
//        if ( sMultiUnidade::estaHabilitada() && sMultiUnidade::temUnidadeLogada() )
//        {
//            $val = MIOLO::_REQUEST('filterOnlyUnitS');
//            $checked = isset($val);
//            $checkbox = new MCheckBox('filterOnlyUnitS', '1', _M('Filtrar pela unidade logada', $module), $checked);
//            $checkbox->setJsHint(_M('Se marcado, este filtro exibir apenas os parmetros e valores da unidade atual logada', $module));
//            $fields[] = $checkbox;
//        }

        parent::defineFields($fields, $module, 'GrdParametersTableSearch', $validators);
    }
}
