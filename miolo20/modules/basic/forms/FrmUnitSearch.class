/**
 * Form to search the basUnit table
 */
class FrmUnitSearch extends SSearchForm
{
    private $module;

    /**
     * Class constructor
     */
    public function __construct($data)
    {
        parent::__construct(_M('Localizar', 'basic'), new BasUnit(), array('unitId'), 'BusUnit');
    }

    /**
     *  Default method to define fields
     */
    public function defineFields()
    {
        $MIOLO  = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();
        $action = MIOLO::getCurrentAction();

        //Field unit id
        $unitIdS = new MTextField('unitIdS', $this->unitIdS->value, _M('Código',$module), SAGU::getParameter('BASIC', 'FIELD_ID_SIZE'));
        $unitIdS->setJsHint(_M('Informe o código da unidade',$module));
        $fields[] = $unitIdS;
        $validators[] = new MIntegerValidator('unitIdS');

        //Field unit description
        $descriptionS = new MTextField('descriptionS', $this->descriptionS->value, _M('Descrição',$module), SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE'));
        $descriptionS->setJsHint(_M('Informe a descrição da unidade',$module));
        $fields[] = $descriptionS;
       
        $fields[] = new MLookupContainer('locationIdS', 'locationDescriptionS', NULL, _M('Logradouro'), 'locationDescriptionS', $module, 'Location');

        parent::defineFields($fields, $module, 'GrdUnitSearch', $validators);
    }
}
