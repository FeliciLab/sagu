/**
 * Form to manipulate a personTitle
 **/
class FrmBadgeLoanSearch extends SSearchForm
{
    /**
     * Class constructor
     **/
    public function __construct()
    {
        parent::__construct(null, new BasBadgeLoan(), array('loanId'));
    }

    /**
     * Default method to define fields
     **/
    public function defineFields()
    {
        $MIOLO = MIOLO::getInstance();
        $module = SAGU::getFileModule(__FILE__);

        // Field badge status id
        $badgeStatusId = new MTextField('loanIdS', $data->loanId, _M('Cdigo', $module), SAGU::getParameter('BASIC', 'FIELD_ID_SIZE'));
        $badgeStatusId->setJsHint(_M('Informe o cdigo do emprstimo do crach', $module));
        $validators[] = new MIntegerValidator('loanIdS', _M('Cdigo do emprstimo do crach', $module));
        $fields[] = $badgeStatusId;
        
        // Field badge (lookup badge)
        $fields[] = $lkp = new SLookupContainer('badgeIdS', $this->getRequestValue('badgeIdS'), array(
            'item' => 'Badge',
            'module' => 'basic',
            'label' => _M('Crach', $module),
            'descriptionReadOnly' => false,
            'descriptionName' => 'badgeDescriptionS',
        ));

        // Field person (lookup physical person)
        $fields[] = $lkp = new SLookupContainer('personIdS', $this->getRequestValue('personIdS'), array(
            'item' => 'PhysicalPerson',
            'module' => 'basic',
            'label' => _M('Pessoa', $module),
            'descriptionReadOnly' => false,
            'descriptionName' => 'personNameS',
        ));

        /*
         * Field loan date
         */
        // Label
        $loanDateLabel = new MText('loanDateLabel', _M('Data inicial do emprstimo', $module).':');
        $loanDateLabel->setWidth(SAGU::getParameter('BASIC', 'FIELD_LABEL_SIZE'));
        // Field loan DateInitial
        $loanDateInitial = new MCalendarField('loanDateInitialS', $data->loanDateInitial, '', SAGU::getParameter('BASIC', 'FIELD_DATE_SIZE'));
        $loanDateInitial->setJsHint(_M('Informe a data inicial de emprstimo do crach', $module).':');
        // Field loan DateFinal
        $loanDateFinalLabel = new MText('loanDateLabel1', _M('Final', $module).':');
        $loanDateFinal = new MCalendarField('loanDateFinalS', $data->loanDateFinal, '', SAGU::getParameter('BASIC', 'FIELD_DATE_SIZE'));
        $loanDateFinal->setJsHint(_M('Informe a data final de emprstimo do crach', $module));
        // Container 1
        $hctLoanDates = new MHContainer('hctLoanDateS', array($loanDateInitial, $loanDateFinalLabel, $loanDateFinal));
        // Container 2
        $hctLoanDate = new MHContainer('hctLoanDateS', array($loanDateLabel, $hctLoanDates));
        $validators[] = new MDATEDMYValidator('loanDateInitialS', _M('Data inicial do emprstimo', $module).':');
        $validators[] = new MDATEDMYValidator('loanDateFinalS', _M('Data final do emprstimo', $module).':');
        $fields[] = $hctLoanDate;

        /*
         * Field expected return date
         */
        // Label
        $expectedReturnDateLabel = new MText('expectedReturnDateLabel', _M('Previso inicial da devoluo do crach', $module).':');
        $expectedReturnDateLabel->setWidth(SAGU::getParameter('BASIC', 'FIELD_LABEL_SIZE'));
        // Loan DateInitial
        $expectedReturnDateInitial = new MCalendarField('expectedReturnDateInitialS', $data->expectedReturnDateInitial, '', SAGU::getParameter('BASIC', 'FIELD_DATE_SIZE'));
        $expectedReturnDateInitial->setJsHint(_M('Informe a data esperada inicial da devoluo do crach', $module));
        // Loan DateFinal
        $expectedReturnDateFinalLabel = new MText('expectedReturnDateLabel1', _M('Final', $module).':');
        $expectedReturnDateFinal = new MCalendarField('expectedReturnDateFinalS', $data->expectedReturnDateFinal, '', SAGU::getParameter('BASIC', 'FIELD_DATE_SIZE'));
        $expectedReturnDateFinal->setJsHint(_M('Informe a data esperada final da devoluo do crach', $module));
        // Container 1
        $hctexpectedReturnDates = new MHContainer('hctexpectedReturnDateS', array($expectedReturnDateInitial, $expectedReturnDateFinalLabel, $expectedReturnDateFinal));
        // Container 2
        $hctexpectedReturnDate = new MHContainer('hctexpectedReturnDateS', array($expectedReturnDateLabel, $hctexpectedReturnDates));
        $validators[] = new MDATEDMYValidator('expectedReturnDateInitialS', _M('Previso inicial da devoluo do crach', $module));
        $validators[] = new MDATEDMYValidator('expectedReturnDateFinalS', _M('Previso final da devoluo do crach', $module));
        $fields[] = $hctexpectedReturnDate;

        /*
         * Field return date
         */
        // Label
        $returnDateLabel = new MText('returnDateLabel', _M('Data inicial da devoluo', $module).':');
        $returnDateLabel->setWidth(SAGU::getParameter('BASIC', 'FIELD_LABEL_SIZE'));
        // Loan DateInitial
        $returnDateInitial = new MCalendarField('returnDateInitialS', $data->returnDateInitial, '', SAGU::getParameter('BASIC', 'FIELD_DATE_SIZE'));
        $returnDateInitial->setJsHint(_M('Informe a data inicial de devoluo do crach', $module));
        // Loan DateFinal
        $returnDateFinalLabel = new MText('returnDateLabel1', _M('Final', $module).':');
        $returnDateFinal = new MCalendarField('returnDateFinalS', $data->returnDateFinal, '', SAGU::getParameter('BASIC', 'FIELD_DATE_SIZE'));
        $returnDateFinal->setJsHint(_M('Informe a data final de devoluo do crach', $module));
        // Container 1
        $hctreturnDates = new MHContainer('hctreturnDateS', array($returnDateInitial, $returnDateFinalLabel, $returnDateFinal));
        // Container 2
        $hctreturnDate = new MHContainer('hctreturnDateS', array($returnDateLabel, $hctreturnDates));
        $validators[] = new MDATEDMYValidator('returnDateInitialS', _M('Data inicial de devoluo', $module));
        $validators[] = new MDATEDMYValidator('returnDateFinalS', _M('Data final de devoluo', $module));
        $fields[] = $hctreturnDate;

        // Field comments
        $comments = new MMultiLineField('commentsS', $data->comments, _M('Comentrios', $module), null, 5, SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE'));
        $comments->setJsHint(_M('Informe comentrios sobre o emprstimo do crach', $module));
        $fields[] = $comments;

        // Pendente de devolucao
        $devolutionPending = $this->getFormValue('devolutionPendingS', MIOLO::_REQUEST('devolutionPendingS'));
        $fields[] = $cb = new MCheckBox('devolutionPendingS', 'x', _M('Pendentes de aprovao', $module), $devolutionPending, _M('Listar apenas crachs pendentes de devoluo', $module));

        parent::defineFields($fields, $module, 'GrdBadgeLoanSearch', $validators);
    }

    /**
     * Method to gather all information from the form fields
     * and put them on a database compatible object
     */
    public function getTypesData()
    {
        $fields[] = 'loanId';
        $fields[] = 'badgeId';
        $fields[] = 'badgeDescription';
        $fields[] = 'personId';
        $fields[] = 'personName';
        $fields[] = 'loanDateInitial';
        $fields[] = 'loanDateFinal';
        $fields[] = 'expectedReturnDateInitial';
        $fields[] = 'expectedReturnDateFinal';
        $fields[] = 'returnDateInitial';
        $fields[] = 'returnDateFinal';
        $fields[] = 'comments';
        $fields[] = 'devolutionPending';

        foreach ( $fields as $field )
        {
            if ( strlen(MIOLO::_REQUEST($field.'S')) > 0 )
            {
                $data->$field= MIOLO::_REQUEST($field.'S');
            }
        }

        return $data;
    }
}
?>