/**
 * Form to manipulate a turn
 **/
class FrmTurn extends SManagementForm
{
    /**
     * Class constructor
     **/
    public function __construct()
    {
        parent::__construct(new BasTurn(), array('turnId'), 'BusTurn');
    }

    /**
     * Default method to define fields
     **/
    public function defineFields()
    {
        $MIOLO = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();
        $action = MIOLO::getCurrentAction();
        $function = MIOLO::_request('function');

        if ( in_array($function,array(SForm::FUNCTION_UPDATE, SForm::FUNCTION_DELETE)) )
        {
            $pk = $this->getObjectPk();
            $fields[] = new MTextLabel('', $pk->turnId, _M('Cdigo',$module));
            $fields[] = new MHiddenField('turnId', $pk->turnId);

            $data = $this->busObject->getTurn($pk->turnId);
        }

        // Description Field
        $description = new MTextField('description', $this->getFormValue('description', $data->description), _M('Descrio',$module), SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE'));
        $description->setJsHint(_M('Informe a descrio do turno',$module));
        $fields[] = $description;
        $validators[] = new MRequiredValidator('description');

        // Short description Field
        $shortDescription = new MTextField('shortDescription', $this->getFormValue('shortDescription', $data->shortDescription), _M('Abreviatura',$module), 6, _M('Mximo de 3 caracteres',$module));
        $shortDescription->setJsHint(_M('Informe a abreviatura do turno',$module));
        $validators[] = new MMaskValidator('shortDescription','','aaa','required');
        $fields[] = $shortDescription;

        // Begin Hour Field
        $beginHour = new MTextField('beginHour', $this->getFormValue('beginHour', $data->beginHour), _M('Hora de incio',$module), SAGU::getParameter('BASIC', 'FIELD_TIME_SIZE'), 'hh:mm');
        $beginHour->setJsHint(_M('Informe o horrio de incio do turno',$module));
        $validators[] = new MTimeValidator('beginHour','','optional');
        $fields[] = $beginHour;

        // End Hour Field
        $endHour = new MTextField('endHour', $this->getFormValue('endHour', $data->endHour), _M('Hora de fim',$module), SAGU::getParameter('BASIC', 'FIELD_TIME_SIZE'), 'hh:mm');
        $endHour->setJsHint(_M('Informe a hora de trmino do turno',$module));
        $validators[] = new MTimeValidator('endHour','','optional');
        $fields[] = $endHour;

        // Group Field
        $charId = new MTextField('charId', $this->getFormValue('charId', $data->charId), _M('Grupo',$module), 2, _M('Mximo de 1 caracter',$module));
        $charId->setJsHint(_M('Informe o caracter de grupo',$module));
        $validators[] = new MMaskValidator('charId','','a','required');
        $fields[] = $charId;

        parent::defineFields($fields, $validators, $data);
    }
}
