/**
 * Form to search the basLocation table
 */
class FrmLocationTypeSearch extends SSearchForm
{
    /**
     * Class constructor
     */
    public function __construct($data)
    {
        parent::__construct(_M('Localizar', 'basic'), new BasLocationType(), array('locationTypeId'), 'BusLocationType');
    }

    /**
     *  Default method to define fields
     */
    public function defineFields()
    {
        $MIOLO  = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();
        $action = MIOLO::getCurrentAction();

        // Location type Field
        $locationTypeIdLabelS = new Mtext('locationTypeIdLabelS', _M('Cdigo',$module) . ':');
        $locationTypeIdLabelS->setWidth(SAGU::getParameter('BASIC', 'FIELD_CONTAINER_SIZE'));
        $locationTypeIdS = new MTextField('locationTypeIdS', $this->getFormValue('locationTypeIdS', $data->locationTypeId), '', SAGU::getParameter('BASIC', 'FIELD_ID_SIZE'));
        $locationTypeIdS->setJsHint(_M('Informe o cdigo do tipo de logradouro',$module));
        $hctLocationType = new MHContainer('hctLocationType', array($locationTypeIdLabelS, $locationTypeIdS));
        $fields[] = $hctLocationType;
        $locationLabelS = new Mtext('locationLabelS', _M('Descrio',$module) . ':');
        $locationLabelS->setWidth(SAGU::getParameter('BASIC', 'FIELD_CONTAINER_SIZE'));
        $locationNameS = new MTextField('locationNameS', $this->getFormValue('locationNameS', $data->name), '', SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE'));
        $locationNameS->setJsHint(_M('Informe o nome do logradouro',$module));
        $hctLocationName = new MHContainer('hctLocationName', array($locationLabelS, $locationNameS));
        $fields[] = $hctLocationName;
        $validators[] = new MIntegerValidator('locationTypeIdS', _M('Cdigo do tipo de logradouro',$module), 'optional');

        parent::defineFields($fields, $module, 'GrdLocationType', $validators);
    }

    /**
     * Method to gather all information from the form fields
     * and put them on a database compatible object
     **/
    public function getTypesData()
    {
        $data = parent::getTypesData();
        $fieldName = 'locationName';

        if ( strlen(MIOLO::_REQUEST($fieldName)) == 0 )
        {
            $fieldName .= 'S';
        }

        $data->name = MIOLO::_REQUEST($fieldName);

        return $data;
    }
}
