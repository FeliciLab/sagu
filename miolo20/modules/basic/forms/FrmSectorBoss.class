/**
 * Form to manipulate a sectorBoss
 **/
$MIOLO->uses('classes/validators/speriodvalidator.class', 'basic');
class FrmSectorBoss extends SManagementForm
{
    /**
     * Class constructor
     **/
    public function __construct()
    {
        parent::__construct(new BasSectorBoss(), array('bossId', 'sectorId'), 'BusSectorBoss');
    }

    /**
     * Default method to define fields
     **/
    public function defineFields()
    {
        $MIOLO = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();
        $action = MIOLO::getCurrentAction();
        $function = MIOLO::_request('function');

        if ( in_array($function,array(SForm::FUNCTION_DELETE, SForm::FUNCTION_UPDATE)) )
        {
            $pk = $this->getObjectPk();
            $bossId = $pk->bossId;
            $sectorId = $pk->sectorId;
            
            $data = $this->busObject->getSectorBoss($sectorId, $bossId);

            $fields[] = new MTextLabel('', $bossId . ' - ' . $data->sectorBossName, _M('Cdigo do responsvel',$module));
            $fields[] = new MHiddenField('bossId', $bossId);

            $fields[] = new MTextLabel('', $sectorId . ' - ' . $data->sectorDescription, _M('Cdigo do setor',$module));
            $fields[] = new MHiddenField('sectorId', $sectorId);
        }
        else
        {
            // Field Sector
            $sectorLabel = new MText('sectorLabel', _M('Setor',$module).':');
            $sectorLabel->setWidth(SAGU::getParameter('BASIC', 'FIELD_CONTAINER_SIZE'));
            $sectorLabel->setClass('m-caption m-caption-required');
            $sectorId = new MLookupTextField('sectorId', $this->sectorId->value, '', SAGU::getParameter('BASIC', 'FIELD_LOOKUPFIELD_SIZE'), null, null, 'sectorDescription', 'basic', 'Sector', null, null, true);
            $sectorId->setJsHint(_M('Informe o cdigo do setor',$module));
            $validators[] = new MIntegerValidator('sectorId', _M('Setor', $module), 'required');
            $sectorDescription = new MTextField('sectorDescription', $this->sectorDescription->value, '', SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE'));
            $sectorDescription->setJsHint(_M('Descrio do setor',$module));
            $sectorDescription->setReadOnly(true);
            $hctSetor = new MHContainer('hctSetor', array($sectorLabel, $sectorId, $sectorDescription));
            $hctSetor->setShowLabel(true);
            $fields[] = $hctSetor;

            // Field Boss
            $bossLabel = new MText('bossLabel', _M('Responsvel',$module).':');
            $bossLabel->setWidth(SAGU::getParameter('BASIC', 'FIELD_CONTAINER_SIZE'));
            $bossLabel->setClass('m-caption m-caption-required');
            $bossId = new MLookupTextField('bossId', $this->bossId->value, '', SAGU::getParameter('BASIC', 'FIELD_LOOKUPFIELD_SIZE'), null, null, 'bossName', 'basic', 'PhysicalPersonEmployeeAndProfessor', null, null, true);
            $bossId->setJsHint(_M('Informe o cdigo do responsvel pelo setor',$module));
            $validators[] = new MIntegerValidator('bossId', _M('Responsvel', $module), 'required');
            $bossName = new MTextField('bossName', $this->bossName->value, '', SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE'));
            $bossName->setReadOnly(true);
            $bossName->setJsHint(_M('Nome do responsvel',$module));
            $hctBoss = new MHContainer('hctBoss', array($bossLabel, $bossId, $bossName));
            $hctBoss->setShowLabel(true);
            $fields[]   = $hctBoss;
        }
        $email = new MTextField('email', $this->getFormValue('email', $data->email), _M('E-mail',$module), SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE'));
        $email->setJsHint(_M('Informe o e-mail do responsvel pelo setor',$module));
        $validators[] = new MEmailValidator('email','','required');
        $fields[] = $email;

        $level = new MTextField('level', $this->getFormValue('level', $data->level), _M('Nvel',$module), SAGU::getParameter('BASIC', 'FIELD_ID_SIZE'));
        $level->setJsHint(_M('Informe o nvel do responsvel pelo setor',$module));
        $validators[] = new MRegExpValidator('level','','(^-?[0-9][0-9]*$)');
        $fields[] = $level;

        $expirationLevel = new MTextField('expirationLevel', $this->getFormValue('expirationLevel', $data->expirationLevel), _M('Nvel de expirao',$module), SAGU::getParameter('BASIC', 'FIELD_ID_SIZE'), _M('Formato: hh:mm:ss',$module));
        $expirationLevel->setJsHint(_M('Informe o nvel de expirao do responsvel pelo setor',$module));
        $validators['expirationLevel'] = new SPeriodValidator('expirationLevel', _M('Nvel de expirao', $module), 'required', null, true);
        $validators['expirationLevel']->mask = '99:99:99';
        $validators['expirationLevel']->max = 8;
        $fields[] = $expirationLevel;

        $isSendEmailLabel = new MText('isSendEmailLabel', _M('Enviar e-mail',$module) . ':');
        $isSendEmailLabel->setWidth(SAGU::getParameter('BASIC', 'FIELD_LABEL_SIZE'));

        $isSendEmail = $this->GetFormValue('isSendEmail',$data->isSendEmail);
        if (! isset($isSendEmail) )
        {
            //default true
            $isSendEmail = 't';
        }
        $isSendEmail = new MRadioButtonGroup('isSendEmail', '', SAGU::listTrueFalse(1), $isSendEmail, null, 'horizontal');
        $isSendEmail->SetShowLabel(false);

        $hctIsSendEmail = new MHContainer('hctIsSendEmail', array($isSendEmailLabel, $isSendEmail));
        $fields[] = $hctIsSendEmail;

        parent::defineFields($fields, $validators, $data);
    }

    /**
     * Event triggered when user chooses Yes from the Delete prompt dialog
     **/
    public function tbBtnDelete_confirm($sender=NULL)
    {
        $MIOLO  = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();
        $action = MIOLO::getCurrentAction();

        $business = new BusinessBasicBusSectorBoss();
        $ok       = $business->deleteSectorBoss($this->sectorId->value, $this->bossId->value);

        if ( $ok )
        {
            $msg  = SAGU::getParameter('BASIC', 'MSG_RECORD_DELETED');
            $goto = SAGU::getStackBackUrl();
            $goto = strlen($goto)>0 ? $goto : $MIOLO->getActionURL($module, $action);
            $caption = _M('Informao',$module);
            $MIOLO->information($msg, $goto);
        }
        else
        {
            $msg     = _M('Erro executando a operao solicitada.',$module);
            $goto = SAGU::getStackBackUrl();
            $goto = strlen($goto)>0 ? $goto : $MIOLO->getActionURL($module, $action);
            $caption = _M('Erro',$module);
            $MIOLO->error( $msg, $goto, $caption );
        }
    }
}
?>