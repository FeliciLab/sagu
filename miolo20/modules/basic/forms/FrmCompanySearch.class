/**
 * Form to search the basCompany table
 */
class FrmCompanySearch extends SSearchForm
{
    private $module;

    /**
     * Class constructor
     */
    public function __construct($data)
    {
        parent::__construct(_M('Localizar', 'basic'), new BasCompanyConf(), array('companyid'), 'BusCompany');
    }

    /**
     *  Default method to define fields
     */
    public function defineFields()
    {
        $MIOLO  = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();
        $action = MIOLO::getCurrentAction();

        $companyIdS = new MTextField('companyIdS', $this->companyIdS->value, _M('Cdigo', $module), SAGU::getParameter('BASIC', 'FIELD_ID_SIZE'));
        $companyIdS->setJsHint(_M('Informe o cdigo da empresa',$module));
        $fields[] = $companyIdS;
        $validators[] = new MIntegerValidator('companyIdS', '', 'optional');

        $companyNameS = new MTextField('companyNameS', $this->nameS->value, _M('Razo social',$module), SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE'));
        $companyNameS->setJsHint(_M('Informe o nome da empresa',$module));
        $fields[] = $companyNameS;

        $personLabel = new MText('personLabel', _M('Pessoa jurdica',$module) . ':');
        $personLabel->setWidth(SAGU::getParameter('BASIC', 'FIELD_CONTAINER_SIZE'));

        $personIdS = new MLookupTextField('personIdS', $this->personIdS->value, '', SAGU::getParameter('BASIC', 'FIELD_LOOKUPFIELD_SIZE'), null, null, 'personNameS', 'basic', 'LegalPerson', null, null, true);
        $personIdS->setJsHint(_M('Cdigo da pessoa',$module));
        $validators[] = new MIntegerValidator('personIdS',_M('Pessoa jurdica',$module),'optional');

        $personNameS = new MTextField('personNameS', $this->personNameS->value, '', SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE'));
        $personNameS->setReadOnly(true);
        $personNameS->setJsHint(_M('Nome da pessoa',$module));

        $hctPerson = new MHContainer('hctPerson', array($personLabel, $personIdS, $personNameS));
        $hctPerson->setShowLabel(true);
        $fields[]  = $hctPerson;

        parent::defineFields($fields, $module, 'GrdCompanySearch', $validators);
    }

    public function getTypesData()
    {
        $data = parent::getTypesData();
        $fieldName = 'companyName';

        if ( strlen(MIOLO::_REQUEST($fieldName)) == 0 )
        {
            $fieldName .= 'S';
        }

        $data->name = MIOLO::_REQUEST($fieldName);

        return $data;
    }
}
