/**
 * Form to search the basPerson table
 */
class FrmPhysicalPersonSearch extends SSearchForm
{
    /**
     * Class constructor
     */
    public function __construct($data)
    {
        parent::__construct(_M('Localizar', 'basic'), new BasPhysicalPerson(), array('personId'), 'BusPhysicalPerson');
    }

    /**
     *  Default method to define fields
     */
    public function defineFields()
    {
        $MIOLO  = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();
        $action = MIOLO::getCurrentAction();

        // Field person id
        $personLabelS = new MText('personLabelS', _M('Pessoa',$module).':');
        $personLabelS->setWidth(SAGU::getParameter('BASIC', 'FIELD_LABEL_SIZE'));
        $personIdS = new MLookupTextField('personIdS', $this->getFormValue('personIdS',$data->personIdS), '', SAGU::getParameter('BASIC', 'FIELD_ID_SIZE'), null, null, 'personNameS', $module, 'PhysicalPerson', null, null, true);
        $personIdS->setJsHint(_M('Informe o cdigo da pessoa',$module));
        $validators[] = new MIntegerValidator('personIdS', _M('Pessoa',$module), 'optional');

        // Field person name
        $personNameS = new MTextField('personNameS', $this->personNameS->value, '', SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE'));
        $personNameS->setJsHint(_M('Nome da pessoa',$module));
        $hctPerson = new MHContainer('hctPerson', array($personLabelS, $personIdS, $personNameS));
        $hctPerson->setShowLabel(true);
        $fields[]  = $hctPerson;

        parent::defineFields($fields, $module, 'GrdPhysicalPersonSearch', $validators);
    }

    public function getTypesData()
    {
        $fieldName = 'personName';

        if ( strlen(MIOLO::_REQUEST($fieldName)) == 0 )
        {
            $fieldName .= 'S';
        }

        $data->name = MIOLO::_REQUEST($fieldName);

        return $data;
    }
}
