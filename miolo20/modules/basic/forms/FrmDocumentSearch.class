/**
 * Form to search the basDocument table
 */
class FrmDocumentSearch extends SSearchForm
{
    private $home;
    private $module;

    /**
     * Class constructor
     */
    public function __construct($data)
    {
        $module = MIOLO::getCurrentModule();
        parent::__construct(_M('Localizar',$module), new BasDocument(), array('personId','documentTypeId'), 'BusDocument');
    }

    /**
     *  Default method to define fields
     */
    public function defineFields()
    {
        $MIOLO  = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();
        $action = MIOLO::getCurrentAction();

        //Field person
        $personLabelS = new MText('personLabelS', _M('Pessoa',$module).':');
        $personLabelS->setWidth(SAGU::getParameter('BASIC', 'FIELD_CONTAINER_SIZE'));
        $personIdS   = new MLookupTextField('personIdS', $this->personIdS->value, '', SAGU::getParameter('BASIC', 'FIELD_LOOKUPFIELD_SIZE'), null, null, 'personNameS', 'basic', 'Person', null, null, true);
        $personIdS->setJsHint(_M('Informe o cdigo da pessoa',$module));
        $validators[] = new MIntegerValidator('personIdS', _M('Pessoa',$module));
        $personNameS = new MTextField('personNameS', $this->personNameS->value, '', SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE'));
        $personNameS->setJsHint(_M('Nome da pessoa',$module));
        $personNameS->setReadOnly(true);
        $hctPerson = new MHContainer('hctPerson', array($personLabelS, $personIdS, $personNameS));
        $hctPerson->setShowLabel(true);
        $fields[]  = $hctPerson;

        //Field document
        $business      = new BusinessBasicBusDocumentType();
        $documentTypeIdS = new MComboBox('documentTypeIdS', $this->documentTypeIdS->value, _M('Tipo de documento', $module), $business->listDocumentType());
        $documentTypeIdS->setJsHint(_M('Selecione o tipo de documento',$module));
        $fields[]      = $documentTypeIdS;
        $validators[] = new MIntegerValidator('documentTypeIdS');

        //Field content
        $contentS = new MTextField('contentS', $this->contentS->value, _M('Contedo',$module), SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE'));
        $contentS->setJsHint(_M('Informe o contedo',$module));
        $fields[] = $contentS;

        parent::defineFields($fields, $module, 'GrdDocumentSearch', $validators);
    }
}
