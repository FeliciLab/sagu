/**
 * Form to search the basSector table
 */
class FrmSectorSearch extends SSearchForm
{
    /**
     * Class constructor
     */
    public function __construct($data)
    {
        parent::__construct(_M('Localizar', 'basic'), new BasSector(), array('sectorId'), 'BusSector');
    }

    /**
     *  Default method to define fields
     */
    public function defineFields()
    {
        $MIOLO  = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();
        $action = MIOLO::getCurrentAction();

        // Field sector Id
        $sectorIdS = new MTextField('sectorIdS', $this->sectorIdS->value, _M('Código', $module), SAGU::getParameter('BASIC', 'FIELD_ID_SIZE'));
        $sectorIdS->setJsHint(_M('Informe o código do setor',$module));
        $fields[] = $sectorIdS;
        $validators[] = new MIntegerValidator('sectorIdS');
        
        // Field description
        $descriptionS = new MTextField('descriptionS', $this->descriptionS->value, _M('Descrição',$module), SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE'));
        $descriptionS->setJsHint(_M('Informe a descrição do setor',$module));
        $fields[] = $descriptionS;

        // Field email
        $emailS = new MTextField('emailS', $this->emailS->value, _M('E-mail',$module), SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE'));
        $emailS->setJsHint(_M('Informe o e-mail do setor',$module));
        $fields[] = $emailS;

        // Field is coordenation sector
        $isCoordinatorsSectorLabelS = new MText('isCoordinatorsSectorLabelS', _M('É o setor de coordenação de cursos', $module) . '?');
        $isCoordinatorsSectorLabelS->setWidth(SAGU::getParameter('BASIC', 'FIELD_LABEL_SIZE'));
        $isCoordinatorsSectorS = new MRadioButtonGroup('isCoordinatorsSectorS', '', SAGU::listTrueFalseIndifferent(1), null, null, 'horizontal');
        $isCoordinatorsSectorS->SetShowLabel(false);
        $hctIsCoordinatorsSectorS = new MHContainer('hctIsCoordinatorsSectorS', array($isCoordinatorsSectorLabelS, $isCoordinatorsSectorS));
        $fields[] = $hctIsCoordinatorsSectorS;

        parent::defineFields($fields, $module, 'GrdSectorSearch', $validators);
    }
}
