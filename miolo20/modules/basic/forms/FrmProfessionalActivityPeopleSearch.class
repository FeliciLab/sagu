/**
 * Form to search the basPerson table
 */
class FrmProfessionalActivityPeopleSearch extends SSearchForm
{
    /**
     * Class constructor
     */
    public function __construct($data)
    {
        parent::__construct(_M('Localizar', 'basic'), new BasProfessionalActivityPeople(), array('professionalActivityPeopleId'), 'BusProfessionalActivityPeople');
    }

    /**
     *  Default method to define fields
     */
    public function defineFields()
    {
        $MIOLO  = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();
        $action = MIOLO::getCurrentAction();

        //Field professional activity people
        $professionalActivityPeopleIdS = new MTextField('professionalActivityPeopleIdS', $this->professionalActivityPeopleIdS->value, _M('Cdigo', $module), SAGU::getParameter('BASIC', 'FIELD_ID_SIZE'));
        $professionalActivityPeopleIdS->setJsHint(_M('Informe o cdigo da profisso das pessoas',$module));
        $fields[] = $professionalActivityPeopleIdS;
        $validators[] = new MIntegerValidator('professionalActivityPeopleIdS', '', 'optional');

        //Field person
        $personLabelS = new MText('personLabelS', _M('Pessoa',$module).':');
        $personLabelS->setWidth(SAGU::getParameter('BASIC', 'FIELD_CONTAINER_SIZE'));
        $personIdS   = new MLookupTextField('personIdS', $this->getFormValue('personIdS',$data->personIdS), '', SAGU::getParameter('BASIC', 'FIELD_LOOKUPFIELD_SIZE'), null, null, 'personNameS', $module, 'Person', null, null, true);
        $personIdS->setJsHint(_M('Informe o cdigo da pessoa',$module));
        $validators[] = new MIntegerValidator('personIdS', _M('Pessoa',$module));
        $personNameS = new MTextField('personNameS', $this->personNameS->value, '', SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE'));
        $personNameS->setReadOnly(true);
        $personNameS->setJsHint(_M('Nome da pessoa',$module));
        $hctPerson = new MHContainer('hctPerson', array($personLabelS, $personIdS, $personNameS));
        $hctPerson->setShowLabel(true);
        $fields[]  = $hctPerson;

        parent::defineFields($fields, $module, 'GrdProfessionalActivityPeopleSearch', $validators);
    }
}
