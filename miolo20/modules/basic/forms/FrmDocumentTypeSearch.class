/**
 * Form to search the basDocumentType table
 */
class FrmDocumentTypeSearch extends SSearchForm
{
    /**
     * Class constructor
     */
    public function __construct($data)
    {
        parent::__construct(_M('Localizar', 'basic'), new BasDocumentType(), array('documentTypeId'), 'BusDocumentType');
    }

    /**
     * Default method to define fields
     */
    public function defineFields()
    {
        $module = MIOLO::getCurrentModule();

        //Field document type
        $documentTypeIdS = new MTextField('documentTypeIdS', $this->documentTypeIdS->value, _M('Cdigo', $module), SAGU::getParameter('BASIC', 'FIELD_ID_SIZE'));
        $documentTypeIdS->setJsHint(_M('Informe o cdigo do tipo de documento', $module));
        $fields[] = $documentTypeIdS;
        $validators[] = new MIntegerValidator('documentTypeIdS');

        //Field document type name
        $documentTypeNameS = new MTextField('documentTypeNameS', $this->documentTypeNameS->value, _M('Nome', $module), SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE'));
        $documentTypeNameS->setJsHint(_M('Informe o nome do tipo de documento', $module));
        $fields[] = $documentTypeNameS;

        $options = array('P' => _M('Fsica', $module),
        				 'L' => _M('Jurdica', $module));

        $personTypeS = new MSelection('personTypeS', $this->getFormValue('personTypeS', $data->personTypeS), _M('Tipo de pessoa', $module), $options, false, '');
        $personTypeS->setJsHint(_M('Informe o tipo de pessoa', $module));
        $fields[] = $personTypeS;

        parent::defineFields($fields, $module, 'GrdDocumentTypeSearch', $validators);
    }

    /**
     * Method to gather all information from the form fields
     * and put them on a database compatible object
     **/
    public function getTypesData()
    {
        $data = parent::getTypesData();
        $fieldName = 'documentTypeName';

        if ( strlen(MIOLO::_REQUEST($fieldName)) == 0 )
        {
            $fieldName .= 'S';
        }

        $data->name = MIOLO::_REQUEST($fieldName);

        return $data;
    }
}
