/**
 * Form to manipulate a task
 **/
class FrmTask extends SManagementForm
{
    /**
     * Class constructor
     **/
    public function __construct()
    {
        parent::__construct( new BasTask(), array('taskId'), null, null );
        $this->toolbar->disableButton(MToolBar::BUTTON_NEW);
        $this->toolbar->disableButton(MToolBar::BUTTON_DELETE);
        $this->toolbar->disableButton(MToolBar::BUTTON_SEARCH);
    }

    /**
     * Default method to define fields
     **/
    public function defineFields()
    {
        $MIOLO = MIOLO::getInstance();
        $module = SAGU::getFileModule(__FILE__);
        $action = MIOLO::getCurrentAction();
        $function = MIOLO::_request('function');

        //Informaes do usuario
        $login = $MIOLO->getLogin();

        if (  in_array($function, array(SForm::FUNCTION_UPDATE, SForm::FUNCTION_DELETE)) )
        {
            $taskId = MIOLO::_request('taskId');
            $data = new BasTask($taskId);
            $fields[] = new MHiddenField('taskId', $data->taskId);

            $busUser = new BusinessAdminUser();

            $filter = new stdClass();
            $filter->login = $data->assignedTo;
            $searchAssignedTo = $busUser->searchUser($filter);
            $userAssignedTo = $busUser->getUser($searchAssignedTo[0][0]);

            $std = new stdClass();
            $std->taskId = $data->taskId;
            $history = new BasTaskHistory();
            $historyArray = $history->searchGrid($std);

            //Verifica se o usurio possui permisso para edio e se a pendncia pode ser alterada
            if ( $MIOLO->checkAccess('FrmTask', A_UPDATE, false, true) && $data->taskStatus->closeTask == DB_FALSE )
            {
                $readonly = false;
                //Verifica se a pendncia pode ser atribuda ou no
                if ($data->taskStatus->freeForAssigning == DB_FALSE )
                {
                    $freeForAssigning = true;
                }
                else
                {
                    $freeForAssigning = false;
                }
            }
            else
            {
                $readonly = true;
                $freeForAssigning = true;
                $this->toolbar->disableButton(MToolBar::BUTTON_SAVE);
            }
        }
        //Busca pelos status
        $status = new BasTaskStatus();
        $arrayStatus = $status->searchGrid(null);

        //Status
        $status = new MSelection('taskStatusId', $this->getFormValue('taskStatusId', $data->taskStatusId), _M('Status',$module), $arrayStatus);
        $status->setJsHint(_M('Informe o status da pendncia'));
        $status->setReadOnly($readonly);
        $fields[] = $status;
        $validators[] = new MRequiredValidator('taskStatusId', _M('Status', $module));

        // Campo usurio
        $userLabel = new MText( 'assignedToLabel', _M('Atribudo para', $module ) . ':' );
        $userLabel->setWidth( SAGU::getParameter('BASIC', 'FIELD_CONTAINER_SIZE') );
        $loginField = new MLookupTextField( 'assignedTo', $this->getFormValue( 'assignedTo', $data->assignedTo ), '', SAGU::getParameter('BASIC', 'FIELD_LOOKUPFIELD_SIZE'), null, null, 'assignedToId, limbo, assignedToName', 'admin', 'User', null,array('iduser' => 'assignedTo'), true);
        $loginField->setJsHint( _M('Informa o login do usurio', $module ) );
        $userName = new MTextField( 'assignedToName', $this->getFormValue( 'assignedToName', $data->assignedToName ), '', SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE') );
        $userName->setJsHint(_M('Nome do usurio', $module));
        $userName->setReadOnly(true);
        $validators[] = new MIntegerValidator('assignedTo', _M('Atribudo para', $module), 'optional');
        $fields[] = new MHContainer('hctUser', array($userLabel, $loginField, $userName));

        //Detalhes
        $detail = new MMultiLineField('details', $this->getFormValue('details', $data->details), _M('Detalhes',$module), 100, 5, 40);
        $detail->setJsHint(_M('Detalhes da pendncia',$module));
        $detail->setReadOnly(true);
        $fields[] = $detail;

        if ( !$readonly )
        {
            //Observaes
            $detailS = new MMultiLineField('observation', $this->getFormValue('observation', $data->observation), _M('Observaes',$module), 100, 5, 40);
            $detailS->setJsHint(_M('Informe as observaes da alterao',$module));
            $detailS->setReadOnly($readonly);
            $fields[] = $detailS;
            $validators[] = new MRequiredValidator('observation', _M('Observaes', $module));

            $fields[] = $this->getDefaultButtons();
        }

        //Alterado por
        $fields[] = new MHiddenField('updatedBy', $login->id);

        $grid  = $this->getHistoryGrid($filters);
        $grid->setData($historyArray);

        $fields[] = $grid;

        parent::defineFields($fields, $validators, $data);
    }

    /*
     * Obtm a grid do histrico de alteraes
     */
    public function getHistoryGrid($filters)
    {
        $MIOLO = MIOLO::getInstance();
        $module = SAGU::getFileModule(__FILE__);
        $grid = $MIOLO->getUI()->getGrid($module, 'GrdTaskHistorySearch');
        $grid->setTitle(_M('Histrico de alteraes', $module));
        $grid->clearActions();

        return $grid;
    }

    /**
     * Cria os botes padres voltar e salvar
     */
    public function getDefaultButtons()
    {
        $MIOLO = MIOLO::getInstance();
        $module = SAGU::getFileModule(__FILE__);
        $action = MIOLO::getCurrentAction();

        $btnBack = new MButton('tbBtnBack', _M('Voltar', $module), $MIOLO->getActionURL($module, $action, null ));
        $btnSave = new MButton('tbBtnSave', _M('Salvar', $module));
        $fields[] = new MHContainer('htcButons', array($btnBack, $btnSave));

        return $fields;
    }

    /**
     * Salva a pendncia
     */
    public function tbBtnSave_click()
    {
        $MIOLO = MIOLO::getInstance();
        $module = SAGU::getFileModule(__FILE__);
        $action = MIOLO::getCurrentAction();
        $function = MIOLO::_request('function');

        if( $function == SForm::FUNCTION_UPDATE )
        {
            $data = $this->getTypesData();

            try {

                $task = new BasTask($data->taskId);
                $task->taskStatusId = $data->taskStatusId;
                $task->assignedTo = $data->assignedTo;
                $task->observation = $data->observation;
                $task->updatedBy = $data->updatedBy;

                if ( $task->save() )
                {
                    $msg = SAGU::getParameter('BASIC', 'MSG_RECORD_UPDATED');
                    $MIOLO->information($msg, $MIOLO->getActionURL('sagu2', 'main'));
                }
            }
            catch( Exception $e)
            {
                $this->addError(_M('No foi possvel alterar a pendncia. ', $module) . $e->getMessage());
            }
        }
    }

    public function getTypesData()
    {
        $data = new stdClass();
        $data->taskId = MIOLO::_REQUEST('taskId');
        $data->assignedTo = MIOLO::_REQUEST('assignedTo');
        $data->taskStatusId = MIOLO::_REQUEST('taskStatusId');
        $data->observation = MIOLO::_REQUEST('observation');
        $data->updatedBy = MIOLO::_REQUEST('updatedBy');

        return $data;
    }
}
