/**
 * Form to search the basProfessionalActivityAgent table
 */
class FrmProfessionalActivityAgentSearch extends SSearchForm
{
    /**
     * Class constructor
     */
    public function __construct($data)
    {
        parent::__construct(_M('Localizar', 'basic'), new BasProfessionalActivityAgent(), array('professionalActivityAgentId'), 'BusProfessionalActivityAgent');
    }

    /**
     *  Default method to define fields
     */
    public function defineFields()
    {
        $MIOLO  = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();
        $action = MIOLO::getCurrentAction();

        $professionalActivityAgentIdS = new MTextField('professionalActivityAgentIdS', $this->professionalActivityAgentIdS->value, _M('Cdigo',$module), 10);
        $professionalActivityAgentIdS->setJsHint(_M('Informe o cdigo do intermediador da atividade profissional',$module));
        $fields[] = $professionalActivityAgentIdS;
        $validators[] = new MIntegerValidator('professionalActivityAgentIdS');

        $descriptionS = new MTextField('descriptionS', $this->descriptionS->value, _M('Descrio',$module), SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE'));
        $descriptionS->setJsHint(_M('Informe a descrio do intermediador da atividade profissional',$module));
        $fields[] = $descriptionS;

        parent::defineFields($fields, $module, 'GrdProfessionalActivityAgentSearch', $validators);
    }
}
