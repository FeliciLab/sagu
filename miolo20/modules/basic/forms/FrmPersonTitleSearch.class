/**
 * Form to search the basPersonTitle table
 */
class FrmPersonTitleSearch extends SSearchForm
{
    private $home;
    private $module;

    /**
     * Class constructor
     */
    public function __construct($data)
    {
        $module = MIOLO::getCurrentModule();
        parent::__construct(_M('Localizar', $module), new BasPersonTitle(), array('personTitleId'), 'BusPersonTitle');
    }

    /**
     * Default method to define fields
     */
    public function defineFields()
    {
        $module = MIOLO::getCurrentModule();

        //Field person title
        $personTitleIdS = new MTextField('personTitleIdS', $this->personTitleIdS->value, _M('Cdigo', $module), SAGU::getParameter('BASIC', 'FIELD_ID_SIZE'));
        $personTitleIdS->setJsHint(_M('Informe o cdigo do pronome de tratamento', $module));
        $fields[] = $personTitleIdS;
        $validators[] = new MIntegerValidator('personTitleIdS');

        //Field person title description
        $descriptionS = new MTextField('descriptionS', $this->descriptionS->value, _M('Descrio', $module), SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE'));
        $descriptionS->setJsHint(_M('Informe a descrio do pronome de tratamento', $module));
        $fields[] = $descriptionS;
        
        parent::defineFields($fields, $module, 'GrdPersonTitleSearch', $validators);
    }
}
