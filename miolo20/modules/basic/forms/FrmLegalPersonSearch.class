class FrmLegalPersonSearch extends SSearchForm
{
    /**
     * Class constructor
     */
    public function __construct($data)
    {
        parent::__construct(_M('Localizar', 'basic'), new BasLegalPerson(), array('personId'), 'BusLegalPerson');
    }

    /**
     *  Default method to define fields
     */
    public function defineFields()
    {
        $MIOLO = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();
        $action = MIOLO::getCurrentAction();

        $personIdS = new MTextField('personIdS', $this->getFormValue('personIdS',$data->personIdS), _M('Cdigo',$module), SAGU::getParameter('BASIC', 'FIELD_ID_SIZE'));
        $personIdS->setJsHint(_M('Informe o cdigo da pessoa',$module));
        $fields[] = $personIdS;
        $validators[] = new MIntegerValidator('personIdS');

        $name = new MTextField('personNameS', $this->getFormValue('personNameS',$data->nameS), _M('Nome',$module), SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE'));
        $name->setJsHint(_M('Informe o nome da pessoa jurdica',$module));
        $fields[] = $name;

        $fakeNameS = new MTextField('fakeNameS', $this->getFormValue('fakeNameS',$data->fakeNameS), _M('Nome fantasia',$module), SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE'));
        $fakeNameS->setJsHint(_M('Informe o nome de fantasia da pessoa jurdica',$module));
        $fields[] = $fakeNameS;

        $phoneS = new MTextField('phoneS', $this->getFormValue('phoneS',$data->phoneS), _M('Fone',$module), 20);
        $phoneS->setJsHint(_M('Informe o nmero do telefone',$module));
        $fields[] = $phoneS;

        $faxS = new MTextField('faxS', $this->getFormValue('faxS',$data->faxS), _M('Fax',$module), 20);
        $faxS->setJsHint(_M('Informe o nmero do fax',$module));
        $fields[] = $faxS;

        $cnpjS = new MTextField('cnpjS', $this->getFormValue('cnpjS',$data->cnpjS), _M('CNPJ',$module), 20);
        $cnpjS->setJsHint(_M('Informe o CNPJ',$module));
        $validators[] = new MCnpjValidator('cnpjS');
        $fields[] = $cnpjS;

        $stateRegistrationS = new MTextField('stateRegistrationS', $this->getFormValue('stateRegistrationS',$data->stateRegistrationS), _M('Inscrio estadual',$module), 20);
        $stateRegistrationS->setJsHint(_M('Informe a inscrio estadual',$module));
        $fields[] = $stateRegistrationS;

        $cityRegistrationS = new MTextField('cityRegistrationS', $this->getFormValue('cityRegistrationS',$data->cityRegistrationS), _M('Inscrio municipal',$module), 20);
        $cityRegistrationS->setJsHint(_M('Informe a inscrio municipal',$module));
        $fields[] = $cityRegistrationS;

        $business = new BusinessBasicBusLegalPersonType();
        $fields[] = $legalPersonType = new MComboBox('legalPersonTypeIdS', $this->getFormValue('legalPersonTypeIdS', $data->legalPersonTypeIdS), _M('Tipo de pessoa jurdica',$module), $business->listLegalPersonType());
        $legalPersonType->setJsHint(_M('Informe o tipo de pessoa jurdica',$module));
        $validators[] = new MIntegerValidator('legalPersonTypeIdS');

        $fields[] = $isPublic = new MSelection('isPublicS', $this->getFormValue('isPublicS', $data->isPublicS), _M('Instituio pblica',$module), SAGU::listYesNo(0));
        $isPublic->setJsHint(_M('Indica se a instituio  pblica ou privada',$module));

        parent::defineFields($fields, $module, 'GrdLegalPersonSearch', $validators);
    }

    public function getTypesData()
    {
        $data = parent::getTypesData();
        $fieldName = 'personName';

        if ( strlen(MIOLO::_REQUEST($fieldName)) == 0 )
        {
            $fieldName .= 'S';
        }

        $data->name = MIOLO::_REQUEST($fieldName);

        return $data;
    }
}
