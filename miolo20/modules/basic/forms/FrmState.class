/**
 * Form to manipulate a state
 **/
class FrmState extends SManagementForm
{
    /**
     * Class constructor
     **/
    public function __construct()
    {
        parent::__construct(new BasState(), array('stateId', 'countryId'), 'BusState');
    }

    /**
     * Default method to define fields
     **/
    public function defineFields()
    {
        $MIOLO = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();
        $action = MIOLO::getCurrentAction();
        $function = MIOLO::_request('function');

        if ( in_array($function,array(SForm::FUNCTION_DELETE, SForm::FUNCTION_UPDATE)) )
        {
            $id = $this->getObjectPk();
            $stateId = $id->stateId;
            $countryId = $id->countryId;

            $data = $this->busObject->getState($stateId, $countryId);

            $fields[] = new MTextLabel('stateId', $stateId . ' - ' . $data->name, _M('UF',$module));
            $fields[] = new MHiddenField('stateId', $stateId);
            $fields[] = new MTextLabel('countryId', $countryId . ' - ' . $data->countryName, _M('Cdigo do pas',$module));
            $fields[] = new MHiddenField('countryId', $countryId);

        }
        else
        {
            $fields[] = $stateId = new MTextField('stateId', $this->getFormValue('stateId', $data->stateId), _M('UF',$module), 4, _M('@1 carateres', $module, 2));
            $stateId->setJsHint(_M('Informe o estado',$module));
            $validators[] = new MRegExpValidator('stateId', null, "^[A-Za-z0-9]{2}$", 'required');
            $business = new BusinessBasicBusCountry();

            $countryId = $this->getFormValue('countryId', $data->countryId) ? $this->getFormValue('countryId', $data->countryId) : SAGU::getParameter('BASIC', 'DEFAULT_COUNTRY_ID');
            $fields[] = $countryId = new MComboBox('countryId', $countryId, _M('Pas',$module), $business->listCountry());
            $countryId->setJsHint(_M('Informe o cdigo do pas ao qual o estado pertence',$module));
            $validators[] = new MRequiredValidator('countryId');
        }

        $data->stateName = $this->getFormValue('stateName', $data->name);
        $fields[] = $stateName = new MTextField('stateName', $data->stateName, _M('Nome',$module), SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE'));
        $stateName->setJsHint(_M('Informe o nome do estado',$module));
        $validators[] = new MRequiredValidator('stateName');
        
        $fields[] = $zipCode = new MTextField('ibgeId', $this->getFormValue('ibgeId', $data->ibgeId), _M('Cdigo IBGE',$module), SAGU::getParameter('BASIC', 'FIELD_ZIPCODE_SIZE'), _M("Ex.: 1234567", $module));
        $zipCode->setJsHint(_M('Informe o cdigo IBGE.', $module));
        $validators[] = new MIntegerValidator('ibgeId');

        parent::defineFields($fields, $validators, $data);
    }

    /**
     * Method to gather all information from the form fields
     * and put them on a database compatible object
     **/
    public function getTypesData()
    {
        $data = parent::getTypesData();
        $fieldName = 'stateName';

        if ( strlen(MIOLO::_REQUEST($fieldName)) == 0 )
        {
            $fieldName .= 'S';
        }

        $data->name = MIOLO::_REQUEST($fieldName);

        return $data;
    }
}
