/**
 * Form to manipulate a personTitle
 **/
class FrmBadgeRegisterSearch extends SSearchForm
{
    /**
     * Class constructor
     **/
    public function __construct()
    {
        parent::__construct(null, new BasBadge(), array('badgeId'));
    }

    /**
     * Default method to define fields
     **/
    public function defineFields()
    {
        $MIOLO = MIOLO::getInstance();
        $module = SAGU::getFileModule(__FILE__);

        // Field badge id
        $badgeId = new MTextField('badgeIdS', $data->badgeId, _M('Cdigo', $module), SAGU::getParameter('BASIC', 'FIELD_ID_SIZE'));
        $badgeId->setJsHint(_M('Informe o cdigo do crach.', $module));
        $fields[] = $badgeId;

        // Field badge status description
        $description = new MTextField('descriptionS', $data->description, _M('Descrio', $module), SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE'));
        $description->setJsHint(_M('Informe a descrio do crach.', $module));
        $fields[] = $description;

        // Field badge status
        $badgeStatus = new MSelection('badgeStatusIdS', $data->badgeStatusId, _M('Status do crach', $module), BasBadgeStatus::listBadgeStatus($filters));
        $badgeStatus->setJsHint(_M('Informe o status do crach.', $module));
        $fields[] = $badgeStatus;

        parent::defineFields($fields, $module, 'GrdBadgeRegisterSearch');
    }

    /**
     * Method to gather all information from the form fields
     * and put them on a database compatible object
     */
    public function getTypesData()
    {
        $fields[] = 'badgeId';
        $fields[] = 'description';
        $fields[] = 'badgeStatusId';

        foreach ( $fields as $field )
        {
            if ( strlen(MIOLO::_REQUEST($field.'S')) > 0 )
            {
                $data->$field= MIOLO::_REQUEST($field.'S');
            }
        }

        return $data;
    }
}
