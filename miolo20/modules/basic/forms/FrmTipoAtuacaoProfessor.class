class FrmTipoAtuacaoProfessor extends SManagementForm
{
    /**
     * Class constructor
     **/
    public function __construct()
    {
        parent::__construct(new BasTipoAtuacaoProfessor(), array('tipoatuacaoprofessorid') );
    }

    /**
     * Default method to define fields
     **/
    public function defineFields()
    {
        $MIOLO = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();
        
        $fields[] = $desc = new MTextField('bastipoatuacaoprofessor.descricao', null, _M('Descrição',$module));
        $desc->hint = _M('Ex.: Ensino em curso de graduação');
        
        $fields[] = $detalhes = new sMultiLineField('bastipoatuacaoprofessor.detalhes', array(
            'label' => _M('Mais informações'),
        ));
        $detalhes->jsHint = _M('O texto informado nesse campo servirá de auxílio no cadastro de professor');

        parent::defineFields($fields, $validators);
    }
}
