/**
 * Form to manipulate a professionalActivityAgent
 **/
class FrmProfessionalActivityAgent extends SManagementForm
{

    /**
     * Class constructor
     **/
    public function __construct()
    {
        parent::__construct(new BasProfessionalActivityAgent(), array('professionalActivityAgentId'), 'BusProfessionalActivityAgent');
    }

    /**
     * Default method to define fields
     **/
    public function defineFields()
    {
        $MIOLO = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();
        $action = MIOLO::getCurrentAction();
        $function = MIOLO::_request('function');

        if ( in_array($function,array(SForm::FUNCTION_UPDATE, SForm::FUNCTION_DELETE)) )
        {
            $pk = $this->getObjectPk();
            $fields[] = new MTextLabel('', $pk->professionalActivityAgentId, _M('Cdigo',$module));
            $fields[] = new MHiddenField('professionalActivityAgentId', $pk->professionalActivityAgentId);

            $data = $this->busObject->getProfessionalActivityAgent($pk->professionalActivityAgentId);
        }

        $description = new MTextField('description', $this->getFormValue('description', $data->description), _M('Descrio',$module), SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE'));
        $description->setJsHint(_M('Informe a descrio do intermediador da atividade profissional',$module));
        $validators[] = new MRequiredValidator('description');
        $fields[] = $description;

        parent::defineFields($fields, $validators, $data);
    }
}
