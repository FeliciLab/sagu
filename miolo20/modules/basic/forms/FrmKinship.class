class FrmKinship extends SManagementForm
{
    public function __construct()
    {
        parent::__construct(new BasKinship(), array('kinshipId'), 'BusKinship');
    }

    public function defineFields()
    {
        $MIOLO = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();
        $function = MIOLO::_REQUEST('function');
        $data = new stdClass();

        if ( in_array($function, array(SForm::FUNCTION_UPDATE, SForm::FUNCTION_DELETE)) )
        {
            $pk = $this->getObjectPk();

            $fields[] = new MTextLabel('kinshipIdLabel', $pk->kinshipId, _M('Cdigo', $module));
            $fields[] = new MHiddenField('kinshipId', $pk->kinshipId);

            $data = $this->busObject->getKinship($pk->kinshipId);
        }

        $fields[] = $description = new MTextField('description', $this->getFormValue('description', $data->description), _M('Descrio', $module), SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE'));
        $description->setJsHint(_M('Informe a descrio do parentesco.', $module));

        $requiredLabel = new MText('requiredLabel', _M('Requerido quando estiver cadastrando uma pessoa',$module) . ':');
        $requiredLabel->setWidth(SAGU::getParameter('BASIC', 'FIELD_CONTAINER_SIZE'));
        $required = new MRadioButtonGroup('required', '', SAGU::listTrueFalse(1), $this->getFormValue('required', $data->required), '', 'horizontal');
        $hctRequired = new MHContainer('hctRequired', array($requiredLabel, $required));
        $hctRequired->setShowLabel(false);
        $fields[] = $hctRequired;

        $valids['description'] = new MRequiredValidator('description');

        parent::defineFields($fields, $valids, $data);
    }
}
