/**
 * Form to search the basState table
 */
class FrmStateSearch extends SSearchForm
{
    /**
     * Class constructor
     */
    public function __construct($data)
    {
        parent::__construct(_M('Localizar', 'basic'), new BasState(), array('StateId'), 'BusState');
    }

    /**
     *  Default method to define fields
     */
    public function defineFields()
    {
        $MIOLO  = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();
        $action = MIOLO::getCurrentAction();

        $stateIdS = new MTextField('stateIdS', $this->stateIdS->value, _M('UF',$module), SAGU::getParameter('BASIC', 'FIELD_ID_SIZE'));
        $stateIdS->setJsHint(_M('Informe o estado',$module));
        $fields[] = $stateIdS;

        $stateNameS = new MTextField('stateNameS', $this->nameS->value, _M('Nome',$module), SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE'));
        $stateNameS->setJsHint(_M('Informe o nome do estado',$module));
        $fields[] = $stateNameS;

        $business = new BusinessBasicBusCountry();
        $countryIdS = new MComboBox('countryIdS', $this->countryIdS->value, _M('País',$module), $business->listCountry());
        $countryIdS->setJsHint(_M('Informe o código do país ao qual o estado pertence',$module));
        $fields[] = $countryIdS;

        parent::defineFields($fields, $module, 'GrdStateSearch', $validators);
    }

    public function getTypesData()
    {
        $data = parent::getTypesData();
        $fieldName = 'stateName';

        if ( strlen(MIOLO::_REQUEST($fieldName)) == 0 )
        {
            $fieldName .= 'S';
        }

        $data->name = MIOLO::_REQUEST($fieldName);

        return $data;
    }
}
