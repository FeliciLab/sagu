class FrmNeighborhood extends SManagementForm
{
    public function __construct()
    {
        parent::__construct(new BasNeighborhood(), array('neighborhoodId'), 'BusNeighborhood');
    }

    public function defineFields()
    {
        $MIOLO  = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();
        $action = MIOLO::getCurrentAction();
        $function = MIOLO::_request('function');
        $data = new stdClass();

        if ( in_array($function, array(SForm::FUNCTION_UPDATE, SForm::FUNCTION_DELETE)) )
        {
            $pk = $this->getObjectPk();

            $fields[]  = new MTextLabel('', $this->getFormValue('neighborhoodId'), _M('Cdigo',$module));
            $fields[]  = new MHiddenField('neighborhoodId', $this->getFormValue('neighborhoodId'));

            $data = $this->busObject->getNeighborhood($pk->neighborhoodId);
        }

        $fields[] = $neighborhoodName = new MTextField('neighborhoodName', $data->name, _M('Descrio', $module), SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE'));
        $neighborhoodName->setJsHint(_M('Informe o nome do bairro',$module));
        $validators[] = new MRequiredValidator('neighborhoodName');

        parent::defineFields($fields, $validators, $data);
    }

    public function getTypesData()
    {
        $data = parent::getTypesData();
        $fieldName = 'neighborhoodName';

        if ( strlen(MIOLO::_REQUEST($fieldName)) == 0 )
        {
            $fieldName .= 'S';
        }

        $data->name = MIOLO::_REQUEST($fieldName);

        return $data;
    }
}
