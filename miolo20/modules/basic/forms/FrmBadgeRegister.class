/**
 * Form to manipulate a personTitle
 **/
class FrmBadgeRegister extends SManagementForm
{
    /**
     * Class constructor
     **/
    public function __construct()
    {
        parent::__construct(new BasBadge(), array('badgeId'), null);
    }

    /**
     * Default method to define fields
     **/
    public function defineFields()
    {
        $MIOLO = MIOLO::getInstance();
        $module = SAGU::getFileModule($file);
        $function = MIOLO::_request('function');

        if ( in_array($function, array(SForm::FUNCTION_UPDATE, SForm::FUNCTION_DELETE)) )
        {
            $badgeId = MIOLO::_request('badgeId');

            // Field badge status id
            $fields[] = new MTextLabel('badgeId', $badgeId, _M('Cdigo', $module));
            $fields[] = new MHiddenField('badgeId', $badgeId);

            $data = new BasBadge($badgeId);
        }
        elseif ( $function == SForm::FUNCTION_INSERT )
        {
            // Field badge id
            $badgeId = new MTextField('badgeId', $data->badgeId, _M('Cdigo', $module), SAGU::getParameter('BASIC', 'FIELD_ID_SIZE'), _M('Mximo 15 caracteres.', $module));
            $badgeId->setJsHint(_M('Informe o cdigo do crach.', $module));
            $validators[] = new MRequiredValidator('badgeId', _M('Cdigo', $module), 15);
            $fields[] = $badgeId;
        }

        // Field badge status description
        $description = new MTextField('description', $data->description, _M('Descrio', $module), SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE'));
        $description->setJsHint(_M('Informe a descrio do crach.', $module));
        $validators[] = new MRequiredValidator('description', _M('Descrio', $module));
        $fields[] = $description;

        // Field badge status
        $badgeStatus = new MComboBox('badgeStatusId', $data->badgeStatusId, _M('Status do crach', $module), BasBadgeStatus::listBadgeStatus($filters));
        $badgeStatus->setJsHint(_M('Informe o status do crach.', $module));
        $validators[] = new MRequiredValidator('badgeStatusId', _M('Status do crach', $module));
        $fields[] = $badgeStatus;

        parent::defineFields($fields, $validators, $data);
    }

    /**
     * Funo que salva os dados
     *
     * @param $sender
     */
    public function tbBtnSave_click($sender = NULL)
    {
        $MIOLO = MIOLO::getInstance();
        $module = SAGU::getFileModule(__FILE__);
        $function = MIOLO::_REQUEST('function');
        $action = MIOLO::getCurrentAction();
        $msg = ($function == SForm::FUNCTION_UPDATE) ? SAGU::getParameter('BASIC', 'MSG_RECORD_UPDATED') : SAGU::getParameter('BASIC', 'MSG_RECORD_INSERTED');

        try
        {
            $data = $this->getTypesData();

            // Verifica se o ID j existe na base
            if ( $function == SForm::FUNCTION_INSERT )
            {
                $filters = new stdClass();
                $filters->badgeId = $data->badgeId;
                if ( count(BasBadge::searchGrid($filters)) > 0 )
                {
                    throw new Exception(_M('Este cdigo j existe na base de dados.', $module));
                }
            }

            // New database transaction
            $badge = new BasBadge();
            $badge->badgeId = $data->badgeId;
            $badge->description = $data->description;
            $badge->badgeStatusId = $data->badgeStatusId;

            // Salva os dados na base
            SDatabase::beginTransaction();
            $badge->save();
            SDatabase::commit();

            if ( $function == SForm::FUNCTION_UPDATE )
            {
                $caption = _M('Informao', $module);
                $MIOLO->information($msg, $MIOLO->getActionURL($module, $action, null, $opts));
            }
            else
            {
                unset($opts);
                $goto = SAGU::getStackBackUrl();
                $goto = strlen($goto) > 0 ? $goto : $MIOLO->getActionURL($module, $action, null, $opts);
                $opts = array('function' => SForm::FUNCTION_INSERT);

                $gotoYes = $MIOLO->getActionURL($module, $action, null, $opts);
                $caption = _M('Questo', $module);
                $MIOLO->question($msg, $gotoYes, $goto);
            }
        }
        catch ( Exception $e )
        {
            $this->AddError($e->getMessage());
        }
    }

    /**
     * Funo que deleta um registro
     *
     * @param $sender
     */
    public function tbBtnDelete_confirm($sender = NULL)
    {
        $MIOLO = MIOLO::getInstance();
        $module = SAGU::getFileModule(__FILE__);
        $action = MIOLO::getCurrentAction();

        $badge = new BasBadge(MIOLO::_REQUEST('badgeId'));

        $ok = $badge->delete();

        // Mensagem de sucesso ou falha
        if ( $ok )
        {
            $msg = SAGU::getParameter('BASIC', 'MSG_RECORD_DELETED');
            $goto = SAGU::getStackBackUrl();
            $goto = strlen($goto) > 0 ? $goto : $MIOLO->getActionURL($module, $action);
            $caption = _M('Informao', $module);
            $MIOLO->information($msg, $goto);
        }
        else
        {
            $msg = _M('Erro executando a operao solicitada. No foi possvel fazer a excluso do registro.', $module);
            $goto = SAGU::getStackBackUrl();
            $goto = strlen($goto) > 0 ? $goto : $MIOLO->getActionURL($module, $action);
            $caption = _M('Erro', $module);
            $MIOLO->error($msg, $goto, $caption);
        }
    }

    /**
     * Method to gather all information from the form fields
     * and put them on a database compatible object
     */
    public function getTypesData()
    {
        $fields[] = 'badgeId';
        $fields[] = 'description';
        $fields[] = 'badgeStatusId';

        foreach ( $fields as $field )
        {
            if ( strlen(MIOLO::_REQUEST($field)) > 0 )
            {
                $data->$field= MIOLO::_REQUEST($field);
            }
        }

        return $data;
    }
}
