class SSystemModule
{
    /**
     *
     * @var string
     */
    private $name;
    
    /**
     *
     * @var string
     */
    private $label;
    
    /**
     *
     * @var string
     */
    private $installParameter;
    
    /**
     *
     * @var boolean
     */
    private $hasInstalled;
    
    /**
     * Diretorio de onde modulo esta instalado no sistema
     * 
     * @var string
     */
    private $systemPath;
    
    /**
     * Database prefix module table
     * 
     * @var string
     */
    private $modulePrefix;
    
    
    public function __construct()
    {
    }
    
    public function getName()
    {
        return $this->name;
    }

    public function setName($name)
    {
        $this->name = $name;
    }

    public function getLabel()
    {
        return $this->label;
    }

    public function setLabel($label)
    {
        $this->label = $label;
    }

    /**
     * Obtem nome do parametro basConfig que indica se modulo esta instalado
     *
     * @return string
     */
    public function getInstallParameter()
    {
        return $this->installParameter;
    }

    public function setInstallParameter($installParameter)
    {
        $this->installParameter = $installParameter;
    }

    /**
     * Retorna se modulo esta instalado
     *
     * @return boolean
     */
    public function getHasInstalled()
    {
        if ( !isset($this->hasInstalled) )
        {
            $this->hasInstalled = (strlen($this->installParameter) > 0) ? SAGU::getParameter('BASIC', $this->installParameter) == 'YES' : true;
        }
        
        return $this->hasInstalled;
    }

    public function setHasInstalled($hasInstalled)
    {
        $this->hasInstalled = $hasInstalled;
    }
    
    /**
     * Obtem diretorio do modulo no sistema
     *
     * @return string
     */
    public function getSystemPath()
    {
        if ( !isset($this->systemPath) )
        {
            $MIOLO = MIOLO::getInstance();
            $this->systemPath = $MIOLO->getConf('home.modules') . '/' . $this->getName();
        }
        
        return $this->systemPath;
    }

    public function setSystemPath($systemPath)
    {
        $this->systemPath = $systemPath;
    }
    
    
    /**
     * Busca arquivos do modulo
     *  
     * @return array
     */
    public function findFiles()
    {
        return SAGU::findFiles($this->getSystemPath());
    }
    
    public function getModulePrefix()
    {
        return $this->modulePrefix;
    }

    public function setModulePrefix($modulePrefix)
    {
        $this->modulePrefix = $modulePrefix;
    }
}
