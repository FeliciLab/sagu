class SStepInfo
{
    public $formName;
    public $title;
    public $module;
    
    /**
     * Ativa edicao em abas deste passo
     * 
     * @var boolean 
     */
    private $enableTabEdit = true;

    public function __construct($formName, $title, $module = null)
    {
        $this->formName = $formName;
        $this->title = $title;
        $this->module = $module ? $module : MIOLO::getCurrentModule();
    }
    
    
    public function getEnableTabEdit()
    {
        return $this->enableTabEdit;
    }

    public function setEnableTabEdit($enableTabEdit)
    {
        $this->enableTabEdit = $enableTabEdit;
    }
}
