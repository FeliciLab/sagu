class sMultiCentro
{
    /**
     * @return array
     */
    public static function obterTabelas()
    {
        $tables = sMultiUnidade::obterTabelas();;
        
        $tables[] = 'acpCurso'; // Ticket #39333
        
        return $tables;
    }
    
    public static function executarSqlsManutencao()
    {
        self::insereColunas();
        self::criarTriggers();
    }
    
    public static function insereColunas()
    {
        foreach ( self::obterTabelas() as $table )
        {
            if ( !SDatabase::existeColunaDaTabela(null, $table, "centerid") )
            {
                SDatabase::execute("ALTER TABLE {$table} ADD centerid INT REFERENCES acdcenter(centerid);");
            }
        }
    }
    
    public static function criarTriggers()
    {
        foreach ( self::obterTabelas() as $tabela )
        {
            SDatabase::execute("DROP TRIGGER IF EXISTS trg_centro_{$tabela} ON {$tabela};");
            SDatabase::execute("CREATE TRIGGER trg_centro_{$tabela} BEFORE INSERT OR UPDATE OR DELETE ON {$tabela} FOR EACH ROW EXECUTE PROCEDURE verificarcentro();");
        }
    }
    
    /**
     * @return array
     */
    public static function obterCentrosPessoa($login = null)
    {
        $MIOLO = MIOLO::getInstance();
        
        if ( !$login )
        {
            $login = $MIOLO->getLogin()->id;
        }
        
        static $centros = array();
        
        if ( !isset($centros[$login]) )
        {
            $centros[$login] = BasPersonEmployeeCenter::obterCentrosPessoa($login);
        }
        
        return $centros[$login];
    }
    
    /**
     * Tarefa agendada multicentro.
     * 
     * Altera os campos centerId nas tabelas, de acordo com curso.
     * 
     *
     * @return boolean
     */
    public static function sincronizarCentros(BasSystemTask $bst = null)
    {
        $ok = true;
        $ok = $ok && BusinessAcademicBusCourse::sincronizaCentro();
        $ok = $ok && AcpCurso::sincronizaCentro();
        
        return $ok;
    }

    /**
     * Lista os centros.
     * 
     * @param (boolean) $apenasCentrosDaPessoa - Retorna apenas os centros
     * que a pessoa logada pode selecionar.
     */
    public static function listarCentros($apenasCentrosDaPessoa = false)
    {
        $busCenter = new BusinessAcademicBusCenter();
        
        // Obtem centros
        $centros = array();
        foreach ( $busCenter->listCenter() as $centro )
        {
            $centros[$centro[0]] = $centro[1];
        }
        
        // Exclui centros que a pessoa logada no pode mexer
        if ( $apenasCentrosDaPessoa )
        {
            $centrosAux = $centros;
            $centros = array();
            foreach ( self::obterCentrosPessoa() as $centro )
            {
                $centros[$centro] = $centrosAux[$centro];
            }
        }
        
        return $centros;
    }
}
