class sCSVException extends Exception
{
    /**
     * Coluna em que houve o erro.
     *
     * @var string
     */
    private $coluna;

    public function __construct($mensagem, $tipo = null, $coluna = null)
    {
        parent::__construct($mensagem, $tipo);
        
        $this->setColuna($coluna);
    }
    
    public function getTipo()
    {
        return $this->getCode();
    }
    
    public function getColuna()
    {
        return $this->coluna;
    }

    public function setColuna($coluna)
    {
        $this->coluna = $coluna;
    }
}
