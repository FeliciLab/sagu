/**
 * @access public
 * @package Basic
 */
class BasTaskHistory extends SType
{
    /**
     * Table fields
     */

    /**
     * @var (integer) Identificador nico do histrico de pendncias
     */
    private $taskHistoryId;
    /**
     * @var (integer) Cdigo da pendncia
     */
    private $taskId;
    /**
     * @var (object) Objeto da pendncia
     */
    private $task;
    /**
     * @var (string) Usurio que efetuou a alterao
     */
    private $updatedBy;
    /**
     * @var (integer) Status da pendncia
     */
    private $taskStatusId;
    /**
     * @var (date) Data da alterao
     */
    private $transitionDate;
    /**
     * @var (string) Observaes da alterao
     */
    private $obs;

    /**
     * Construtor da classe
     *
     * @param (integer) $taskHistoryId Chave primria da tabela
     */
    public function __construct($taskHistoryId = null)
    {
        if ( (strlen($taskHistoryId) > 0) )
        {
            $this->taskHistoryId = $taskHistoryId;
            $this->populate();
        }
    }

    /**
     * Data logic
     */
    public function __get($name)
    {
        return $this->$name;
    }

    public function __set($name, $value)
    {
        $this->$name = $value;
    }

    /**
     * Private methods
     */

    /**
     * Chamado pelo construtor, quando este recebe os dados de chave primria
     */
    private function populate()
    {
        $cols = array( 'taskhistoryid',
                       'taskId',
                       'updatedBy',
                       'taskStatusId',
                       'transitiondate',
                       'obs');

        $sql = new MSQL( implode(',', $cols), 'bastaskhistory');
        $sql->SetWhere('taskhistoryid = ? ');
        $sql->addParameter($this->taskHistoryId);

        $result = SDatabase::query($sql->Select());

        if ( count($result) == 0 )
        {
            $module = SAGU::getFileModule(__FILE__);
            throw new Exception(_M('Histrico da pendncia @1 inesistente.', $module, $this->taskHistoryId));
        }

        list( $this->taskHistoryId,
              $this->taskId,
              $this->updatedBy,
              $this->taskStatusId,
              $this->transitionDate,
              $this->obs ) = $result[0];

        $this->task = new BasTask($this->taskId);
    }

    /**
     * Common methods
     */

    /**
     * Exclui da base de dados o objeto atual
     *
     * @return TRUE no caso de sucesso. Caso contrrio, FALSE.
     */
    public function delete()
    {
        $sql = 'DELETE FROM bastaskhistory
                      WHERE taskhistoryid = ?';

        $result = SDatabase::execute($sql, array($this->taskHistoryId));

        if ( $result )
        {
            $this->taskHistoryId = null;
        }

        return $result;
    }

    /**
     * Detecta se o salvar deve inserir um novo (no caso de chave primria no definida)
     * ou se deve apenas atualizar um registro j existente (no caso de chave primria j definida)
     *
     * @return TRUE no caso de sucesso. Caso contrrio, FALSE.
     */
    public function save()
    {
        $module = SAGU::getFileModule(__FILE__);

        // verificar se o registro j existe na base
        if ( strlen($this->taskHistoryId) > 0 )
        {
            $filters = array('taskHistoryId' => $this->taskHistoryId);
            $recordExists = (count(self::search($filters)) > 0);
        }       

        $data = array( 'taskId' => $this->taskId,
                       'updatedBy' => $this->updatedBy,
                       'taskStatusId' => $this->taskStatusId,
                       'transitiondate' => 'now()',
                       'obs' => $this->obs );

        $sql = new MSQL( implode(',', array_keys($data)), 'bastaskhistory' );
        $sql->SetParameters( array_values($data) );

        if ( ! $recordExists )
        {            
            $sqlCmd = $sql->insert();
        }
        else
        {
            $sql->setWhere('taskhistoryid = ?');
            $sql->addParameter($this->taskHistoryId);

            $sqlCmd = $sql->update();
        }

        $retVal = SDatabase::execute($sqlCmd);

        return $retVal;
    }
    
    /**
     * Busca pelo histrico de pendncias
     *
     * Retorna uma lista de objetos do tipo desta classe com os resultados da busca.
     *
     * @param (stdClass) $filters Objeto contendo todos os campos pesquisveis do objeto atual
     */
    public function search($filters)
    {
        $sql = 'SELECT taskhistoryid
                  FROM bastaskhistory';

        $where = '';
        foreach ( $filters as $key => $value )
        {
            if ( strlen($value) > 0 )
            {
                $where .= ' AND ' . $key . ' = ' . $value;
            }
        }

        if ( strlen($where) > 0 )
        {
            $sql .= ' WHERE ' . substr($where, 5);
        }

        $results = SDatabase::query($sql);

        $retVal = array();
        foreach ( (array)$results as $result )
        {
            $retVal[] = new BasTaskHistory($result[0]);
        }

        return $retVal;
    }

    /**
     * Busca pelo histrico de pendncias
     *
     * Retorna array com os resultados da busca.
     *
     * @param (stdClass) $filters Objeto contendo todos os campos pesquisveis do objeto atual
     */
    public function searchGrid($filters)
    {
        $sql = 'SELECT A.taskhistoryid,
                       A.taskId,
                       A.updatedBy,
                       A.taskStatusId,
                       B.description,
                       TO_CHAR(A.transitionDate, \'' . SAGU::getParameter('BASIC', 'MASK_DATE') . '\'),
                       A.obs
                FROM  bastaskhistory A
                INNER JOIN bastaskstatus B
                        ON (A.taskstatusid = B.taskstatusid)';

        if ( strlen($filters->taskhistoryid) > 0 )
        {
            $where .= ' AND taskhistoryid = ?';
            $args[] = $filters->taskhistoryid;
        }

        if ( strlen($filters->taskId) > 0 )
        {
            $where .= ' AND taskId = ?';
            $args[] = $filters->taskId;
        }

        if ( strlen($filters->updatedBy) > 0 )
        {
            $where .= ' AND updatedBy = ?';
            $args[] = $filters->updatedBy;
        }

        if ( strlen($filters->taskStatusId) > 0 )
        {
            $where .= ' AND taskStatusId = ?';
            $args[] = $filters->taskStatusId;
        }

        if ( strlen($filters->transitionDate) > 0 )
        {
            $where .= ' AND transitionDate = ?';
            $args[] = $filters->transitionDate;
        }

        if ( strlen($filters->obs) > 0 )
        {
            $where .= ' AND UNACCENT(obs) ILIKE UNACCENT(?)';
            $args[] = $filters->obs;
        }

        if ( strlen($where) > 0 )
        {
            $sql .= ' WHERE ' . substr($where, 4) . '
                   ORDER BY taskhistoryid';

            $result = SDatabase::query(SAGU::prepare($sql, $args));
        }

        return $result;
    }

    /**
     * Duplica o registro atual.
     *
     * @return TRUE no caso de sucesso. Caso contrrio, FALSE.
     */
    public function duplicate()
    {
        // Not implemented
    }
}
