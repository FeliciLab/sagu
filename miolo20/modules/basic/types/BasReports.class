class BasReports
{
    /**
     * Obtm o calendrio acadmico de uma determinada ocorrncia de curso.
     * Para ser utilizado inicialmente no FrmAcademicCalendarView (no componente de calendrio).
     *
     * @param type $beginDate
     * @param type $endDate
     * @param type $opts
     * @return array
     */
    public static function getCalendarEvent($beginDate, $endDate, $opts = null)
    {
        if ( is_null($opts['separator']) )
        {
            $opts['separator'] = "\n";
        }

        $params = array();
        $paramValues = array();

        foreach ( $opts as $key => $opt )
        {
            if ( strlen($opt) > 0 )
            {
                $params[] = "'{$key}'";
                $paramValues[] = "'{$opt}'";
            }
        }

        $params = implode(', ', $params);
        $paramValues = implode(', ', $paramValues);

        $sql = "SELECT referenceDate,
                       TO_CHAR(referenceDate, 'yyyymmdd') AS dateCalendar,
                       TO_CHAR(TO_DATE(?, '" . SAGU::getParameter('BASIC', 'MASK_DATE') . "'), 'yyyymm') AS initialYearMonth,
                       EXTRACT(month FROM referenceDate) AS month,
                       dayevents AS events
                  FROM generateAcademicCalendar( TO_DATE(?, '" . SAGU::getParameter('BASIC', 'MASK_DATE') . "'),
                                                 TO_DATE(?, '" . SAGU::getParameter('BASIC', 'MASK_DATE') . "'),
                                                 ARRAY[{$params}], ARRAY[{$paramValues}])";

        $params = array();
        $params[] = $beginDate;
        $params[] = $beginDate;
        $params[] = $endDate;

        $result = (array) SDatabase::query($sql, $params, false);

        return (array) SAGU::resultToObject($result, array(
            'date',
            'dateCalendar',
            'initialYearMonth',
            'month',
            'events',
        ));
    }
}
