/**
 * @access public
 * @package Basic
 */
class BasAtuacaoProfessor extends SType
{
    public $atuacaoprofessorid;
    public $tipoatuacaoprofessorid;
    public $personid;
    
    /**
     * @return array
     */
    public function obterTiposPessoa($personId)
    {
        return array_keys($this->findList(
            $this->msql()
                ->setColumns('BasAtuacaoProfessor.tipoatuacaoprofessorid, BasAtuacaoProfessor.personid')
                ->addEqualCondition('BasAtuacaoProfessor.personId', $personId)
        ));
    }
    
    public function deletePerson($personId, $tipoatuacaoprofessorid)
    {
        $object = $this->findOne( $this->msql()
            ->addEqualCondition('personid', $personId)
            ->addEqualCondition('tipoatuacaoprofessorid', $tipoatuacaoprofessorid)
        );
        
        if ( $object )
        {
            $object->delete();
        }
    }
    
    public static function formAtualizacao($personId, $tiposAtuacaoBase = array(), $tiposAtuacaoSelecionados = array())
    {
        // percorre os itens desmarcados na interface e deleta-os
        foreach ( array_diff($tiposAtuacaoBase, $tiposAtuacaoSelecionados) as $tipoatuacaoprofessorid )
        {
            $atuacao = new BasAtuacaoProfessor();
            $atuacao->deletePerson($personId, $tipoatuacaoprofessorid);
        }

        // percorre os itens novos marcados e insere-os
        foreach ( array_diff($tiposAtuacaoSelecionados, $tiposAtuacaoBase) as $tipoatuacaoprofessorid )
        {
            $atuacao = new BasAtuacaoProfessor();
            $atuacao->personid = $personId;
            $atuacao->tipoatuacaoprofessorid = $tipoatuacaoprofessorid;
            $atuacao->save();
        }
    }
    
    public static function formInsercao($personId, $tiposAtuacaoSelecionados = array())
    {
        foreach ( $tiposAtuacaoSelecionados as $tipoatuacaoprofessorid )
        {
            $atuacao = new BasAtuacaoProfessor();
            $atuacao->personid = $personId;
            $atuacao->tipoatuacaoprofessorid = $tipoatuacaoprofessorid;
            $atuacao->save();
        }
    }
}
