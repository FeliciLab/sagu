/**
 * @access public
 * @package Basic
 */
class BasCSVImportation extends SType
{
    const TYPE_WEB = 'w';
    const TYPE_CMD = 'c';
    
    protected $_utilizaNovoPadrao = true;

    protected $_descriptionColumn = 'bascsvimportation.observation';
    
    protected $_defaultOrder = 'bascsvimportation.date DESC';
    
    public $bascsvimportationid;
    public $type;
    public $layout;
    public $date;
    public $observation;
    public $unitid;
    public $fileid;
    
    public $formDate;
    public $formTime;
    
    public function beforeFind(MSQL $sql)
    {
        if ( strlen($this->formDate) > 0 )
        {
            $sql->addEqualCondition('datetouser(bascsvimportation.date::date)', $this->formDate);
        }
        
        if ( strlen($this->formTime) > 0 )
        {
            $sql->addEqualCondition('TO_CHAR(bascsvimportation.date, GETPARAMETER(\'BASIC\', \'MASK_TIME\'))', $this->formTime);
        }

        parent::beforeFind($sql);
    }
    
    /**
     * @return array
     */
    public static function listImportationTypes()
    {
        $module = SAGU::getFileModule(__FILE__);
        
        return array(
            self::TYPE_WEB => _M('Interface', $module),
            self::TYPE_CMD => _M('Shell', $module),
        );
    }
}
