class BasPessoa extends SType
{
    public $personid;
    public $persondv;
    public $personmask;
    public $name;
    public $shortname;
    public $zipcode;
    public $cityid;
    public $location;
    public $locationtypeid;
    public $locationtype;
    public $number;
    public $complement;
    public $neighborhood;
    public $email;
    public $emailalternative;
    public $url;
    public $miolousername;
    public $password;
    public $dateIn;
    
    protected $_tableName = 'basperson';
    
    /**
     * Verifica se o e-mail j existe na base de dados
     * 
     * @param type $email
     */
    public static function verificaEmail($email, $personId = null)
    {
        $sql = " SELECT COUNT(*) > 0 
              FROM ONLY basPerson 
                  WHERE (email ilike ? OR emailAlternative ilike ?) ";
        
        $args[] = $email;
        $args[] = $email;
        
        if ( strlen($personId) > 0 )
        {
            $sql .= " AND personId != ? ";
            $args[] = $personId;
        }
        
        $result = SDatabase::query($sql, $args);
        
        return $result[0][0];
    }
}
