/**
 * @access public
 * @package Basic
 */
class BasTaskStatus extends SType
{
    const STATUS_NEW = 1;
    const STATUS_ASSIGNED = 2;
    const STATUS_RESOLVED = 3;

    /**
     * Table fields
     */

    /**
     * @var (integer) Identificador nico do status da pendncia
     */
    private $taskStatusId;
    /**
     * @var (string) Descrio do status da pendncia
     */
    private $description;
    /**
     * @var (boolean) Define se a pendncia est fechada
     */
    private $closeTask;
    /**
     * @var (boolean) Define se a pendncia pode ser reatribuda
     */
    private $freeForAssigning;    

    /**
     * Construtor da classe
     *
     * @param (integer) $taskStatusId Chave primria da tabela
     */
    public function __construct($taskStatusId = null)
    {
        if ( strlen($taskStatusId) > 0 )
        {
            $this->taskStatusId = $taskStatusId;
            $this->populate();
        }
    }

    /**
     * Data logic
     */
    public function __get($name)
    {
        return $this->$name;
    }

    public function __set($name, $value)
    {
        $this->$name = $value;
    }

    /**
     * Private methods
     */

    /**
     * Chamado pelo construtor, quando este recebe os dados de chave primria
     */
    public function populate()
    {
        $cols = array( 'taskstatusid',
                       'description',
                       'closestask',
                       'freeforassigning' );

        $sql = new MSQL( implode(',', $cols), 'bastaskstatus');
        $sql->SetWhere('taskstatusid = ? ');
        $sql->addParameter($this->taskStatusId);
        
        $result = SDatabase::query($sql->Select());

        if ( count($result) == 0 )
        {
            $module = SAGU::getFileModule(__FILE__);
            throw new Exception(_M('Status da pendncia @1 inesistente.', $module, $this->taskStatusId));
        }

        list( $this->taskStatusId,
              $this->description,
              $this->closeTask,
              $this->freeForAssigning) = $result[0];
    }

    /**
     * Common methods
     */

    /**
     * Exclui da base de dados o objeto atual
     *
     * @return TRUE no caso de sucesso. Caso contrrio, FALSE.
     */
    public function delete()
    {
        $sql = 'DELETE FROM bastaskstatus
                      WHERE taskstatusid = ?';

        $result = SDatabase::execute($sql, array($this->taskStatusId));

        if ( $result )
        {
            $this->taskStatusId = null;
        }

        return $result;
    }
    
    /**
     * Detecta se o salvar deve inserir um novo (no caso de chave primria no definida)
     * ou se deve apenas atualizar um registro j existente (no caso de chave primria j definida)
     *
     * @return TRUE no caso de sucesso. Caso contrrio, FALSE.
     */
    public function save()
    {
        $module = SAGU::getFileModule(__FILE__);

        // verificar se o registro j existe na base
        $filters = array('taskstatusid' => $this->taskStatusId);

        $recordExists = (count(self::search($filters)) > 0);

        $data = array( 'taskstatusid' => $this->taskStatusId,
                       'description' => $this->description,
                       'closetask' => $this->closeTask,
                       'freeforassigning' => $this->freeForAssigning);

        $sql = new MSQL( implode(',', array_keys($data)), 'bastaskstatus' );
        $sql->SetParameters( array_values($data) );

        if ( ! $recordExists )
        {
            $sqlCmd = $sql->insert();
        }
        else
        {
            $sql->setWhere('taskstatusid = ?');
            $sql->addParameter($this->taskStatusId);

            $sqlCmd = $sql->update();

        }

        $retVal = SDatabase::execute($sqlCmd);

        return $retVal;
    }

    /**
     * Busca pelo status da pendncias
     *
     * Retorna uma lista de objetos do tipo desta classe com os resultados da busca.
     *
     * @param (stdClass) $filters Objeto contendo todos os campos pesquisveis do objeto atual
     */
    public function search($filters)
    {
        $sql = 'SELECT taskstatusid
              FROM bastaskstatus';
        
        $where = '';
        foreach ( $filters as $key => $value )
        {
            $where .= ' AND ' . $key . ' = ' . $value;
        }

        if ( strlen($where) > 0 )
        {
            $sql .= ' WHERE ' . substr($where, 5);
        }

        $results = SDatabase::query($sql);

       
        $retVal = array();
        foreach ( (array)$results as $result )
        {
            $retVal[] = new BasTaskStatus($result[0]);
        }
        
        return $retVal;
    }

    /**
     * Busca pelo status da pendncia
     *
     * Retorna array com os resultados da busca.
     *
     * @param (stdClass) $filters Objeto contendo todos os campos pesquisveis do objeto atual
     */
    public function searchGrid($filters)
    {
        $sql = 'SELECT taskstatusid,
                       description,
                       closestask,
                       freeforassigning
                  FROM bastaskstatus';

        if ( strlen($filters->taskStatusId) > 0 )
        {
            $where .= ' AND taskstatusid = ?';
            $args[] = $filters->taskStatusId;
        }
        
        if ( strlen($filters->description) > 0 )
        {
            $where .= ' AND description = ?';
            $args[] = $filters->description;
        }

        if ( strlen($filters->closeTask) > 0 )
        {
            $where .= ' AND closestask = ?';
            $args[] = $filters->closeTask;
        }

        if ( strlen($filters->closeTask) > 0 )
        {
            $where .= ' AND closestask = ?';
            $args[] = $filters->closeTask;
        }

        if ( strlen($where) > 0 )
        {
            $sql .= ' WHERE ' . substr($where, 4) . '
                   ORDER BY taskstatusid, description';
        }
        
        $result = SDatabase::query(SAGU::prepare($sql, $args));

        return $result;
    }

    /**
     * Duplica o registro atual.
     *
     * @return TRUE no caso de sucesso. Caso contrrio, FALSE.
     */
    public function duplicate()
    {
        // Not implemented
    }
}
?>