/**
 * Grid used by form to display search results
 **/
class GrdFileSearch extends SGrid
{
    /**
     * Class constructor
     **/
    public function __construct($filters)
    {
        $module = MIOLO::getCurrentModule();

        $columns = array(
                          new MGridColumn( _M('Código', $module),      'right', true, null, true, null, true ),
                          new MGridColumn( _M('Nome do arquivo', $module), 'left',  true, null, true, null, true )
                        );

        $primaryKey = array('fileId' => '%0%');

        parent::__construct($filters, $columns, 'GrdCountrySearch', $primaryKey);
    }

    public function setDefaultGridActions($primaryKey = array())
    {
        $MIOLO = MIOLO::getInstance();
        $home = MIOLO::getCurrentAction();

        $opts = array('function'=>'download',
                      'fileId'=>'%0%');

        $lnkDownload = $MIOLO->getActionURL( $module, $home, null, $opts );

        $this->setIsScrollable();
        $this->setLinkType('hyperlink');
        $this->addActionIcon( _M('Baixar arquivo', $module), 'select', $lnkDownload );
        $this->eventHandler();
    }
}
