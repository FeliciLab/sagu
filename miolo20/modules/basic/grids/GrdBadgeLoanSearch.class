/**
 * Grid used by form to display search results
 */
class GrdBadgeLoanSearch extends SGrid
{
    /**
     * Class constructor
     */
    public function __construct($filters)
    {
        $MIOLO = MIOLO::getInstance();
        $module = SAGU::getFileModule(__FILE__);

        $columns = array();
        $columns[] = new MGridColumn(_M('Cdigo do emprstimo', $module), 'right', true, null, false, null, true);
        $columns[] = new MGridColumn(_M('Cdigo do crach', $module), 'right', true, null, true, null, true);
        $columns[] = new MGridColumn(_M('Emprestado para', $module), 'left', true, null, true, null, true);
        $columns[] = new MGridColumn(_M('Data do emprstimo', $module), 'left', true, null, true, null, true);
        $columns[] = new MGridColumn(_M('Data prevista para devoluo', $module), 'left', true, null, true, null, true);
        $columns[] = new MGridColumn(_M('Data da devoluo', $module), 'left', true, null, true, null, true);
        $columns[] = new MGridColumn(_M('Comentrios', $module), 'left', true, null, true, null, true);

        $primaryKey = array( 'loanId' => '%0%' );

        parent::__construct($filters, $columns, __CLASS__, $primaryKey);

        $this->setRowMethod(__CLASS__, 'myRowMethod');

        $this->clearActions(); //Limpa as aes padro da grid
        // Devolver
        $action = 'main:person:badge:badgeLoan';
        $optsUpdate = array( 'loanId' => '%0%', 'function' => 'update' );
        $hrefUpdate = $MIOLO->getActionURL($module, $action, null, $optsUpdate);
        $this->addActionIcon(_M('Devolver', $module), 'close.png', $hrefUpdate);

        // Excluir
        $action = 'main:person:badge:badgeLoan';
        $optsDelete = array( 'loanId' => '%0%', 'function' => 'delete', 'event' => 'tbBtnDelete_click' );
        $hrefDelete = $MIOLO->getActionURL($module, $action, null, $optsDelete);
        $this->addActionIcon(_M('Excluir', $module), 'button_drop.png', $hrefDelete);
    }

    /**
     * My row method - aes da grid
     *
     * @param type $i
     * @param type $row
     * @param type $actions
     * @param type $columns
     */
    public function myRowMethod($i, $row, $actions, $columns)
    {
        $MIOLO = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();

        list($null,
             $null,
             $null,
             $null,
             $null,
             $endDate) = $row;

        //Caso ja tenha sido devolvido,
        if ( strlen($endDate) > 0 )
        {
            $actions[0]->enabled = true;
            $actions[0]->value = 'find.png';
            $actions[0]->alt = _M('Visualizar', $module);
            
            $actions[1]->enabled = false;
            $actions[1]->alt = _M('No  possvel excluir um crach que j foi devolvido', $module);
        }
        else
        {
            $actions[0]->enabled = true;
            $actions[0]->value = 'close.png';
            $actions[0]->alt = _M('Devolver', $module);
            
            $actions[1]->enabled = true;
            $actions[1]->alt = _M('Excluir', $module);
        }
    }
}
