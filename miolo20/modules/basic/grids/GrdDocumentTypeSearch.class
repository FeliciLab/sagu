/**
 * Grid used by form to display search results
 **/
class GrdDocumentTypeSearch extends SGrid
{
    /**
     * Class constructor
     **/
    public function __construct($filters)
    {
        $module = MIOLO::getCurrentModule();

        $columns = array( new MGridColumn(_M('Cdigo', $module), 'right', true, null, true, null, true),
        				  new MGridColumn(_M('Nome', $module), 'left', true, null, true, null, true),
        				  new MGridColumn(_M('Tipo de pessoa', $module), 'left', true, null, true, array(SAGU::getParameter('BASIC', 'DB_PHYSICAL') => _M('Fsica', $module),
        				  																			  SAGU::getParameter('BASIC', 'DB_LEGAL') => _M('Jurdica', $module)), true),
                                          new MGridColumn(_M('Mscara', $module), 'left', true, null, true, null, true),
                                          new MGridColumn(_M('Necessita entrega', $module), 'left', true, null, true, array(DB_TRUE => _M('Sim', $module), DB_FALSE => _M('No', $module)), true),
                                          new MGridColumn(_M('Bloqueia matrcula', $module), 'left', true, null, true, array(DB_TRUE => _M('Sim', $module), DB_FALSE => _M('No', $module)), true),
                                          new MGridColumn(_M('Informar pendncia no portal', $module), 'left', true, null, true, array(DB_TRUE => _M('Sim', $module), DB_FALSE => _M('No', $module)), true),
                                          new MGridColumn(_M('Limite de dias para bloquear', $module), 'left', true, null, false, null, true),
                                          new MGridColumn(_M('Validar contedo', $module), 'left', true, null, false, SAGU::listYesNo(), true),
                                          new MGridColumn(_M('Exige preenchimento', $module), 'left', true, null, true, SAGU::listYesNo(), true));

        $primary = array('documentTypeId' => '%0%');
        parent::__construct($filters, $columns, 'GrdDocumentTypeSearch', $primary);
    }
}
