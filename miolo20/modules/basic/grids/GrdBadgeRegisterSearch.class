/**
 * Grid used by form to display search results
 **/
class GrdBadgeRegisterSearch extends SGrid
{
    /**
     * Class constructor
     **/
    public function __construct($filters)
    {
        $module = SAGU::getFileModule(__FILE__);

        $columns = array( new MGridColumn(_M('Cdigo', $module), 'right', true, null, true, null, true),
                          new MGridColumn(_M('Descrio', $module), 'left', true, null, true, null, true),
                          new MGridColumn(_M('Estado do crach', $module), 'left', true, null, true, BasBadgeStatus::listBadgeStatus(), true ));

        $primaryKey = array('badgeId' => '%0%');

        parent::__construct($filters, $columns, __CLASS__, $primaryKey);
    }
}
