class GrdCountrySearch extends SGrid
{
    public function __construct($filters)
    {
        $module = MIOLO::getCurrentModule();

        $columns[] = new MGridColumn(_M('Cdigo', $module), 'right', true, null, true, null, true);
        $columns[] = new MGridColumn(_M('Nome', $module), 'left', true, null, true, null, true);
        $columns[] = new MGridColumn(_M('Nacionalidade', $module), 'left', true, null, true, null, true);
        $columns[] = new MGridColumn(_M('Moeda', $module), 'left', true, null, true, null, true);
        $columns[] = new MGridColumn(_M('Moeda no plural', $module), 'left', true, null, true, null, true);
        $columns[] = new MGridColumn(_M('Descrio do decimal', $module), 'left', true, null, true, null, true);
        $columns[] = new MGridColumn(_M('Descrio do decimal no plural', $module), 'left', true, null, true, null, true);
        $columns[] = new MGridColumn(_M('Smbolo monetrio', $module), 'left', true, null, true, null, true);
        $columns[] = new MGridColumn(_M('Fronteirio', $module), 'left', true, null, true, SAGU::listTrueFalse(), true);

        $primaryKey = array('countryId' => '%0%');

        parent::__construct($filters, $columns, 'GrdCountrySearch', $primaryKey);
    }
}
