class GrdConstrutorDeRelatoriosSearch extends SGrid
{
    
    /**
     * Construtor da classe
     * 
     */
    public function __construct($filters)
    {
        $MIOLO = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();
        
        $columns = array(
            "basconstrutorderelatorios.relatorioid" => new MGridColumn( _M("Cdigo", $module), "right", true, null, true, null, true ),
            "basconstrutorderelatorios.nome" => new MGridColumn( _M("Nome", $module), "left",  true, null, true, null ),
            "basconstrutorderelatorios.publicado" => new MGridColumn( _M("Habilitado", $module), "left", true, null, true, null )

        );
               
        $primaryKey = array("relatorioid" => "%basconstrutorderelatorios.relatorioid%");
        
        parent::__construct($filters, $columns, "GrdConstrutorDeRelatoriosSearch", $primaryKey);
        
        $opts = array();
        $opts["function"] = SForm::FUNCTION_UPDATE;
        $opts["event"] = "geraRelatorio_click";
        $args = array_merge($opts, $primaryKey);
        
        $href = $MIOLO->getActionURL($this->module, MIOLO::getCurrentAction(), null, $args);
        $this->addActionIcon(_M("Gerar relatrio"), $MIOLO->getUI()->getImageTheme("smodern", "run.png"), $href);
                
    }
        
}
?>