/**
 * Grid used by task form to display search results
 **/
class GrdTaskSearch extends SGrid
{
    /**
     * Class constructor
     **/
    public function __construct($filters)
    {
        $MIOLO = MIOLO::getInstance();
        $module = SAGU::getFileModule(__FILE__);
      
        $isDiverseConsultation = $filters->isFromDiverseConsultation;

        //Se estiver vindo das consultas diversas, nao ordenar
        $order = !$isDiverseConsultation;

        $columns = array(
            new MGridColumn(_M('Cdigo', $module), 'right', true, null, true, null, $order ),
            new MGridColumn(null, 'left' , true, null, false, null, $order ),
            new MGridColumn(_M('Criador', $module), 'left' , true, null, true, null, $order ),
            new MGridColumn(null, 'left' , true, null, false, null, $order ),
            new MGridColumn(_M('Atribudo para', $module), 'left' , true, null, true, null, $order ),
            new MGridColumn(_M('Cdigo do status', $module), 'left' , true, null, false, null, $order ),
            new MGridColumn(_M('Status', $module), 'left' , true, null, true, null, $order ),
            new MGridColumn(_M('Grupo/usurio', $module), 'left' , true, null, true, null, $order ),
            new MGridColumn(_M('Detalhes', $module), 'left' , true, null, true, null, $order ),
            new MGridColumn(_M('Data de criao', $module), 'left' , true, null, true, null, $order )
        );

        parent::__construct($filters, $columns, 'GrdTaskSearch');
        $this->clearActions();

        if( !is_null($this->getActionEdit()))
        {
            $this->addActionUpdate($this->getActionEdit());
        }

        if ( $isDiverseConsultation )
        {
            $this->pageLength = 0;
            $this->clearActions();

            if ( $MIOLO->CheckAccess('ADMIN', A_ADMIN, false) )
            {
                $href = SAGU::getActionURL('basic', 'main:config:tasks', array('function' => 'update', 'taskId' => '%0%'));
                $this->addActionIcon(_M('Marcar pendncia como resolvida', $module), 'edit', $href);
            }
        }
    }

    /**
     * Cria o ao de editar da grid para o mdulo de servios exeto para alunos
     */
    public function getActionEdit()
    {
        $MIOLO = MIOLO::getInstance();
        $module = SAGU::getFileModule(__FILE__);

        $busPerson = new BusinessBasicBusPerson();

        $personData = $busPerson->getPersonByMioloUserName(trim($MIOLO->getLogin()->id));

        $opts = array( 'function' => 'update',
                       'taskId' => '%0%');
        $return = $MIOLO->getActionURL($module, "main:config:tasks", null, $opts);

        return $return;
    }
}
