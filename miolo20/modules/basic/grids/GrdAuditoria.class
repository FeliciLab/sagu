class GrdAuditoria extends SGrid
{
    public function __construct($filters)
    {
        $MIOLO = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();
        
        $MIOLO->page->AddScript('m_popup_control.js');
        
        $columns[] = new MGridColumn(_M('Id', $module), 'right', true, null, false, null, true);
        $columns[] = new MGridColumn(_M('Usurio', $module), 'left', true, null, true, null, true);
        $columns[] = new MGridColumn(_M('Nome do usurio', $module), 'left', true, null, true, null, true);
        $columns[] = new MGridColumn(_M('Data', $module), 'center', true, null, true, null, true);
        $columns[] = new MGridColumn(_M('Registro', $module), 'left', true, null, true, null, true);
        $columns[] = new MGridColumn(_M('Operao', $module), 'left', true, null, true, null, true);
        $columns[] = new MGridColumn(_M('Query', $module), 'left', true, null, false, null, true);
        $columns[] = new MGridColumn(_M('Verso do sistema', $module), 'left', true, null, true, null, true);
        
        $primaryKey = array('audit_id' => '%0%');
        
        parent::__construct($filters, $columns, 'GrdAuditoria', $primaryKey);
        
        $this->clearActions();
        $this->disableExports();
        
        $hrefQuery = SForm::getAjaxAction('popupQuery', 'divQuery', false, $primaryKey, false, false);
        $hrefDetalhes = SForm::getAjaxAction('popupDetalhes', 'divDetalhes', false, $primaryKey, false, false);
        
        $this->addActionIcon(_M('Detalhes', $module),'find.png', $hrefDetalhes);
        $this->addActionIcon(_M('Query', $module),'process-16x16.png', $hrefQuery);
        
    }
    
    function getPage()
    {
        if ( count($this->data) )
        {
            return $this->data;
        }
    }
}
