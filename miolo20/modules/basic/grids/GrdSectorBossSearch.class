/**
 * Grid used by form to display search results
 **/
class GrdSectorBossSearch extends SGrid
{
    /**
     * Class constructor
     **/
    public function __construct($filters)
    {
        $module = MIOLO::getCurrentModule();

        $columns = array( 
                          new MGridColumn( _M('Código do setor', $module),      'left',  true, null, true, null, true ),
                          new MGridColumn( _M('Descrição', $module),    'right',  true, null, true, null, true ),
                          new MGridColumn( _M('Código do responsável pelo setor', $module), 'left', true, null, true, null, true ),
                          new MGridColumn( _M('Responsável', $module),    'right',   true, null, true, null, true ),
                          new MGridColumn( _M('Nível', $module),          'left', true, null, true, null, true )
                        );
                        
        $primaryKey = array('sectorId' => '%0%',
                            'bossId' => '%2%'
                           );

        parent::__construct($filters, $columns, 'GrdSectorBossSearch', $primaryKey);
    }
}
