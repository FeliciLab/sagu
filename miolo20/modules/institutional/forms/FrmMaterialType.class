class FrmMaterialType extends SManagementForm
{

    /**
     * Class constructor
     * */
    public function __construct()
    {
        parent::__construct(new InsMaterialType(), array( 'materialTypeId' ));
    }

    public function defineFields()
    {
        $MIOLO = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();
        $action = MIOLO::getCurrentAction();
        $function = MIOLO::_request('function');

        if ( in_array($function, array( SForm::FUNCTION_UPDATE, SForm::FUNCTION_DELETE )) )
        {
            $pk = $this->getObjectPk();
            $materialTypeId = $pk->materialTypeId;

            $fields[] = new MTextLabel('materialTypeId', $materialTypeId, _M('Cdigo', $module));
            $fields[] = new MHiddenField('materialTypeId', $materialTypeId);
            $data = new InsMaterialType($materialTypeId);
        }

        //Field description
        $description = new MTextField('description', $this->getFormValue('description', $data->description), _M('Descrio', $module), SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE'));
        $description->setJsHint(_M('Informe a descrio', $module));
        $fields[] = $description;
        $validators[] = new MRequiredValidator('description', _M('Descrio', $module));

        $allowLoanOpts[] = new MCheckbox('allowLoanByType', 't', null, ($data->allowLoanByType == DB_TRUE ? true : false), _M('Por tipo de material', $module));
        $allowLoanOpts[] = new MCheckbox('allowLoanByMaterial', 't', null, ($data->allowLoanByMaterial == DB_TRUE ? true : false), _M('Por material', $module));

        //Campo permite emprstimo
        $allowLoan = new MCheckBoxGroup('allowLoan', _M('Permitir emprstimo'), $allowLoanOpts, '', 'vertical', 'none', true);
        $fields[] = $allowLoan;
        
        $fields[] = new MCheckbox('availabilityControl', 't', _M('Controlar disponibilidade', $module), ($data->availabilityControl == DB_FALSE ? false : true));

        parent::defineFields($fields, $validators, $data);
    }

    public function tbBtnSave_click($sender = NULL)
    {
        $data = $this->getTypesData();
        if ( ($data->allowLoanByMaterial == DB_FALSE ) && ( $data->allowLoanByType == DB_FALSE) )
        {
            $this->addError(_M("Selecione pelo menos um tipo de emprstimo", $module));
        }
        else
        {
            parent::tbBtnSave_click($sender);
        }
    }

    public function getTypesData()
    {
        $data = parent::getTypesData();
        $data->materialTypeId = $this->getFormValue('materialTypeId', MIOLO::_request('materialTypeId'));
        $data->description = $this->getFormValue('description', MIOLO::_request('description'));
        $data->allowLoanByMaterial = ( strlen($this->getFormValue('allowLoanByMaterial', MIOLO::_request('allowLoanByMaterial'))) > 0 ? DB_TRUE : DB_FALSE );
        $data->allowLoanByType = ( strlen($this->getFormValue('allowLoanByType', MIOLO::_request('allowLoanByType'))) > 0 ? DB_TRUE : DB_FALSE );
        $data->availabilityControl = ( strlen($this->getFormValue('availabilityControl', MIOLO::_request('availabilityControl'))) > 0 ? DB_TRUE : DB_FALSE );
        
        return $data;
    }
}
