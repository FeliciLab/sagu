/**
 * Form to search the acdMaterial table
 */
class FrmMaterialTypeSearch extends SSearchForm
{

    /**
     * Class constructor
     */
    public function __construct($data)
    {
        parent::__construct(_M('Localizar', 'basic'), new InsMaterialType(), array( 'materialTypeId' ));
    }

    /**
     *  Default method to define fields
     */
    public function defineFields()
    {
        $MIOLO = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();
        $action = MIOLO::getCurrentAction();

        $limbo = new MHiddenField('limboS', '');
        $fields[] = $limbo;

        //Field material
        $materialTypeIdS = new MTextField('materialTypeIdS', $this->materialTypeIdS->value, _M('Cdigo', $module), SAGU::getParameter('BASIC', 'FIELD_ID_SIZE'));
        $materialTypeIdS->setJsHint(_M('Informe o cdigo do tipo de material', $module));
        $fields[] = $materialTypeIdS;
        $validators[] = new MIntegerValidator('materialTypeIdS', _M('Cdigo', $module));

        //Field description
        $descriptionS = new MTextField('descriptionS', $this->descriptionS->value, _M('Descrio', $module), SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE'));
        $descriptionS->setJsHint(_M('Informe a descrio', $module));
        $fields[] = $descriptionS;

        $allowLoanByTypeLabelS = new MText('allowLoanByTypeLabelS', _M('Por tipo de material', $module) . ':');
        $allowLoanByTypeLabelS->setWidth(SAGU::getParameter('BASIC', 'FIELD_CONTAINER_SIZE'));
        $allowLoanByTypeS = new MRadioButtonGroup('allowLoanByTypeS', '', SAGU::listTrueFalseIndifferent(1), $data->allowLoanByType, '', 'horizontal');
        $hctAllowLoanByTypeS = new MHContainer('hctAllowLoanByTypeS', array( $allowLoanByTypeLabelS, $allowLoanByTypeS ));
        $hctAllowLoanByTypeS->setShowLabel(false);

        $allowLoanByMaterialSLabelS = new MText('allowLoanByMaterialLabelS', _M('Por material', $module) . ':');
        $allowLoanByMaterialSLabelS->setWidth(SAGU::getParameter('BASIC', 'FIELD_CONTAINER_SIZE'));
        $allowLoanByMaterialS = new MRadioButtonGroup('allowLoanByMaterialS', '', SAGU::listTrueFalseIndifferent(1), $data->allowLoanByMaterial, '', 'horizontal');
        $hctAllowLoanByMaterialS = new MHContainer('hctAllowLoanByMaterialS', array( $allowLoanByMaterialSLabelS, $allowLoanByMaterialS ));
        $hctAllowLoanByMaterialS->setShowLabel(false);
        
        $fields[] = new MBaseGroup('bsgAllowLoan', _M('Permitir emprstimo', $module), array( $hctAllowLoanByTypeS, $hctAllowLoanByMaterialS ), 'vertical');
        
        $availabilityControlLabelS = new MText('availabilityControlLabelS', _M('Controlar disponibilidade', $module) . ':');
        $availabilityControlLabelS->setWidth(SAGU::getParameter('BASIC', 'FIELD_CONTAINER_SIZE'));
        $availabilityControlS = new MRadioButtonGroup('availabilityControlS', '', SAGU::listTrueFalseIndifferent(1), $data->availabilityControl, '', 'horizontal');
        $fields[] = new MHContainer('hctAvailabilityControlS', array( $availabilityControlLabelS, $availabilityControlS ));

        parent::defineFields($fields, $module, 'GrdMaterialTypeSearch', $validators);
    }

    public function getTypesData()
    {
        $data = parent::getTypesData();
        $data->materialTypeId = $this->getFormValue('materialTypeIdS', MIOLO::_request('materialTypeIdS'));
        $data->description = $this->getFormValue('descriptionS', MIOLO::_request('description'));
        $data->allowLoanByMaterial = $this->getFormValue('allowLoanByMaterialS', MIOLO::_request('allowLoanByMaterialS'));
        $data->allowLoanByType = $this->getFormValue('allowLoanByTypeS', MIOLO::_request('allowLoanByTypeS'));
        $data->availabilityControl = $this->getFormValue('availabilityControlS', MIOLO::_request('availabilityControlS'));

        return $data;
    }
}
?>