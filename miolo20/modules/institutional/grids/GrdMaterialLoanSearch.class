class GrdMaterialLoanSearch extends SGrid
{
    public function __construct($filters)
    {
        $module = SAGU::getFileModule(__FILE__);

        $columns = array();
        $columns[] = new MGridColumn(_M('Cdigo', $module), 'right', true, null, true, null, true);
        $columns[] = new MGridColumn(_M('Cdigo da solicitao de material', $module), 'right', true, null, false, null, true);
        $columns[] = new MGridColumn(_M('Cdigo da pessoa', $module), 'right', true, null, false, null, true);
        $columns[] = new MGridColumn(_M('Cdigo do material', $module), 'right', true, null, false, null, true);
        $columns[] = new MGridColumn(_M('Data de retirada', $module), 'left', true, null, true, null, true);
        $columns[] = new MGridColumn(_M('Data prevista para devoluo', $module), 'left', true, null, true, null, true);
        $columns[] = new MGridColumn(_M('Data da devoluo', $module), 'left', true, null, true, null, true);
        $columns[] = new MGridColumn(_M('Observaes da devoluo', $module), 'left', true, null, true, null, true);

        $primaryKey = array( 'materialLoanId' => '%0%' );

        parent::__construct($filters, $columns, __CLASS__, $primaryKey);
    }
}
