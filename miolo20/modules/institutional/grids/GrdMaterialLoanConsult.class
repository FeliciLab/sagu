class GrdMaterialLoanConsult extends SGrid
{
    public function __construct($filters)
    {
        $MIOLO = MIOLO::getInstance();
        $module = SAGU::getFileModule(__FILE__);
        $action = MIOLO::getCurrentAction();

        $columns = array();
        $columns[] = new MGridColumn(_M('Cdigo', $module), 'right', true, null, false, null, true);
        $columns[] = new MGridColumn(_M('Cdigo do solicitante', $module), 'right',  true, null, false, null, true);
        $columns[] = new MGridColumn(_M('Solicitante', $module), 'left',  true, null, true, null, true);
        $columns[] = new MGridColumn(_M('Retirada', $module), 'left',  true, null, true, null, true);
        $columns[] = new MGridColumn(_M('Devoluo prevista', $module), 'left',  true, null, true, null, true);
        $columns[] = new MGridColumn(_M('Tipo de material', $module), 'left',  true, null, true, null, true);
        $columns[] = new MGridColumn(_M('Material', $module), 'left',  true, null, true, null, true);
        $columns[] = new MGridColumn(_M('Devolvido em', $module), 'left',  true, null, true, null, true);
        $columns[] = new MGridColumn(); // cdigo da situao
        $columns[] = new MGridColumn(_M('Situao', $module), 'left',  true, null, true, null, true);

        $primaryKey = array( 'materialLoanId' => '%0%' );
        parent::__construct($filters, $columns, __CLASS__, $primaryKey);

        $this->setRowMethod(__CLASS__, 'myRowMethod');

        $this->clearActions(); //Limpa as aes padro da grid

        //Atualizar
        $action = 'main:process:materialLoan';
        $optsUpdate = array( 'materialLoanId' => '%0%' , 'function'=>'update' );
        $hrefUpdate = $MIOLO->getActionURL( $module, $action, null, $optsUpdate );
        $this->addActionIcon( _M('Editar', $module ), 'edit.png', $hrefUpdate);

        //Excluir
        $action = 'main:process:materialLoan';
        $optsDelete = array( 'materialLoanId' => '%0%' , 'function'=>'delete', 'event'=>'tbBtnDelete_click');
        $hrefDelete = $MIOLO->getActionURL( $module, $action, null, $optsDelete );
        $this->addActionIcon( _M('Excluir', $module ), 'button_drop.png', $hrefDelete);
        
        //Cancelar
        $action = 'main:process:materialLoan';
        $optsCancel = array( 'materialLoanId' => '%0%', 'function'=>'update', 'return_to' => urlencode($MIOLO->getCurrentURL()), 'event' => 'cancelLoanConfirm' );
        $hrefCancel = $MIOLO->getActionURL( $module, $action, null, $optsCancel );
        $this->addActionIcon( _M('Cancelar', $module ), 'delete-20x20.png', $hrefCancel);
        
        //Confirmar emprstimo
        $action = 'main:process:materialLoan';
        $optsReturn = array( 'materialLoanId' => '%0%', 'function'=>'update', 'return_to' => urlencode($MIOLO->getCurrentURL()), 'event' => 'confirmLoanConfirm' );
        $hrefReturn = $MIOLO->getActionURL( $module, $action, null, $optsReturn );
        $this->addActionIcon( _M('Emprestar', $module ), 'open.png', $hrefReturn );

        //Devolver
        $action = 'main:process:materialLoan';
        $optsReturn = array( 'materialLoanId' => '%0%', 'function'=>'update', 'return_to' => urlencode($MIOLO->getCurrentURL()), 'event' => 'returnLoanConfirm' );
        $hrefReturn = $MIOLO->getActionURL( $module, $action, null, $optsReturn );
        $this->addActionIcon( _M('Devolver', $module ), 'close.png', $hrefReturn );
    }

    public function myRowMethod($i, $row, $actions, $columns )
    {
        $MIOLO = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();

        list($null,
                $null,
                $null,
                $null,
                $null,
                $null,
                $null,
                $endDate,
                $status) = $row;

        //Desabilita a excluso e edio caso o usurio no for administrador
        if ( ! $MIOLO->checkAccess('FrmMaterialLoan', A_ADMIN, false, true) )
        {
            $actions[0]->enabled = false;
            $actions[1]->enabled = false;
        }
        else
        {
            $actions[0]->enabled = true;
            $actions[1]->enabled = true;
        }
        
        
        switch ( $status )
        {
            case InsMaterialStatus::STATUS_LOAN_TAKEN:
                
                $actions[2]->enabled = false; //Desabilita Cancelar
                $actions[2]->value = 'delete-disabled-20x20.png';
                $actions[3]->enabled = false; //Desabilita Confirmar Emprstimo
                $actions[3]->value = 'open_disable.png';
                $actions[4]->enabled = true; //Habilita Devoluo
                $actions[4]->value = 'close.png';
                
            break;
            case InsMaterialStatus::STATUS_LOAN_EXPIRED:
                
                $actions[2]->enabled = false; //Desabilita Cancelar
                $actions[2]->value = 'delete-disabled-20x20.png';
                $actions[3]->enabled = false; //Desabilita Confirmar Emprstimo
                $actions[3]->value = 'open_disable.png';
                $actions[4]->enabled = true; //Habilita Devoluo
                $actions[4]->value = 'close.png';
                
            break;
            case InsMaterialStatus::STATUS_LOAN_SCHEDULED:
                    
                $actions[2]->enabled = true; //Habilita Cancelar
                $actions[2]->value = 'delete-20x20.png';
                $actions[3]->enabled = true; //Habilita Confirmar Emprstimo
                $actions[3]->value = 'open.png';
                $actions[4]->enabled = false; //Desabilita Devoluo
                $actions[4]->value = 'close_disable.png';
                
            break;
        
            case InsMaterialStatus::STATUS_LOAN_RETURNED:
                
                $actions[2]->enabled = false; //Desabilita Cancelar
                $actions[2]->value = 'delete-disabled-20x20.png';
                $actions[3]->enabled = false; //Desabilita Confirmar Emprstimo
                $actions[3]->value = 'open_disable.png';
                $actions[4]->enabled = false; //Desabilita Devoluo
                $actions[4]->value = 'close_disable.png';
                
            break;        
            case InsMaterialStatus::STATUS_LOAN_CANCELED:
            
                $actions[2]->enabled = false; //Desabilita Cancelar
                $actions[2]->value = 'delete-disabled-20x20.png';
                $actions[3]->enabled = false; //Desabilita Confirmar Emprstimo
                $actions[3]->value = 'open_disable.png';
                $actions[4]->enabled = false; //Desabilita Devoluo
                $actions[4]->value = 'close_disable.png';
                
            break;
        }
    }
}
