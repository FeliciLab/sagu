class FrmMensagemFinal extends FrmInscricaoExterna
{
    public function __construct()
    {
        parent::__construct(new AcpOfertaCurso(), array('ofertacursoid'));
    }
    
    
    public function defineFields()
    {
        $ofertacursoid = MIOLO::_REQUEST('ofertacursoid');
        $personid = MIOLO::_REQUEST('personid');
        
        $mensagensDoPerfilDeCurso = new mensagensDoPerfilDeCurso();      
        
        $controls[] = new MLabel($mensagensDoPerfilDeCurso->obterMensagemFinal($ofertacursoid, $personid));
        $controls[] = new MSpacer();
        
        $ofertaDeCurso = new AcpOfertaCurso($ofertacursoid);
        $ocorrenciaDeCurso = new AcpOcorrenciaCurso($ofertaDeCurso->ocorrenciacursoid);
        $curso = new AcpCurso($ocorrenciaDeCurso->cursoid);
        
        $fields[] = new MBaseGroup('bsgInformacoes', _M('Inscrição realizada com sucesso!'), $controls);        
        sLinkedForm::defineFields($fields);
    }
}
