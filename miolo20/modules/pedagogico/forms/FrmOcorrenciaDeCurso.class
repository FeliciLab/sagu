class FrmOcorrenciaDeCurso extends FrmCursoPai
{
    public function __construct()
    {
        $this->setLimparCamposVazios(true);
        
        parent::__construct(new AcpOcorrenciaCurso(), array('ocorrenciacursoid'));
    }
    
    public function defineFields()
    {
        $module = MIOLO::getCurrentModule();
        
        $fields[] = new MSelection('situacao', NULL, _M('Situação', $module), AcpOcorrenciaCurso::listarSituacao());
                
        // Turno
        $fields[] = $this->genericFields()->comboTurno();
        
        // Unidade
        $business = new BusinessBasicBusUnit();
        $unitId = sMultiUnidade::obterObjetoUnidade();
        
        if ( $unitId->unitId )
        {
          $opts = $business->listUnitSimple($unitId->unitId);  
          $unidade = $unitId->unitId;
        }
        else
        {
          $opts =  $business->listUnit();
        }
        
        $unitIdS = new MComboBox('unitId', $this->getFormValue('unitId', $unidade), _M('Unidade', $module), $opts);
        $unitIdS->setJsHint(_M('Selecione uma unidade', $module));
        $fields[] = $unitIdS;
         
        $validators[] = new MRequiredValidator('turnId', _M('Turno'));
        $validators[] = new MRequiredValidator('unitId', _M('Unidade'));
        
        parent::defineFields($fields, $validators);
    }
}
