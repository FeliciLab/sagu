class FrmRegistroDeFrequencias extends FrmPerfilDeCursoPai
{
    public function __construct() {
        $this->setLimparCamposVazios(true);
        
        parent::__construct();
    }
    
    public function defineFields()
    {
        $module = MIOLO::getCurrentModule();
        $perfilcurso = new AcpPerfilCurso(MIOLO::_REQUEST('perfilcursoid'));
                
        $fldPortal = new MRadioButtonGroup('permiteregistrarfrequenciaportal', _M('Portal', $module), SAGU::listYesNo(),  SAGU::NVL($this->getFormValue('permiteregistrarfrequenciabiometria', $data->permiteregistrarfrequenciabiometria), DB_TRUE), '', 'horizontal');
        $hintPortal = new MText('hintPortal', _M('Indica se  possvel registrar frequncias pelo portal', $module));
        $htcPortal = new MHContainer('htcPortal', array($fldPortal, $hintPortal));

        $fldBiometria = new MRadioButtonGroup('permiteregistrarfrequenciabiometria', _M('Biometria', $module), SAGU::listYesNo(), SAGU::NVL($this->getFormValue('permiteregistrarfrequenciabiometria',$data->permiteregistrarfrequenciabiometria), DB_FALSE), '', 'horizontal');
        $fldBiometria->setAutoPostBack(true);
        $hintBiometria = new MText('hintBiometria', _M('Habilita o registro de frequncias pelo aluno atravs de biometria', $module));
        $htcBiometria = new MHContainer('htcBiometria', array($fldBiometria, $hintBiometria));

        //Caso permite registrar frequncias por Biometria exibe configuraes
        $permiteregistrarfrequenciabiometria = SAGU::NVL($this->getFormValue('permiteregistrarfrequenciabiometria', $perfilcurso->permiteregistrarfrequenciabiometria), DB_FALSE);
        
        if( $permiteregistrarfrequenciabiometria == DB_TRUE )
        {
            $vctOpcoesBiometria = array();
            
            $limitetempo = $vctOpcoesBiometria[] = new MIntegerField('limitetemporegistrobiometria', null, _M('Limite de tempo para registro'), '10', _M('minutos', $module));
            
            $acaoregistroparcial = $vctOpcoesBiometria[] = new MSelection('acaoregistroparcial', $this->getFormValue('acaoregistroparcial', $perfilcurso->acaoregistroparcial), _M('Para alunos que registrarem apenas uma passagem'), AcpFrequencia::listarFrequencias(), false, _M('Ao tomada para alunos que marcaram apenas uma entrada ou sada durante o perodo da aula'));
            $acaoregistroparcial->setAutoPostBack(true);
            
            $regParcial = $this->getFormValue('acaoregistroparcial', $perfilcurso->acaoregistroparcial);
            
            if ( $regParcial == AcpFrequencia::FREQUENCIA_MEIA )
            {
                $registros = AcpFrequencia::listarFrequencias();
                unset($registros[AcpFrequencia::FREQUENCIA_MEIA]);
                
                $vlrAlternativaMeiaPresenca = $this->getFormValue('alternativaacaomeiapresenca', $perfilcurso->alternativaacaomeiapresenca);
                $vctOpcoesBiometria[] = $alternativaMeiaPresenca = new MSelection('alternativaacaomeiapresenca', $vlrAlternativaMeiaPresenca, _M('Caso o modelo de avaliao no utilize a meia presena, utilizar a seguinte situao'), $registros, false);
                $alternativaMeiaPresenca->setAutoPostBack(true);
            }
            
            if ( $regParcial == AcpFrequencia::FREQUENCIA_JUSTIFICADA || $vlrAlternativaMeiaPresenca == AcpFrequencia::FREQUENCIA_JUSTIFICADA )
            {
                $registros = AcpFrequencia::listarFrequencias();
                unset($registros[AcpFrequencia::FREQUENCIA_MEIA]);
                unset($registros[AcpFrequencia::FREQUENCIA_JUSTIFICADA]);
                
                $vlrAlternativaFaltaJustificada = $this->getFormValue('alternativaacaofaltajustificada', $perfilcurso->alternativaacaofaltajustificada);
                $vctOpcoesBiometria[] = $alternativaFaltaJustificada = new MSelection('alternativaacaofaltajustificada', $vlrAlternativaFaltaJustificada, _M('Caso o modelo de avaliao no permita substituir falta por justificativa, utilizar a seguinte situao'), $registros, false);
            }
            
            $justificativapadrao = $vctOpcoesBiometria[] = new MMultiLineField('justificativaregistroparcial', null, _M('Justificativa padro para passagem no registrada'), 25, 5, 25);
            
            $vctBioOps = new MVContainer('vctOpcoesBiometria', $vctOpcoesBiometria);

            if( $this->getFormValue('acaoregistroparcial', $data->acaoregistroparcial) == AcpFrequencia::FREQUENCIA_JUSTIFICADA )
            {
                $validators[] = new MRequiredValidator('justificativaregistroparcial', _M('Justificativa padro para passagem no registrada'));
            }
        }
        
        $fields[] = new MBaseGroup('bsgPermiteRegistrarPortal', _M('Permite registrar frequncias por Portal:', $module), array($htcPortal), 'vertical');
        $fields[] = new MBaseGroup('bsgPermiteRegistrarBiometria', _M('Permite registrar frequncias por Biometria:', $module), array(new MSpacer('&nbsp;'), MMessage::getStaticMessage('msgInfo', _M('Ao habilitar o registro de frequncias por biometria, o professor s poder marcar frequncias no portal quando o arquivo com os registros da biometria for importado.', $module), MMessage::TYPE_INFORMATION), $htcBiometria, $vctBioOps), 'vertical');

        parent::defineFields($fields, $validators);
    }
    
    public function beforeSave(AcpPerfilCurso $pc)
    {
        $pc->alternativaacaomeiapresenca = SAGU::NVL($this->getFormValue('alternativaacaomeiapresenca'), SType::NULL_VALUE);
        $pc->alternativaacaofaltajustificada = SAGU::NVL($this->getFormValue('alternativaacaofaltajustificada'), SType::NULL_VALUE);
        
        return $pc;
    }
}
?>