class FrmCursoSearch extends SSearchForm
{
    protected $campoBuscaGenerica = true;
    
    /**
     * Class constructor
     */
    public function __construct($data)
    {
        parent::__construct(_M('Localizar', 'basic'), new AcpCurso(), array('cursoid'));
    }

    /**
     *  Default method to define fields
     */
    public function defineFields()
    {
        $MIOLO  = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();
        $action = MIOLO::getCurrentAction();
        
        $fields[] = new MSelection('modalidadeS', null, _M('Modalidade', $module), AcpCurso::listarModalidades());
        $fields[] = new MSelection('situacaoS', null, _M('Situao', $module), AcpCurso::listarSituacao());
        $fields[] = new MSelection('perfilcursoidS', null, _M('Perfil de curso', $module), AcpPerfilCurso::listarPerfis());

        parent::defineFields($fields, $module, 'GrdCursoSearch', $validators);
    }
}
