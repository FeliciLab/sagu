class FrmGradeDeHorarioPai extends sLinkedForm
{
    public function getLinkedDefs()
    {
        if ( !$this->defs )
        {
            $defs = $this->newDef();
            $defs->setChave('gradehorarioid');
            $defs->addForm( $this->newFormDef()->setLabel('Grade de horários')->setModule('pedagogico')->setAction('main:config:gradehorario')->setTipo(self::TIPO_UM_PARA_UM) );
            $defs->addForm( $this->newFormDef()->setLabel('Horários')->setModule('pedagogico')->setAction('main:config:horario')->setTipo(self::TIPO_UM_PARA_MUITOS)->setGridModule('pedagogico')->setGridName('GrdHorarioSearch') );

            $this->defs = $defs;
        }
        
        return $this->defs;
    }
}
