class FrmCoordenadores extends FrmCursoPai
{
    public function __construct()
    {
        $this->setLimparCamposVazios(true);
        
        parent::__construct(new AcpCoordenadores(), array('coordenadorcursoid'));
    }
    
    public function defineFields()
    {
        $MIOLO = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();

        $cursoId = MIOLO::_REQUEST('cursoid');
        
        $typeProfessores = new BasProfessor();
  
        $fields[] = new sEscolha('personid', null, _M('Pessoa'), $typeProfessores);
        
        $fields[] = new MCalendarField('enddate', null, _M('Data final'));
        
        $fields[] = $ocorrencia = new MSelection('ocorrenciacursoid', null, _M('Ocorrência de curso'), AcpOcorrenciaCurso::listarPorCurso( $cursoId ));
        $ocorrencia->hint = _M('Preencha este campo para especificar alguma ocorrência de curso para este coordenador. Do contrário, deixe em branco.');
        
        $fields[] = $tipoCoordenador = new MSelection('tipodecoordenadorid', null, _M('Tipo de coordenador'), AcpTipoDeCoordenador::listarTipoDeCoordenador());
        $tipoCoordenador->setIsRequired(true);
        
        parent::defineFields($fields, $validators);
    }
}
