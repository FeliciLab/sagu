class FrmTipoDeCoordenador extends SManagementForm
{
    public function __construct()
    {
        parent::__construct(new AcpTipoDeCoordenador(), array('tipodecoordenadorid'));
    }
    
    public function defineFields()
    {
        $MIOLO = MIOLO::getInstance();
        $module = $MIOLO->getCurrentModule();
        
        $fields[] = new MTextField('descricao', null, _M('Descrição', $module), SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE'));
        $validators[] = new MRequiredValidator('descricao');
        
        parent::defineFields($fields, $validators);
    }
}