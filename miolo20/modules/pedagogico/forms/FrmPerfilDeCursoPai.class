class FrmPerfilDeCursoPai extends sLinkedForm
{
    public function __construct($object = null, $pkey = null)
    {
        if ( !$object || is_array($object) )
        {
            $object = new AcpPerfilCurso();
        }
        
        if ( !$pkey )
        {
            $pkey = array('perfilcursoid');
        }
        
        parent::__construct($object, $pkey);
    }
    
    public function getLinkedDefs()
    {
        $action = MIOLO::getCurrentAction();
        $desabilitaModelos = false;
        $desabilitaRegras = false;
        if( $action == 'main:config:modelosdeavaliacao' )
        {
            $desabilitaRegras = true;
        }
        elseif( $action == 'main:config:perfildecurso' )
        {
            $desabilitaModelos = true;
            $desabilitaRegras = true;
        }
        return $this->newDef()
                ->setChave('perfilcursoid')
                ->addForm( $this->newFormDef()->setLabel('Informaes gerais')->setModule('pedagogico')->setAction('main:config:perfildecurso')->setTipo(self::TIPO_UM_PARA_UM) )
                ->addForm( $this->newFormDef()->setLabel('Modelos de avaliao')->setModule('pedagogico')->setAction('main:config:modelosdeavaliacao')->setTipo(self::TIPO_UM_PARA_UM)->setIsDisabled($desabilitaModelos) )
                ->addForm( $this->newFormDef()->setLabel('Registro de frequncia')->setModule('pedagogico')->setAction('main:config:registrodefrequencias')->setTipo(self::TIPO_UM_PARA_UM) )
                ->addForm( $this->newFormDef()->setLabel('Documentos')->setModule('pedagogico')->setAction('main:config:documentos')->setTipo(self::TIPO_UM_PARA_MUITOS)->setGridModule('pedagogico')->setGridName('GrdDocumentos')->setIsDisabled($desabilitaDoc) )
                ->addForm( $this->newFormDef()->setLabel('Regras inscrio e matrcula')->setModule('pedagogico')->setAction('main:config:regrasmatricula')->setTipo(self::TIPO_UM_PARA_UM)->setIsDisabled($desabilitaRegras) )
                        ;
    }
}
