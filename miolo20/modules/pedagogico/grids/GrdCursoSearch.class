class GrdCursoSearch extends SGrid
{
    public function __construct($filters)
    {
        $MIOLO = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();

        $columns = array(
            'acpcurso.codigo' => new MGridColumn( _M('Cdigo', $module)),
            'acpcurso.perfilcursoid' => new MGridColumn( _M('Cod. perfil curso', $module), 'right'),
            'acpcurso.nome' => new MGridColumn( _M('Nome', $module)),
            'acpcurso.modalidade' => new MGridColumn( _M('Modalidade', $module), 'left', false, 0, true, AcpCurso::listarModalidades()),
            'acpcurso.situacao' => new MGridColumn( _M('Situao', $module), 'center', false, 0, true, AcpCurso::listarSituacao()),
            'acpcurso.datainicio' => new MGridColumn( _M('Data incio', $module), 'center'),
            'acpcurso.datafim' => new MGridColumn( _M('Data fim', $module), 'center'),
        );        

        parent::__construct($filters, $columns, __CLASS__, array('cursoid' => '%acpcurso.cursoid%'));        
        
        $url_matrizes = $MIOLO->getActionURL($module, 'main:register:matriz', null, array('cursoid'=>'%acpcurso.cursoid%', 'function'=>'insert'));        
        $url_coordenador = $MIOLO->getActionURL($module, 'main:register:coordenadores', null, array('cursoid'=>'%acpcurso.cursoid%', 'function'=>'insert'));
        
        $this->addActionIcon(_M('Matrizes curriculares', $module), 'default_mini.png', $url_matrizes);
        $this->addActionIcon(_M('Coordenador de curso', $module), 'user.png', $url_coordenador);
        $this->setRowMethod($this, 'myRowMethod');
    }
    
    public function myRowMethod($i, $row, $actions, $columns )
    {
        $MIOLO  = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();
        
        if( $row['perfilcurso.cadastromatrizcurricular'] == DB_FALSE )
        {
            $actions[2]->enabled = false;
        }
        else
        {
            $actions[2]->enabled = true;
        }
        if( $row['perfilcurso.cadastrocoordenadores'] == DB_FALSE )
        {
            $actions[3]->enabled = false;
        }
        else
        {
            $actions[3]->enabled = true;
        }
    }
}
