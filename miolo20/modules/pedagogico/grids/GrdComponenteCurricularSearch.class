class GrdComponenteCurricularSearch extends SGrid
{
    public function __construct($filters)
    {
        $module = MIOLO::getCurrentModule();

        $columns = array(
            'acpcomponentecurricular.componentecurricularid' => new MGridColumn( _M('Id', $module)),
            'acpcomponentecurricular.codigo' => new MGridColumn( _M('Cdigo', $module)),
            'acpcomponentecurricular.nome' => new MGridColumn( _M('Nome', $module)),
            'acpcomponentecurricular.descricao' => new MGridColumn( _M('Descrio', $module)),
            'acpcomponentecurricular._tipo' => new MGridColumn( _M('Tipo', $module), 'center', false, 0, true),
            'componentedisciplina.cargahorariapresencial' => new MGridColumn( _M('C/H Presencial', $module), 'center', false, 0, true),
            'componentedisciplina.cargahorariaextraclasse' => new MGridColumn( _M('C/H Extra classe', $module), 'center', false, 0, true),  
            'componentedisciplina.cargahoraria' => new MGridColumn( _M('C/H Total', $module), 'center', false, 0, true),
        );

        parent::__construct($filters, $columns, __CLASS__, array('componentecurricularid' => '%acpcomponentecurricular.componentecurricularid%'));


    }
}
