class GrdOfertaTurma extends SGrid
{
    public function __construct($filters)
    {
        $MIOLO = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();

        $columns = array(
            'acpofertaturma.ofertaturmaid' => new sGridColumn( null, _M('Cdigo', $module), 'left', array('visible' => false)),
            'acpofertaturma.codigo' => new sGridColumn( null, _M('Cdigo', $module), 'left', array('visible' => false)),
            'acpofertaturma.descricao' => new sGridColumn( null, _M('Descrio', $module), 'left'),
            'acpofertaturma.minimoalunos' => new sGridColumn( null, _M('Mnimo de alunos', $module), 'right'),
            'acpofertaturma.maximoalunos' => new sGridColumn( null, _M('Mximo de alunos', $module), 'right'),
            'totaldematriculados' => new sGridColumn( null, _M('Total de matriculados', $module), 'right'),
            'totaldeinscritos' => new sGridColumn( null, _M('Total de inscritos', $module), 'right'),
            'totaldependentes' => new sGridColumn( null, _M('Total de inscritos pendentes', $module), 'right'),
            'totaldecancelados' => new sGridColumn( null, _M('Total de inscritos cancelados', $module), 'right'),
            'acpofertaturma.datainicialoferta' => new sGridColumn( null, _M('Data incio oferta', $module), 'center'),
            'acpofertaturma.datafinaloferta' => new sGridColumn( null, _M('Data fim oferta', $module), 'center'),
            'acpofertaturma.datainicialaulas' => new sGridColumn( null, _M('Data incio aulas', $module), 'center'),
            'acpofertaturma.datafinalaulas' => new sGridColumn( null, _M('Data fim aulas', $module), 'center'),
            'acpofertaturma.habilitada' => new sGridColumn( null, _M('Habilitado', $module), 'center', array('visible' => false)),
        );

        parent::__construct($filters, $columns, __CLASS__, array('ofertaturmaid' => '%acpofertaturma.ofertaturmaid%', 'ofertacursoid' => '%acpofertaturma.ofertacursoid%'));
        
        $this->setRowMethod('GrdOfertaTurma', 'myRowMethod');
    }
    
    public function setDefaultGridActions($primaryKey = array()) 
    {
        $MIOLO = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule(); 
        
        parent::setDefaultGridActions($primaryKey);
        
        //Adiciona ao para edio de componentes
        $url_componentes = $MIOLO->getActionURL($module, 'main:process:ofertarcomponentescurriculares', null, array('ofertaturmaid' => '%acpofertaturma.ofertaturmaid%', 'ofertacursoid' => '%acpofertaturma.ofertacursoid%'));
        $this->addActionIcon(_M('Ofertar componentes curriculares', $module), 'button_properties.png', $url_componentes);
        
        $url_calendario = $MIOLO->getActionURL($module, 'main:process:calendariodeaulas', null, array('ofertaturmaid' => '%acpofertaturma.ofertaturmaid%', 'ofertacursoid' => '%acpofertaturma.ofertacursoid%', 'function' => 'insert'));
        $this->addActionIcon(_M('Calendrio de aulas', $module), 'cal.gif', $url_calendario);
    }
}
