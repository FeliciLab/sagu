class GrdDivisaoDeHorariosDaGradeDeHorarios extends SGrid
{
    public function __construct($filters)
    {
        $MIOLO = MIOLO::getInstance();
        $module = $MIOLO->getCurrentModule();

        $columns = array(
            'ofertacomponentecurricularid' => new MGridColumn( _M('Oferta do componente curricular afetado', $module), 'right', false, 0, false),
            'horarioid' => new MGridColumn( _M('Cdigo do horrio', $module), 'right', false, 0, false),
            'ocorrenciahorarioofertaid' => new MGridColumn( _M('Ocorrencia do horrio da oferta', $module), 'right', false, 0, false),
            'componentecurricular' => new MGridColumn( _M('Componente curricular ofertado', $module), 'left', false, 0, true),
            'turma' => new MGridColumn( _M('Turma', $module), 'left', false, 0, true),
            'curso' => new MGridColumn( _M('Curso', $module), 'left', false, 0, true),
            'cargahoraria' => new MGridColumn( _M('Carga horria antes da diviso', $module), 'right', false, 0, true),
            'cargahorariaaposdivisao' => new MGridColumn( _M('Carga horria aps a diviso', $module), 'right', false, 0, true),
            'numrodealunosmatriculados' => new MGridColumn( _M('Numero de alunos matriculados', $module), 'right', false, 0, true),
            'numerodealunoscomsituacaoalterada' => new MGridColumn( _M('Nmero de alunos que mudaram de situao', $module), 'right', false, 0, true)
        );

        $primaryKey = array(
            'ofertacomponentecurricularid' => '%ofertacomponentecurricularid%',
            'horarioid' => '%horarioid%'
        );
        parent::__construct($filters, $columns, __CLASS__, $primaryKey);
        
        $this->clearActions();
        $this->disablePagination();
        $this->disableExports();
        
        $href = SForm::getAjaxAction('popupVizualisarAlunosAfetados', 'divLimbo', false, $primaryKey, false, false);
        $this->addActionIcon(_M('Visualizar alunos afetados que sero mudadas suas situaes com a diviso'), $MIOLO->getUI()->getImage('academic', 'report-16x16.png'), $href);
    }
}
