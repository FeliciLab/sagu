class GrdCondicaoDePagamento extends SGrid
{
    public function __construct($filters)
    {
        $module = MIOLO::getCurrentModule();

        $columns = array(
            'condicaodepagamentoid' => new MGridColumn( _M('Cdigo', $module), 'left', false, 0, false),
            'descricao' => new MGridColumn( _M('Condio', $module)),
            'exigeentrada' => new MGridColumn( _M('Exige entrada', $module), 'center'),
            'valorparcela' => new MGridColumn( _M('Valor parcela', $module), 'center'),
            'valortotal' => new MGridColumn( _M('Valor total', $module), 'center'),
        );

        parent::__construct($filters, $columns, __CLASS__, array('condicaodepagamentoid' => '%condicaodepagamentoid%'));
        $this->setUseSelecteds(true);
    }
}
