class GrdComponenteCurricularMatriz extends SGrid
{
    public $matrizCurricularGrupoId;
    
    public function __construct($filters)
    {
        $module = MIOLO::getCurrentModule();

        $columns = array(
            'acpcomponentecurricularmatriz.componentecurricularmatrizid' => new MGridColumn( _M('Cdigo', $module), 'center', false, 0, false),
            'acpcomponentecurricularmatriz.componentecurricularid' => new MGridColumn( _M('Cdigo componente', $module), 'center', false, 0, false),
            'acpcomponentecurricularmatriz.matrizcurriculargrupoid' => new MGridColumn( _M('Grupo', $module), 'center', false, 0, false),
            'componentecurricular.codigo' => new MGridColumn( _M('Cdigo', $module)),
            'componentecurricular.nome' => new MGridColumn( _M('Nome', $module)),
            'componentecurricular.descricao' => new MGridColumn( _M('Descrio', $module)),
            'acpcomponentecurricularmatriz.obrigatorio' => new MGridColumn( _M('Obrigatrio', $module), 'center', false, 0, true, SAGU::listYesNo()),
            'tipocomponentecurricular.descricao' => new MGridColumn( _M('Tipo', $module), 'center', false, 0, true),
            'acpcomponentecurricularmatriz.situacao' => new MGridColumn( _M('Situao', $module), 'center', false, 0, true, AcpComponenteCurricularMatriz::listarSituacao()),
            'componentedisciplina.cargahorariapresencial' => new MGridColumn( _M('Carga horria presencial', $module), 'center', false, 0, true),
            'componentedisciplina.cargahorariaextraclasse' => new MGridColumn( _M('Carga horria extra classe', $module), 'center', false, 0, true),
        );

        
        parent::__construct($filters, $columns, __CLASS__, array('componentecurricularid' => '%acpcomponentecurricularmatriz.componentecurricularid%', 'matrizcurriculargrupoid' => '%acpcomponentecurricularmatriz.matrizcurriculargrupoid%'));
        $this->clearActions();
        $this->setRowMethod('GrdComponenteCurricularMatriz', 'myRowMethod');
        
        
    }
    
    public function generate() 
    {
        $MIOLO = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();
        
        //Adiciona as aes de editar grupo, excluir grupo e adicionar componente na grid
        $this->headerLinks['lnkEditar'] = new MButton('lnkEditar', _M('Editar', $module), SForm::getAjaxAction('grupo', 'divPopup', true, array('matrizcurriculargrupoid' => $this->matrizCurricularGrupoId)));
        $this->headerLinks['lnkExcluir'] = new MButton('lnkExcluir', _M('Excluir', $module), SForm::getAjaxAction('excluirGrupo', 'divPopup', true, array('matrizcurriculargrupoid' => $this->matrizCurricularGrupoId)));
        $url_componente = SForm::getAjaxAction('adicionarComponente', 'divPopup', true, array('matrizcurriculargrupoid' => $this->matrizCurricularGrupoId));
        $this->headerLinks['lnkAdicionarComponente'] = new MButton('lnkAdicionarComponente', _M('Adicionar componente', $module), $url_componente );
        
        return parent::generate();
    }
    
    public function myRowMethod($i, $row, $actions, $columns )
    {
        $url_edit = SForm::getAjaxAction('adicionarComponente', 'divPopup', true, array('matrizcurriculargrupoid' => $this->matrizCurricularGrupoId, 'componentecurricularmatrizid' => $row['acpcomponentecurricularmatriz.componentecurricularmatrizid']), true, false);
        $actions[0]->href = $url_edit;
        $url_del = SForm::getAjaxAction('removeComponente', 'divPopup', true, array('matrizcurriculargrupoid' => $this->matrizCurricularGrupoId, 'componentecurricularmatrizid' => $row['acpcomponentecurricularmatriz.componentecurricularmatrizid']), true, false);
        $actions[1]->href = $url_del;
    }
}
