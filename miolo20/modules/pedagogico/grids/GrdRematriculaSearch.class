class GrdRematriculaSearch extends SGrid
{
    public function __construct($filters)
    {
        $module = MIOLO::getCurrentModule();

        $columns = array(
            'inscricao.inscricaoid' => new MGridColumn( _M('Cd. inscrio', $module), 'right'),
            '_nomecurso' => new MGridColumn( _M('Oferta de Curso (Curso)', $module), 'left'),
            'ofertaturma.descricao' => new MGridColumn( _M('Turma', $module), 'left'),
            '_pessoa' => new MGridColumn( _M('Pessoa', $module), 'left'),
            'acpmatricula.situacao' => new MGridColumn( _M('Situao', $module), 'left'),
            'acpmatricula.datamatricula' => new MGridColumn( _M('Data matrcula', $module), 'center'),
            'inscricao.personid' => new MGridColumn( _M("Cd. pessoa"), 'right', false, 0, false)
        );

        parent::__construct($filters, $columns, __CLASS__, array('inscricaoid' => '%0%'));
        
        $this->setPageLength(200);
        $this->clearActions();

        $this->adicionarAcaoEmMassa( $this->acaoEmMassa()->setLabel('Efetuar rematrcula')->setMetodo('rematricular') );
    }
}
