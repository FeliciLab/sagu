class GrdObservacoesDoAlunoSearch extends SGrid
{
    public function __construct($filters)
    {
        $module = MIOLO::getCurrentModule();

        $columns = array(
            'acpobservacoesdoaluno.username' => new MGridColumn( _M('Usurio', $module), 'left'),
            'acpobservacoesdoaluno.dataobservacao' => new MGridColumn( _M('Data/Hora', $module), 'center'),
            'tipodeobservacao.descricao' => new MGridColumn( _M('Tipo de observao', $module), 'center'),
            'acpobservacoesdoaluno.observacao' => new MGridColumn( _M('Observao', $module), 'left'),
        );

        parent::__construct($filters, $columns, __CLASS__, array('observacaodoalunoid' => '%acpobservacoesdoaluno.observacaodoalunoid%', 'personId' => '%acpobservacoesdoaluno.personid%'));
        $this->setRowMethod($this,'myRowMethod');
    }
    
    /**
     * Valida permisses do usurio para remover ou alterar registros
     * @param type $i
     * @param type $row
     * @param type $actions
     * @param type $columns
     */
    public function myRowMethod($i, $row, $actions, $columns )
    {
        $MIOLO = MIOLO::getInstance();
        $usuario = $row['acpobservacoesdoaluno.username'];
        if( $MIOLO->checkAccess('FrmDiverseConsultationPedagogico', A_ADMIN, false, true) || $MIOLO->getLogin()->id == $usuario )
        {
            $actions[0]->enable();            
            $actions[0]->alt = _M('Editar');
            $actions[1]->enable();            
            $actions[1]->alt = _M('Excluir');
        }
        else
        {
             $actions[0]->disable();            
             $actions[0]->alt = _M('Voc no possui permisso para editar este registro');
             $actions[1]->disable();            
             $actions[1]->alt = _M('Voc no possui permisso para remover este registro');
        }
    }
}
