class GrdPerfilDeCursoSearch extends SGrid
{
    public function __construct($filters)
    {
        $module = MIOLO::getCurrentModule();

        $columns = array(
            'acpperfilcurso.perfilcursoid' => new MGridColumn( _M('Cdigo', $module)),
            'acpperfilcurso.descricao' => new MGridColumn( _M('Descrio', $module)),
            'acpperfilcurso.formadeoferta' => new MGridColumn( _M('Forma de oferta', $module), 'left', false, 0, true, AcpPerfilCurso::listarFormaDeOferta()),
            'acpperfilcurso.organizacao' => new MGridColumn( _M('Organizao', $module), 'left', false, 0, true, AcpPerfilCurso::listarOrganizacao()),
            'acpperfilcurso.ativo' => new MGridColumn( _M('Ativo', $module) ),
        );

        parent::__construct($filters, $columns, __CLASS__, array('perfilcursoid' => '%acpperfilcurso.perfilcursoid%'));
        
//        $this->setIsContextualGrid();
    }
}
