class GrdOcorrenciaDeCurso extends SGrid
{
    public function __construct($filters)
    {
        $MIOLO = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();

        $columns = array(
            'acpocorrenciacurso.ocorrenciacursoid' => new MGridColumn( _M('Cdigo', $module)),
            'acpocorrenciacurso.situacao' => new MGridColumn( _M('Situao', $module),  'left', false, 0, true, AcpOcorrenciaCurso::listarSituacao()),
            'turn.description' => new MGridColumn( _M('Turno', $module)),
            'unit.description' => new MGridColumn( _M('Unidade', $module)),
        );

        parent::__construct($filters, $columns, __CLASS__, array('cursoid' => '%acpocorrenciacurso.cursoid%', 'ocorrenciacursoid' => '%acpocorrenciacurso.ocorrenciacursoid%'));
    }
    
    public function setDefaultGridActions($primaryKey = array())
    {
        $MIOLO = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule(); 
        
        parent::setDefaultGridActions($primaryKey);

        $this->addActionIcon(
            _M('Atos regulatrios', $module),
            'register-16x16.png',
            $MIOLO->getActionURL($module, 'main:register:atoregulatorio', null, array('cursoid' => '%acpocorrenciacurso.cursoid%', 'ocorrenciacursoid' => '%acpocorrenciacurso.ocorrenciacursoid%'))
        );
    }
}
