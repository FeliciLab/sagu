class GrdDigitacaoDeNotasTcc extends SGrid
{
    public $matriculaid;
    public $componentedeavaliacao;
    public $modelodeavaliacao;
    
    public function __construct($filters)
    {
        $componentedeavaliacaoid = $filters['componentedeavaliacaoid'];
        $modelodeavaliacaoid = $filters['modelodeavaliacaoid'];
        $this->matriculaid = $filters['matriculaid'];
        
        $this->componentedeavaliacao = new AcpComponenteDeAvaliacao($componentedeavaliacaoid);
        $this->modelodeavaliacao = new AcpModeloDeAvaliacao($modelodeavaliacaoid);
        
        $MIOLO = MIOLO::getInstance();
        $module = SAGU::getFileModule(__FILE__);
        $action = MIOLO::getCurrentAction();

        $columns = array();
        $columns['acptccbanca.tccbancaid'] = new MGridColumn(_M('Cdigo da banca', $module), 'left', true, null, false);
        $columns['pessoa.name'] = new MGridColumn(_M('Avaliador', $module), 'left', true, null, true, null, false);
        $columns['nota'] = new MGridColumn($this->componentedeavaliacao->descricao,  'center', true, null, true, null, false);
        
        parent::__construct($filters, $columns, __CLASS__, $primaryKey);
        
        $this->disableExports();
        $this->disablePagination();
        $this->setPageLength(99999999999);
        $this->disableColumnSorting();
        
        $this->setRowMethod($this, 'myRowMethod');
    }
    
    public function myRowMethod($i, $row, $actions, $columns)
    {
        $avaliacao = AcpAvaliacao::obterAvaliacao($this->matriculaid, $this->componentedeavaliacao->componenteDeAvaliacaoId, $row['acptccbanca.tccbancaid']);
        
        //Cria os campo para as notas conforme tipos especficos de dados
        if( $this->modelodeavaliacao->tipoDeDados == AcpModeloDeAvaliacao::TIPO_NOTA )
        {
            $componenteNota = AcpComponenteDeAvaliacaoNota::obterComponenteNotaDoComponente($this->componentedeavaliacao->componenteDeAvaliacaoId);
            
            $nota = new MTextField('nota_'.$row['acptccbanca.tccbancaid'], SAGU::NVL(MIOLO::_REQUEST('nota_'.$row['acptccbanca.tccbancaid']), $avaliacao->nota));
            $nota->addAttribute('onChange', SForm::getAjaxAction('validaNota', 'divValidacao', false, array('tccbancaid' => $row['acptccbanca.tccbancaid'], 'componenteDeAvaliacaoNotaId' => $componenteNota->componenteDeAvaliacaoNotaId, 'cod' => $i)));
            $columns['nota']->control[$i] = new MDiv('div_nota_'.$row['acptccbanca.tccbancaid'], array($nota));
        }
        elseif( $this->modelodeavaliacao->tipoDeDados == AcpModeloDeAvaliacao::TIPO_CONCEITO )
        {
            $componenteConceito = AcpComponenteDeAvaliacaoConceito::obterComponenteConceitoDoComponente($this->componentedeavaliacao->componenteDeAvaliacaoId);
            $conceitos = AcpConceitosDeAvaliacao::listarConceitosDoConjunto($componenteConceito->conjuntoDeConceitosId);
            $conceito = new MSelection('conceito_'.$row['acptccbanca.tccbancaid'], SAGU::NVL(MIOLO::_REQUEST('conceito_'.$row['acptccbanca.tccbancaid']), $avaliacao->conceitodeavaliacaoid), NULL, $conceitos);
            $conceito->addAttribute('onChange', "var check = document.getElementById('selectGrdMatriculasRetroativas[$i]'); if( check.checked == false ) { check.click(); }");
            $columns['nota']->control[$i] = new MDiv('div_conceito_'.$row['acptccbanca.tccbancaid'], array($conceito));
        }
        elseif( $this->modelodeavaliacao->tipoDeDados == AcpModeloDeAvaliacao::TIPO_PARECER )
        {
            $parecer = new MTextField('parecer_'.$row['acptccbanca.tccbancaid'], MIOLO::_REQUEST('parecer_'.$row['acpmatriculasretroativas.componentecurricularmatrizid']));
            $columns['nota']->control[$i] = new MDiv('div_parecer_'.$row['acpmatriculasretroativas.componentecurricularmatrizid'], array($parecer));
        }
    }
}
