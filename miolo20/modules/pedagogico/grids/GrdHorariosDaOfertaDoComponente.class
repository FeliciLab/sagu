class GrdHorariosDaOfertaDoComponente extends SGrid
{
    public function __construct($filters)
    {
        $module = MIOLO::getCurrentModule();

        $function = MIOLO::_REQUEST('function');
        
        if( $function == SForm::FUNCTION_UPDATE )
        {
            $ofertacomponentecurricularid = MIOLO::_REQUEST('ofertacomponentecurricularid');
            $ofertacomponentecurricular = new AcpOfertaComponenteCurricular($ofertacomponentecurricularid);
            $ofertacursoid = $ofertacomponentecurricular->ofertaturma->ofertacursoid;
        }
        else
        {
            $ofertacursoid = MIOLO::_REQUEST('ofertacursoid');
        }
        
        
        $exibirHorarios = false;
        $ofertaDeCurso = new AcpOfertaCurso($ofertacursoid);        
        if( $ofertaDeCurso->ocorrenciacurso->curso->perfilcurso->formacursarcomponentescurriculares == AcpPerfilCurso::FORMA_CURSAR_COMPONENTES_CONCOMITANTE )
        {
            $exibirHorarios = true;
        }
        
        $columns = array(
            'horariooferta.horarioofertacomponentecurricularid' => new MGridColumn( _M('Cdigo', $module), 'center', false, 0, false),
            'horariooferta.ofertacomponentecurricularid' => new MGridColumn( _M('Cdigo oferta componente curricular', $module), 'center', false, 0, false),
            'horario.diasemana' => new MGridColumn( _M('Dia da semana', $module), 'left', false, 0, $exibirHorarios, SAGU::listarDiasDaSemana()),
            'horariooferta._horario' => new MGridColumn( _M('Horrio', $module), 'center', false, 0, $exibirHorarios),
            'horariooferta.numerodeaulas' => new MGridColumn( _M('Aulas', $module), 'right'),
            'professor.name' => new MGridColumn( _M('Professor', $module)),
            'horariooferta._sala' => new MGridColumn( _M('Sala', $module)),
        );

        parent::__construct($filters, $columns, __CLASS__, array('componentecurricularid' => '%horariooferta._componentecurricularid%', 'horarioofertacomponentecurricularid' => '%horariooferta.horarioofertacomponentecurricularid%', 'ofertacomponentecurricularid' => '%horariooferta.ofertacomponentecurricularid%'));
        
        $this->clearActions();

        // Grid utilizada em mais de um lugar, so queremos que adicione a acao em um lugar
        if ( preg_match('/horarioofertacomponentecurricularturma/', MIOLO::getCurrentAction()) )
        {
            $this->adicionarAcaoEmMassa( $this->acaoEmMassa()->setLabel(_M('Excluir horrios'))->setMetodo('excluirSelecionados')->setPedirConfirmacao(true) );
        }
    }
}
