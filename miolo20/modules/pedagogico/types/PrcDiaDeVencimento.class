class PrcDiaDeVencimento extends SType
{
    protected $_utilizaNovoPadrao = true;
    
    public $diadevencimentoid;
    public $dia;
    public $ativo;
    public $precocursoid;
    
    /**
     * Lista as opções de dias de vencimento
     * @return type
     */
    public static function listarDiasDeVencimento($precocursoid, $somenteativos = true)
    {
        $sql = "SELECT dia,
                       diaDeVencimentoId
                  FROM prcDiaDeVencimento
                 WHERE precoCursoId = ?";
        $args[] = $precocursoid;
        
        if ( $somenteativos )
        {
            $sql .= " AND ativo";
        }
        
        $registros = SDatabase::query($sql, $args);
        foreach( $registros as $dia )
        {
            $return[$dia[1]] = $dia[0];
        }
        return $return;
    }
}
