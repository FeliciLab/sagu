class AcpCalendarioAcademico extends SType
{
    protected $_utilizaNovoPadrao = true;
    
    public $calendarioacademicoid;
    public $datainicial;
    public $datafinal;
    public $descricao;    
    
    public function delete() 
    {
        $eventos = AcpCalendarioAcademicoEvento::obterEventosDoCalendario($this->calendarioacademicoid);
        if( count($eventos) > 0 )
        {
            foreach ($eventos as $cod=>$evento)
            {
                $evento->delete();
            }
        }
        
        return parent::delete();
    }
}
