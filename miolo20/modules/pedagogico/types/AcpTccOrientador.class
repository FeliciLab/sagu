class AcpTccOrientador extends SType
{
    const TIPO_ORIENTADOR = 'O';
    const TIPO_COORIENTADOR = 'C';
    
    public $orientadorid;
    public $tccid;
    public $personid;
    public $tipoorientador;

    protected $_defaultOrder = 'pessoa.name';
    
    protected $_descriptionColumn = 'pessoa.name';
    
    protected $_associations = array(
        'pessoa' => array(
            'mode' => 'one',
            'typeClass' => 'BasPessoaFisica',
            'joinColumn' => 'personid',
            'joinOnly' => true,
        )
    );
    
    /**
     * @var BasPessoaFisica
     */
    public $pessoa;
    
    /**
     * @return array
     */
    public static function listarTipos()
    {
        return array(
            self::TIPO_ORIENTADOR => _M('Orientador'),
            self::TIPO_COORIENTADOR => _M('Co-orientador'),
        );
    }
    
    public function validarSalvar()
    {
        $count = $this->findCount($this->msql()
                ->addEqualCondition('AcpTccOrientador.tccid', $this->tccid)
                ->addEqualCondition('AcpTccOrientador.personid', $this->personid));
        
        if ( $count > 0 )
        {
            throw new Exception(_M('Esta pessoa j foi cadastrada.'));
        }
    }
}
