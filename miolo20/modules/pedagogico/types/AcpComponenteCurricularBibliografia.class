class AcpComponenteCurricularBibliografia extends SType
{
    protected $_utilizaMultiUnidade = true;
    
    protected $_utilizaNovoPadrao = true;
    
    protected $_tableName = 'acpComponenteCurricularBibliografia';
     
    public function getTableAlias()
    {
        return 'bibliografia';
    }
    
    const TIPO_BASICA = 'B';    
    const TIPO_COMPLEMENTAR = 'C';
    
    public $componentecurricularbibliografiaid;
    public $componentecurricularid;
    public $descricao;
    public $bibliografiaid;
    public $tipobibliografia;
    
    public static function obterBibliografiasDoComponenteCurricular($componenteCurricularId)
    {
        $componenteCurricularBibliografia = new AcpComponenteCurricularBibliografia();
        $msql = $componenteCurricularBibliografia->msql();
        $msql->setColumns('componentecurricularbibliografiaid');
        $msql->addEqualCondition('componentecurricularid', $componenteCurricularId);
        $searchComponentesCurricularesBibliografia = $componenteCurricularBibliografia->findList($msql);                

        if( count($searchComponentesCurricularesBibliografia) > 0 )
        {
            foreach($searchComponentesCurricularesBibliografia as $cod=>$linha)
            {
                $return[] = new AcpComponenteCurricularBibliografia($cod);
            }
        }

        return $return;
    }
}
