class AcpDocentesEad extends SType
{   
    public $docenteeadid;
    public $professorid;
    public $ofertacomponentecurricularid;
    public $cargahoraria;
    protected $_utilizaNovoPadrao = true;
    
      
    public function __construct($id = null)
    {
        parent::__construct($id);
    }
 
        /**
     * Do a search on the database table handled by the class
     *
     * @param $filters (object): Search filters
     *
     * @return (object): An object containing the search results
     **/
    public function getDocentesAsObject($ofertaComponente, $docenteeadid=null)
    {
        $fields = array( 'docenteeadid',
                         'professorid',
                         'ofertacomponentecurricularid',
                         'cargahoraria');

        return SAGU::resultToObject($this->getDocentes($ofertaComponente,$docenteeadid), $fields);
    }
        /**
     * Obtem cod do residente ativo
     * 
     * @return int
     */
    public static function getDocentes($ofertaComponente,$docenteeadid=null)
    {
        $sql = 'SELECT A.docenteeadid,
                       A.professorid,
                       A.ofertacomponentecurricularid,
                       A.cargahoraria
                  FROM acpdocentesead A
                 WHERE A.ofertacomponentecurricularid = ?';
        
        $args[] = $ofertaComponente;

        if ( strlen($docenteeadid)  >  0 )
        {
            $sql.=' AND A.docenteeadid = ?';
            $args[] = $docenteeadid;
        }
                                  
        $result = SDatabase::query($sql, $args);        
        
        return $result;
    }
    
    // Insert atividades praticas
     public function insertDocente($data)
    {
        $sql = 'INSERT INTO acpdocentesead
            (
               docenteeadid,
               professorid,
               ofertacomponentecurricularid,
               cargahoraria)
             VALUES
             (?,
              ?,
              ?,
              ?)';
        
        $sqlPK = "SELECT nextval('acpdocentesead_docenteeadid_seq'::regclass)";
        $result = SDatabase::query($sqlPK);
        $docenteeadid = $result[0][0];
        
        $args = array(
            $docenteeadid,
            $data->professorid,
            $data->ofertacomponentecurricularid,
            $data->cargahoraria   
        );

        $result = SDatabase::execute($sql, $args);

        if ( $result )
        {
            $this->docenteeadid = $data->docenteeadid;
        }
        return $result;
    }
    
        /**
     * Update data from a specific record
     *
     * @param $data (object): Data which will replace the old record data
     *
     * @return (boolean): True if succeed, otherwise False
     *
     **/
    public function updateDocente($data)
    {
        $sql = 'UPDATE acpdocentesead
                   SET professorid = ?,
                       ofertacomponentecurricularid = ?,
                       cargahoraria = ?
                 WHERE docenteeadid = ?';

        $args = array( $data->professorid,
                       $data->ofertacomponentecurricularid,
                       $data->cargahoraria,
                       $data->docenteeadid
            );

        $result = SDatabase::execute($sql, $args);

        return $result;
    }
        /**
     * Delete a record
     *
     * @param $conceptId (string): Primary key for deletion
     *
     * @return (boolean): True if succeed, otherwise False
     *
     **/
    public function deleteDocente($docenteeadid)
    {
        $sql = 'DELETE FROM acpdocentesead
                      WHERE docenteeadid = ?';
        
        $args = array($docenteeadid);

        $result = SDatabase::execute( $sql, $args );

        return $result;
    }

}
