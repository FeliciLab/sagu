class AcpOcorrenciaHorarioOfertaFacilitadores extends SType
{
    
    public $id;
    public $ocorrenciahorarioofertaid;
    public $facilitadorid;
    public $tipodedocenteid;
    
    public function save()
    {
        return parent::save();
    }

    /**
     * @return boolean
     */
    public function removerFacilitadores($ocorrenciahorarioofertaid)
    {
        $sql = "DELETE FROM acpocorrenciahorarioofertafacilitadores WHERE ocorrenciahorarioofertaid = ?";
        $args = array($ocorrenciahorarioofertaid);

        $ok = SDatabase::execute($sql, $args);

        return $ok;
    }

    public static function obterFacilitadores($ocorrenciahorarioofertaid)
    {
        $facilitadores = array();

        $sql = " SELECT *
                   FROM acpocorrenciahorarioofertafacilitadores
                   WHERE ocorrenciahorarioofertaid = ?";


        $query = SDatabase::query(SDatabase::prepareSQL($sql, array($ocorrenciahorarioofertaid)));
        foreach ( $query as $row )
        {
            $facilitadores[] = $row[2];
        }

        return $facilitadores;
    }

    public static function obterFacilitadoresNoFormatoStdClass($ocorrenciahorarioofertaid)
    {
        $facilitadores = array();

        $sql = " SELECT *
                   FROM acpocorrenciahorarioofertafacilitadores
                   WHERE ocorrenciahorarioofertaid = ?";

        $query = SDatabase::query(SDatabase::prepareSQL($sql, array($ocorrenciahorarioofertaid)));
        foreach ( $query as $row ) {

            $docente = new stdClass();
            $docente->facilitadorid = $row[2];
            $docente->tipodedocenteid = $row[3];
            $facilitadores[] = $docente;
        }

        return $facilitadores;
    }
}