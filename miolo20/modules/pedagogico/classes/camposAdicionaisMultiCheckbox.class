class camposAdicionaisMulticheckbox extends camposAdicionais
{
    /**
     *
     * @var sMultiCheckbox
     */
    private $checkboxes;
    
    public function getCheckboxes()
    {
        $valores = $this->getDados();

//        if ( is_object($valor) || is_array($valor) )
//        {
//            $valor = current(array_keys((array)$valor));
//        }
        
        $this->criaCbs();
        
        $this->checkboxes->setCheckeds( array_keys( (array) $valores ) );

        return $this->checkboxes;
    }
    
    public function criaCbs()
    {
        if ( !$this->checkboxes )
        {
            $this->checkboxes = new sMultiCheckbox($this->getId(), $this->getLabel(), $this->getCheckboxValues());
        }
    }
    
    public function getCampos() {
        return array( $this->getCheckboxes() );
    }
    
    public function getDados() {
        $MIOLO = MIOLO::getInstance();
        $dados = parent::getDados();
        
        if ( ( is_object($dados) || is_array($dados) ) && !$MIOLO->page->isPostBack() )
        {
            return (array) $dados;
        }
        else
        {
            $this->criaCbs();
            $lista = $this->getCheckboxValues();

            foreach ( $lista as $key => $label )
            {
                if ( !in_array( $key, $this->checkboxes->getCheckeds() ) )
                {
                    unset($lista[$key]);
                }
            }
            
            return $lista;
        }
    }
    
    /**
     * @return array
     */
    public function getCheckboxValues()
    {
        return SAGU::listYesNo();
    }
}
