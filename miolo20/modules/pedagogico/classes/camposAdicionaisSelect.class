class camposAdicionaisSelect extends camposAdicionais
{
    public function getSelection()
    {
        $valor = $this->getDados();

        if ( is_object($valor) || is_array($valor) )
        {
            $valor = current(array_keys((array)$valor));
        }

        return new MSelection($this->getId(), $valor, $this->getLabel(), $this->getSelectValues());
    }
    
    public function getCampos() {
        return array( $this->getSelection() );
    }
    
    public function getDados() {
        $dados = parent::getDados();
        
        if ( is_object($dados) || is_array($dados) )
        {
            return $dados;
        }
        else
        {
            $lista = $this->getSelectValues();

            return array($dados => $lista[$dados]);
        }
    }
    
    /**
     * @return array
     */
    public function getSelectValues()
    {
        return SAGU::listYesNo();
    }
}
