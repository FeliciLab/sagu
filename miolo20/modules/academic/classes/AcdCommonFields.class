class AcdCommonFields
{
    /**
     * Obtem imagem de falta, presenca, meia-presenca, etc...
     *
     * @param string $value Ver definicoes de BusinessAcademicBusFrequenceEnroll::listFrequencyTypes()
     * @return MImage
     */
    public static function getFrequencyImage($value, $label = null)
    {
        $MIOLO = MIOLO::getInstance();
        $module = SAGU::getFileModule(__FILE__);
        $listLabels = BusinessAcademicBusFrequenceEnroll::listFrequencyTypes();
        
        // Localizacao das imagens
        $img = array();
        $img[BusinessAcademicBusFrequenceEnroll::PRESENCE] = 'html:images:presence.png';
        $img[BusinessAcademicBusFrequenceEnroll::HALF_PRESENCE] = 'html:images:halfPresence.png';
        $img[BusinessAcademicBusFrequenceEnroll::ABSENSE] = 'html:images:absence.png';
        $img[BusinessAcademicBusFrequenceEnroll::JUSTIFIED_ABSENSE] = 'html:images:justifiedAbsense.png';
        $img[BusinessAcademicBusFrequenceEnroll::NOT_REGISTERED] = 'html:images:empty_old.png';
        
        $image = $img[$value];
        $imgLabel = SAGU::NVL($label, $listLabels[$value]);
        $imageObject = new MImage(rand(), $imgLabel, $MIOLO->getActionUrl($module, $image));
        
        return $imageObject;
    }
}
