class AcdMovimentacaoContratual
{
    public static function gerarCamposEstadoContratual(MForm $form, $data = null)
    {
        $businessStateContract = new BusinessAcademicBusStatesContract();

        $stateContractIdValue = $form->getFormValue('stateContractId', $data->stateContractId ? $data->stateContractId : '');
        $stateContractId = new MComboBox('stateContractId', $stateContractIdValue, _M('Estado',$module), $businessStateContract->listStatesContractWhereIsCloseContract(true));
        $stateContractId->addAttribute('onchange', $form->getAjaxAction('gerarCamposComplementoMovimentacao', 'divCamposComplementoMovimentacao', false, $data));
        $fields[] = $stateContractId;
        $validators[] = new MIntegerValidator('stateContractId', _M('Estado'), 'required');
        
        $args = new stdClass();
        $args->stateContractId_sel = $stateContractIdValue;
        
        $fields[] = new MSeparator();
        $fields[] = new MDiv('divCamposComplementoMovimentacao', self::gerarCamposComplementoMovimentacao($form, $args));
        
        $form->SetValidators($validators);
        
        return SAGU::alignFields($fields);
    }
    
    /**
     * Gera os campos do complemento da movimentao contratual referente.
     * 
     * @param stdClass $args
     * @return \MBaseGroup
     */
    public static function gerarCamposComplementoMovimentacao(MForm $form, $args)
    {
        $MIOLO = MIOLO::getInstance();
        $module = $MIOLO->getCurrentModule();
        $flds = array();
            
        if ( strlen($args->stateContractId_sel) > 0 )
        {
            $flds[] = self::gerarCampoMotivo($form, $args);
            $campos = self::obterCamposDoEstadoContratual($args->stateContractId_sel);

            if ( count($campos) > 0 )
            {
                foreach ( $campos as $campo )
                {
                    $description = str_replace("'", " ",$campo->description, $module);
                    $description = str_replace('"', ' ', $description);

                    $required = ($campo->isRequired == DB_TRUE) ? 'm-caption-required' : null;
                    $fieldLabel = new MText('fieldLabel_' . $campo->stateContractFieldId, $description . ':');
                    $fieldLabel->setWidth(SAGU::getParameter('BASIC', 'FIELD_CONTAINER_SIZE'));
                    $fieldLabel->setClass("m-caption {$required}");
                    $fieldLabel->addAttribute('style', 'float: right;text-align:right;');
                    $field = new MTextField('field_' . $campo->stateContractFieldId, null, null, SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE'));
                    $flds[] = $mHContainer = new MHContainer('HCField_' . $campo->stateContractFieldId, array($fieldLabel, $field));

                    if ( $campo->isRequired == DB_TRUE )
                    {
                        $valids[] = new MRequiredValidator('field_' . $campo->stateContractFieldId, _M($campo->description, $module));
                    }
                }

                $form->SetValidators($valids);
            }
        }
        
        return $flds;
    }
    
    /**
     * Retorna o campo de motivo do estado contratual.
     * 
     * @param stdClass $args
     * @return \MComboBox
     */
    public static function gerarCampoMotivo(MForm $form, $args)
    {
        $MIOLO = MIOLO::getInstance();
        $module = $MIOLO->getCurrentModule();
        
        $fields = array();
        $businessReason = new BusinessAcademicBusReason(); 
        $businessStateContract = new BusinessAcademicBusStatesContract();
        
        $statesContractObject = $businessStateContract->getStatesContract($args->stateContractId_sel);
        $reasons = $businessReason->listReasonByStateContract($args->stateContractId_sel);

        if ( count($reasons) > 0 )
        {
            $required = ($statesContractObject->needsReason == DB_TRUE) ? 'm-caption-required' : null;
            $reasonLabel = new MText('reasonLabel', _M('Motivo',$module) . ':');
            $reasonLabel->setWidth(SAGU::getParameter('BASIC', 'FIELD_CONTAINER_SIZE'));
            $reasonLabel->setClass("m-caption {$required}");
            $reasonLabel->addAttribute('style', 'float: right;text-align:right;');
            $reasonIdValue = $form->getFormValue('reasonId', $args->reasonId ? $args->reasonId : '');
            $reasonId = new MComboBox('reasonId', $reasonIdValue, null, $reasons);
            $fields[] = $HCReason = new MHContainer('HCReason', array($reasonLabel, $reasonId));
            $HCReason->addAttribute('style', 'margin-bottom:5px;');

            // if isNeedReason = true
            if ( $statesContractObject->needsReason == DB_TRUE )
            {
                $validators[] = new MIntegerValidator('reasonId', _M('Motivo',$module), 'required') ;
            }
            
            $form->setValidators($validators);
        }

        return $fields;
    }

    /**
     * Insere os complementos da movimentao contratual.
     * 
     * @param type $data
     */
    public static function inserirDadosMovimentacao(MForm $form, $data)
    {
        if ( strlen($data->stateTime) == 0 )
        {
            $data->stateTime = date(SAGU::getParameter('BASIC', 'MASK_DATE_PHP') . ' ' . SAGU::getParameter('BASIC', 'MASK_TIME_PHP'));
        }
        
        if ( strlen($data->stateContractId) == 0 )
        {
            $data->stateContractId = $form->getRequestValue('stateContractId');
        }
        
        if ( strlen($data->reasonId) == 0 )
        {
            $data->reasonId = $form->getRequestValue('reasonId');
        }
        
        if ( strlen($data->learningPeriodId) == 0 )
        {
            $data->learningPeriodId = $form->getRequestValue('learningPeriodId');
        }

        if ( strlen($data->stateContractId) > 0 )
        {
            $busMovementContract = new BusinessAcademicBusMovementContract();
            $busMovementContractComplement = new BusinessAcademicBusMovementContractComplement();
            
            $searchContract = $busMovementContract->searchMovementContract($data);
            
            if ( !strlen($searchContract[0][0]) > 0 )
            {
                // insere movimentacao contratual
                $busMovementContract->insertMovementContract($data);

                $data = self::prepararDadosSalvar($form, $data);

                $movementContract = $busMovementContract->searchMovementContract($data, true, true);
                $stateContractId = $movementContract[0]->stateContractId;

                $campos = self::obterCamposDoEstadoContratual($stateContractId);

                foreach ( $campos as $campo )
                {
                    $idCampo = 'field_' . $campo->stateContractFieldId;
                    $valorCampo = $data->$idCampo;

                    if ( strlen($valorCampo) > 0 )
                    {
                        $filters = new stdClass();
                        $filters->contractId = $data->contractId;
                        $filters->stateContractId = $data->stateContractId;
                        $filters->stateContractFieldId = $campo->stateContractFieldId;
                        $filters->stateTime = $data->stateTime;
                        $filters->value = $valorCampo;

                        $busMovementContractComplement->insertMovementContractComplement($filters);
                    }
                }
            }
        }
    }
    
    /**
     * Retorna os campos cadastrados para o estado contratual.
     * 
     * @param int $stateContractId
     * @return array
     */
    public static function obterCamposDoEstadoContratual($stateContractId)
    {
        $filters = new stdClass();
        $filters->stateContractId = $stateContractId;
        
        $busStateContractField = new BusinessAcademicBusStateContractField();
        $campos = $busStateContractField->searchStateContractField($filters, true);
        
        return $campos;
    }
    
    /**
     * @param MForm $form
     * @return stdClass
     */
    public static function prepararDadosSalvar(MForm $form, $data)
    {
        $campos = self::obterCamposDoEstadoContratual($form->getRequestValue('stateContractId'));
        
        foreach ( $campos as $campo )
        {
            $idCampo = 'field_' . $campo->stateContractFieldId;
            $valorCampo = $form->getRequestValue($idCampo, $data->{$idCampo});

            $data->{$idCampo} = $valorCampo;
        }
        
        return $data;
    }
}
