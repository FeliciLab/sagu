/**
 * @access public
 * @package Basic
 */
class AcdEnrollConfirm extends SType
{
    protected $_utilizaNovoPadrao = true;
 
    public $enrollConfirmId;
    public $contractId;
    public $learningPeriodId;
    public $contractSigned;
    public $confirmationStudent;
    
    /**
     * @return boolean
     */
    public static function assinouContrato($contractId, $learningPeriodId)
    {
        $type = new AcdEnrollConfirm();
        
        $row = $type->findOne( $type->msql()
                ->addEqualCondition('contractId', $contractId)
                ->addEqualCondition('learningPeriodId', $learningPeriodId)
                ->addEqualCondition('contractSigned', DB_TRUE)
        );
        
        return $row instanceof AcdEnrollConfirm;
    }
    
    public static function confirmouPortal($contractId, $learningPeriodId)
    {
        $type = new AcdEnrollConfirm();
        
        $row = $type->findOne( $type->msql()
                ->addEqualCondition('contractId', $contractId)
                ->addEqualCondition('learningPeriodId', $learningPeriodId)
                ->addEqualCondition('confirmationstudent', DB_TRUE)
        );
        
        return $row instanceof AcdEnrollConfirm;
    }
    
    /**
     * @return AcdEnrollConfirm
     */
    public function findByContractAndLP($contractId, $learningPeriodId)
    {
        return $this->findOne( $this->msql()->addEqualCondition('contractId', $contractId)->addEqualCondition('learningPeriodId', $learningPeriodId) );
    }
}
