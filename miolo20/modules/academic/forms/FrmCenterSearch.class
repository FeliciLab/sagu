/**
 * Form to search the basCenter table
 */
class FrmCenterSearch extends SSearchForm
{
    /**
     * Class constructor
     */
    public function __construct($data)
    {
        parent::__construct(_M('Localizar'), new AcdCenter(), array('centerId'), 'BusCenter', 'academic');
    }

    /**
     *  Default method to define fields
     */
    public function defineFields()
    {
        $MIOLO = MIOLO::getInstance();
        $module = 'academic';
        $action = MIOLO::getCurrentAction();

        //Field center code
        $centerIdS = new MTextField('centerIdS', $this->getFormValue('centerIdS', $data->centerId), _M('Cdigo do centro', $module), SAGU::getParameter('BASIC', 'FIELD_ID_SIZE'));
        $centerIdS->setJsHint(_M('Informe o cdigo do centro', $module));
        $fields[] = $centerIdS;

        //Field center descrption
        $centerNameS = new MTextField('centerNameS', $this->centerNameS->value, _M('Nome', $module), SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE'));
        $centerNameS->setJsHint(_M('Informe o nome do centro', $module));
        $fields[] = $centerNameS;

        //Field short name
        $centerShortNameS = new MTextField('centerShortNameS', $this->centerShortNameS->value, _M('Abreviatura', $module), 20);
        $centerShortNameS->setJsHint(_M('Informe a abreviatura do centro', $module));
        $fields[] = $centerShortNameS;

        //Field director
        $directorLabel = new MText('directorLabel', _M('Diretor',$module) . ':');
        $directorLabel->setWidth(SAGU::getParameter('BASIC', 'FIELD_CONTAINER_SIZE'));
        $centerDirectorIdS = new MLookupTextField('centerDirectorIdS', $this->centerDirectorIdS->value, '', SAGU::getParameter('BASIC', 'FIELD_LOOKUPFIELD_SIZE'), null, null, 'centerDirectorNameS', 'basic', 'PhysicalPersonProfessor', null, null, true);
        $validators[] = new MIntegerValidator('centerDirectorIdS', _M('Diretor',$module));
        $centerDirectorIdS->setJsHint(_M('Informe o cdigo do diretor', $module));
        $centerDirectorNameS = new MTextField('centerDirectorNameS', $this->centerDirectorNameS->value, '', SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE'));
        $centerDirectorNameS->setJsHint(_M('Nome do diretor', $module));
        $hctDirector = new MHContainer('hctDirector', array( $directorLabel, $centerDirectorIdS, $centerDirectorNameS) );
        $hctDirector->setShowLabel(true);
        $fields[] = $hctDirector;

        parent::defineFields($fields, $module, 'GrdCenterSearch', $validators);
    }

    public function getTypesData()
    {
        $data = parent::getTypesData();
        $fieldCenterName = 'centerName';
        $fieldCenterShortName = 'centerShortName';

        if ( strlen(MIOLO::_REQUEST($fieldCenterName)) == 0 )
        {
            $fieldCenterName .= 'S';
        }

        if ( strlen(MIOLO::_REQUEST($fieldCenterShortName)) == 0 )
        {
            $fieldCenterShortName .= 'S';
        }

        $data->name = MIOLO::_REQUEST($fieldCenterName);
        $data->shortName = MIOLO::_REQUEST($fieldCenterShortName);

        return $data;
    }
}
