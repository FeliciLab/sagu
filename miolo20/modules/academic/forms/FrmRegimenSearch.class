class FrmRegimenSearch extends SSearchForm
{
    /**
     * Class constructor
     */
    public function __construct()
    {
        parent::__construct(_M('Localizar', 'basic'), new AcdRegimen(), array('regimenId'), 'BusRegimen');
    }

    /**
     *  Default method to define fields
     */
    public function defineFields()
    {
        $MIOLO = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();
        $action = MIOLO::getCurrentAction();

        //Field regiment code
        $regimenIdS = new MTextField('regimenIdS', $this->regimenIdS->value, _M('Cdigo', $module), SAGU::getParameter('BASIC', 'FIELD_ID_SIZE'));
        $regimenIdS->setJsHint(_M('Informe o cdigo do regime', $module));
        $fields[] = $regimenIdS;

        //Field regimen description
        $regimenDescriptionS = new MTextField('regimenDescriptionS', $this->regimenDescriptionS->value, _M('Descrio', $module), SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE'));
        $regimenDescriptionS->setJsHint(_M('Informe a descrio do regime', $module));
        $fields[] = $regimenDescriptionS;

        parent::defineFields($fields, $module, 'GrdRegimenSearch');
    }

    /**
     * Method to gather all information from the form fields
     * and put them on a database compatible object
     */
    public function getTypesData()
    {
        // get filters values
        $data->regimenId = $this->getFormValue('regimenIdS');
        $data->description = $this->getFormValue('regimenDescriptionS');

        return $data;
    }
}
