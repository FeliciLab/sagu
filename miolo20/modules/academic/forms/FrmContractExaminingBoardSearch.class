/**
 * Form to search the acdMovementContractComplement table
 */
class FrmContractExaminingBoardSearch extends SSearchForm
{
    /**
     * Class constructor
     */
    public function __construct($data)
    {
        parent::__construct(_M('Localizar', 'basic'), new AcdContractExaminingBoard(), array('contractExaminingBoardId'), 'BusContractExaminingBoard');
    }

    /**
     *  Default method to define fields
     */
    public function defineFields()
    {
        $MIOLO = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();
        $action = MIOLO::getCurrentAction();

        $limboS = new MHiddenField('limboS', '');
        $fields[] = $limboS;

        // Field contract examining board
        $contractExaminingBoardIdS = new MTextField('contractExaminingBoardIdS', $this->contractExaminingBoardIdS->value, _M('Cdigo', $module), SAGU::getParameter('BASIC', 'FIELD_ID_SIZE'));
        $contractExaminingBoardIdS->setJsHint(_M('Informe cdigo da banca',$module));
        $fields[] = $contractExaminingBoardIdS;
        $validators[] = new MIntegerValidator('contractExaminingBoardIdS', '', 'optional');
        $contractLabel = new MText('contractLabel', _M('Contrato',$module) . ':');
        $contractLabel->setWidth(SAGU::getParameter('BASIC', 'FIELD_CONTAINER_SIZE'));
        $flds[] = $contractLabel;
        $contractIdS = new MLookupTextField('contractIdS', $this->getFormValue('contractIdS', $data->contractIdS), '', SAGU::getParameter('BASIC', 'FIELD_LOOKUPFIELD_SIZE'), null, null, array('contractPersonIdS', 'contractPersonNameS', 'courseId', 'courseName', 'courseVersion'), $module, 'Contract', null, array('contractId' => 'contractIdS'), true);
        $contractIdS->setJsHint(_M('Informe o cdigo do contrato',$module));
        $flds[] = $contractIdS;
        $validators[] = new MIntegerValidator('contractIdS', _M('Contrato',$module), 'optional');

        // Field course id
        $courseId = new MTextField('courseId', $this->getFormValue('courseId',$this->courseId->value), '', SAGU::getParameter('BASIC', 'FIELD_ID_SIZE'));
        $courseId->setReadOnly(true);
        $courseId->setJsHint(_M('Cdigo do curso',$module));
        $flds[] = $courseId;

        // Field course
        $courseVersion = new MTextField('courseVersion', $this->getFormValue('courseVersion',$this->courseVersion->value), '', SAGU::getParameter('BASIC', 'FIELD_ID_SIZE'));
        $courseVersion->setReadOnly(true);
        $courseVersion->setJsHint(_M('Verso do curso',$module));
        $flds[] = $courseVersion;
        $courseName = new MTextField('courseName', $this->getFormValue('courseName',$this->courseName), '', 30);
        $courseName->setReadOnly(true);
        $courseName->setJsHint(_M('Nome do curso',$module));
        $flds[] = $courseName;
        $hctContract = new MHContainer('hctContract', $flds);
        $hctContract->setShowLabel(true);
        $fields[] = $hctContract;
        unset($flds);

        // Field contract person
        $personLabel = new MText('personLabel', _M('Pessoa',$module) . ':');
        $personLabel->setWidth(SAGU::getParameter('BASIC', 'FIELD_CONTAINER_SIZE'));
        $contractPersonIdS = new MTextField('contractPersonIdS', $this->contractPersonIdS->value, NULL, SAGU::getParameter('BASIC', 'FIELD_ID_SIZE'));
        $contractPersonIdS->setJsHint(_M('Cdigo da pessoa',$module));
        $contractPersonIdS->setReadOnly(true);
        $contractPersonNameS = new MTextField('contractPersonNameS', $this->contractPersonNameS->value, NULL, SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE'));
        $contractPersonNameS->setJsHint(_M('Nome da pessoa',$module));
        $contractPersonNameS->setReadOnly(true);
        $hctPerson = new MHContainer('hctPerson', array($personLabel, $contractPersonIdS, $contractPersonNameS));
        $hctPerson->setShowLabel(true);
        $fields[] = $hctPerson;

        // Field title
        $titleS = new MTextField('titleS', $this->titleS->value, _M('Ttulo do trabalho', $module), SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE'));
        $titleS->setJsHint(_M('Informe o ttulo do trabalho',$module));
        $fields[] = $titleS;

        parent::defineFields($fields, $module, 'GrdContractExaminingBoardSearch', $validators);
    }
}
