class FrmDocumentReportFrequency extends SForm
{
    /**
     * Class constructor
     */
    public function __construct($data)
    {
        $module = SAGU::getFileModule(__FILE__);
        $MIOLO = MIOLO::getInstance();

        parent::__construct(_M('Relatrio de frequncia', $module), null, null);

        // Desabilita alguns botes da MToolbar
        $this->toolbar->disableButton(MToolBar::BUTTON_NEW);
        $this->toolbar->disableButton(MToolBar::BUTTON_DELETE);
        $this->toolbar->disableButton(MToolBar::BUTTON_SAVE);
        $this->toolbar->disableButton(MToolBar::BUTTON_SEARCH);
        
        

        // Muda a ao do boto imprimir
        $this->toolbar->setButtonURL(MToolBar::BUTTON_PRINT, $MIOLO->getActionURL($module, $action, null, array('event'=>'generateReport')));
        $this->toolbar->setIsPost(MToolBar::BUTTON_PRINT, true);
    }

    /**
     * Default method to define fields
     */
    public function defineFields()
    {
        $MIOLO = MIOLO::getInstance();
        $module = SAGU::getFileModule(__FILE__);

        // Business
        $businessPeriod = new BusinessAcademicBusPeriod();

        // Field period
        $businessPeriod = new BusinessAcademicBusPeriod();
        $periodId = new MComboBox('periodId', strlen($this->getFormValue('periodId', $data->periodId)) > 0 ? $this->getFormValue('periodId', $data->periodId) : SAGU::getParameter('BASIC', 'CURRENT_PERIOD_ID'), _M('Perodo', $module), $businessPeriod->listPeriod());
        $periodId->setJsHint(_M('Selecione um perodo', $module));
        $validators[] = new MRequiredValidator('periodId', _M('Perodo', $module));
        $fields[] = $periodId;

        /*
         * Course occurrence lookup
         */
        $lkpValue = array(
            $this->GetFormValue('courseId', $data->courseId),
            $this->GetFormValue('courseVersion', $data->courseVersion),
            $this->GetFormValue('turnId', $data->turnId),
            $this->GetFormValue('unitId', $data->unitId)
        );
        $courseOccurrenceLookup = new SCourseOccurrenceLookup($lkpValue);
        $courseOccurrenceLookup->showRequiredLabel();
        $validators[] = new MRequiredValidator('courseId', _M('Curso', $module));
        $validators[] = new MIntegerValidator('courseVersion', _M('Verso do curso', $module));
        $validators[] = new MIntegerValidator('turnId', _M('Turno', $module));
        $validators[] = new MIntegerValidator('unitId', _M('Unidade', $module));
        $fields[]  = $courseOccurrenceLookup;

        // Field class
        $classLabel = new MText('classLabel', _M('Turma', $module) . ':');
        $classLabel->setWidth(SAGU::getParameter('BASIC', 'FIELD_CONTAINER_SIZE'));
        $classId = new MLookupTextField('classId', $this->getFormValue('classId'), '', SAGU::getParameter('BASIC', 'FIELD_LOOKUPFIELD_SIZE'), null, null, 'classDescription', $module, 'Class', null, array('classId' => 'classId', 'courseId' => 'courseId', 'courseVersion' => 'courseVersion', 'periodId' => 'periodId'), !$this->page->isPostBack());
        $classId->setJsHint(_M('Informe o cdigo da turma', $module));
        $classDescription = new MTextField('classDescription', $this->getFormValue('classDescription'), '', SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE'));
        $classDescription->setJsHint(_M('Nome da turma', $module));
        $classDescription->setReadOnly(true);
        $hctClass = new MHContainer('hctClass', array($classLabel, $classId, $classDescription));
        $hctClass->setShowLabel(false);
        $fields[] = $hctClass;

        // Field pupil
        $pupil = new SLookupContainer('personId', $this->getFormValue('personId', $data->personId), array(
            'module' => 'basic',
            'item' => 'PhysicalPersonStudent',
            'label' => _M('Aluno', $module),
            'filter' => array('personId' => 'personId'),
            'hint' => _M('Informe o cdigo do aluno', $module),
            'descriptionHint' => _M('Nome do aluno', $module)
        ));
        $pupil->showRequiredLabel = true;
        $validators[] = new MIntegerValidator('personId', _M('Aluno', $module ), 'required');
        $fields[] = $pupil;

        // Formato
        $fields[] = $reportFormat = new MSelection('reportFormat', $this->getFormValue('reportFormat') ? $this->getFormValue('reportFormat') : 'PDF', _M('Formato', $module), SReport::listReportFormat());
        $validators[] = new MRequiredValidator('reportFormat', _M('Formato do relatrio', $module));

        // Separator
        $fields[] = new MSeparator();

        $this->setValidators($validators);
        $this->setFields($fields);

        parent::defineFields();
    }

    /**
     * Mtodo para gerao do Relatrio
     */
    public function generateReport($args)
    {
        $MIOLO = MIOLO::getInstance();
        $module = SAGU::getFileModule(__FILE__);

        $data = $this->getTypesData();
        $options['module'] = $module;
        $options['reportName'] = 'reportFrequency';

        if ( strlen($data->periodId)>0 )
        {
            $options['parameters']['periodId'] = $data->periodId;
        }

        if ( strlen($data->courseId)>0 )
        {
            $options['parameters']['courseId'] = $data->courseId;
        }

        if ( strlen($data->classId)>0 )
        {
            $options['parameters']['classId'] = $data->classId;
        }

        if ( strlen($data->personId)>0 )
        {
            $options['parameters']['personId'] = $data->personId;
        }

        if ( strlen($data->courseVersion)>0 )
        {
            $options['parameters']['courseVersion'] = $data->courseVersion;
        }

        if ( strlen($data->turnId)>0 )
        {
            $options['parameters']['turnId'] = $data->turnId;
        }

        if ( strlen($data->unitId)>0 )
        {
            $options['parameters']['unitId'] = $data->unitId;
        }

        if ( strlen($data->reportFormat)>0 )
        {
            $options['fileType'] = $data->reportFormat;
        }

        $sreport = new SReport($options);

        if ( !$sreport->generate() )
        {
            $this->addError(_M('Nenhum registro encontrado.', $module ));
        }
    }

    /**
     * Mtodo que obtm os dados do formulrio.
     */
    public function getTypesData()
    {
        $data = new stdClass();
        $data->periodId = $this->GetFormValue('periodId');
        $data->courseId = $this->GetFormValue('courseId');
        $data->classId = $this->GetFormValue('classId');
        $data->personId = $this->GetFormValue('personId');
        $data->courseVersion = $this->GetFormValue('courseVersion');
        $data->turnId = $this->GetFormValue('turnId');
        $data->unitId = $this->GetFormValue('unitId');
        $data->reportFormat = $this->GetFormValue('reportFormat');

        return $data;
    }
}
?>