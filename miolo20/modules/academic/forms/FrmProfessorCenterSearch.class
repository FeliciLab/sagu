/**
 * Form to search the acdProfessorCenter table
 */
class FrmProfessorCenterSearch extends SSearchForm
{
    /**
     * Class constructor
     */
    public function __construct($data)
    {
        parent::__construct(_M('Localizar'), new AcdProfessorCenter(), array('professorId', 'centerId', 'beginDate'), 'BusProfessorCenter');
    }

    /**
     *  Default method to define fields
     */
    public function defineFields()
    {
        $MIOLO = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();
        $action = MIOLO::getCurrentAction();

        //Lookup professor
        $professorLabelS = new MText('professorLabelS', _M('Professor',$module).':');
        $professorLabelS->setWidth(SAGU::getParameter('BASIC', 'FIELD_CONTAINER_SIZE'));
        $professorIdS = new MLookupTextField('professorIdS', $this->professorIdS->value, '', SAGU::getParameter('BASIC', 'FIELD_LOOKUPFIELD_SIZE'), null, null, 'professorNameS', 'basic', 'PhysicalPersonProfessor', null, null, true);
        $professorIdS->setJsHint(_M('Informe o cdigo do professor', $module));
        $validators[] = new MIntegerValidator('professorIdS', _M('Professor',$module));
        $professorNameS = new MTextField('professorNameS', $this->professorNameS->value, '', SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE'));
        $professorNameS->setJsHint(_M('Informe o nome do professor', $module));
        $hctProfessor = new MHContainer('hctProfessor', array($professorLabelS, $professorIdS, $professorNameS));
        $hctProfessor->setShowLabel(true);
        $fields[] = $hctProfessor;

        //Lookup center
        $centerLabelS = new MText('centerLabelS', _M('Centro', $module).':');
        $centerLabelS->setWidth(SAGU::getParameter('BASIC', 'FIELD_CONTAINER_SIZE'));
        $centerIdS = new MLookupTextField('centerIdS', $this->centerIdS->value, '', SAGU::getParameter('BASIC', 'FIELD_LOOKUPFIELD_SIZE'), null, null, 'centerNameS', 'academic', 'Center', null, null, true);
        $centerIdS->setJsHint(_M('Informe o cdigo do centro', $module));
        $validators[] = new MIntegerValidator('centerIdS', _M('Centro',$module));
        $centerNameS = new MTextField('centerNameS', $this->centerNameS->value, '', SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE'));
        $centerNameS->setJsHint(_M('Informe o nome do centro', $module));
        $hctCenter = new MHContainer('hctCenter', array($centerLabelS, $centerIdS, $centerNameS));
        $hctCenter->setShowLabel(true);
        $fields[] = $hctCenter;

        parent::defineFields($fields, $module, 'GrdProfessorCenterSearch', $validators);
    }

    public function getTypesData()
    {
        $data = parent::getTypesData();
        $fieldCenterNameS = 'centerName';
        $fieldProfessorNameS = 'professorName';

        if ( strlen(MIOLO::_REQUEST($fieldCenterNameS)) == 0 )
        {
            $fieldCenterNameS .= 'S';
        }

        if ( strlen(MIOLO::_REQUEST($fieldProfessorNameS)) == 0 )
        {
            $fieldProfessorNameS .= 'S';
        }

        $data->centerName = MIOLO::_REQUEST($fieldCenterNameS);
        $data->professorName = MIOLO::_REQUEST($fieldProfessorNameS);

        return $data;
    }
}
