class FrmCourseSearch extends SSearchForm
{

    /**
     * Class constructor
     */
    public function __construct()
    {
        parent::__construct(_M('Localizar', 'basic'), new AcdCourse(), array( 'courseId'), 'BusCourse');
    }

    /**
     *  Default method to define fields
     */
    public function defineFields()
    {
        $MIOLO = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();
        $action = MIOLO::getCurrentAction();

        //Field course code
        $courseIdS = new MTextField('courseIdS', $this->courseIdS->value, _M('Cdigo', $module), SAGU::getParameter('BASIC', 'FIELD_ID_SIZE'));
        $courseIdS->setJsHint(_M('Informe o cdigo do curso', $module));
        $fields[] = $courseIdS;

        //Field formation level
        $business = new BusinessAcademicBusFormationLevel();
        $formationLevelIdS = new MComboBox('formationLevelIdS', $this->formationLevelIdS->value, _M('Grau de formao', $module), $business->listFormationLevel());
        $formationLevelIdS->setJsHint(_M('Selecione o grau de formao', $module));
        $fields[] = $formationLevelIdS;

        //Field course name
        $courseNameS = new MTextField('courseNameS', $this->courseNameS->value, _M('Nome', $module), SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE'));
        $courseNameS->setJsHint(_M('Informe o nome do curso', $module));
        $fields[] = $courseNameS;

        //Field course short ame
        $courseShortNameS = new MTextField('courseShortNameS', $this->courseShortNameS->value, _M('Abreviatura', $module), SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE'));
        $courseShortNameS->setJsHint(_M('Informe a abreviatura do curso', $module));
        $fields[] = $courseShortNameS;

        //Field center
        $business = new BusinessAcademicBusCenter();
        $courseCenterIdS = new MComboBox('courseCenterIdS', $this->courseCenterIdS->value, _M('Centro', $module), $business->listCenter());
        $courseCenterIdS->setJsHint(_M('Selecione o centro do curso', $module));
        $fields[] = $courseCenterIdS;

        parent::defineFields($fields, $module, 'GrdCourseSearch');
    }

    /**
     * Method to gather all information from the form fields
     * and put them on a database compatible object
     * */
    public function getTypesData()
    {
        // get filters values
        $data->courseId = $this->getFormValue('courseIdS');
        $data->name = $this->getFormValue('courseNameS');
        $data->shortName = $this->getFormValue('courseShortNameS');
        $data->centerId = $this->getFormValue('courseCenterIdS');
        $data->formationLevelId = $this->getFormValue('formationLevelIdS');

        return $data;
    }
}
