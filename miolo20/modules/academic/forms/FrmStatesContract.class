class FrmStatesContract extends SManagementForm
{
    public function __construct()
    {
        parent::__construct(new AcdStatesContract(), array('stateContractId'), 'BusStatesContract');
    }

 
    public function defineFields()
    {
        $MIOLO = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();
        $action = MIOLO::getCurrentAction();
        $function = MIOLO::_REQUEST('function');

        if ( in_array($function, array(SForm::FUNCTION_UPDATE, SForm::FUNCTION_DELETE)) )
        {   
            $message = _M('Caso inativado um estado contratual, somente ser impedido a sua utilizao no sistema em processos de registro de movimentaes contratuais manuais. Em processos automticos, por exemplo a matrcula, os estados contratuais mesmo inativados continuaro sendo registrados, necessrio editar os parmetros referentes para contornar este tipo de situao.', $module);
            $fields[] = MMessage::getStaticMessage('messageAlert', $message, MMessage::TYPE_INFORMATION);
            
            $stateContractId = MIOLO::_REQUEST('stateContractId');
            $fields[] = new MTextLabel('stateContractId', $stateContractId, _M('Cdigo', $module));
            $fields[] = new MHiddenField('stateContractId', $stateContractId);

            $data = $this->busObject->getStatesContract($stateContractId);
        }

        //Field state contract description
        $statesContractDescription  = new MTextField('statesContractDescription', $this->getFormValue('statesContractDescription', $data->description), _M('Descrio', $module), SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE'));
        $statesContractDescription->setJsHint(_M('Informe a descrio do estado do contrato', $module));
        $fields[]     = $statesContractDescription;
        $validators[] = new MRequiredValidator('statesContractDescription');

        //Field in out transaction
        $inOutTransition = new MSelection('inOutTransition', $this->getFormValue('inOutTransition', $data->inOutTransition), _M('Tipo de transio', $module), SAGU::listInOutTransition());
        $inOutTransition->setJsHint(_M('Selecione o tipo de transao'));
        $fields[]        = $inOutTransition;
        $validators[]    = new MRequiredValidator('inOutTransition', '', 'required');

        //Field needs reason
        $needsReasonLabel = new MText('needsReasonLabel', _M('Precisa de motivo', $module) . '?');
        $needsReasonLabel->setWidth(SAGU::getParameter('BASIC', 'FIELD_CONTAINER_SIZE'));
        $needsReason = $this->GetFormValue('needsReason',$data->needsReason) ? $this->GetFormValue('needsReason',$data->needsReason) : DB_FALSE;

        if (! isSet($needsReason) )
        {
            $needsReason = DB_FALSE;
        }

        $needsReason = new MRadioButtonGroup('needsReason', '', SAGU::listTrueFalse(1), $needsReason, null, 'horizontal');
        $needsReason->SetShowLabel(false);
        $hctNeedsReason = new MHContainer('hctNeedsReason', array($needsReasonLabel, $needsReason));
        $fields[]  = $hctNeedsReason;

        //Field is close contract
        $isCloseContractLabel = new MText('isCloseContractLabel', _M('Impede matrcula', $module) . '?');
        $isCloseContractLabel->setWidth(SAGU::getParameter('BASIC', 'FIELD_CONTAINER_SIZE'));
        $isCloseContract = $this->GetFormValue('isCloseContract',$data->isCloseContract);

        if ( ! isset($isCloseContract) )
        {
            //default false
            $isCloseContract = 'f';
        }

        $isCloseContract = new MRadioButtonGroup('isCloseContract', '', SAGU::listTrueFalse(1), $isCloseContract, null, 'horizontal');
        $isCloseContract->SetShowLabel(false);
        $hctIsCloseContract = new MHContainer('hctIsCloseContract', array($isCloseContractLabel, $isCloseContract));
        $fields[]  = $hctIsCloseContract;
        
        if ( $function == SForm::FUNCTION_UPDATE )
        {
            //Field needs reason
            $isActiveLabel = new MText('isActiveLabel', _M('Est ativo', $module) . '?');
            $isActiveLabel->setWidth(SAGU::getParameter('BASIC', 'FIELD_CONTAINER_SIZE'));
            $isActive = $this->GetFormValue('stateContractIsActive', $data->stateContractIsActive) ? $this->GetFormValue('stateContractIsActive', $data->stateContractIsActive) : DB_TRUE;

            if ( !isSet($isActive) )
            {
                $isActive = DB_TRUE;
            }

            $isActive = new MRadioButtonGroup('stateContractIsActive', '', SAGU::listTrueFalse(1), $isActive, null, 'horizontal');
            $isActive->SetShowLabel(false);
            $hctIsActive = new MHContainer('hctIsActive', array($isActiveLabel, $isActive));
            $fields[]  = $hctIsActive;
        }

        parent::defineFields($fields, $validators, $data);
    }

    
    public function getTypesData()
    {
        $data = parent::getTypesData();
        $data->description = $this->statesContractDescription->value;

        return $data;
    }
}
