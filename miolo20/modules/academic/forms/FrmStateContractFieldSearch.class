class FrmStateContractFieldSearch extends SSearchForm
{
    public function __construct($data)
    {
        parent::__construct(null, new AcdStateContractField(), array('stateContractFieldId'), 'BusStateContractField');
    }


    public function defineFields()
    {
        $MIOLO  = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();
        $action = MIOLO::getCurrentAction();

        //Field state contract field
        $fields[]  = new MTextField('stateContractFieldIdS', $this->getFormValue('stateContractFieldIdS', $stateContractFieldIdS), _M('Cdigo', $module), SAGU::getParameter('BASIC', 'FIELD_ID_SIZE'));

        //Field state contract
        $stateContractLabel = new MText('stateContractLabel', _M('Estado contratual', $module) . ':');
        $stateContractLabel->setWidth(SAGU::getParameter('BASIC', 'FIELD_CONTAINER_SIZE'));
        $stateContractIdS = new MLookupTextField('stateContractIdS', $this->getFormValue('stateContractIdS',$data->stateContractIdS), '', SAGU::getParameter('BASIC', 'FIELD_LOOKUPFIELD_SIZE'), null, null, 'stateContractDescriptionS', $module, 'StateContract', null, null, true);
        $stateContractIdS->setJsHint(_M('Informe o cdigo do estado do contrato',$module));
        $validators[] = new MIntegerValidator('stateContractIdS', '', 'optional');
        $stateContractDescriptionS = new MTextField('stateContractDescriptionS', $this->getFormValue('stateContractDescriptionS',$data->stateContractDescriptionS), '', SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE'));
        $stateContractDescriptionS->setReadOnly(true);
        $stateContractDescriptionS->setJsHint(_M('Descrio do estado contratual',$module));
        $hctStateContractS = new MHContainer('hctStateContractS', array($stateContractLabel, $stateContractIdS, $stateContractDescriptionS));
        $hctStateContractS->setShowLabel(true);
        $fields[] = $hctStateContractS;

        //Field state contract field description
        $stateContractFieldDescriptionS = new MTextField('stateContractFieldDescriptionS', $this->getFormValue('stateContractFieldDescriptionS',$data->stateContractFieldDescriptionS), _M('Descrio', $module), SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE'));
        $stateContractFieldDescriptionS->setJsHint(_M('Informe a descrio do estado do contrato', $module));
        $fields[] = $stateContractFieldDescriptionS;

        //Field rows
        $rowsS = new MTextField('rowsS', $this->getFormValue('rowsS', $data->rowsS), _M('Linhas', $module), SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE'));
        $rowsS->setJsHint(_M('Informe o nmero de linhas',$module));
        $fields[] = $rowsS;
        
        //Field columns
        $columnsS = new MTextField('columnsS', $this->getFormValue('columnsS', $data->columnsS), _M('Colunas', $module), SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE'));
        $columnsS->setJsHint(_M('Informe o nmero de colunas', $module));
        $fields[] = $columnsS;

        //Field is lookup
        $isLookupLabelS = new MText('isLookupLabelS', _M(' lookup',$module) . '?');
        $isLookupLabelS->setWidth(SAGU::getParameter('BASIC', 'FIELD_CONTAINER_SIZE'));
        $isLookupS = new MRadioButtonGroup('isLookupS', null, SAGU::listTrueFalse(1), $this->isLookupS, null, 'horizontal');
        $isLookupS->setShowLabel(false);
        $hctIsLookupS = new MHContainer('hctIsLookupS', array($isLookupLabelS, $isLookupS));
        $fields[] = $hctIsLookupS;

        //Field is required
        $isRequiredLabelS = new MText('isRequiredLabelS', _M(' obrigatrio',$module) . '?');
        $isRequiredLabelS->setWidth(SAGU::getParameter('BASIC', 'FIELD_CONTAINER_SIZE'));
        $isRequiredS = new MRadioButtonGroup('isRequiredS', null, SAGU::listTrueFalse(1), $this->isRequiredS, null, 'horizontal');
        $isRequiredS->setShowLabel(false);
        $hctIsRequiredS = new MHContainer('hctIsRequiredS', array($isRequiredLabelS, $isRequiredS));
        $fields[] = $hctIsRequiredS;

        parent::defineFields($fields, $module, 'GrdStateContractFieldSearch', $validators);
    }


    public function  getTypesData()
    {
        $filters = parent::getTypesData();
        $filters->description = MIOLO::_REQUEST('stateContractFieldDescriptionS');

        return $filters;
    }
}
