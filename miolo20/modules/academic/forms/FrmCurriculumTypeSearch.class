/**
 * Form to search the acdCurriculumType table
 */
class FrmCurriculumTypeSearch extends SSearchForm
{
    /**
     * Class constructor
     */
    public function __construct($data)
    {
        parent::__construct(null, new AcdCurriculumType(), array('curriculumTypeId'), 'BusCurriculumType');
    }

    /**
     *  Default method to define fields
     */
    public function defineFields()
    {
        $MIOLO  = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();
        $action = MIOLO::getCurrentAction();

        //Field curriculum type
        $curriculumTypeIdS = new MTextField('curriculumTypeIdS', $this->curriculumTypeIdS->value, _M('Código', $module), SAGU::getParameter('BASIC', 'FIELD_ID_SIZE'));
        $curriculumTypeIdS->setJsHint(_M('Informe o tipo de currículo', $module));
        $fields[] = $curriculumTypeIdS;

        $curriculumTypeDescriptionS = new MTextField('curriculumTypeDescriptionS', $this->curriculumTypeDescriptionS->value, _M('Descrição', $module), SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE'));
        $curriculumTypeDescriptionS->setJsHint(_M('Informe a descrição do tipo de currículo', $module));
        $fields[] = $curriculumTypeDescriptionS;

        $shortDescriptionS = new MTextField('shortDescriptionS', $this->shortDescriptionS->value, _M('Abreviatura', $module), 30, _M('@1 caracteres no máximo', $module, SAGU::getParameter('ACADEMIC', 'CURRICULAR_COMPONENT_SHORT_NAME_MAX_LENGTH')));
        $shortDescriptionS->setJsHint(_M('Informe a descrição da abreviatura', $module));
        $fields[] = $shortDescriptionS;

        parent::defineFields($fields, $module, 'GrdCurriculumTypeSearch', $validators);
    }
    
 
    public function getTypesData()
    {
        $data = parent::getTypesData();
        $data->description = $this->getFormValue('curriculumTypeDescriptionS');
        
        return $data;
    }
}

