/**
 * Form to manipulate a center
 **/
class FrmCenter extends SManagementForm
{
    /**
     * Class constructor
     **/
    public function __construct()
    {
        parent::__construct(new AcdCenter(), array('centerId'), 'BusCenter', _M('Centro'), 'academic');
    }

    /**
     * Default method to define fields
     **/
    public function defineFields()
    {
        $MIOLO = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();
        $action = MIOLO::getCurrentAction();
        $function = MIOLO::_request('function');

        if ( in_array($function, array(SForm::FUNCTION_UPDATE, SForm::FUNCTION_DELETE)) )
        {
            $pk = $this->getObjectPk();

            // Field center id
            $fields[] = new MTextLabel('', $pk->centerId, _M('Cdigo', $module));
            $fields[] = new MHiddenField('centerId', $pk->centerId);

            $data = $this->busObject->getCenter($pk->centerId);
        }

        // Field center name
        $centerName = new MTextField('centerName', $this->getFormValue('centerName', $data->name), _M('Nome', $module), SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE'));
        $centerName->setJsHint(_M('Nome do centro', $module));
        $fields[] = $centerName;
        $validators[] = new MRequiredValidator('centerName');

        // Field short name
        $shortName = new MTextField('shortName', $this->getFormValue('shortName', $data->shortName), _M('Abreviatura', $module), SAGU::getParameter('BASIC', 'FIELD_ID_SIZE'));
        $shortName->setJsHint(_M('Abreviatura', $module));
        $fields[] = $shortName;
        $validators[] = new MRequiredValidator('shortName');

        // Field director
        $directorLabel = new MText('directorLabel', _M('Diretor',$module) . ':');
        $directorLabel->setWidth(SAGU::getParameter('BASIC', 'FIELD_CONTAINER_SIZE'));
        $directorId = new MLookupTextField('directorId', $this->getFormValue('directorId', $data->directorId), '', SAGU::getParameter('BASIC', 'FIELD_LOOKUPFIELD_SIZE'), null, null, 'directorName', 'basic', 'PhysicalPersonProfessor', null, null, true);
        $directorId->setJsHint(_M('Cdigo do diretor', $module));
        $directorName = new MTextField('directorName', $this->getFormValue('directorName', $data->directorName), '', SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE'));
        $directorName->setReadOnly(true);
        $directorName->setJsHint(_M('Nome do diretor', $module));
        $hctDirector = new MHContainer('hctDirector', array( $directorLabel, $directorId, $directorName) );
        $hctDirector->setShowLabel(true);
        $fields[] = $hctDirector;

        parent::defineFields($fields, $validators, $data);
    }

    public function getTypesData()
    {
        $data = parent::getTypesData();
        $fieldCenterName = 'centerName';

        $data->name = MIOLO::_REQUEST($fieldCenterName);

        return $data;
    }
}
