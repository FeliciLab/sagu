class FrmConceptGradeSearch extends SSearchForm
{
    /**
     * Class constructor
     */
    public function __construct()
    {
        parent::__construct(_M('Localizar', 'basic'), new AcdConceptGroup(), array('conceptGroupId'), 'BusConceptGroup');
    }

    /**
     *  Default method to define fields
     */
    public function defineFields()
    {
        $MIOLO = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();

        // campo cdigo do grupo de conceitos
        $conceptGroupIdS = new MTextField('conceptGroupIdS', $this->getFormValue('conceptGroupIdS', $data->conceptGroupIdS), _M('Cdigo', $module), SAGU::getParameter('BASIC', 'FIELD_ID_SIZE'));
        $conceptGroupIdS->setJsHint(_M('Informe o cdigo do grupo de conceitos', $module));
        $fields[] = $conceptGroupIdS;

        // campo descrio do grupo de conceitos
        $descriptionS = new MTextField('descriptionS', $this->descriptionS->value, _M('Descrio', $module), SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE'));
        $descriptionS->setJsHint(_M('Informe o descrio do grupo de conceitos', $module));
        $fields[] = $descriptionS;

        parent::defineFields($fields, $module, 'GrdConceptGradeSearch');
    }
}
