class FrmStateEnrollBookSearch extends SSearchForm
{
    public function __construct($data)
    {
        parent::__construct(null, new AcdStateEnrollBook(), array('stateEnrollBookId'), 'BusStateEnrollBook');
    }


    public function defineFields()
    {
        $MIOLO  = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();
        $action = MIOLO::getCurrentAction();

        //Field state enroll book
        $stateEnrollBookIdS = new MTextField('stateEnrollBookIdS', $this->stateEnrollBookIdS->value, _M('Cdigo', $module), SAGU::getParameter('BASIC', 'FIELD_ID_SIZE'));
        $stateEnrollBookIdS->setJsHint(_M('Informe o cdigo do estado do livro matrcula', $module));
        $fields[]           = $stateEnrollBookIdS;

        //Field description
        $descriptionS = new MTextField('descriptionS', $this->descriptionS->value, _M('Descrio', $module), SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE'));
        $descriptionS->setJsHint(_M('Informe a descrio do estado do livro matrcula', $module));
        $fields[]     = $descriptionS;

        //Field sum total
        $isSumToTotalLabel = new MText('isSumToTotal',_M(' contado no nmero total de alunos do curso', $module).'?');
        $isSumToTotalLabel->setWidth(SAGU::getParameter('BASIC', 'FIELD_CONTAINER_SIZE'));
        $isSumTotal = new MRadioButtonGroup('isSumToTotal', null, SAGU::listYesNo(1), null, null, 'horizontal');
        $isSumTotal->SetShowLabel(false);
        $contIsSumToTotal = new MHContainer('contIsSumToTotal', array($isSumToTotalLabel, $isSumTotal));
        $isSumTotal->setJsHint(_M('Verificar se o livro de matrcula est contado no nmero total de alunos do curso', $module));
        
        $fields[] = $contIsSumToTotal;
        
        parent::defineFields($fields, $module, 'GrdStateEnrollBookSearch', $validators);
    }
}
