class FrmMessageContractRenewalSearch extends SSearchForm
{
    public function __construct($data)
    {
        parent::__construct(null, new AcdMessageContractRenewal(), array('messageContractRenewalId'), 'BusMessageContractRenewal');
    }

    
    public function defineFields()
    {
        $MIOLO  = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();
        $action = MIOLO::getCurrentAction();
        
        $limboS = new MHiddenField('limboS', '');
        $fields[] = $limboS;

        $messageContractRenewalIdS = new MTextField('messageContractRenewalIdS', $this->getFormValue('messageContractRenewalIdS', $data->messageContractRenewalIdS), _M('Cdigo', $module), SAGU::getParameter('BASIC', 'FIELD_ID_SIZE'));
        $messageContractRenewalIdS->setJsHint(_M('Informe a mensagem de renovao contratual', $module));
        $fields[] = $messageContractRenewalIdS;

        $this->page->isPostBack() ? $dataPeriodId = $this->getFormValue('periodIdS', $data->periodIdS) : $dataPeriodId = SAGU::getParameter('BASIC', 'CURRENT_PERIOD_ID');

        $businessPeriod = new BusinessAcademicBusPeriod();
        $periodId = new MComboBox('periodIdS', $dataPeriodId, _M('Perodo',$module), $businessPeriod->listPeriod(), true );
        $periodId->setJsHint(_M('Selecione um perodo', $module));
        $fields[] = $periodId;

        $learningPeriodLabel = new MText('learningPeriodLabel', _M('Perodo letivo',$module) . ':');
        $learningPeriodLabel->setWidth(SAGU::getParameter('BASIC', 'FIELD_CONTAINER_SIZE'));

        $learningPeriodIdS = new MLookupTextField('learningPeriodIdS', $this->learningPeriodIdS->value, '', SAGU::getParameter('BASIC', 'FIELD_LOOKUPFIELD_SIZE'), null, null, 'limboS,limboS,limboS,limboS,limboS,learningPeriodDescriptionS', $module, 'LearningPeriod', null, array('periodId' => 'periodIdS'), true);
        $learningPeriodIdS->setJsHint(_M('Informe o cdigo do perodo letivo', $module));
        $validators[] = new MIntegerValidator('learningPeriodIdS', _M('Perodo letivo',$module)); 

        $learningPeriodDescriptionS = new MTextField('learningPeriodDescriptionS', $this->learningPeriodDescriptionS->value, '', SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE'));
        $learningPeriodDescriptionS->setJsHint(_M('Descrio do perodo letivo',$module));
        $learningPeriodDescriptionS->setReadOnly(true);

        $hctLearningPeriod = new MHContainer('hctLearningPeriod', array($learningPeriodLabel, $learningPeriodIdS, $learningPeriodDescriptionS));
        $fields[]  = $hctLearningPeriod;

        $messageS = new MTextField('messageS', $this->messageS->value, _M('Mensagem',$module), SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE'));
        $messageS->setJsHint(_M('Informe a mensagem',$module));
        $fields[] = $messageS;

        $isListenerLabel = new MText('isListenerLabel', _M('Exibida para alunos ouvintes',$module) . '?');
        $isListenerLabel->setWidth(SAGU::getParameter('BASIC', 'FIELD_CONTAINER_SIZE'));

        $isListenerS = new MRadioButtonGroup('isListenerS', '', SAGU::listTrueFalse(1), $this->isListenerS->value, null, 'horizontal');
        $isListenerS->SetShowLabel(false);

        $hctIsListener = new MHContainer('hctIsListener', array($isListenerLabel, $isListenerS));
        $fields[]  = $hctIsListener;


        $statusS = new MSelection('statusS', $this->statusS->value, _M('Exibir para',$module), $this->busObject->listStatus());
        $statusS->setJsHint(_M('Para qual tipo de aluno esta mensagem ser mostrada?', $module));
        $fields[] = $statusS;

        parent::defineFields($fields, $module, 'GrdMessageContractRenewalSearch', $validators);
    }


    public function getTypesData()
    {
        $data->messageContractRenewalId  = $this->getFormValue('messageContractRenewalIdS');
        $data->learningPeriodId          = $this->getFormValue('learningPeriodIdS');
        $data->periodId                  = $this->getFormValue('periodId');
        $data->message                   = $this->getFormValue('messageS');
        $data->isListener                = $this->getFormValue('isListenerS');
        $data->status                    = $this->getFormValue('statusS');
        
        return $data;
    }  
}
