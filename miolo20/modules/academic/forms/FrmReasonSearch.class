/**
 * Form to search the acdReason table
 */
class FrmReasonSearch extends SSearchForm
{
    /**
     * Class constructor
     */
    public function __construct($data)
    {
        parent::__construct(_M('Localizar', 'basic'), new AcdReason(), array('reasonId'), 'BusReason');
    }

    /**
     *  Default method to define fields
     */
    public function defineFields()
    {
        $MIOLO  = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();
        $action = MIOLO::getCurrentAction();

        //Field reason
        $reasonIdS = new MTextField('reasonIdS', $this->getFormValue('reasonIdS', $data->reasonId), _M('Código', $module), SAGU::getParameter('BASIC', 'FIELD_ID_SIZE'));
        $reasonIdS->setJsHint(_M('Informe o código do motivo', $module));
        $fields[] = $reasonIdS;
        
        //Field description
        $descriptionS = new MTextField('descriptionS', $this->descriptionS->value, _M('Descrição', $module), SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE'));
        $descriptionS->setJsHint(_M('Informe a descrição do motivo',$module));
        $fields[] = $descriptionS;

        //Field state contract
        $stateContractLabelS = new MText('stateContractLabelS', _M('Estado contratual', $module) . ':');
        $stateContractLabelS->setWidth(SAGU::getParameter('BASIC', 'FIELD_CONTAINER_SIZE'));
        $stateContractIdS = new MLookupTextField('stateContractIdS', $this->stateContractIdS->value, _M('Código do estado contratual',$module), SAGU::getParameter('BASIC', 'FIELD_LOOKUPFIELD_SIZE'), null, null, 'stateContractDescriptionS', $module, 'StateContract', null, null, true);
        $stateContractIdS->setJsHint(_M('Informe o código do estado do contrato',$module));
        $validators[] = new MIntegerValidator('stateContractIdS', '', 'optional');
        $stateContractDescriptionS = new MTextField('stateContractDescriptionS', $this->stateContractDescriptionS->value, _M('Descrição do estado do contrato',$module), SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE'));
        $stateContractDescriptionS->setJsHint(_M('Informe a descrição do estado do contrato',$module));
        $hctStateContractS = new MHContainer('hctStateContract', array($stateContractLabelS, $stateContractIdS, $stateContractDescriptionS));
        $hctStateContractS->setShowLabel(false);
        $fields[] = $hctStateContractS;

        parent::defineFields($fields, $module, 'GrdReasonSearch', $validators);
    }
}
