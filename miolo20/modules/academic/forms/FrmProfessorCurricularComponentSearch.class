class FrmProfessorCurricularComponentSearch extends SSearchForm
{
    public function __construct($data)
    {
        parent::__construct(null, new AcdProfessorCurricularComponent(), array('professorCurricularComponentId'), 'BusProfessorCurricularComponent');
    }

    
    public function defineFields()
    {
        $MIOLO  = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();
        $action = MIOLO::getCurrentAction();

        $professorCurricularComponentIdS = new MHiddenField('professorCurricularComponentIdS', $this->getFormValue('professorCurricularComponentIdS', $data->professorCurricularComponentIdS), _M('Cdigo da disciplina do professor',$module), SAGU::getParameter('BASIC', 'FIELD_ID_SIZE'));
        $professorCurricularComponentIdS->setJsHint(_M('Informe o cdigo da disciplina do professor',$module));
        $fields[] = $professorCurricularComponentIdS;

        $professorLabelS = new MText('professorLabelS', _M('Professor',$module) . ':');
        $professorLabelS->setWidth(SAGU::getParameter('BASIC', 'FIELD_CONTAINER_SIZE'));

        $professorIdS = new MLookupTextField('professorIdS', $this->professorIdS->value, '', SAGU::getParameter('BASIC', 'FIELD_LOOKUPFIELD_SIZE'), null, null, 'professorNameS', 'basic', 'PhysicalPersonProfessor', null, null, true);
        $professorIdS->setJsHint(_M('Informe o cdigo do professor',$module));
        $validators[] = new MIntegerValidator('professorIdS', _M('Professor',$module));

        $professorNameS = new MTextField('professorNameS', $this->professorNameS->value,'', SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE'));
        $professorNameS->setJsHint(_M('Informe o nome do professor',$module));

        $hctProfessorS = new MHContainer('hctProfessorS', array($professorLabelS, $professorIdS, $professorNameS));
        $fields[]   = $hctProfessorS;

        $curricularComponentLabelS = new MText('curricularComponentLabelS', _M('Disciplina',$module) . ':');
        $curricularComponentLabelS->setWidth(SAGU::getParameter('BASIC', 'FIELD_CONTAINER_SIZE'));

        $curricularComponentIdS = new MLookupTextField('curricularComponentIdS', $this->curricularComponentIdS->value, '', SAGU::getParameter('BASIC', 'FIELD_ID_SIZE'), null, null, 'curricularComponentVersionS,curricularComponentNameS', $module, 'CurricularComponent', null, null, true);
        $curricularComponentIdS->setJsHint(_M('Informe o cdigo da disciplina',$module));

        $curricularComponentVersionS = new MTextField('curricularComponentVersionS', $this->curricularComponentVersionS->value, '', SAGU::getParameter('BASIC', 'FIELD_ID_SIZE'));
        $curricularComponentVersionS->setJsHint(_M('Informe a verso da disciplina',$module));
        $validators[] = new MIntegerValidator('curricularComponentVersionS', _M('Verso', $module));

        $curricularComponentNameS = new MTextField('curricularComponentNameS', $this->curricularComponentNameS->value, '', SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE'));
        $curricularComponentNameS->setJsHint(_M('Informe o nome da disciplina',$module));

        $hctCurricularComponentS = new MHContainer('hctCurricularComponentS', array($curricularComponentLabelS, $curricularComponentIdS, $curricularComponentVersionS, $curricularComponentNameS));
        $hctCurricularComponentS->setShowLabel(true);
        $fields[]   = $hctCurricularComponentS;      

        parent::defineFields($fields, $module, 'GrdProfessorCurricularComponentSearch', $validators);
    }

    
    public function getTypesData()
    {
        $data = parent::getTypesData();
        $data->professorCurricularComponentId = $this->getFormValue('professorCurricularComponentIdS');
        $data->professorName = $this->getFormValue('professorNameS');
        $data->curricularComponentName = $this->getFormValue('curricularComponentNameS');
        
        return $data;
    }
}
