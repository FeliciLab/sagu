/**
 * Form to search the acdElection table
 */
class FrmElectionSearch extends SSearchForm
{
    /**
     * Class constructor
     */
    public function __construct($data)
    {
        parent::__construct(_M('Localizar', 'basic'), new AcdElection(), array('electionDate'), 'BusElection');
    }

    /**
     *  Default method to define fields
     */
    public function defineFields()
    {
        $MIOLO = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();
        $action = MIOLO::getCurrentAction();

        // Field limbo
        $limboS = new MHiddenField('limboS', '');
        $fields[] = $limboS;

        // Field election date
        $electionDateS = new MCalendarField('electionDateS', $this->electionDateS->value, _M('Data da eleio',$module), SAGU::getParameter('BASIC', 'FIELD_DATE_SIZE'));
        $electionDateS->setJsHint(_M('Informe a data da eleio',$module));
        $fields[] = $electionDateS;
        $validators[] = new MDATEDMYValidator('electionDateS', '', 'optional');

        // Field description
        $descriptionS = new MTextField('descriptionS', $this->descriptionS->value, _M('Descrio',$module), SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE'));
        $descriptionS->setJsHint(_M('Informe a descrio da eleio',$module));
        $fields[] = $descriptionS;

        parent::defineFields($fields, $module, 'GrdElectionSearch', $validators);
    }
}
