class FrmTurnTransferFrequency extends FrmTurnTransfer
{
    public function __construct($steps = null)
    {
        parent::__construct($steps, __CLASS__);
    }

    
    public function createFields()
    {
        $MIOLO = MIOLO::getInstance();
        $module = SAGU::getFileModule(__FILE__);
        $action = MIOLO::getCurrentAction();
        $function = MIOLO::_REQUEST('function');

        //Load data
        $stepData = $this->getStepData();
        
        $tableData = array();
        $workLoads = MIOLO::_REQUEST('workLoad');
        
        foreach ( (array) $this->turnTransfer['frequencies'] as $row )
        {
            $curriculumOld = $this->busCurriculum->getCurriculum($row->curriculumIdOld);
            $curriculumNew = $this->busCurriculum->getCurriculum($row->curriculumIdNew);

            $id = "workLoad[{$row->curriculumIdOld}]";
            $value = MUtil::NVL( MUtil::NVL($workLoads[$row->curriculumIdOld], $row->newWorkLoad), $row->sumWorkLoad );
            $workload = new MTextField($id, $value);
            $validators[] = new MFloatValidator($id, _M('C.H. a utilizar (curso de destino "@1")'), SAGU::getParameter('BASIC', 'FLOAT_SEPARATOR'), SAGU::getParameter('BASIC', 'REAL_ROUND_VALUE'), 'optional');
            
            $tableData[] = array($curriculumOld->curricularComponentName, $row->sumWorkLoad, $curriculumNew->curricularComponentName, $workload);
        }
        
        $fields[] = $table = new MTableRaw(null, $tableData, array(
            _M('DISCIPLINA DO CURSO DE ORIGEM', $module),
            _M('C.H. CURSADA', $module),
            _M('DISCIPLINA DO CURSO DE DESTINO', $module),
            _M('C.H. A UTILIZAR', $module),
        ));
        

        $this->setValidators($validators);
        $this->setFields($fields);
    }
    
    
    public function nextStepButton_click($args = null)
    {
        $MIOLO = MIOLO::getInstance();
        $module = SAGU::getFileModule(__FILE__);
        $workLoads = MIOLO::_REQUEST('workLoad');
        
        try
        {
            foreach ( (array) $this->turnTransfer['frequencies'] as $key => $row )
            {
                $curriculumOld = $this->busCurriculum->getCurriculum($row->curriculumIdOld);
                $curriculumNew = $this->busCurriculum->getCurriculum($row->curriculumIdNew);
                
                $newWorkLoad = $workLoads[$row->curriculumIdOld];
                if ( $newWorkLoad > $row->sumWorkLoad )
                {
                    throw new Exception( _M('A C.H a utilizar da disciplina de destino "@1" no pode ser maior que a C.H. cursada.', $module, $curriculumNew->curricularComponentName) );
                }
                
                $this->turnTransfer['frequencies'][$key]->newWorkLoad = $newWorkLoad;
            }
            
            
            $MIOLO->session->set('turnTransfer', $this->turnTransfer);
            
            parent::nextStepButton_click($args);
        }
        catch (Exception $e)
        {
            $this->addError($e->getMessage());
        }
    }
}
