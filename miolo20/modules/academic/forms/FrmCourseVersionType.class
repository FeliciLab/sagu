/**
 * Form to manipulate a course version type
 **/
class FrmCourseVersionType extends SManagementForm
{

    /**
     * Class constructor
     **/
    public function __construct()
    {
        parent::__construct(new AcdCourseVersionType(), array('courseVersionTypeId'), 'BusCourseVersionType' );
    }

    /**
     * Default method to define fields
     **/
    public function defineFields()
    {
        $MIOLO = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();
        $action = MIOLO::getCurrentAction();
        $function = MIOLO::_request('function');
        
        if ( in_array($function, array('update','delete')) )
        {
            $pk = $this->getObjectPk();
            $fields[] = new MTextLabel('', $pk->courseVersionTypeId, _M('Código',$module));
            $fields[] = new MHiddenField('courseVersionTypeId', $pk->courseVersionTypeId);          
            $data = $this->busObject->getCourseVersionType($pk->courseVersionTypeId);
        }

        $data->description = $this->getFormValue('description', $data->description);
        $description = new MTextField('description', $data->description, _M('Descrição', $module), SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE'));
        $description->setJsHint(_M('Informe a descrição da versão do curso', $module));
        $validators[] = new MRequiredValidator('description');        
        $fields[] = $description;
        
        $fields[] = new MSelection('regimen', $data->regimen, _M('Regime', $module), BusinessAcademicBusCourseVersionType::listCourseRegimen());
        
        parent::defineFields($fields, $validators, $data);
    }
}

