class FrmStateEnrollBookRulesSearch extends SSearchForm
{
    public function __construct($data)
    {
        parent::__construct(null, new AcdStateEnrollBookRules(), array('stateEnrollBookRulesId'), 'BusStateEnrollBookRules');
    }

    
    public function defineFields()
    {
        $MIOLO  = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();
        $action = MIOLO::getCurrentAction();

        $fields[] = new MHiddenField('stateEnrollBookRulesIdS', $this->stateEnrollBookRulesIdS->value);

        $stateEnrollBookIdS = new MTextField('stateEnrollBookIdS', $this->stateEnrollBookIdS->value, _M('Cdigo do estado do livro matrcula', $module), SAGU::getParameter('BASIC', 'FIELD_ID_SIZE'));
        $stateEnrollBookIdS->setJsHint(_M('Informe o cdigo do estado do livro matrcula', $module));
        $fields[] = $stateEnrollBookIdS;

        $descriptionS = new MTextField('descriptionS', $this->descriptionS->value, _M('Descrio', $module), SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE'));
        $descriptionS->setJsHint(_M('Informe a descrio do estado do livro matrcula', $module));
        $fields[] = $descriptionS;

        $business = new BusinessAcademicBusStatesContract();
        $stateContractIdS = new MComboBox('stateContractIdS', $this->getFormValue('stateContractIdS', $this->stateContractIdS->value), _M('Estado contratual',$module), $business->listStatesContract());
        $stateContractIdS->setJsHint(_M('Informe o cdigo do estado do contrato',$module));
        $fields[] = $stateContractIdS;

        parent::defineFields($fields, $module, 'GrdStateEnrollBookRulesSearch', $validators);
    }


    public function  getTypesData()
    {
        $data = parent::getTypesData();
        $data->stateIdRules = MIOLO::_REQUEST('stateContractIdS');

        return $data;
    }
}
