class FrmStateTransistionSearch extends SSearchForm
{
    public function __construct($data)
    {
        parent::__construct(null, new acdStateTransistion(), array('beginStateId', 'endStateId'), 'BusStateTransistion');
    }


    public function defineFields()
    {
        $MIOLO  = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();
        $action = MIOLO::getCurrentAction();

        //Field begin state
        $beginStateLabelS = new MText('beginStateLabelS', _M('Estado inicial' , $module) . ':');
        $beginStateLabelS->setWidth(SAGU::getParameter('BASIC', 'FIELD_CONTAINER_SIZE'));
        $beginStateIdS = new MLookupTextField('beginStateIdS', $this->getFormValue('beginStateIdS', $data->beginStateIdS), _M('Cdigo do estado inicial',$module), SAGU::getParameter('BASIC', 'FIELD_LOOKUPFIELD_SIZE'), null, null, 'beginStateDescriptionS', $module, 'StatesContract', null, null, true);
        $beginStateIdS->setJsHint(_M('Informe o cdigo do estado inicial', $module));
        $validators[] = new MIntegerValidator('beginStateIdS', _M('Estado inicial' , $module), 'optional');
        $beginStateDescriptionS = new MTextField('beginStateDescriptionS', $this->getFormValue('beginStateDescriptionS', $data->beginStateDescriptionS), _M('Descrio do estado inicial', $module), SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE'));
        $beginStateDescriptionS->setJsHint(_M('Descrio do estado inicial', $module));
        $beginStateDescriptionS->setReadOnly(true);
        $hctBeginStateS = new MHContainer('hctBeginStateS', array($beginStateLabelS, $beginStateIdS, $beginStateDescriptionS));
        $hctBeginStateS->setShowLabel(false);
        $fields[] = $hctBeginStateS;

        //Field end state
        $endStateLabelS = new MText('endStateLabelS', _M('Estado final', $module) . ':');
        $endStateLabelS->setWidth(SAGU::getParameter('BASIC', 'FIELD_CONTAINER_SIZE'));
        $endStateIdS = new MLookupTextField('endStateIdS', $this->getFormValue('endStateIdS', $data->endStateIdS), _M('Cdigo do estado final',$module), SAGU::getParameter('BASIC', 'FIELD_LOOKUPFIELD_SIZE'), null, null, 'endStateDescriptionS', $module, 'StatesContract', null, null, true);
        $endStateIdS->setJsHint(_M('Informe o cdigo do estado final', $module));
        $validators[] = new MIntegerValidator('endStateIdS', '', 'optional');
        $endStateDescriptionS = new MTextField('endStateDescriptionS', $this->getFormValue('endStateDescriptionS', $data->endStateDescriptionS), _M('Descrio do estado final',$module), SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE'));
        $endStateDescriptionS->setJsHint(_M('Descrio do estado final', $module));
        $endStateDescriptionS->setReadOnly(true);
        $hctEndStateS = new MHContainer('hctEndStateS', array($endStateLabelS, $endStateIdS, $endStateDescriptionS));
        $hctEndStateS->setShowLabel(false);
        $fields[] = $hctEndStateS;
        unset($flds);

        parent::defineFields($fields, $module, 'GrdStateTransistionSearch', $validators);
    }
}
