/**
 * Form to manipulate a stateTransistion
 **/
class FrmStateTransistion extends SManagementForm
{
    public function __construct()
    {
        parent::__construct(new acdStateTransistion(), array('beginStateId', 'endStateId'), 'BusStateTransistion');
    }


    public function defineFields()
    {
        $MIOLO = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();
        $action = MIOLO::getCurrentAction();
        $function = MIOLO::_REQUEST('function');

        if ( in_array($function,array(SForm::FUNCTION_UPDATE, SForm::FUNCTION_DELETE)) )
        {
            $beginStateId = MIOLO::_REQUEST('beginStateId');
            $endStateId = MIOLO::_REQUEST('endStateId');
            
            $data = $this->busObject->getStateTransistion($beginStateId, $endStateId);
        }

        //Field begin state
        $beginStateLabel = new MText('beginStateLabel', _M('Estado inicial', $module) . ':');
        $beginStateLabel->setWidth(SAGU::getParameter('BASIC', 'FIELD_CONTAINER_SIZE'));
        $beginStateLabel->setClass('m-caption m-caption-required');
        $beginStateId = new MLookupTextField('beginStateId', $this->getFormValue('beginStateId', $data->beginStateId), _M('Cdigo do estado inicial',$module), SAGU::getParameter('BASIC', 'FIELD_LOOKUPFIELD_SIZE'), null, null, 'beginStateDescription', $module, 'StatesContract', null, null, true);
        $beginStateId->setJsHint(_M('Informe o cdigo do estado inicial', $module));
        $validators[] = new MIntegerValidator('beginStateId', _M('Estado inicial', $module), 'required');
        $beginStateDescription = new MTextField('beginStateDescription', $this->getFormValue('beginStateDescription', $data->beginStateDescription), _M('Descrio do estado inicial',$module), SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE'));
        $beginStateDescription->setReadOnly(true);
        $beginStateDescription->setJsHint(_M('Descrio do estado inicial', $module));
        $hctBeginState = new MHContainer('hctBeginState', array($beginStateLabel, $beginStateId, $beginStateDescription));
        $hctBeginState->setShowLabel(false);
        $fields[] = $hctBeginState;
        
        //Field end state
        $endStateLabel = new MText('endStateLabel', _M('Estado final', $module) . ':');
        $endStateLabel->setWidth(SAGU::getParameter('BASIC', 'FIELD_CONTAINER_SIZE'));
        $endStateLabel->setClass('m-caption m-caption-required');
        $endStateId = new MLookupTextField('endStateId', $this->getFormValue('endStateId', $data->endStateId), _M('Cdigo do estado final',$module), SAGU::getParameter('BASIC', 'FIELD_LOOKUPFIELD_SIZE'), null, null, 'endStateDescription', $module, 'StatesContract', null, null, true);
        $endStateId->setJsHint(_M('Informe o cdigo do estado final', $module));
        $validators[] = new MIntegerValidator('endStateId', _M('Estado final', $module), 'required');
        $endStateDescription = new MTextField('endStateDescription', $this->getFormValue('endStateDescription', $data->endStateDescription), _M('Descrio do estado final',$module), SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE'));
        $endStateDescription->setJsHint(_M('Descrio do estado final', $module));
        $endStateDescription->setReadOnly(true);
        $hctEndState = new MHContainer('hctEndState', array($endStateLabel, $endStateId, $endStateDescription));
        $hctEndState->setShowLabel(false);
        $fields[] = $hctEndState;

        parent::defineFields($fields, $validators, $data);
    }
}
