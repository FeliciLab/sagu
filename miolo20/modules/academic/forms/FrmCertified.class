class FrmCertified extends SManagementForm
{
    public function __construct()
    {
        parent::__construct(new AcdCertified(), array('certifiedId', 'dateIssue', 'certifiedTypeId'), 'BusCertified');
    }

    
    public function defineFields()
    {
        $MIOLO    = MIOLO::getInstance();
        $module   = MIOLO::getCurrentModule();
        $action   = MIOLO::getCurrentAction();
        $function = MIOLO::_REQUEST('function');

        if ( in_array($function, array(SForm::FUNCTION_UPDATE, SForm::FUNCTION_DELETE)) )
        {
            $certifiedId = MIOLO::_REQUEST('certifiedId');
            $dateIssue = MIOLO::_REQUEST('dateIssue');
            $certifiedTypeId = MIOLO::_REQUEST('certifiedTypeId');

            $data = $this->busObject->getCertified($certifiedId, $dateIssue, $certifiedTypeId);

            $fields[] = new MHiddenField('certifiedId', $certifiedId);
            $fields[] = new MTextLabel('certifiedId', $data->certifiedId, _M('Cdigo', $module));

            $fields[] = new MHiddenField('dateIssue', $dateIssue);
            $fields[] = new MTextLabel('dateIssue', $data->dateIssue, _M('Data de publicao', $module));

            $fields[] = new MHiddenField('certifiedTypeId', $certifiedTypeId);
            $fields[] = new MTextLabel('certifiedTypeId', $data->certifiedTypeId, _M('Tipo de atestado', $module));
        }

        //Field lookup contract
        $fields[] = new MHiddenField('limbo', '');
        $MIOLO->getClass( 'academic', 'lookupContract' );
        $fields[] = new SLookupContract('contractId', $data);
        
        $validators[] = new MIntegerValidator('contractId', _M('Contrato', $module));

        $certifiedTypeLabel = new MText('certifiedTypeLabel', _M('Tipo de atestado',$module) . ':');
        $certifiedTypeLabel->setWidth(SAGU::getParameter('BASIC', 'FIELD_CONTAINER_SIZE'));
        $certifiedTypeLabel->setClass('m-caption m-caption-required');

        if ( in_array($function, array(SForm::FUNCTION_INSERT) ) )
        {
            $certifiedTypeId = new MLookupTextField('certifiedTypeId', $this->getFormValue('certifiedTypeId', $data->certifiedTypeId), NULL, SAGU::getParameter('BASIC', 'FIELD_LOOKUPFIELD_SIZE'), NULL, NULL, 'certifiedTypeDescription', $module, 'CertifiedType', NULL, NULL, true);
            $certifiedTypeId->setJsHint(_M('Informe o cdigo do tipo de atestado', $module));
            $validators[] = new MIntegerValidator('certifiedTypeId', _M('Tipo de atestado',$module), 'required');

            $certifiedTypeDescription = new MTextField('certifiedTypeDescription', $this->getFormValue('certifiedTypeDescription', $data->certifiedTypeDescription), NULL, SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE'));
            $certifiedTypeDescription->setReadOnly(true);
            $certifiedTypeDescription->setJsHint(_M('Descrio do tipo de atestado',$module));

            $hctCertifiedType = new MHContainer('hctCertifiedType', array($certifiedTypeLabel, $certifiedTypeId, $certifiedTypeDescription));
            $hctCertifiedType->setShowLabel(true);
            $fields[] = $hctCertifiedType;
        }
        
        $fields[] = new MHiddenField('unitId', $this->getFormValue('unitId', $data->unitId));
        $fields[] = new MHiddenField('turnId', $this->getFormValue('turnId', $data->turnId));

        $dateIssueLabel = new MText('dateIssueLabel', _M('Data de publicao',$module) . ':');
        $dateIssueLabel->setWidth(SAGU::getParameter('BASIC', 'FIELD_CONTAINER_SIZE'));
        $dateIssueLabel->setClass('m-caption m-caption-required');

        if ( in_array($function, array(SForm::FUNCTION_INSERT) ) )
        {
            $dateIssue = $this->getFormValue('dateIssue', date(SAGU::getParameter('BASIC', 'MASK_DATE_PHP')));
            $dateIssue = new MCalendarField('dateIssue', $dateIssue, NULL , SAGU::getParameter('BASIC', 'FIELD_DATE_SIZE'));
            $dateIssue->setJsHint(_M('Informe a data de publicao',$module));
            $validators[] = new MDATEDMYValidator('dateIssue', _M('Data de publicao', $module), 'required');

            $hctDateIssue = new MHContainer('hctDateIssue', array($dateIssueLabel, $dateIssue));
            $hctDateIssue->setShowLabel(true);
            $fields[]  = $hctDateIssue;
        }

        parent::defineFields($fields, $validators, $data);
    }
    
    public function getTypesData()
    {
        $data = parent::getTypesData();
        $data->personId = $this->getFormValue('contractPersonId');
        $data->courseId = $this->getFormValue('contractCourseId');
        $data->courseVersion = $this->getFormValue('contractCourseVersion');
        $data->turnId = $this->getFormValue('contractTurnId');
        $data->unitId = $this->getFormValue('contractUnitId');

        return $data;
    }
}
