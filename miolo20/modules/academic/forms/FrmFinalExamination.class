class FrmFinalExamination extends SStepByStepForm {

    public function __construct($title = null, $steps = null, $formName = null)
    {
        if (!$title->disableConstruct)
        {
            parent::__construct($title, $steps, $formName);

            $this->toolbar->disableButton(MToolBar::BUTTON_SAVE);
        }
    }

    public function finalizeButton_click($args)
    {
        $MIOLO = MIOLO::getInstance();
        $module = SAGU::getFileModule(__FILE__);
        $action = MIOLO::getCurrentAction();

        $enrollId = MIOLO::_REQUEST('enrollId');
        $allData = (object) array_merge((array) $this->getStepData(), (array) $this->getData());

        $busEnroll = new BusinessAcademicBusEnroll();
        $busFinalExaminationKnowledgeArea = new BusinessAcademicBusFinalExaminationKnowledgeArea();
        $busFinalExaminationDirectors = new BusinessAcademicBusFinalExaminationDirectors();
        $busFinalExaminationExaminingBoard = new BusinessAcademicBusFinalExaminationExaminingBoard();

        try
        {
            if (!(strlen($enrollId) > 0))
            {
                throw new Exception(_M('Cdigo da matrcula (enrollId) no encontrado', $module));
            }

            //Atualiza o tema na busEnroll
            $enroll = $busEnroll->getEnroll($enrollId);
            $enroll->finalExaminationTheme = $allData->finalExaminationTheme;
            $enroll->examiningBoard = $allData->examiningBoardField;
            $busEnroll->updateEnroll($enroll);

            $enrollFilter = new stdClass();
            $enrollFilter->enrollId = $enrollId;

            //Orientadores
            $rows = $busFinalExaminationDirectors->searchFinalExaminationDirectors($enrollFilter, true);
            foreach ((array) $rows as $row)
            {
                $busFinalExaminationDirectors->deleteFinalExaminationDirectors($row->enrollId, $row->personId);
            }

            foreach ((array) $allData->directors as $row)
            {
                if (!$row->removeData)
                {
                    $row->enrollId = $enrollId;
                    $busFinalExaminationDirectors->insertFinalExaminationDirectors($row);
                }
            }


            //Linhas de pesquisa
            $rows = $busFinalExaminationKnowledgeArea->searchFinalExaminationKnowledgeArea($enrollFilter, true);
            foreach ((array) $rows as $row)
            {
                $busFinalExaminationKnowledgeArea->deleteFinalExaminationKnowledgeArea($row->enrollId, $row->knowledgeAreaId);
            }

            foreach ((array) $allData->knowledgeArea as $row)
            {
                if (!$row->removeData)
                {
                    $row->enrollId = $enrollId;
                    $busFinalExaminationKnowledgeArea->insertFinalExaminationKnowledgeArea($row);
                }
            }


            //Banca examinadora
            $rows = $busFinalExaminationExaminingBoard->searchFinalExaminationExaminingBoard($enrollFilter, true);
            foreach ((array) $rows as $row)
            {
                $busFinalExaminationExaminingBoard->deleteFinalExaminationExaminingBoard($row->enrollId, $row->personId);
            }

            foreach ((array) $allData->examiningBoard as $row)
            {
                $objNote = 'note_' . $row->personId;
                $row->note = $allData->$objNote;

                if (!$row->removeData)
                {
                    $row->enrollId = $enrollId;
                    $busFinalExaminationExaminingBoard->insertFinalExaminationExaminingBoard($row);
                }
            }

            $busFinalExaminationBoard = new BusinessAcademicBusFinalExaminationExaminingBoard();
            $busEnroll = new BusinessAcademicBusEnroll();
            $enroll = $busEnroll->getEnroll($enrollId);
            $busGroup = new BusinessAcademicBusGroup();
            $group = $busGroup->getGroup($enroll->groupId);
            $learningPeriodId = $group->learningPeriodId;
            $finalNote = $busFinalExaminationBoard->getValorNotaFinal($enrollId, $learningPeriodId);

            $usaConceito = false; 
            if ( $group->useConcept == DB_TRUE )
            {
                $usaConceito = true;
            }
            
            $busFinalExaminationBoard->insertValorNotaFinal($allData->txfFinalNote, $enrollId, $finalNote[0], $usaConceito);

            parent::finalizeButton_click($args);

            $goto = $MIOLO->getActionURL($module, $action);
            SAGU::information(SAGU::getParameter('BASIC', 'MSG_RECORD_UPDATED'), $goto);
        }
        catch (Exception $e)
        {
            $this->AddError($e->getMessage());
        }

        parent::finalizeButton_click($args);
    }

}

