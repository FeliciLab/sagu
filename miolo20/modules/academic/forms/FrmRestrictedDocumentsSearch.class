class FrmRestrictedDocumentsSearch extends SSearchForm
{

    /**
     * Class constructor
     */
    public function __construct()
    {
        parent::__construct(_M('Localizar', 'basic'), new AcdRestrictedDocuments(), array( 'restrictedDocumentId' ), 'BusRestrictedDocuments');
    }

    /**
     *  Default method to define fields
     */
    public function defineFields()
    {
        $MIOLO = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();
        $action = MIOLO::getCurrentAction();

        //Field restricted documento
        $restrictedDocumentIdS = new MTextField('restrictedDocumentIdS', $this->getFormValue('restrictedDocumentIdS', $data->restrictedDocumentId), _M('Cdigo', $module), SAGU::getParameter('BASIC', 'FIELD_ID_SIZE'));
        $restrictedDocumentIdS->setJsHint(_M('Informe o cdigo do documento restrito', $module));
        $fields[] = $restrictedDocumentIdS;

        //documentType
        $documentTypeLabelS = new MText('documentTypeLabelS', _M('Tipo de documento', $module) . ':');
        $documentTypeLabelS->setWidth(SAGU::getParameter('BASIC', 'FIELD_CONTAINER_SIZE'));

        $documentTypeIdS = new MLookupTextField('documentTypeIdS', $this->documentTypeIdS->value, '', SAGU::getParameter('BASIC', 'FIELD_LOOKUPFIELD_SIZE'), null, null, 'documentTypeNameS', 'basic', 'DocumentType', null, null, true);
        $documentTypeIdS->setJsHint(_M('Informe o cdigo do documento', $module));
        $validators[] = new MIntegerValidator('documentTypeIdS', _M('Tipo de documento', $module));

        $documentTypeNameS = new MTextField('documentTypeNameS', $this->documentTypeNameS->value, '', SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE'));
        $documentTypeNameS->setJsHint(_M('Nome do tipo de documento', $module));
        $documentTypeNameS->setReadOnly(true);

        $hctDocumentType = new MHContainer('hctDocumentType', array( $documentTypeLabelS, $documentTypeIdS, $documentTypeNameS ));
        $hctDocumentType->setShowLabel(true);
        $fields[] = $hctDocumentType;

        /*
         * Course occurrence lookup
         */
        $lkpValue = array(
            $this->GetFormValue('courseIdS', $data->courseIdS),
            $this->GetFormValue('courseVersionS', $data->courseVersionS),
            $this->GetFormValue('turnIdS', $data->turnIdS),
            $this->GetFormValue('unitIdS', $data->unitIdS)
        );
        $related = array(
            'courseIdS',
            'courseVersionS',
            'courseNameS',
            'turnIdS',
            'turnDescriptionS',
            'unitIdS',
            'unitDescriptionS',
            'formationLevelIdS',
            'formationLevelDescriptionS'
        );
        $courseOccurrenceLookup = new SCourseOccurrenceLookup($lkpValue, false, 'S', $related);
        $fields[] = $courseOccurrenceLookup;

        //formationLevel
        $formationLevelLabelS = new MText('formationLevelLabelS', _M('Grau de formao', $module) . ':');
        $formationLevelLabelS->setWidth(SAGU::getParameter('BASIC', 'FIELD_CONTAINER_SIZE'));

        $formationLevelIdS = new MLookupTextField('formationLevelIdS', $this->formationLevelIdS->value, '', SAGU::getParameter('BASIC', 'FIELD_LOOKUPFIELD_SIZE'), null, null, 'formationLevelDescriptionS', 'academic', 'FormationLevel', null, null, true);
        $formationLevelIdS->setJsHint(_M('Informe o cdigo do grau de formao', $module));
        $validators[] = new MIntegerValidator('formationLevelIdS', _M('Grau de formao', $module));

        $formationLevelDescriptionS = new MTextField('formationLevelDescriptionS', $this->formationLevelDescriptionS->value, '', SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE'));
        $formationLevelDescriptionS->setJsHint(_M('Descrio do grau de formao', $module));
        $formationLevelDescriptionS->setReadOnly(true);

        $hctformationLevel = new MHContainer('hctformationLevel', array( $formationLevelLabelS, $formationLevelIdS, $formationLevelDescriptionS ));
        $hctformationLevel->setShowLabel(true);
        $fields[] = $hctformationLevel;

        parent::defineFields($fields, $module, 'GrdRestrictedDocumentsSearch');
    }

    /**
     * Method to gather all information from the form fields
     * and put them on a database compatible object
     * */
    public function getTypesData()
    {
        // get filters values
        $data->restrictedDocumentId = $this->getFormValue('restrictedDocumentIdS');
        $data->documentTypeId = $this->getFormValue('documentTypeIdS');
        $data->documentTypeName = $this->getFormValue('documentTypeNameS');
        $data->formationLevelId = $this->getFormValue('formationLevelIdS');
        $data->courseId = $this->getFormValue('courseIdS');
        $data->courseVersion = $this->getFormValue('courseVersionS');
        $data->courseName = $this->getFormValue('courseNameS');
        $data->turnId = $this->getFormValue('turnIdS');
        $data->turnDescription = $this->getFormValue('turnDescriptionS');
        $data->unitId = $this->getFormValue('unitIdS');
        $data->unitDescription = $this->getFormValue('unitDescriptionS');

        return $data;
    }
}
