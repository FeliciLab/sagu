class FrmCurricularComponentCategorySearch extends SSearchForm
{
    public function __construct($data)
    {
        parent::__construct(null, new AcdCurricularComponentCategory(), array('curricularComponentCategoryIdS'));
    }

    
    public function defineFields()
    {
        $MIOLO  = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();
        $action = MIOLO::getCurrentAction();

        // Codigo
        $fields[] = $codigo = new MTextField('curricularComponentCategoryIdS', $this->getFormValue('curricularComponentCategoryIdS',$data->curricularComponentCategoryIdS), _M('Cdigo',$module), SAGU::getParameter('BASIC', 'FIELD_ID_SIZE'));
        $codigo->setJsHint(_M('Informe o cdigo da categoria',$module));
            
        //Field reason cencellation description
        $descriptionS = new MTextField('descriptionS', $this->descriptionS->value, _M('Descrio', $module), SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE'), _M('Ex: terica, prtica', $module));
        $descriptionS->setJsHint(_M('Informe a descrio da categoria de disciplina', $module));
        $fields[] = $descriptionS;

        parent::defineFields($fields, $module, 'GrdCurricularComponentCategorySearch', $validators);
    }
}
