/**
 * Form to manipulate a pupilListing
 */
class FrmPupilFolder extends SForm
{
    private $home;

    /**
     * Class constructor
     */
    public function __construct($data)
    {
        $module = MIOLO::getCurrentModule();
        $this->home = $data->home;

        parent::__construct(_M('Etiqueta para pasta de aluno', $module), NULL, NULL);
    }

    /**
     * Default method to define fields
     */
    public function defineFields()
    {
        $MIOLO = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();
        $action = MIOLO::getCurrentAction();
        $function = MIOLO::_request('function');
        $event = MIOLO::_request('event');
        $data->radFileType = MIOLO::_REQUEST('radFileType');

        // Field period
        $business = new BusinessAcademicBusPeriod();
        $periodId = new MComboBox('periodId', strlen($this->getFormValue('periodId', $data->periodId))>0 ? $this->getFormValue('periodId', $data->periodId) : SAGU::getParameter('BASIC', 'CURRENT_PERIOD_ID'), _M('Perodo', $module), $business->listPeriod());
        $periodId->setJsHint(_M('Selecione um perodo', $module));
        $validators[] = new MRequiredValidator('periodId');
        $fields[] = $periodId;

        /*
         * Course occurrence lookup
         */
        $lkpValue = array(
            $this->GetFormValue('courseId', $data->courseId),
            $this->GetFormValue('courseVersion', $data->courseVersion),
            $this->GetFormValue('turnId', $data->turnId),
            $this->GetFormValue('unitId', $data->unitId)
        );
        $courseOccurrenceLookup = new SCourseOccurrenceLookup($lkpValue);
        $courseOccurrenceLookup->showRequiredLabel();
        $validators[] = new MRequiredValidator('courseId', _M('Curso', $module));
        $validators[] = new MIntegerValidator('courseVersion', _M('Verso do curso', $module));
        $validators[] = new MIntegerValidator('turnId', _M('Turno', $module));
        $validators[] = new MIntegerValidator('unitId', _M('Unidade', $module));
        $fields[] = $courseOccurrenceLookup;

        // Field rad option file type
        $optsFreshmen = new MOption('freshman', 'opt2', _M('Calouro', $module), true);
        $optsFreshmen->addAttribute('onChange', $this->getName() . '.submit();');
        $opts[] = $optsFreshmen;
        $optsEnrolled = new MOption('enrolled', 'opt3', _M('Matriculado', $module), false);
        $optsEnrolled->addAttribute('onChange', $this->getName() . '.submit();');
        $opts[] = $optsEnrolled;
        $optsChoicePupil = new MOption('choicePupil', 'opt4', _M('Escolher aluno', $module), false);
        $optsChoicePupil->addAttribute('onChange', $this->getName() . '.submit();');
        $opts[] = $optsChoicePupil;
        $optsAll = new MOption('all', 'opt1', _M('Todos', $module), false);
        $optsAll->addAttribute('onChange', $this->getName() . '.submit();');
        $opts[] = $optsAll;

        $radFileTypeLabel = new MText('radFileTypeLabel', _M('Tipo de arquivo',$module) . ':');
        $radFileTypeLabel->setWidth(SAGU::getParameter('BASIC', 'FIELD_CONTAINER_SIZE'));
        $radFileTypeLabel->setClass('m-caption m-caption-required');
        $radFileType = new MRadioButtonGroup('radFileType', '', $opts, strlen($this->getFormValue('radFileType', $data->radFileType))>0 ? $this->getFormValue('radFileType', $data->radFileType) : $data->radFileType, '', 'vertical', '');
        $radFileType->setShowLabel(false);
        $hctFileType = new MHContainer('hctFileType', array($radFileTypeLabel, $radFileType));
        $hctFileType->setShowLabel(false);
        $fields[] = $hctFileType;

        if ( $this->getFormValue('radFileType', $this->radFileType->value) == 'opt2' )
        {
            $selectiveProcessId = new MComboBox('selectiveProcessId', $this->getFormValue('selectiveProcessId', $data->selectiveProcessId), _M('Processo seletivo',$module), SprSelectiveProcess::listNormal());
            $selectiveProcessId->setJsHint(_M('Selecione um processo seletivo', $module));
            $selectiveProcessId->setAutoPostBack(true);
            $fields[] = $selectiveProcessId;
            $validators[] = new MRequiredValidator('selectiveProcessId');
        }

        if ( $this->getFormValue('radFileType', $this->radFileType->value) == 'opt4' )
        {
            $personId = new MLookupTextField('personId', $this->getFormValue('personId', $data->personId),  _M('Aluno',$module), SAGU::getParameter('BASIC', 'FIELD_LOOKUPFIELD_SIZE'), null, null, 'personName', 'basic', 'PhysicalPersonStudent', null, null, true);
            $personId->setJsHint(_M('Informe o cdigo do aluno',$module));
            $validators[] = new MIntegerValidator('personId', _M('Aluno',$module), 'optional');

            $personName = new MHiddenField('personName', '');

            $fields[] = new MMultiTextField3('personIds', $this->getFormValue('personIds', $data->personIds), _M('Alunos', $module), array( $personId, $personName ), 200, true, 'horizontal' );
        }

        $fields[] = new Separator('');
        
        parent::defineFields( array( 'fields' => $fields, 'validators' => $validators ) );

        $this->toolbar->disableButton(MToolBar::BUTTON_NEW);
        $this->toolbar->disableButton(MToolBar::BUTTON_SAVE);
        $this->toolbar->disableButton(MToolBar::BUTTON_SEARCH);
        $this->toolbar->disableButton(MToolBar::BUTTON_DELETE);
        $this->toolbar->setButtonURL(MToolBar::BUTTON_PRINT, $MIOLO->getActionURL($module, $action, null, array('function' => 'print', 'event' => 'tbBtnPrint_click')));
        $this->toolbar->setIsPost(MToolBar::BUTTON_PRINT, true);
    }

    /**
     * Event triggered when user chooses Search from the toolbar
     */
    public function tbBtnPrint_click($sender = null)
    {
        $MIOLO = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();
        $action = MIOLO::getCurrentAction();

        $data->periodId = MIOLO::_request('periodId');
        $data->unitId = MIOLO::_request('unitId');
        $data->courseId = MIOLO::_request('courseId');
        $data->choicePupil = MIOLO::_request('personIds');
        $data->radFileType = MIOLO::_request('radFileType');
        $data->selectiveProcess = MIOLO::_request('selectiveProcessId');

        if( is_array($data->choicePupil) )
        {
            foreach( $data->choicePupil as $student )
            {
               $studentArray = explode(']', str_replace('[',null,$student));
               $studentArrayIds[] = $studentArray[0];
            }

            $data->explodeChoicePupil = $studentArrayIds;
        }

        if ( $data->radFileType == 'opt3' || $data->radFileType == 'opt4')
        {
            $data->stateContractId = SAGU::getParameter('BASIC', 'STATE_CONTRACT_ID_ENROLLED');
        }
        else
        {
            $data->stateContractId = NULL;
        }

        try
        {
            $businessPupilFolder = new BusinessAcademicBusGroup();
            $pupilFolder = $businessPupilFolder->getPupilFolderEnrolled($data->courseId, $data->unitId, $data->stateContractId, $data->periodId);

            if ( count($pupilFolder) > 0 )
            {
                $data->pupilFolder = $pupilFolder;

                $MIOLO->uses('classes/RptPupilFolder.class', $module);

                $report = new RptPupilFolder($data);
                exit;

                $this->page->setAction($MIOLO->getActionURL($module, $action));
            }
            else
            {
                throw new Exception(_M('Dados no encontrados', $module) . '!');
            }
        }
        catch ( Exception $e )
        {
            $this->addError($e->getMessage());
        }
    }
}
