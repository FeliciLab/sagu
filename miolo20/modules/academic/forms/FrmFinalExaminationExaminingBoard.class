class FrmFinalExaminationExaminingBoard extends FrmFinalExamination {

    public function __construct($steps = null)
    {
        parent::__construct(null, $steps, __CLASS__);
    }

    public function createFields()
    {
        $MIOLO = MIOLO::getInstance();
        $module = SAGU::getFileModule(__FILE__);
        $action = MIOLO::getCurrentAction();
        $function = MIOLO::_REQUEST('function');

        //Load data
        $allData = $this->getStepData();
        $stepData = $this->getStepDataByForm(__CLASS__);

        if ($this->isFirstAccess())
        {
            MSubDetail::clearData('examiningBoard');

            $filters = new stdClass();
            $filters->enrollId = MIOLO::_REQUEST('enrollId');

            $busFinalExaminationExaminingBoard = new BusinessAcademicBusFinalExaminationExaminingBoard();
            $stepData->examiningBoard = $busFinalExaminationExaminingBoard->searchFinalExaminationExaminingBoard($filters, true);

            $busEnroll = new BusinessAcademicBusEnroll();
            $enroll = $busEnroll->getEnroll($filters->enrollId);
            $stepData->examiningBoardField = $enroll->examiningBoard;
        }

        //
        //Banca examinadora (subdetail)
        //
        // Field person (lookup physical person)
        $personLabel = new MText('personLabel', _M('Examinador', $module) . ':');
        $personLabel->setWidth(SAGU::getParameter('BASIC', 'FIELD_CONTAINER_SIZE'));
        $personId = new MLookupTextField('personId', null, _M('Cdigo', $module), SAGU::getParameter('BASIC', 'FIELD_LOOKUPFIELD_SIZE'), null, null, 'personName', 'basic', 'PhysicalPerson', null, null, true);
        $personId->setJsHint(_M('Informe o cdigo do examinador', $module));
        $_validators[] = new MIntegerValidator('personId', _M('Examinador', $module), 'required');
        $_validators[] = new MSubDetailUniqueValidator('personId', _M('Examinador', $module));
        $personName = new MTextField('personName', null, _M('Nome', $module), SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE'));
        $personName->setJsHint(_M('Nome do examinador', $module));
        $personName->setReadOnly(true);
        $hctPerson = new MHContainer('hctPerson', array($personLabel, $personId, $personName));
        $hctPerson->setShowLabel(false);
        $_fields[] = $hctPerson;

        $_cols[] = new MGridColumn(_M('Cdigo', $module), 'right', true, '', true, 'personId');
        $_cols[] = new MGridColumn(_M('Examinador', $module), 'left', true, '', true, 'personName');

        $fields[] = $sub = new MSubDetail('examiningBoard', _M('Examinadores', $module), $_cols, null, true);
        $sub->setFields($_fields);
        $sub->setValidators($_validators);

        if ($this->isFirstAccess())
        {
            if (count($stepData->examiningBoard) > 0)
            {
                $sub->setData($stepData->examiningBoard);
            }
        }

        // Data de apresentao para a banca examinadora
        $examiningBoardLabel = new MText('examiningBoardLabel', _M('Data de apresentao para a banca examinadora', $module) . ':');
        $examiningBoardLabel->setWidth(SAGU::getParameter('BASIC', 'FIELD_CONTAINER_SIZE'));
        $examiningBoard = new MCalendarField('examiningBoardField', $this->getFormValue('examiningBoardField', $stepData->examiningBoardField));
        $examiningBoard->setJsHint(_M('Data de apresentao para a banca examinadora', $module));
        $hctExaminingBoard = new MHContainer('hctExaminingBoard', array($examiningBoardLabel, $examiningBoard));
        $hctExaminingBoard->setShowLabel(false);

        $fields[] = new MBaseGroup('examiningBoardBaseGroup', _M('Dados gerais', $module), array($hctExaminingBoard));

        $this->setFields($fields);
        $this->setValidators($validators);
    }

}

