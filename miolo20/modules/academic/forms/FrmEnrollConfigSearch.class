/**
 * Form to search the basEnrollConfig table
 */
class FrmEnrollConfigSearch extends SSearchForm
{
    public function __construct($data)
    {
        parent::__construct(null, new AcdEnrollConfig(), null, 'BusEnrollConfig');
        $this->toolbar->disableButton(MToolBar::BUTTON_SAVE);
    }

    public function defineFields()
    {
        $module = MIOLO::getCurrentModule();
        
        // Date
        $beginDateLabel = new MText('beginDateLabel', _M('Data', $module) . ':');
        $beginDateLabel->setWidth(SAGU::getParameter('BASIC', 'FIELD_LABEL_SIZE'));
        $beginDate = new MCalendarField('beginDate', null, '', SAGU::getParameter('BASIC', 'FIELD_DATE_SIZE'));
        $beginDate->setJsHint(_M('Listar configuraes que estejam vigentes na data escolhida.', $module));
        $fields[] = new MHContainer('hctBeginDate', array( $beginDateLabel, $beginDate ));
        
        // Op?es
        $labelVigente = new MText('labelVigente', _M('Exibir configuraes:', $module));
        $labelVigente->setClass('m-caption');
        $labelVigente->setWidth(SAGU::getParameter('BASIC', 'FIELD_CONTAINER_SIZE'));
        $radioGeral = new MRadioButton('vigente', 'geral', '', null, "Gerais");
        $radioGeral->addAttribute('onChange', $this->getAjaxAction('showCourse', 'divCourseOcurrence', false, array('radio' => 'geral')));
        $radioCurso = new MRadioButton('vigente', 'curso', '', null, "Por curso");
        $radioCurso->addAttribute('onChange', $this->getAjaxAction('showCourse', 'divCourseOcurrence', false, array('radio' => 'curso')));
        $radioAmbos = new MRadioButton('vigente', 'ambos', '', null, "Ambas");
        $radioAmbos->addAttribute('onChange', $this->getAjaxAction('showCourse', 'divCourseOcurrence', false, array('radio' => 'ambos')));
        $vigenteContainer = new MHContainer('vigenteContainer', array($labelVigente, $radioGeral, $radioCurso, $radioAmbos));
        $fields[] = $vigenteContainer;
        
        $fields[] = new MSeparator();
        $fields[] = new MDiv('divCourseOcurrence', $this->showCourse());
        
        parent::defineFields($fields, $module, 'GrdEnrollConfig');
        
        if ( $this->GetFormValue('vigente') == "curso" )
        {
            $this->page->addJsCode("document.getElementById('courseId').size = '8';");
        }
    }
    
    /**
     * Exibe campos de busca por curso caso seja selecionado tal op?o.
     * 
     * @param stdClass $args
     * @return string|\SCourseOccurrenceLookup
     */
    public function showCourse($args=null)
    { 
        if ( ( $args->radio == "curso" ) || ( $this->GetFormValue('vigente') == "curso" ) )
        {
            return new SCourseOccurrenceLookup();
        }
        else
        {
            return "";
        }
    }
    
    public function getTypesData()
    {
        $data = parent::getTypesData();
        
        $data->formularioDeBusca = true;
        
        return $data;
    }
    
}
?>