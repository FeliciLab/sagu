class FrmComplementaryActivitiesCategory extends SManagementForm
{
    public function __construct()
    {
        parent::__construct(new acdComplementaryActivities(), array('complementaryActivitiesCategoryId'), 'BusComplementaryActivitiesCategory');
    }

    
    public function defineFields()
    {
        $MIOLO    = MIOLO::getInstance();
        $module   = MIOLO::getCurrentModule();
        $action   = MIOLO::getCurrentAction();
        $function = MIOLO::_REQUEST('function');

        if ( in_array($function, array(SForm::FUNCTION_UPDATE, SForm::FUNCTION_DELETE)) )
        {
            $complementaryActivitiesCategoryId = MIOLO::_REQUEST('complementaryActivitiesCategoryId');
            
            $fields[]  = new MTextLabel('complementaryActivitiesCategoryId', $complementaryActivitiesCategoryId, _M('Cdigo', $module));
            $fields[]  = new MHiddenField('complementaryActivitiesCategoryId', $complementaryActivitiesCategoryId);
            
            $data = $this->busObject->getComplementaryActivitiesCategory($complementaryActivitiesCategoryId);
        }

        $complementaryActivitiesCategoryDescription  = new MTextField('complementaryActivitiesCategoryDescription', $this->getFormValue('complementaryActivitiesCategoryDescription', $data->description), _M('Descrio', $module), SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE'));
        $complementaryActivitiesCategoryDescription->setJsHint(_M('Informe a descrio da categoria da atividade complementar', $module));
        $fields[]     = $complementaryActivitiesCategoryDescription;
        $validators[] = new MRequiredValidator('complementaryActivitiesCategoryDescription');

        parent::defineFields($fields, $validators, $data);
    }

    
    public function getTypesData()
    {
        $data = parent::getTypesData();
        $data->description = $this->complementaryActivitiesCategoryDescription->value;
        
        return $data;
    }
}
