class FrmCourseVersionSearch extends SSearchForm
{

    /**
     * Class constructor
     */
    public function __construct()
    {
        parent::__construct(_M('Localizar', 'basic'), new AcdCourseVersion(), array( 'courseId','courseVersionId' ), 'BusCourseVersion');
    }

    /**
     *  Default method to define fields
     */
    public function defineFields()
    {
        $MIOLO = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();
        $action = MIOLO::getCurrentAction();

        //Course
        $courseLabel = new MText('courseLabel', _M('Curso', $module) . ':');
        $courseLabel->setWidth(SAGU::getParameter('BASIC', 'FIELD_CONTAINER_SIZE'));
        $courseIdS = new MLookupTextField('courseIdS', $this->courseIdS->value, '', SAGU::getParameter('BASIC', 'FIELD_LOOKUPFIELD_SIZE'), null, null,'courseNameS', $module, 'Course', null, null, true);
        $courseIdS->setJsHint(_M('Informe o cdigo do curso', $module));
        $courseNameS = new MTextField('courseNameS', $this->courseNameS->value, '', SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE'));
        $courseNameS->setReadOnly(true);
        $courseNameS->setJsHint(_M('Nome do curso', $module));
        $hctCourse = new MHContainer('hctCourse', array( $courseLabel, $courseIdS, $courseNameS ));
        $hctCourse->setShowLabel(true);
        $fields[] = $hctCourse;
        $courseVersionS = new MTextField('courseVersionS', $this->courseVersionS->value, _M('Verso', $module), SAGU::getParameter('BASIC', 'FIELD_ID_SIZE'));
        $courseVersionS->setJsHint(_M('Informe a verso do curso', $module));
        $fields[] = $courseVersionS;
        $validators[] = new MIntegerValidator('courseVersionS');

        // Begin date
        $beginDateS = new MCalendarField('beginDateS', $this->beginDateS->value, _M('Data inicial', $module), SAGU::getParameter('BASIC', 'FIELD_DATE_SIZE'));
        $beginDateS->setJsHint(_M('Informe a data inicial', $module));
        $validators[] = new MDATEDMYValidator('beginDateS', '', 'optional');
        $fields[] = $beginDateS;

        // End date
        $endDateS = new MCalendarField('endDateS', $this->endDateS->value, _M('Data final', $module), SAGU::getParameter('BASIC', 'FIELD_DATE_SIZE'));
        $endDateS->setJsHint(_M('Informe a data final', $module));
        $validators[] = new MDATEDMYValidator('endDateS', '', 'optional');
        $fields[] = $endDateS;

        // Semester total
        $periodTotalS = new MTextField('periodTotalS', $this->periodTotalS->value, _M('Total de perodos', $module), SAGU::getParameter('BASIC', 'FIELD_ID_SIZE'));
        $periodTotalS->setJsHint(_M('Informe o total de perodos', $module));
        $fields[] = $periodTotalS;

        // Period description
        $periodDescriptionS = new MTextField('periodDescriptionS', $this->periodDescriptionS->value, _M('Descrio do perodo', $module), SAGU::getParameter('BASIC', 'FIELD_ID_SIZE'));
        $periodDescriptionS->setJsHint(_M('Informe a descrio do perodo', $module));
        $fields[] = $periodDescriptionS;

        // Course version type
        $businessCourseVersionType = new BusinessAcademicBusCourseVersionType();
        $courseVersionTypeIdS = new MSelection('courseVersionTypeIdS', $this->getFormValue('courseVersionTypeIdS', $data->courseVersionTypeIdS), _M('Modalidade de curso', $module), $businessCourseVersionType->listCourseVersionType());
        $courseVersionTypeIdS->setJsHint(_M('Selecione a modalidade do curso', $module));
        $fields[] = $courseVersionTypeIdS;
        $validators[] = new MIntegerValidator('courseVersionTypeIdS');

        // Credits
        $creditsS = new MTextField('creditsS', $this->creditsS->value, _M('Crditos', $module), SAGU::getParameter('BASIC', 'FIELD_ID_SIZE'));
        $creditsS->setJsHint(_M('Informe os crditos', $module));
        $fields[] = $creditsS;

        // Hours total
        $hourTotalS = new MTextField('hourTotalS', $this->hourTotalS->value, _M('Total de horas', $module), SAGU::getParameter('BASIC', 'FIELD_ID_SIZE'));
        $hourTotalS->setJsHint(_M('Informe a quantidade total de horas', $module));
        $fields[] = $hourTotalS;

        // Hours required
        $hourRequiredS = new MTextField('hourRequiredS', $this->hourRequiredS->value, _M('Horas requeridas', $module), SAGU::getParameter('BASIC', 'FIELD_ID_SIZE'));
        $hourRequiredS->setJsHint(_M('Informe a quantidade de horas necessrias', $module));
        $fields[] = $hourRequiredS;

        parent::defineFields($fields, $module, 'GrdCourseVersionSearch');
    }
}
?>