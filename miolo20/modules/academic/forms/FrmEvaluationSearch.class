/**
 * Form to search the acdEvaluation table
 */
class FrmEvaluationSearch extends SSearchForm
{
    /**
     * Class constructor
     */
    public function __construct($data)
    {
        parent::__construct(_M('Localizar', 'basic'), new AcdEvaluation(), array('evaluationId'), 'BusEvaluation');
    }

    /**
     *  Default method to define fields
     */
    public function defineFields()
    {
        $MIOLO = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();
        $action = MIOLO::getCurrentAction();

        $limboS = new MHiddenField('limboS', '');
        $fields[] = $limboS;

        //Field evaluation
        $evaluationIdS = new MTextField('evaluationIdS', $this->evaluationIdS->value, _M('Cdigo', $module), SAGU::getParameter('BASIC', 'FIELD_ID_SIZE'));
        $evaluationIdS->setJsHint(_M('Informe o cdigo da avaliao', $module));
        $fields[] = $evaluationIdS;

        //Field professor
        $professorLabel = new MText('professorLabel', _M('Professor', $module) . ':');
        $professorLabel->setWidth(SAGU::getParameter('BASIC', 'FIELD_CONTAINER_SIZE'));
        $professorIdS = new MLookupTextField('professorIdS', $this->professorIdS->value, '', SAGU::getParameter('BASIC', 'FIELD_LOOKUPFIELD_SIZE'), null, null, 'professorNameS', 'basic', 'PhysicalPersonProfessor', null, null, true);
        $professorIdS->setJsHint(_M('Informe o cdigo do professor',$module));
        $validators[] = new MIntegerValidator('professorIdS', _M('Professor',$module));
        $professorNameS = new MTextField('professorNameS', $this->professorNameS->value, '', SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE'));
        $professorNameS->setReadOnly(true);
        $professorNameS->setJsHint(_M('Nome do professor',$module));
        $hctProfessor = new MHContainer('hctProfessor', array($professorLabel, $professorIdS, $professorNameS));
        $hctProfessor->setShowLabel(true);
        $fields[] = $hctProfessor;

        //Field group
        $groupLabel = new MText('groupLabel', _M('Disciplina oferecida', $module) . ':');
        $groupLabel->setWidth(SAGU::getParameter('BASIC', 'FIELD_CONTAINER_SIZE'));
        $groupId = new MLookupTextField('groupIdS', $this->groupIdS->value, '', SAGU::getParameter('BASIC', 'FIELD_LOOKUPFIELD_SIZE'), null, null, 'groupGroupNameS', $module, 'Group', null, null, true);
        $groupId->setJsHint(_M('Informe o cdigo da disciplina oferecida', $module));
        $validators[] = new MIntegerValidator('groupIdS', _M('Disciplina oferecida', $module), 'optional');
        $groupGroupName = new MTextField('groupGroupNameS', $this->groupGroupNameS->value, '', SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE'));
        $groupGroupName->setJsHint(_M('Nome da disciplina oferecida', $module));
        $groupGroupName->setReadOnly(true);
        $hctGroup = new MHContainer('hctGroup', array($groupLabel, $groupId, $groupGroupName));
        $hctGroup->setShowLabel(true);
        $fields[] = $hctGroup;

        //Field degree
        $degreeLabel = new MText('degreeLabel', _M('Grau acadmico', $module) . ':');
        $degreeLabel->setWidth(SAGU::getParameter('BASIC', 'FIELD_CONTAINER_SIZE'));
        $degreeIdS = new MLookupTextField('degreeIdS', $this->degreeIdS->value, '', SAGU::getParameter('BASIC', 'FIELD_LOOKUPFIELD_SIZE'), null, null, 'limboS,degreeDescriptionS', $module, 'Degree', null, null, true);
        $degreeIdS->setJsHint(_M('Informe o cdigo do grau', $module));
        $validators[] = new MIntegerValidator('degreeIdS', _M('Grau acadmico', $module), 'optional');
        $degreeDescriptionS = new MTextField('degreeDescriptionS', $this->degreeDescriptionS->value, '', SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE'));
        $degreeDescriptionS->setJsHint(_M('Descrio do grau acadmico', $module));
        $degreeDescriptionS->setReadOnly(true);
        $hctDegree = new MHContainer('hctDegree', array($degreeLabel, $degreeIdS, $degreeDescriptionS));
        $hctDegree->setShowLabel(true);
        $fields[] = $hctDegree;

        //Field description
        $descriptionS = new MTextField('descriptionS', $this->descriptionS->value, _M('Descrio', $module), SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE'));
        $descriptionS->setJsHint(_M('Informe a descrio da avaliao', $module));
        $fields[] = $descriptionS;

        //Field date forecast
        $dateForecastS = new MCalendarField('dateForecastS', $this->dateForecastS->value, _M('Data prevista', $module), SAGU::getParameter('BASIC', 'FIELD_DATE_SIZE'));
        $dateForecastS->setJsHint(_M('Informe a data prevista', $module));
        $validators[] = new MDATEDMYValidator('dateForecastS', '', 'optional');
        $fields[] = $dateForecastS;

        //Field weights
        $weightS = new MTextField('weightS', $this->weightS->value, _M('Peso', $module), SAGU::getParameter('BASIC', 'FIELD_ID_SIZE'));
        $weightS->setJsHint(_M('Informe o peso',$module));
        $fields[] = $weightS;
        $validators[] = new MFloatValidator('weightS', '', SAGU::getParameter('BASIC', 'FLOAT_SEPARATOR'), SAGU::getParameter('BASIC', 'REAL_ROUND_VALUE'), 'optional');

        parent::defineFields($fields, $module, 'GrdEvaluationSearch', $validators);
    }
}
?>