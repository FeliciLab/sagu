/**
 * Form to manipulate a curricular component group
 **/
class FrmCurricularComponentGroup extends SManagementForm
{
    public function __construct()
    {
        parent::__construct(new AcdCurricularComponentGroup(), array('curricularComponentGroupId'), 'BusCurricularComponentGroup');
    }


    public function defineFields()
    {
        $MIOLO    = MIOLO::getInstance();
        $module   = MIOLO::getCurrentModule();
        $action   = MIOLO::getCurrentAction();
        $function = MIOLO::_request('function');

        if ( in_array($function, array(SForm::FUNCTION_UPDATE, SForm::FUNCTION_DELETE)) )
        {
            $curricularComponentGroupId = MIOLO::_REQUEST('curricularComponentGroupId');

            $data = $this->busObject->getCurricularComponentGroup($curricularComponentGroupId);

            $fields[]  = new MHiddenField('curricularComponentGroupId', $curricularComponentGroupId);
            $fields[]  = new MTextLabel('curricularComponentGroupId', $curricularComponentGroupId, _M('Cdigo', $module));
        }

        $curricularComponentGroupName = new MTextField('curricularComponentGroupName', $this->getFormValue('curricularComponentGroupName', $data->curricularComponentGroupName), _M('Descrio', $module), SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE'));
        $curricularComponentGroupName->setJsHint(_M('Informe a descrio do grupo de disciplina', $module));
        $validators[] = new MRequiredValidator('curricularComponentGroupName', '', 'required');
        $fields[] = $curricularComponentGroupName;

        $shortName = new MTextField('shortName', $this->getFormValue('shortName', $data->shortName), _M('Abreviatura', $module), SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE'));
        $shortName->setJsHint(_M('Informe a abreviatura', $module));
        $validators[] = new MRequiredValidator('shortName', '', 'required');
        $fields[] = $shortName;

        parent::defineFields($fields, $validators, $data);
    }


    public function getTypesData()
    {
        $data = parent::getTypesData();
        $data->name = $this->curricularComponentGroupName->value;

        return $data;
    }
}
