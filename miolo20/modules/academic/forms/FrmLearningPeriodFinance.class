class FrmLearningPeriodFinance extends FrmLearningPeriodFather
{
    /**
     * Default method to define fields
     **/    
    public function defineFields()
    {
        $MIOLO = MIOLO::getInstance();
        $module = SAGU::getFileModule(__FILE__);
        $action = MIOLO::getCurrentAction();
        $function = MIOLO::_REQUEST('function');

        //Load data
        $allData = $this->getStepData();
        $data    = $this->getLearningPeriodData();
        
        $data->previousLearningPeriodId = $allData->previousLearningPeriodId;
        
        if ( SAGU::getParameter('BASIC', 'MODULE_FINANCE_INSTALLED') == 'YES' )
        {
            // Info.
            $msg = _M("Selecione se deseja gerar o financeiro automaticamente ou no. Obs.: Se marcado 'No', e a confirmao de matrcula estiver configurada por pagamento da primeira parcela, o aluno ser matrculado automticamente.");
            $labelHint = new MText('info', $msg);
            $labelHint->setClass('m-hint');
            
            // Field finance generate
            $isFinanceGenerateLabel = new MText('isFinanceGenerateLabel', _M('Gerar automaticamente financeiro', $module) . ' ?');
            $isFinanceGenerateLabel->setClass('m-caption m-caption-required');
            $isFinanceGenerateLabel->setWidth(SAGU::getParameter('BASIC', 'FIELD_LABEL_SIZE'));
            $isFinanceGenerate_ = $this->GetFormValue('isFinanceGenerate',$data->isFinanceGenerate) ? $this->GetFormValue('isFinanceGenerate',$data->isFinanceGenerate) : DB_FALSE;               
            $isFinanceGenerate = new MSelection('isFinanceGenerate', $isFinanceGenerate_ , null, SAGU::listYesNo(), false);
            $isFinanceGenerate->addAttribute('onChange', $this->getAjaxAction('parcelsNumber', 'divParcelsNumber', false, $data));            
            $validators[] = new MRequiredValidator('isFinanceGenerate', _M('Gerar automaticamente financeiro', $module));
            $hctIsFinanceGenerate = new MHContainer('hctIsFinanceGenerate', array($isFinanceGenerateLabel, $isFinanceGenerate));
            
            $divParcelsNumber = new MDiv('divParcelsNumber', $this->parcelsNumber($data));

            // Base group is finance generate
            $bsg3 = new BaseGroup('bsg2', _M('Gerar financeiro', $module), array(new MSeparator(), $labelHint, $hctIsFinanceGenerate, $divParcelsNumber), 'vertical');
            $bsg3->showLabel = true;
            $bsg3->width = '100%';
            $fields[] = $bsg3;            
        }
        // Se no tiver financeiro
        else
        {
            $controls[] = $lblSel = new MLabel( _M('Mdulo financeiro no instalado', $module).'.' );
            $lblSel->setBold(true);
            $fields[] = new MSeparator();
            $fields[] = new MBaseGroup('baseInfo', null, $controls);
            $fields[] = new MSeparator();
        }

        $fields[] = new MSeparator('');

        $this->setFields($fields);
        $this->setValidators($validators);
    }
    
    public function parcelsNumber($data)
    {
        $MIOLO = MIOLO::getInstance();
        $args  = $this->getData();     
        
        if( ($data->isFinanceGenerate == DB_TRUE) || ( (!$this->isFirstAccess()) && (!isset($data->isFinanceGenerate)) ) )
        {
            // Field parcels number
            $parcelsNumberText = new MText('parcelsNumberText', _M('Nmero de parcelas', $module) . ':');
            $parcelsNumberText->setWidth(SAGU::getParameter('BASIC', 'FIELD_LABEL_SIZE'));
            $parcelsNumber = new MIntegerField('parcelsNumber', $this->getFormValue('parcelsNumber', $data->parcelsNumber), _M('Nmero de parcelas', $module), SAGU::getParameter('BASIC', 'FIELD_ID_SIZE'), _M('Prioridade do nmero de parcelas: contrato, perodo letivo e preo do curso.'));            
            $parcelsNumber->setJsHint(_M('Informe o nmero de parcelas', $module));
            $validators[] = new MRequiredValidator('parcelsNumber', _M('Nmero de parcelas', $module));            
            $hctParcelNumber = new MHContainer('hctDegreeDescription', array($parcelsNumberText, $parcelsNumber));
            $hctParcelNumber->setShowLabel(false);            
            
            $this->SetValidators($validators);
          
            return $hctParcelNumber;
        }
        else
        {
            $this->removeAJAXValidator('parcelsNumber');
            return '';
        }
        
    }
}
