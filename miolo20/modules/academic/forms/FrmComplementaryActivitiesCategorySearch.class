class FrmComplementaryActivitiesCategorySearch extends SSearchForm
{
    public function __construct($data)
    {
        parent::__construct(NULL, new acdComplementaryActivitiesCategory(), array('complementaryActivitiesCategoryId'), 'BusComplementaryActivitiesCategory');
    }


    public function defineFields()
    {
        $MIOLO  = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();
        $action = MIOLO::getCurrentAction();

        $complementaryActivitiesCategoryIdS = new MTextField('complementaryActivitiesCategoryIdS', $this->complementaryActivitiesCategoryIdS->value, _M('Cdigo', $module), SAGU::getParameter('BASIC', 'FIELD_ID_SIZE'));
        $complementaryActivitiesCategoryIdS->setJsHint(_M('Informe o cdigo da categoria da atividade complementar', $module));
        $fields[] = $complementaryActivitiesCategoryIdS;

        $complementaryActivitiesCategoryDescriptionS = new MTextField('complementaryActivitiesCategoryDescriptionS', $this->complementaryActivitiesCategoryDescriptionS->value, _M('Descrio', $module), SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE'));
        $complementaryActivitiesCategoryDescriptionS->setJsHint(_M('Informe a descrio da categoria da atividade complementar', $module));
        $fields[] = $complementaryActivitiesCategoryDescriptionS;

        parent::defineFields($fields, $module, 'GrdComplementaryActivitiesCategorySearch', $validators);
    }


    public function getTypesData()
    {
        $data = parent::getTypesData();
        $data->description = $this->getFormValue('complementaryActivitiesCategoryDescriptionS');
        
        return $data;
    }
}
