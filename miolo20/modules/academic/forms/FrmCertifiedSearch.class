class FrmCertifiedSearch extends SSearchForm
{
    public function __construct($data)
    {
        parent::__construct(null, new AcdCertified(), array('certifiedId', 'dateIssue', 'certifiedTypeId'), 'BusCertified');
    }


    public function defineFields()
    {
        $MIOLO  = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();
        $action = MIOLO::getCurrentAction();

        //Fields certifield
        $certifiedLabel = new MText('certifiedLabel', _M('Cdigo', $module) . ':');
        $certifiedLabel->setWidth(SAGU::getParameter('BASIC', 'FIELD_CONTAINER_SIZE'));
        $certifiedIdS = new MTextField('certifiedIdS', $this->getFormValue('certifiedIdS', $data->certifiedIdS), '', SAGU::getParameter('BASIC', 'FIELD_ID_SIZE'));
        $certifiedIdS->setJsHint(_M('Informe o cdigo do atestado',$module));
        $hctCertified = new MHContainer('hctCertified', array($certifiedLabel, $certifiedIdS));
        $hctCertified->setShowLabel(true);
        $fields[]  = $hctCertified;
        
        //Field person
        $personLabel = new MText('personLabel', _M('Pessoa',$module) . ':');
        $personLabel->setWidth(SAGU::getParameter('BASIC', 'FIELD_CONTAINER_SIZE'));
        $personIdS = new MLookupTextField('personIdS', $this->getFormValue('personIdS', $data->personIdS), '', SAGU::getParameter('BASIC', 'FIELD_LOOKUPFIELD_SIZE'), null, null, 'personNameS', 'basic', 'PhysicalPerson', null, null, true);
        $personIdS->setJsHint(_M('Informe o cdigo da pessoa',$module));
        $validators[] = new MIntegerValidator('personIdS', _M('Pessoa',$module), 'optional');
        $personNameS = new MTextField('personNameS', $personNameS, '', SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE'));
        $personNameS->setReadOnly(true);
        $personNameS->setJsHint(_M('Nome da pessoa',$module));
        $hctPerson = new MHContainer('hctPerson', array($personLabel, $personIdS, $personNameS));
        $hctPerson->setShowLabel(true);
        $fields[]  = $hctPerson;

        //Field certifield type
        $certifiedTypeLabel = new MText('certifiedTypeLabel', _M('Tipo de atestado',$module) . ':');
        $certifiedTypeLabel->setWidth(SAGU::getParameter('BASIC', 'FIELD_CONTAINER_SIZE'));
        $certifiedTypeIdS = new MLookupTextField('certifiedTypeIdS', $this->getFormValue('certifiedTypeIdS', $data->certifiedTypeIdS), '', SAGU::getParameter('BASIC', 'FIELD_LOOKUPFIELD_SIZE'), null, null, 'certifiedTypeDescriptionS', $module, 'CertifiedType', null, null, true);
        $certifiedTypeIdS->setJsHint(_M('Informe o cdigo do tipo de atestado', $module));
        $validators[] = new MIntegerValidator('certifiedTypeIdS', _M('Tipo de atestado', $module), 'optional');
        $certifiedTypeDescriptionS = new MTextField('certifiedTypeDescriptionS', $certifiedTypeDescriptionS, '', SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE'));
        $certifiedTypeDescriptionS->setReadOnly(true);
        $certifiedTypeDescriptionS->setJsHint(_M('Descrio do tipo de atestado',$module));
        $hctCertifiedType = new MHContainer('hctCertifiedType', array($certifiedTypeLabel, $certifiedTypeIdS, $certifiedTypeDescriptionS));
        $hctCertifiedType->setShowLabel(true);
        $fields[]  = $hctCertifiedType;

        parent::defineFields($fields, $module, 'GrdCertifiedSearch', $validators);
    }
}
