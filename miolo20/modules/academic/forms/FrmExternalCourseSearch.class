/**
 * Form to search the acdExternalCourse table
 */
class FrmExternalCourseSearch extends SSearchForm
{
    /**
     * Class constructor
     */
    public function __construct($data)
    {
        parent::__construct(_M('Localizar', 'basic'), new AcdExternalCourse(), array('externalCourseId'), 'BusExternalCourse');
    }

    /**
     *  Default method to define fields
     */
    public function defineFields()
    {
        $MIOLO = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();
        $action = MIOLO::getCurrentAction();

        // Field limbo
        $limbo = new MHiddenField('limboS', '');
        $fields[] = $limbo;

        // Field external course id
        $externalCourseIdS = new MTextField('externalCourseIdS', $this->getFormValue('externalCourseIdS', $data->externalCourseId), _M('Cdigo', $module), SAGU::getParameter('BASIC', 'FIELD_ID_SIZE'));
        $externalCourseIdS->setJsHint(_M('Informe o cdigo do curso externo',$module));
        $fields[] = $externalCourseIdS;

        // Field external course name
        $externalCourseNameS = new MTextField('externalCourseNameS', $this->externalCourseNameS->value, _M('Nome', $module), SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE'));
        $externalCourseNameS->setJsHint(_M('Informe o nome do curso externo',$module));
        $fields[] = $externalCourseNameS;

        // Field external course short name
        $shortNameS = new MTextField('shortNameS', $this->shortNameS->value, _M('Abreviatura',$module), SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE'));
        $shortNameS->setJsHint(_M('Informe a abreviatura do curso externo',$module));
        $fields[] = $shortNameS;

        // Field knowledge area
        $knowledgeAreaLabel = new MText('knowledgeAreaLabel', _M('rea de conhecimento',$module) . ':');
        $knowledgeAreaLabel->setWidth(SAGU::getParameter('BASIC', 'FIELD_CONTAINER_SIZE'));
        $knowledgeAreaIdS = new MLookupTextField('knowledgeAreaIdS', $this->knowledgeAreaIdS->value, '', SAGU::getParameter('BASIC', 'FIELD_LOOKUPFIELD_SIZE'), null, null, 'knowledgeAreaNameS', $module, 'KnowledgeArea', null, null, true);
        $knowledgeAreaIdS->setJsHint(_M('Cdigo de rea de conhecimento',$module));
        $validators[] = new MIntegerValidator('knowledgeAreaIdS', _M('rea de conhecimento',$module), 'optional');
        $knowledgeAreaNameS = new MTextField('knowledgeAreaNameS', $this->knowledgeAreaNameS->value, '', SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE'));
        $knowledgeAreaNameS->setJsHint(_M('Informe o nome da rea de conhecimento',$module));
        $hctKnowledgeArea = new MHContainer('hctKnowledgeArea', array($knowledgeAreaLabel, $knowledgeAreaIdS, $knowledgeAreaNameS));
        $hctKnowledgeArea->setShowLabel(true);
        $fields[] = $hctKnowledgeArea;

        parent::defineFields($fields, $module, 'GrdExternalCourseSearch', $validators);
    }

    public function getTypesData()
    {
        $data = parent::getTypesData();
        $fieldExternalCourseNameS = 'externalCourseNameS';
        $data->name = MIOLO::_REQUEST($fieldExternalCourseNameS);

        return $data;
    }
}
