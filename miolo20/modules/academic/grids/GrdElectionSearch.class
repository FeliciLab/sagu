/**
 * Grid used by form to display search results
 **/
class GrdElectionSearch extends SGrid
{
    /**
     * Class constructor
     **/
    public function __construct($filters)
    {
        $module = MIOLO::getCurrentModule();
        /*
         * MGridColumn constructor parameters:
         *    $title = ''
         *    $align = 'left'
         *    $nowrap = false
         *    $width = 0
         *    $visible = true
         *    $options = null
         *    $order = false
         *    $filter = false
         */
        $columns = array( new MGridColumn( _M('Data da eleio', $module), 'left', true, null, true, null, true ),
                          new MGridColumn( _M('Descrio', $module),   'left', true, null, true, null, true ) );

        $primaryKey = array( 'electionDate'=>'%0%' );

        parent::__construct($filters, $columns, $module, $primaryKey);
    }
}
