class GrdTimeSheetSearch extends SGrid
{
    public function __construct($filters)
    {
        $MIOLO = MIOLO::getInstance();
        $module = $MIOLO->getCurrentModule();

        $columns = array( 
            new MGridColumn( _M('Código da grade de horários', $module), 'right', true, '10%', true,  null, true ),
            new MGridColumn( _M('Descrição', $module),   'left',  true, '45%', true,  null, true ),
            new MGridColumn( _M('Data inicial', $module),    'left',  true, '20%', true,  null, true ),
            new MGridColumn( _M('Data final', $module),      'left',  true, '20%', true,  null, true )
        );

        parent::__construct($filters, $columns, __CLASS__, array('timeSheetId' => '%0%'));
    }
}
