/**
 * Grid used by form to display search results
 **/
class GrdGenerateMultipleClassPupil extends SGrid
{
    /**
     * Class constructor
     **/
    public function __construct($filters)
    {
        $MIOLO = MIOLO::getInstance();

        $home   = 'main:process:generationInLot:generateMultipleClassPupil';
        $module = MIOLO::_request('module');
        
        $columns = array(
                          new MGridColumn('', 'left', false, 0, false),
                          new MGridColumn( _M('Código da pessoa', $module), 'right',  true, null, true, null, true ),
                          new MGridColumn( _M('Nome', $module), 'left', true, null, true, null, true ),
                          new MGridColumn( _M('Turma', $module), 'left', true, null, true, null, true ),
                          new MGridColumn( _M('Data inicial', $module), 'left', true, null, true, null, true )
                        );
        
        parent::__construct( $filters, $columns, 'gridGenerateMultipleClassPupil' );
        $this->clearActions();
        $this->actions[] =  new MGridActionSelect($this);
        $this->selecteds = array(0);
        $this->disablePagination();
    }
}

