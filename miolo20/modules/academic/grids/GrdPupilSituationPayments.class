/**
 * Grid used by form to display search results
 **/
class GrdPupilSituationPayments extends MGrid
{
    /**
     * Class constructor
     **/
    public function __construct($filters)
    {
        $MIOLO = MIOLO::getInstance();

        $home   = 'main:pupilSituation';
        $module = MIOLO::_request('module');

        /*
         * MGridColumn constructor parameters:
         *    $title = ''
         *    $align = 'left'
         *    $nowrap = false
         *    $width = 0
         *    $visible = true
         *    $options = null
         *    $order = false
         *    $filter = false
         */
        $columns = array( 
                          new MGridColumn( _M('Código do título', $module),     'center', true, null, true, null, true ),
                          new MGridColumn( _M('Data de vencimento', $module),  'center', true, null, true, null, true ),
                          new MGridColumn( _M('Curso', $module),         'left',   false, null, true, null, true ),
                          new MGridColumn( _M('Operação', $module),      'left',   true, null, true, null, true ),
                          new MGridColumn( _M('Data', $module),           'center', true, null, true, null, true ),
                          new MGridColumn( _M('Valor', $module),          'right',  true, null, true, null, true )
                        );

        $opts = array('personId'=>MIOLO::_request('personId'));

        if (count($filters) > 0)
        {
            foreach ( $filters as $k => $v )
            {
                $opts[$k] = $v;
            }
        }

        $url = $MIOLO->getActionURL($module, $home, null, $opts);

        parent::__construct( null, $columns, $url, 0, 0, 'gridPupilSituationPayments' );

        $this->setIsScrollable();

        $this->eventHandler();

    }

}
