class GrdBatchEnrollment extends SGrid
{
    /**
     * Class constructor
     **/
    public function __construct($filters)
    {
        $MIOLO = MIOLO::getInstance();
        $action = MIOLO::getCurrentAction();
        $module = SAGU::getFileModule(__FILE__);

        $columns = array(
            new MGridColumn(_M('Contrato', $module), 'right', true, null, true),
            new MGridColumn(_M('Cdigo da pessoa', $module), 'right', true, null, true),
            new MGridColumn(_M('Nome', $module), 'left', true, null, true),
            new MGridColumn(_M('Perodo', $module), 'left', true, null, true),
            new MGridColumn(_M('Turma', $module), 'left', true, null, true),
            new MGridColumn(_M('Perodo da turma', $module), 'right', true, null, true),
        );

        if (SAGU::getEventName() == 'enrollContract:click')
        {
            $columns[] = new MGridColumn(_M('Mensagem', $module), 'left', true, null, true);
        }

        parent::__construct($filters, $columns, __CLASS__);

        $this->actions = null;
        $this->pageLength = 100000;
        
        $this->addActionSelect();
    }
}

