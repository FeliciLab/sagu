/**
 * Grid used by form to display search results
 **/
class GrdDiverseConsultationPerson extends MGrid
{
    /**
     * Class constructor
     **/
    public function __construct($filters)
    {
        $MIOLO  = MIOLO::getInstance();
        $home   = 'main';
        $module = MIOLO::_request('module');

        /*
         * MGridColumn constructor parameters:
         *    $title = ''
         *    $align = 'left'
         *    $nowrap = false
         *    $width = 0
         *    $visible = true
         *    $options = null
         *    $order = false
         *    $filter = false
         */

        $columns = array(
                          new MGridColumn( _M('Código', $module),   'right', true, null, true, null, false ),
                          new MGridColumn( _M('Nome', $module), 'left', true, null, true, null, false ),
                          new MGridColumn( _M('Procurar por', $module), 'left', true, null, true, null, false ),
                        );

        $url = $MIOLO->getActionURL($module,"$home",null,$opts);
        parent::__construct( null, $columns, $url, null, 0, 'gridDiverseConsultationPerson' );
        $this->setLinkType('hyperlink');

        $opts = array('function'=>'update',
                      'personId'=>'%0%');
        $href_edit = $MIOLO->getActionURL( 'basic', 'main:person:person:physicalPerson', null, $opts );
        $this->addActionUpdate( $href_edit );

        $this->setIsScrollable();
        $this->setTitle(_M('Aluno', $module));

        $this->eventHandler();

    }

}

?>
