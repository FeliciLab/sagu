class GrdMessageContractRenewalSearch extends SGrid
{
    public function __construct($filters)
    {
        $MIOLO = MIOLO::getInstance();
        $module = SAGU::getFileModule(__FILE__);
        $busMCR = new BusinessAcademicBusMessageContractRenewal();

        $columns = array(
            new MGridColumn( _M('Cdigo da mensagem de renovao contratual', $module), 'right', true, null, true, null, true ),
            new MGridColumn( _M('Cdigo do perodo letivo', $module), 'left',  true, null, true, null, true ),
            new MGridColumn( _M('Descrio do perodo letivo', $module), 'left',  true, null, true, null, true ),
            new MGridColumn( _M('Mensagem', $module), 'left',  false, null, true, null, true ),
            new MGridColumn( _M('Fonte', $module), 'left',  true, null, true, array( 'D' => _M('Padro',$module), 'B' => _M('Negrito',$module),'I' => _M('Itlico',$module) ), true ),
            new MGridColumn( _M('Sequncia', $module), 'right', true, null, true, null, true ),
            new MGridColumn( _M('Comprimento', $module), 'right', true, null, true, null, true ),
            new MGridColumn( _M(' ouvinte', $module), 'left',  true, null, true, array( DB_TRUE => _M('Sim',$module), DB_FALSE => _M('No',$module) ), true ),
            new MGridColumn( _M('Estado', $module), 'right', true, null, true, $busMCR->listStatus(), true )
        );

        parent::__construct($filters, $columns, __CLASS__, array('messageContractRenewalId' => '%0%'));
    }
}
