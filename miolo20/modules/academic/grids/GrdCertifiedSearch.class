class GrdCertifiedSearch extends SGrid
{
    public function __construct($filters)
    {
        $MIOLO = MIOLO::getInstance();
        $module = SAGU::getFileModule(__FILE__);
        
        $columns = array(
            new MGridColumn( _M('Cdigo do atestado', $module), 'right', true, null, true, null, true ),
            new MGridColumn( _M('Cdigo do tipo de atestado', $module), 'right', true, null, false, null, true ),
            new MGridColumn( _M('Tipo de atestado', $module), 'left', true, '30%', true, null, true ),
            new MGridColumn( _M('Data de publicao', $module), 'left', true, null, true, null, true ),
            new MGridColumn('', 'left', false, 0, false),
            new MGridColumn('', 'left', false, 0, false),
            new MGridColumn('', 'left', false, 0, false),
            new MGridColumn('', 'left', false, 0, false),
            new MGridColumn('', 'left', false, 0, false),
            new MGridColumn( _M('Cdigo da pessoa', $module), 'right', true, null, true, null, true ),
            new MGridColumn( _M('Pessoa', $module), 'left', true, null, true, null, true )
        );

        $primaryKey = array(
            'certifiedId' => '%0%',
            'dateIssue'   => '%3%',
            'certifiedTypeId' => '%1%',
        );

        parent::__construct($filters, $columns, __CLASS__, $primaryKey);
    }
}
