class GrdStatesContractSearch extends SGrid
{
    public function __construct($filters)
    {
        $MIOLO = MIOLO::getInstance();
        $module = SAGU::getFileModule(__FILE__);
        
        $columns = array( 
            new MGridColumn( _M('Cdigo dos estados contratuais', $module),   'right', true, null, true, null, true ),
            new MGridColumn( _M('Descrio', $module),          'left',  true, null, true, null, true ),
            new MGridColumn( _M('Tipo de transio', $module),      'left',  true, null, true, array( SAGU::getParameter('BASIC', 'DB_IN') => _M('Entrada',$module), SAGU::getParameter('BASIC', 'DB_OUT') => _M('Sada',$module), SAGU::getParameter('BASIC', 'DB_TRANSITION') => _M('Transio',$module) ), true ),
            new MGridColumn( _M('Necessita motivo', $module),         'left',  true, null, true, array( DB_TRUE => _M('Sim',$module), DB_FALSE => _M('No',$module) ), true ),
            new MGridColumn( _M('Impede matrcula', $module),   'left',  true, null, true, array( DB_TRUE => _M('Sim',$module), DB_FALSE => _M('No',$module) ), true ),
            new MGridColumn( _M('Est ativo', $module),   'left',  true, null, true, array( DB_TRUE => _M('Sim',$module), DB_FALSE => _M('No',$module) ), true )
        );

        parent::__construct($filters, $columns, __CLASS__, array('stateContractId' => '%0%'));
    }
}
