class GrdFrequenceRegisterLot extends SGrid
{
    public function __construct($filters)
    {
        $MIOLO = MIOLO::getInstance();
        $module = $MIOLO->getCurrentModule();

        $columns = array(
            new MGridColumn(_M('enrollId', $module), 'left', true, null, false, null, true),
            new MGridColumn(_M('scheduleId', $module), 'left', true, null, false, null, true),
            new MGridColumn(_M('frequencyDate', $module), 'left', true, null, false, null, true),
            new MGridColumn(_M('timeId', $module), 'left', true, null, false, null, true),
            new MGridColumn(_M('Pessoa', $module), 'left', true, null, true, null, true),
            new MGridColumn(_M('Data', $module), 'left', true, null, true, null, true),
            new MGridColumn(_M('Dia da semana', $module), 'left', true, null, true, null, true),
            new MGridColumn(_M('Horrio', $module), 'left', true, null, true, null, true),
            new MGridColumn(_M('Frequncia', $module), 'center', true, null, true, null, true),
        );

        parent::__construct($filters, $columns, __CLASS__);
        
        $this->clearActions();
        $this->addActionSelect();
        $this->disableColumnSorting();
        $this->disablePagination();
        $this->setRowMethod($this, 'myRowMethod');
    }
    
    
    public function myRowMethod($i, $row, $actions, $columns)
    {
        $MIOLO = MIOLO::getInstance();
        $module = SAGU::getFileModule(__FILE__);
        
        $frequencyValue = $this->data[$i][8];
        $colFrequency = $columns[8]->control[$i];
   
        // Exibe imagem na coluna Frequencia de acordo com tipo
        $imageObject = AcdCommonFields::getFrequencyImage($frequencyValue);
        $colFrequency->setValue( $imageObject->generate() );
    }
}
