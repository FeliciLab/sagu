/**
 * Grid used by form to display search results
 **/
class GrdCurriculumConcurrenceSearch extends SGrid
{
    /**
     * Class constructor
     **/
    public function __construct($filters)
    {
        $MIOLO = MIOLO::getInstance();
        
        $url   = 'main:register:curriculum:curriculumConcurrence';
        $module = MIOLO::_request('module');

        $columns = array( 
                          new MGridColumn( _M('Código do currículo de saída', $module),                'right', true, null, false, null, true ),
                          new MGridColumn( _M('Código do curso de saída', $module) . ' / ' . _M('versão', $module),                    'right', true, null, true, null, true ),
                          new MGridColumn( _M('Nome do curso de saída', $module),                  'left',  true, null, false, null, true ),
                          new MGridColumn( _M('Código da disciplina de saída', $module) . ' / ' . _M('versão', $module),      'right', true, null, true, null, true ),
                          new MGridColumn( _M('Nome da disciplina de saída', $module),    'left',  false, null, true, null, true ),
                          new MGridColumn( _M('Código de entrada do currículo', $module),                 'right', true, null, false, null, true ),
                          new MGridColumn( _M('Código do curso de entrada', $module) . ' / ' . _M('versão', $module),                     'right', true, null, true, null, true ),
                          new MGridColumn( _M('Nome do curso de entrada', $module),                   'left',  true, null, false, null, true ),
                          new MGridColumn( _M('Código da disciplina de entrada', $module) . ' / ' . _M('versão', $module),       'right', true, null, true, null, true ),
                          new MGridColumn( _M('Nome da disciplina de entrada', $module),     'left',  false, null, true, null, true )
                        );

        $primaryKey = array('curriculumOutId' => '%0%', 'curriculumInId' => '%5%');
        
        parent::__construct($filters, $columns, __CLASS__, $primaryKey, $url);
    }

}

