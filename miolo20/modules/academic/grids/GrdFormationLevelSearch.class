/**
 * Grid used by form to display search results
 **/
class GrdFormationLevelSearch extends SGrid
{
    /**
     * Class constructor
     **/
    public function __construct($filters)
    {
        $MIOLO = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();
        
        $busFormationLevel = new BusinessAcademicBusFormationLevel();
 
        $columns = array(
            new MGridColumn( _M('Cdigo', $module), 'right', true, null, true, null, true ),
            new MGridColumn( _M('Descrio', $module), 'left', true, null, true, null, true ),
            new MGridColumn( _M('Abreviatura', $module), 'left', true, null, true, null, true ),
            new MGridColumn( _M('Relatrio', $module), 'left', true, null, true, $busFormationLevel->listReports(), true )
        );

        $primaryKey = array( 'formationLevelId' => '%0%' );

        parent::__construct($filters, $columns, 'GrdFormationLevelSearch', $primaryKey);
    }
}
