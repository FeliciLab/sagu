class GrdCurriculumLinkSearch extends SGrid
{
    /**
     * Class constructor
     **/
    public function __construct($filters)
    {
        $MIOLO = MIOLO::getInstance();

        $module = MIOLO::_request('module');

        /*
         * MGridColumn constructor parameters:
         *    $title = ''
         *    $align = 'left'
         *    $nowrap = false
         *    $width = 0
         *    $visible = true
         *    $options = null
         *    $order = false
         *    $filter = false
         */
        $columns = array( new MGridColumn( _M('Cdigo do currculo', $module),       'right', true, null, false, null, true ),
                          new MGridColumn( _M('Cdigo do curso', $module) . ' / ' . _M('verso', $module), 'right', true, null, true, null, true ),
                          new MGridColumn( _M('Nome do curso', $module), 'left', true, null, false, null, true ),
                          new MGridColumn( _M('Cdigo da disciplina', $module) . ' / ' . _M('verso', $module), 'right', true, null, true, null, true ),
                          new MGridColumn( _M('Nome da disciplina', $module), 'left', false, null, true, null, true ),
                          new MGridColumn( _M('Turno', $module), 'center', false, null, true, null, true ),
                          new MGridColumn( _M('Unidade', $module), 'center', false, null, true, null, true ),
                          new MGridColumn( _M('Cdigo do vnculo de currculo', $module),  'right',  true, null, false, null, true ),
                          new MGridColumn( _M('Cdigo do curso', $module) . ' / ' . _M('verso', $module), 'right', true, null, true, null, true ),
                          new MGridColumn( _M('Nome do curso', $module), 'left', true, null, false, null, true ),
                          new MGridColumn( _M('Cdigo da disciplina', $module) . ' / ' . _M('verso', $module), 'right', true, null, true, null, true ),
                          new MGridColumn( _M('Nome da disciplina', $module), 'left', false, null, true, null, true ),
                          new MGridColumn( _M('Turno', $module), 'center', false, null, true, null, true ),
                          new MGridColumn( _M('Unidade', $module), 'center', false, null, true, null, true )
                        );

        $primaryKey = array( 'curriculumId'=>'%0%',
                             'curriculumLinkId'=>'%7%');

        parent::__construct($filters, $columns, 'GrdCurriculumLinkSearch', $primaryKey);
    }
    
    /*
     * Set default grid actions
     */
    public function setDefaultGridActions($primaryKey = array())
    {
        $MIOLO = MIOLO::getInstance();

        if ( is_array($primaryKey) )
        {
            $optsDeleteFunction['function'] = SForm::FUNCTION_DELETE;
            $optsDeleteEvent['event'] = 'tbBtnDelete_click';
            $optsDelete = array_merge($optsDeleteFunction, $primaryKey, $optsDeleteEvent);
        }

        $hrefDelete = $MIOLO->getActionURL($this->module, $this->action, null, $optsDelete);
        $this->addActionDelete($hrefDelete);
    }
}
