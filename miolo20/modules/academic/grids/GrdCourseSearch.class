class GrdCourseSearch extends SGrid
{

    /**
     * Class constructor
     */
    public function __construct($filters)
    {
        $MIOLO = MIOLO::getInstance();
        $module = $MIOLO->getCurrentModule();
        
        /*
         * MGridColumn constructor parameters:
         *    $title = ''
         *    $align = 'left'
         *    $nowrap = false
         *    $width = 0
         *    $visible = true
         *    $options = null
         *    $order = false
         *    $filter = false
         */
        $columns = array( new MGridColumn(_M('Cdigo', $module), 'right', true, null, true, null, true),
                          new MGridColumn(_M('Nome', $module), 'left', false, null, true, null, true),
                          new MGridColumn(_M('Grau de formao', $module), 'right', true, null, true, null, true),
                          new MGridColumn(_M('Descrio do grau de formao', $module), 'left', true, null, true, null, true),
                          new MGridColumn(_M('Abreviatura', $module), 'left', true, null, true, null, true),
                          new MGridColumn(_M('Sigla', $module), 'left', true, null, true, null, true),
                          new MGridColumn(_M('Centro', $module), 'right', true, null, true, null, true),
                          new MGridColumn(_M('Nome do centro', $module), 'left', true, null, true, null, true),
                          new MGridColumn(_M('Data inicial', $module), 'left', true, null, true, null, true));

        $primaryKey = array('courseId' => '%0%');

        parent::__construct($filters, $columns, 'GrdSpcSearch', $primaryKey);
    }
}
