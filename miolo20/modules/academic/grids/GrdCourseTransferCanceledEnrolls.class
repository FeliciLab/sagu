/**
 * Grid used by form to display search results
 **/
class GrdCourseTransferCanceledEnrolls extends SGrid
{
    /**
     * Class constructor
     **/
    public function __construct($data)
    {
        $MIOLO = MIOLO::getInstance();
        
        $module = MIOLO::_request('module');    
        
        $columns = array(
                          new MGridColumn(_M('*', $module), 'left', false, 0, true),
                          new MGridColumn(_M('Código', $module), 'left', false, 0, false),
                          new MGridColumn(_M('Groupid', $module), 'left', false, 0, false),
                          new MGridColumn(_M('Período', $module), 'left', false, 0, true),
                          new MGridColumn(_M('Disciplina', $module), 'left', false, 0, true),
                          new MGridColumn(_M('C.H. disciplina', $module), 'right', false, 0, true),
                          new MGridColumn(_M('Status', $module), 'right', false, 0, true)
                        );                
 
        parent::__construct($data, $columns, __CLASS__);

        $this->setIsScrollable();
        $this->eventHandler();        
        $this->disablePagination();
    }
}

