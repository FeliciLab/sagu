/**
 * Grid used by form to display search results
 **/
class GrdPupilListingOp9 extends MGrid
{
    /**
     * Class constructor
     **/
    public function __construct($filters)
    {
        $MIOLO = MIOLO::getInstance();
        $module = $MIOLO->getCurrentModule();
        $home   = 'main:report:pupilListing';

        $columns = array( new MGridColumn(_M('Código da disciplina oferecida', $module),   'right', true, null, true, null, false ),
                          new MGridColumn(_M('Código da disciplina', $module), 'right', true, null, true, null, false), 
                          new MGridColumn(_M('Disciplina', $module),   'left',  false, null, true, null, false ),
                          new MGridColumn(_M('Horário', $module) . '(s)', 'left', false, null, true, null, false),
                          new MGridColumn(_M('Professor', $module) . '(s)', 'left', false, null, true, null, false),
                          new MGridColumn(_M('Matriculado', $module), 'right', true, null, true, null, false),
                          new MGridColumn(_M('Aprovado', $module), 'right',  true, null, true, null, false ),
                          new MGridColumn(_M('Reprovados', $module), 'right',  true, null, true, null, false ),
                          new MGridColumn(_M('Desistente', $module), 'right', true, null, true, null, false),
                          new MGridColumn(_M('Cancelado', $module), 'right', true, null, true, null, false)
                        );

        $url = $MIOLO->getActionURL( $module, $home, null, $opts );

        parent::__construct( $filters, $columns, $url, 0/*SAGU::getParameter('BASIC', 'LISTING_NREGS')*/, 0, 'gridPupilListingOp9' );

        //$this->setIsScrollable();
        $this->eventHandler();
    }

}

