/**
 * Grid used by form to display search results
 **/
class GrdReasonSearch extends SGrid
{
    /**
     * Class constructor
     **/
    public function __construct($filters)
    {
        $MIOLO = MIOLO::getInstance();
        $module = SAGU::getFileModule(__FILE__);

        $columns = array(
            new MGridColumn( _M('Código do motivo', $module),                             'right', true, null, true, null, true ),
            new MGridColumn( _M('Descrição', $module),                                        'left',  true, null, true, null, true ),
            new MGridColumn( _M('Código do estado contratual', $module),           'right', true, null, true, null, true ),
            new MGridColumn( _M('Descrição do estado contratual', $module),      'left',  true, null, true, null, true )
        );

        $primaryKey = array('reasonId' => '%0%');

        parent::__construct($filters, $columns, __CLASS__, $primaryKey);
    }

}

