/**
 * Grid used by form to display search results
 **/
class GrdPupilListingOp3 extends SGrid
{
    var $totalFooter;
    /**
     * Class constructor
     **/
    public function __construct($filters)
    {
        $MIOLO = MIOLO::getInstance();
        $module = $MIOLO->getCurrentModule();
        $home   = 'main:report:pupilListing';

        $returnPath = urlencode($home);
        $returnData = urlencode(serialize(array('filter' => MIOLO::_request('filter'), 'reportOption' => MIOLO::_request('reportOption'))));

        $url_pupils = $MIOLO->getActionURL($module, 'main:report:listcoursepupils', null, array('courseId'=>'#0#', 'unitId'=>'#5#', 'courseVersion'=>'#1#', 'turnId'=>'#3#', 'returnPath' => $returnPath, 'returnData' => $returnData));
        
        $columns = array( new MGridColumn( _M('Código', $module),   'right', true, null, true, null, false ), 
                          new MGridColumn('', 'left', false, 0, false),                  
                          //new MGridColumn( _M('Curso', $module), 'left', false, null, true, null, false),
                          new MGridHyperlink( _M('Curso', $module), $url_pupils, null, true, null, false ),
                          new MGridColumn('', 'left', false, 0, false),
                          new MGridColumn('', 'left', false, 0, false),
                          new MGridColumn('', 'left', false, 0, false),
                          new MGridColumn( _M('Unidade', $module), 'left', true, null, true, null, false),
                          new MGridColumn( _M('Quantidade', $module), 'center', true, null, true, null, false)
                          );

        parent::__construct( $filters, $columns, 'GrdPupilListingOp3');
        unset($this->actions);
        $this->setRowMethod($this, 'myRowMethod');
        $this->setFooter('<b>' . _M('Total de alunos', $module) . ':</b>&nbsp;');
        
    }

    public function myRowMethod($i, $row, $actions, $columns )
    {
        $this->totalFooter += $row[7];
    }

    public function generateFooter( )
    {
        $MIOLO  = MIOLO::getInstance( );
        $module = $MIOLO->getCurrentModule( );

        $controls = array( new mText( '', $this->totalFooter));
        $controls = array_merge( parent::generateFooter(), $controls);
        return $controls;
    }

}

