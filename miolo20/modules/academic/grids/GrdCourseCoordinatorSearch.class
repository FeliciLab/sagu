class GrdCourseCoordinatorSearch extends SGrid
{
    /**
     * Class constructor
     **/
    public function __construct($filters)
    {
        $MIOLO = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();

        /*
         * MGridColumn constructor parameters:
         *    $title = ''
         *    $align = 'left'
         *    $nowrap = false
         *    $width = 0
         *    $visible = true
         *    $options = null
         *    $order = false
         *    $filter = false
         */
        $columns = array( new MGridColumn( _M('Cdigo do curso', $module), 'right',  true, null, false, null, true ),
                          new MGridColumn( _M('Verso do curso', $module), 'right',  true, null, false, null, true ),
                          new MGridColumn( _M('Cdigo do curso', $module) . ' / ' . _M('verso', $module), 'right',  true, null, true, null, true ),
                          new MGridColumn( _M('Nome do curso', $module), 'left',  false, null, true, null, true ),
                          new MGridColumn( _M('Cdigo do turno', $module), 'right', true, null, false, null, true ),
                          new MGridColumn( _M('Turno', $module), 'left',  true, '10%', true, null, true ),
                          new MGridColumn( _M('Cdigo da unidade', $module), 'right', true, null, false, null, true ),
                          new MGridColumn( _M('Unidade', $module), 'left',  true, '10%', true, null, true ),
                          new MGridColumn( _M('Cdigo do coordenador', $module), 'right', true, null, false, null, true ),
                          new MGridColumn( _M('Coordenador', $module), 'left',  false, null, true, null, true ),
                          new MGridColumn( _M('Data inicial', $module), 'left',  true, null, true, null, true ),
                          new MGridColumn( _M('Data final', $module), 'left',  true, null, true, null, true ),
                          new MGridColumn( _M('Nvel hierrquico', $module), 'left',  true, null, true, null, true ),
                          new MGridColumn( _M('Deve enviar e-mail', $module), 'left',  true, null, true, array( DB_TRUE => _M('Sim',$module), DB_FALSE => _M('No',$module) ), true ),
                          new MGridColumn( _M('E-mail', $module), 'left', true, null, true, null, true ),
                          new MGridColumn( _M('Nvel de expirao', $module), 'left', true, null, true, null, true ));

        $primaryKey = array('courseId'=>'%0%',
                            'courseVersion'=>'%1%',
                            'turnId'=>'%4%',
                            'unitId'=>'%6%',
                            'coordinatorId'=>'%8%');
        
        parent::__construct($filters, $columns, 'GrdCourseCoordinatorSearch', $primaryKey);
    }
}
