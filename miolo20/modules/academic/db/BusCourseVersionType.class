/**
 * Class to manipulate the acdCourseVersionType table
 **/
class BusinessAcademicBusCourseVersionType extends sBusiness
{

    const REGIME_CREDITO = 'C';
    const REGIME_SERIADO_FLEXIVEL = 'F';
    const REGIME_SERIADO_RIGIDO = 'R';

    /**
     * List all records from the table handled by the class
     *
     * @param: None
     *
     * @returns (array): Return an array with the entire table
     *
     **/
    public function listCourseVersionType()
    {
        $sql = 'SELECT courseVersionTypeId,
                       description   
                  FROM acdCourseVersionType   
              ORDER BY description';

        $db  = $this->getDatabase();
        $ret = $db->query($sql);
        

        return $ret;
    }
    
    public static function listCourseRegimen()
    {
        $data = array(
            self::REGIME_CREDITO=>_M('Crédito'),
            self::REGIME_SERIADO_FLEXIVEL=>_M('Seriado flexivel'),
            self::REGIME_SERIADO_RIGIDO=>_M('Seriado rígido'),
        );
        
        return $data;
    }

        /**
     * Return a specific record from the database
     *
     * @param $courseVersionTypeId (integer): Primary key of the record to be retrieved
     *
     * @return (object): Return an object of the type handled by the class
     *
     **/
    public function getCourseVersionType($courseVersionTypeId)
    {
        $courseVersionType = NULL;
        
        if ( strlen($courseVersionTypeId) > 0 )
        {
            $sql = 'SELECT courseVersionTypeId,
                           description,
                           regimen,
                           userName,
                           TO_CHAR(dateTime,\'' . SAGU::getParameter('BASIC', 'MASK_TIMESTAMP') . '\'),
                           ipAddress
                      FROM acdCourseVersionType
                     WHERE courseVersionTypeId = ?';

            $db     = $this->getDatabase();
            $result = $db->query(SAGU::prepare($sql, $courseVersionTypeId));


            $courseVersionType = new acdCourseVersionType();
            list ( $courseVersionType->courseVersionTypeId,
                   $courseVersionType->description,
                   $courseVersionType->regimen,
                   $courseVersionType->userName,
                   $courseVersionType->dateTime,
                   $courseVersionType->ipAddress ) = $result[0];
        }

        return $courseVersionType; 
    }
    
    /**
     * Do a search on the database table handled by the class
     *
     * @param $filters (object): Search filters
     *
     * @return (array): An array containing the search results
     **/
    public function searchCourseVersionType($filters)
    {
        $sql= 'SELECT courseVersionTypeId,
                      description,
                      regimen
                 FROM acdCourseVersionType ';

        if ( strlen($filters->courseVersionTypeId) > 0 )
        {
            $where .= ' AND courseVersionTypeId = ? ';
            $args[] = $filters->courseVersionTypeId;
        }
        if ( strlen($filters->description) > 0 )
        {
            $where .= ' AND UNACCENT(description) ILIKE UNACCENT(?) ';
            $args[] = $filters->description . '%';
        }

        unset($result);
        if ( strlen($where) > 0 )
        {
            $sql .= ' WHERE ' . substr($where, 4) . '
                   ORDER BY description';

            $db = $this->getDatabase();
            $result = $db->query(SAGU::prepare($sql, $args));
            
        }

        return $result;
    }

    /**
     * Insert a new record
     *
     * @param $data (object): An object of the type handled by the class
     *
     * @return True if succed, otherwise False
     *
     **/
    public function insertCourseVersionType($data)
    {
        $sql = 'INSERT INTO acdCourseVersionType
                            (description, regimen)
                     VALUES (?, ?)';

        $args = array( $data->description, $data->regimen );

        $db     = $this->getDatabase();
        $result = $db->execute(SAGU::prepare($sql, $args));
        

        return $result;
    }

    /**
     * Update data from a specific record
     *
     * @param $data (object): Data which will replace the old record data
     *
     * @return (boolean): True if succeed, otherwise False
     *
     **/
    public function updateCourseVersionType($data)
    {
        $sql = 'UPDATE acdCourseVersionType
                   SET description = ?,
                        regimen = ?
                 WHERE courseVersionTypeId = ?';

        $args = array( $data->description,
                        $data->regimen,
                       $data->courseVersionTypeId );

        $db   = $this->getDatabase();
        $sqls = SAGU::prepare($sql, $args);

        for ( $i=0; $i<count($sqls); $i++ )
        {
            $result = $db->execute($sqls[$i]);
        }

        

        return $result;
    }

    /**
     * Delete a record
     *
     * @param $courseVersionTypeId (string): Primary key for deletion
     *
     * @return (boolean): True if succeed, otherwise False
     *
     **/
    public function deleteCourseVersionType($courseVersionTypeId)
    {
        $sql = 'DELETE FROM acdCourseVersionType
                      WHERE courseVersionTypeId = ?';

        $db     = $this->getDatabase();
        $result = $db->execute(SAGU::prepare($sql, $courseVersionTypeId));
        

        return $result;
    }

}

