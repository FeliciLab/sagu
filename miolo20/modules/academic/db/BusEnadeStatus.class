/**
 * Class to manipulate the basPupilListing table
 **/
class BusinessAcademicBusEnadeStatus extends sBusiness
{
    /**
     *  Return the ENADE status list
     *
     * @return (array): Array containing the results.
     */
     public function listEnadeStatus()
     {
        $module = MIOLO::getCurrentModule();

        set_time_limit(0);

        $sql = 'SELECT enadeStatusId,
                       description
                  FROM acdEnadeStatus';

        $result = $this->getDatabase()->query($sql);

        return $result;
    }
}
