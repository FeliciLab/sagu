class glandataLayout extends accLayoutDoArquivoDeExportacao
{
    private $sequencia = 1;
    
    public function __construct($data, $delimitador = ' ')
    {
        parent::__construct($data, $delimitador);
    }
    
    public function popularCampos()
    {
        //Data vinda do formulrio
        $data = $this->getData();
        
        //Cdigo do lote
        $codLote = rand('100000', '999999');
        $this->lotes[$codLote]['cod'] = $codLote;
        
        //Linha
        $linha = 0;
        
        
        //Para cada lanamento
        foreach ( $data as $lancamento )
        {
            $contaDebito = explode('.', $lancamento['conta_debito']);
            $contaCredito = explode('.', $lancamento['conta_credito']);
            
            $conta = implode('', $contaDebito);
            $contraPartida = implode('', $contaCredito);

            //Seno vier com o nmero da nota,  uma atrelada
            $notaFiscal = $lancamento['numero_nota'];
            if ( !(strlen($notaFiscal) > 0) )
            {
                $notaFiscal = FinNfe::obterNumeroNotaFiscalAPartirDeTitulo($lancamento['cod_titulo']);
            }
            
            $this->addCampoCorpo($codLote, $linha, new campoDoArquivo(0, 001, 020, str_pad($conta, 20))); //Conta
            $this->addCampoCorpo($codLote, $linha, new campoDoArquivo(1, 022, 020, str_pad($contraPartida, 20))); //Contra Partida
            $this->addCampoCorpo($codLote, $linha, new campoDoArquivo(2, 043, 002, substr($lancamento['data_entrada'], 0, 2))); //Dia
            $this->addCampoCorpo($codLote, $linha, new campoDoArquivo(3, 046, 001, 'A')); //Tipo de lanamento
            $this->addCampoCorpo($codLote, $linha, new campoDoArquivo(4, 048, 015, str_pad(SAGU::calcNumber($lancamento['valor'] ,true), 15, '0', STR_PAD_LEFT))); //Valor
            $this->addCampoCorpo($codLote, $linha, new campoDoArquivo(5, 064, 004, str_pad($lancamento['cod_operacao'], 4, '0', STR_PAD_LEFT))); //Histrico dbito
            $this->addCampoCorpo($codLote, $linha, new campoDoArquivo(6, 068, 100, str_pad($lancamento['observacao_operacao'], 100))); //Descrio histrico dbito
            $this->addCampoCorpo($codLote, $linha, new campoDoArquivo(7, 169, 004, str_pad($lancamento['cod_operacao'], 4, '0', STR_PAD_LEFT))); //Histrico crdito
            $this->addCampoCorpo($codLote, $linha, new campoDoArquivo(8, 173, 100, str_pad($lancamento['observacao_operacao'], 100))); //Descrio histrico crdito
            $this->addCampoCorpo($codLote, $linha, new campoDoArquivo(9, 273, 004, '0000')); //Padro
            $this->addCampoCorpo($codLote, $linha, new campoDoArquivo(10, 278, 004, $this->getSequencia())); //Sequncia
            $this->addCampoCorpo($codLote, $linha, new campoDoArquivo(11, 282, 001, ' ')); //Operao de conciliao
            $this->addCampoCorpo($codLote, $linha, new campoDoArquivo(12, 283, 003, '   ')); //Origem
            $this->addCampoCorpo($codLote, $linha, new campoDoArquivo(13, 286, 012, str_pad($notaFiscal, 12))); //Nmero do documento
            $this->addCampoCorpo($codLote, $linha, new campoDoArquivo(14, 298, 020, str_repeat(' ', 20))); //Conta de apropriao
            $this->addCampoCorpo($codLote, $linha, new campoDoArquivo(15, 318, 010, str_repeat(' ', 10))); //Data da apropriao
            $this->addCampoCorpo($codLote, $linha, new campoDoArquivo(16, 328, 014, str_repeat(' ', 14))); //CNPJ/CPF para apropriao
            $this->addCampoCorpo($codLote, $linha, new campoDoArquivo(17, 342, 060, str_repeat(' ', 60))); //Nome para apropriao
            $this->addCampoCorpo($codLote, $linha, new campoDoArquivo(18, 402, 001, ' ')); //Tipo de pessoa jurdica
            $this->addCampoCorpo($codLote, $linha, new campoDoArquivo(19, 403, 097, str_repeat(' ', 97))); //Filler
            $this->addCampoCorpo($codLote, $linha, new campoDoArquivo(20, 500, 001, '1')); //Tipo do registros
            $this->addCampoCorpo($codLote, $linha, new campoDoArquivo(21, 501, 001, '')); //Controle de final de registro
            
            $linha++;
        }
    }
    
    /**
     * Obtm sequncia atual, j formatada.
     * 
     * @return (int)
     */
    private function getSequencia()
    {
        $sequencia = str_pad($this->sequencia, 04, '0', STR_PAD_LEFT);
        $this->sequencia++;
        
        return $sequencia;
    }
}
