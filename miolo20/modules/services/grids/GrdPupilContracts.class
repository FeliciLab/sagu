/**
 * Grid used by form to display search results
 **/
class GrdPupilContracts extends MGrid
{
    /**
     * Class constructor
     **/
    public function __construct($filters)
    {
        $MIOLO = MIOLO::getInstance();
        
        $home   = 'main:pupil:pupilContracts';
        $module = MIOLO::_request('module');

        /*
         * MGridColumn constructor parameters:
         *    $title = ''
         *    $align = 'left'
         *    $nowrap = false
         *    $width = 0
         *    $visible = true
         *    $options = null
         *    $order = false
         *    $filter = false         
         */
        $columns = array( 
                          new MGridColumn( _M('Código do contrato', $module),         'right', true, null, true,  null, true),
                          new MGridColumn( _M('Curso', $module),              'left', true, null, true,  null, true),
                          new MGridColumn( _M('Turno', $module),                'left', true, null, true,  null, true),
                          new MGridColumn( _M('Unidade', $module),                'left', true, null, true,  null, true),
                          new MGridColumn( _M('Código do período letivo', $module), 'right', true, null, false,  null, true),
                          new MGridColumn( _M('Código do período', $module),           'right', true, null, true, null, true)
                        );

        $opts = array('contractId'       => '%0%',
                      'learningPeriodId' => '%4%',
                      'personId'         => $filters->personId,
                      'isAdjustment'     => $filters->isAdjustment,
                      'event'            => 'action_click');
                      
        $actionURL = $MIOLO->getActionURL( $module, $home, null, $opts );

        $url = $MIOLO->getActionURL($module, $home, null, array('periodId' => $filters->periodId));
        parent::__construct( null, $columns, $url, 0, 0, 'grdResults' );

        $this->setLinkType('hyperlink');
        
        if ($filters->isAdjustment == DB_TRUE)
        {
            $iconName = 'enrollAdjust';
            $label    = _M('Ajustar matrícula', $module);
        }
        else
        {
            $iconName = 'enroll';
            $label    = _M('Matricular-se', $module);
        }
        
        $this->addActionIcon( $label, $iconName, $actionURL );
        
        $this->eventHandler();

    }
}

?>
