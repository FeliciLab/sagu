class GrdMaterialRequestSearch extends SGrid
{
    public function __construct($filters)
    {
        $MIOLO = MIOLO::getInstance();
        $module = SAGU::getFileModule(__FILE__);

        // Columns
        $columns = array();
        $columns[] = new MGridColumn(_M('Cdigo', $module), 'left', true, null, false, null, true);
        $columns[] = new MGridColumn(_M('Status', $module), 'left', true, null, true, null, true);
        $columns[] = new MGridColumn(_M('Motivo do status', $module), 'left', false, '200', true, null, true);        
        $columns[] = new MGridColumn(_M('Tipo de material', $module), 'left', true, null, true, null, true);        
        $columns[] = new MGridColumn(_M('Material', $module), 'left', true, null, true, null, true);
        $columns[] = new MGridColumn(_M('Data de sada (solicitada)', $module), 'left', true, null, true, null, true);
        $columns[] = new MGridColumn(_M('Data de retorno (solicitada)', $module), 'left', true, null, true, null, true);
        $columns[] = new MGridColumn(_M('Cancelamento da solicitao', $module), 'left', true, null, false, null, true);
        $columns[] = new MGridColumn(_M('Data de retirada (agendada)', $module), 'left', true, null, true, null, true);
        $columns[] = new MGridColumn(_M('Data de retorno (agendada)', $module), 'left', true, null, true, null, true);
        $columns[] = new MGridColumn(_M('Retirada', $module), 'left', true, null, false, null, true);
        $columns[] = new MGridColumn(_M('Cancelamento de emprstimo', $module), 'left', true, null, false, null, true);
        $columns[] = new MGridColumn(_M('Data de devoluo', $module), 'left', true, null, true, null, true);        

        parent::__construct($filters, $columns, __CLASS__);    

        parent::clearActions();
        
        //Visualizar solicitao de material
        $goto = SForm::getPopupLink(array( 'method' => 'showMaterialRequestInfo', 'encodeArgs' => false, 'args'=> array('materialRequestId' => '%0%') ));
        $this->addActionIcon( _M('Visualizar solicitao de material', $module ), 'lupa.gif', $goto );
    }
}
