class GrdProtocolo extends SGrid
{ 
    
    public function __construct($filters)
    {
        $MIOLO = MIOLO::getInstance();
        $module = SAGU::getFileModule(__FILE__);
        
        $columns[] = new MGridColumn(_M('requestid', $module), 'center', false, null, false, null, false);
        $columns[] = new MGridColumn(_M('N Solicitao', $module), 'right', true, null, true, null, false);
        $columns[] = new MGridColumn(_M('Assunto', $module), 'left', true, null, true, null, false);
        $columns[] = new MGridColumn(_M('Data', $module), 'center', true, null, true, null, false);
        $columns[] = new MGridColumn(_M('Situao', $module), 'left', true, null, true, null, false);
       
        $primaryKey = array('requestid' => '%0%');
        
        parent::__construct($filters, $columns, __CLASS__, $primaryKey);
  
        $this->setRowMethod(__CLASS__, 'myRowMethod');
        $this->pageLength = 200;
        $this->actions = array();
    
        $imgCancelar = $MIOLO->getUI()->getImage('services', 'absence.png');
        $imgInfo = $MIOLO->getUI()->getImage('', 'button_index.png');
        $imgPrint = $MIOLO->getUI()->getImage('protocol', 'document-16x16.png');

        $urlcancelar = $MIOLO->GetActionURL($module, 'main:resmedica:protocolo', '', array('requestid' => '%0%', 'event' => 'cancelar_click'));
        $this->addActionIcon(_M('Cancelar Solicitao', $module), $imgCancelar, $urlcancelar);
        
        //$urlinfo = $MIOLO->GetActionURL($module, 'main:resmedica:protocolo', '', array('requestid' => '%0%', 'event' => 'visualizar_click'));
        $urlinfo = SForm::getAjaxAction('popupinfo','divinfo',false,$primaryKey,false,false);
        $this->addActionIcon(_M('Info', $module), $imgInfo, $urlinfo);
        
        $urldocumento = $MIOLO->GetActionURL($module, 'main:resmedica:protocolo', '', array('requestid' => '%0%', 'event' => 'gerardocumento_click'));
        $this->addActionIcon(_M('Gerar Documento', $module), $imgPrint, $urldocumento);
    }
    
     public function myRowMethod($i, $row, $actions, $columns )
    {
         if( $row[4] == 'CANCELADA')
         {
             $actions[0]->disable();  
             $actions[2]->disable();
         }
         else
         {
             $actions[0]->enable();
             $actions[2]->enable();
         }
    }
}
