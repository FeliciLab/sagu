class GrdPreceptorTeams extends SGrid
{
    public function __construct($filters)
    {
        $MIOLO = MIOLO::getInstance();
        $module = SAGU::getFileModule(__FILE__);

        $columns = array();
        $columns[] = new MGridColumn(_M('Cdigo', $module), 'right', true, null, true, null, true);
        $columns[] = new MGridColumn(_M('Descrio', $module), 'left',  true, null, true, null, true);
        $columns[] = new MGridColumn(_M('Grau equivalente', $module), 'left', true, NULL, false, NULL, true);
        $columns[] = new MGridColumn(_M('Grau equivalente', $module), 'left', true, NULL, false, NULL, true);
        $columns[] = new MGridColumn(_M('Tipo de avaliao', $module), 'left', true, NULL, false, NULL, true);
        $columns[] = new MGridColumn(_M('Forma de avaliao', $module), 'left', true, NULL, true, NULL, true);
        $columns[] = new MGridColumn(_M('Unidade/rea', $module), 'left', true, NULL, false, NULL, true);
        $columns[] = new MGridColumn(_M('Local', $module), 'left', true, NULL, false, NULL, true);
        $columns[] = new MGridColumn(_M('Preceptor', $module), 'left', true, NULL, false, NULL, true);
        $columns[] = new MGridColumn(_M('Nome', $module), 'left', true, NULL, false, NULL, true);
        $columns[] = new MGridColumn(_M('Incio', $module), 'right', true, NULL, true, NULL, true);
        $columns[] = new MGridColumn(_M('Fim', $module), 'right', true, NULL, true, NULL, true);
        $columns[] = new MGridColumn(_M('Vagas', $module), 'right', true, NULL, true, NULL, true);

        $primaryKey = array('teamId' => '%0%');

        parent::__construct($filters, $columns, __CLASS__, $primaryKey);

        $this->clearActions();
        $team = $MIOLO->getActionURL( 'services', 'main:training:trainingLocation', null, array('teamId' => '#0#', 'webservices' => DB_TRUE, 'preceptorTeams' => DB_TRUE));

        $this->addActionIcon(_M('Alunos da equipe', $module), 'default-16x16.png', $team);
    }
}
