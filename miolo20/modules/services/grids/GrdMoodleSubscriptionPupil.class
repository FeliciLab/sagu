/**
 * Grid used by form to display search results
 **/
class GrdMoodleSubscriptionPupil extends SGrid
{
    /**
     * Class constructor
     **/
    public function __construct($filters)
    {
        $module = MIOLO::getCurrentModule();

        $columns = array(
                          new MGridColumn( _M('Cdigo', $module), 'right', true, null, true, null, true ),
                          new MGridColumn( _M('Nome', $module), 'left',  true, null, true, null, true ),
                          new MGridColumn( _M('Status Moodle', $module), 'left',  true, null, true, null, true),
                          new MGridColumn( _M('Motivo Status', $module), 'left',  true, null, true, null, true )
                        );
        $primaryKey = array('personId' => '%0%');
        parent::__construct($filters, $columns, 'GrdMoodleSubscriptionPupil', $primaryKey);
    }
}
