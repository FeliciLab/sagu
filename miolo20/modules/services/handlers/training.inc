$home = 'main:training';
$module = SAGU::getFileModule(__FILE__);
$navbar->addOption(_M('Servios de estgio', $module), $module, $home, null, array('function' => 'resetStack'));

if ( !$MIOLO->invokeHandler($module, 'training/' . $context->shiftAction()) )
{
    $btnClose = $MIOLO->getActionURL('sagu2', 'main');
    $mioloUserName = trim($MIOLO->getLogin()->id);

    $pnlPupil = new MActionPanel('pnlTraining', _M('Servios de estgio', $module), NULL, $btnClose, $MIOLO->getUI()->getImage($module, 'training-16x16.png'));
    $pnlPupil->setControlSize('100px', '70px');

    unset($menuItem);
    $menuItem = array();
    $menuItem[] = array(_M('Histrico de estgios', $module), 'training-32x32.png', "$home:trainingHistory");
    //$menuItem[] = array(_M('Localizao de estgio', $module), 'training-32x32.png', "$home:trainingLocation");
    
    if( $MIOLO->checkAccess('FrmDocumentRequest', A_ACCESS, false, true) )
    {
        $menuItem[] = array(_M('Solicitao de servio', $module), 'documentRequest-32x32.png', "main:documentRequest");
    }
    
    if( $MIOLO->checkAccess('FrmPersonalAgenda', A_ACCESS, false, true) )
    {
        $menuItem[] = array(_M('Agenda pessoal', $module), 'personalAgenda-32x32.png', "main:personalAgenda");
    }
        
    $sortMenuItem = SAGU::arraySort($menuItem, 0);
    foreach ( $sortMenuItem as $m )
    {
        $pnlPupil->addAction($m[0], $MIOLO->getUI()->getImage($module, $m[1]), $module, $m[2], $m[3], $m[4]);
    }
    $theme->appendContent($pnlPupil);
    $sep = new MSeparator();
    $theme->appendContent($sep);
}
