$home = 'main:agreement';
$module = SAGU::getFileModule(__FILE__);
$navbar->addOption(_M('Servio da conveniada', $module), $module, $home, null, array('function' => 'resetStack'));

// Obtm o usurio da pessoa logada e obtm os dados dela
$mioloUserName = trim($MIOLO->getLogin()->id);
$busPerson = new BusinessBasicBusPerson();
$personData = $busPerson->getPersonByMioloUserName($mioloUserName);

$isAgreement = TraAddendumCourseAdmin::isAgreement($personData->personId);
if ( !$isAgreement )
{
    $MIOLO->error(_M('Voc no  uma pessoa conveniada para acessar este contedo.', $module));
}
elseif ( !$MIOLO->invokeHandler($module, 'agreement/' . $context->shiftAction()) )
{
    $btnClose = $MIOLO->getActionURL('sagu2', 'main');

    if ( is_null($personData) )
    {
        $MIOLO->error(_M('No foi possvel obter os dados do usurio @1.', $module, $mioloUserName));
    }
    else
    {
        $pnlAgreement = new MActionPanel('pnlAgreement', _M('Conveniada', $module), NULL, $btnClose, $MIOLO->getUI()->getImage($module, 'agreement-16x16.png'));
        $pnlAgreement->setControlSize('100px', '70px');

        unset($menuItem);
        $menuItem[] = array(_M('Solicitao em massa', $module), 'personalData-32x32.png', "$home:trainingRequests");
        $menuItem[] = array(_M('Histrico de Estgios', $module), 'training-32x32.png', "main:training:requestHistory");
        $menuItem[] = array(_M('Listar solicitaes', $module), 'materialRequest-32x32.png', "$home:listRequests");

        $sortMenuItem = SAGU::arraySort($menuItem, 0);
        foreach ( $sortMenuItem as $m )
        {
            $pnlAgreement->addAction($m[0], $MIOLO->getUI()->getImage($module, $m[1]), $module, $m[2], $m[3]);
        }

        $theme->appendContent($pnlAgreement);
        $sep = new MSeparator();
        $theme->appendContent($sep);
    }
}
