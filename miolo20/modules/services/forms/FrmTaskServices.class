/**
 * Form to manipulate a task
 */
class FrmTaskServices extends FrmTask
{
    /**
     * Class constructor
     */
    public function __construct()
    {
        parent::__construct();
    }

    /**
     * Default method to define fields
     */
    public function defineFields()
    {
        parent::defineFields();
    }

    /**
     * Cria os botes padres voltar e salvar para o mdulo servios
     */
    public function getDefaultButtons()
    {
        $MIOLO = MIOLO::getInstance();
        $module = SAGU::getFileModule(__FILE__);
        $action = MIOLO::getCurrentAction();

        $btnBack = new MButton('tbBtnBack', _M('Voltar', $module), $MIOLO->getActionURL($module, $action, null));
        $btnSave = new MButton('tbBtnSave', _M('Salvar', $module));
        $fields[] = new MHContainer('htcButons', array($btnBack, $btnSave));

        return $fields;
    }
}
