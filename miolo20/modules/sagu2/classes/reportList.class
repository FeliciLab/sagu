class reportList
{
    /**
     * @var array 
     *
     * Vetor com chaves relacionadas s chaves presentes no vetor "$keys". Com 
     * isso, o usurio pode passar variaes diferentes da chave para obter o 
     * mesmo resultado.
     */
    private static $relatedKeys = array(
        'status de matrcula' => 'status da matricula',
        'status da matrcula' => 'status da matricula',
        'tipos de disciplinas' => 'tipo de disciplina',
        'areas' => 'area',
    );

    /**
     * @var array
     *
     * Vetor com os dados referentes s buscas que podem ser feitas em relatrios 
     * atravs de chaves. Deve conter os seguintes dados:
     * - module: mdulo ao qual os dados se referem;
     * - class: nome da classe. Se for um Business, deve conter o nome do aruqivo sem o .class;
     * - method: nome do mtodo que busca a lista de dados.
     * 
     */
    private static $keys = array(
        'turno' => array(
            'module' => 'basic',
            'class' => 'BusTurn',
            'method' => 'listTurn',
        ),
        'tipo de disciplina' => array(
            'module' => 'academic',
            'class' => 'BusCurricularComponentType',
            'method' => 'listCurricularComponentType',
        ),
        'status da matricula' => array(
            'module' => 'academic',
            'class' => 'BusEnrollStatus',
            'method' => 'listEnrollStatus',
        ),
        'area' => array(
            'module' => 'training',
            'class' => 'TraArea',
            'method' => 'listArea',
        ),
    );

    /**
     * Busca os dados a serem exibidos em um selection atravs da chave informada.
     *
     * @param string $key Chave.
     * @return array Dados para selection.
     */
    public static function search($key)
    {
        $MIOLO = MIOLO::getInstance();
        $key = strtolower($key);

        if ( key_exists($key, self::$relatedKeys) )
        {
            $key = self::$relatedKeys[$key];
        }

        $data = self::$keys[$key];
        $list = array();

        // Business
        if ( strtolower(substr($data['class'], 0, 3)) == 'bus' )
        {
            $MIOLO->uses("db/{$data['class']}.class", $data['module']);
            $ucModule = ucfirst($data['module']);
            $bus = "Business$ucModule{$data['class']}";

            try
            {
                $class = new $bus();
                $list = $class->{$data['method']}();
            }
            catch ( Exception $e )
            {
                // Utilizado eval para compatibilidade com verses antigas do PHP
                eval("\$list = $bus::{$data['method']}();");
            }
        }
        // Type
        else
        {
            $MIOLO->uses("types/{$data['class']}.class", $data['module']);

            // Utilizado eval para compatibilidade com verses antigas do PHP
            eval("\$list = {$data['class']}::{$data['method']}();");
        }

        return $list;
    }
}

