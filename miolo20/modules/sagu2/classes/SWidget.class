abstract class SWidget extends MBaseGroup
{
    /**
     * Construtor do SWidget.
     *
     * @param array $controles Componentes a serem exibidos no widget.
     * @param string $disposicao Disposio dos controles no widget.
     */
    public function __construct($controles, $disposicao='vertical')
    {
        parent::__construct($this->obterCodigo(), $this->obterNome(), $controles, $disposicao);

        $this->addBoxStyle('width', '100%');
    }

    /**
     * Mtodo que deve ser implmentado na classe filha e deve retornar a constante CODIGO. 
     */
    abstract public function obterCodigo();

    /**
     * Mtodo que deve ser implmentado na classe filha e deve retornar a constante NOME. 
     */
    abstract public function obterNome();
}

