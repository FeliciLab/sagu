/**
 * Form to generate the parameters table description
 **/
class FrmLdap extends MForm
{
    private $home;

    /**
     * Class constructor
     **/
    public function __construct($data)
    {

        $module     = MIOLO::getCurrentModule();
        $this->home = $data->home;
        parent::__construct(_M('LDAP', $module));

        $this->eventHandler();
    }

    /**
     * Default method to define fields
     **/
    public function createFields()
    {
        $MIOLO    = MIOLO::getInstance();
        $module   = MIOLO::getCurrentModule();
        $action   = MIOLO::getCurrentAction();

        $business = new BusinessSagu2BusDatabase();
        $result   = $business->getLdap();

        if ( count($result) > 0 )
        {

            $MIOLO->getClass($module, 'RptLdap');
            new RptLdap($result);

            $fields[] = new Separator();

            $this->setFields($fields);
            $this->setLabelWidth(SAGU::getParameter('BASIC', 'FIELD_LABEL_SIZE'));
            $this->setShowPostButton(false);
            $this->setClose($MIOLO->getActionURL($module, substr($this->home, 0, strrpos($this->home, ':'))));
        }
        else
        {
            $msg     = _M('Erro executando a operação solicitada.',$module);
            $goto    = $MIOLO->getActionURL($module,substr($this->home,0,strrpos($this->home,':')));
            $caption = _M('Erro',$module);
            $MIOLO->error( $msg, $goto, $caption );
        }
    }

}

