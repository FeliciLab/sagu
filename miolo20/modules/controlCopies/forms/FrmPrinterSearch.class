/**
 * Form to search the ccpCopy table
 */
class FrmPrinterSearch extends MForm
{
    public $home;
    public $module;
    public $business;
    public $MIOLO;


    /**
     * Class constructor
     */
    public function __construct($data)
    {
        $this->home     = $data->home;
        $this->MIOLO    = MIOLO::getInstance();
        $this->module   = MIOLO::getCurrentModule();
        $this->business = new BusinessControlCopiesBusPrinter();
        parent::__construct(_M('Localizar','basic'));
        $this->setShowPostButton(false);
        $this->setHelp(get_class($this), MIOLO::getCurrentModule(), MIOLO::getCurrentAction());
        $this->eventHandler();
    }


    /**
     *  Default method to define fields
     */
    public function createFields()
    {
        $action             = MIOLO::getCurrentAction();
        $toolBar            = new MToolBar('toolBar',$this->MIOLO->getActionURL($this->module,$action));
        $toolBar            ->disableButton('tbBtnSave');
        $toolBar            ->disableButton('tbBtnDelete');
        $toolBar            ->disableButton('tbBtnPrint');
        $fields[]           = $toolBar;
        $fields[]           = new MHiddenField('printerId');
        $fields[]           = new MTextField('printerName', null, _M('Nome', $this->module), SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE'));
        $resourceLabel      = new MLabel( _M('Recurso fsico',$this->module).':');
        $resourceLabel      ->setWidth(SAGU::getParameter('BASIC', 'FIELD_LABEL_SIZE'));
        $resourceLabel      ->setClass('m-caption');
        $resourceID         = new MLookupTextField('physicalResourceId', $this->getFormValue('physicalResourceId',$data->physicalResourceId), '', SAGU::getParameter('BASIC', 'FIELD_ID_SIZE'), null, null, 'physicalResourceVersion, description', $this->module,'physicalResource', null, null, true);
        $resourceName       = new MTextField('description', $this->getFormValue('description',$data->description), '', SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE'));
        $resourceName       ->setReadOnly(true);
        $resourceVersion    = new MHiddenField('physicalResourceVersion');
        $hctResource        = new MHContainer('hctResource', array($resourceLabel, $resourceID, $resourceName, $resourceVersion));
        $fields[]           = $hctResource;
        $fields[]           = new MSeparator('');
        $fields[]           = new MButton('btnSearch',_M('Localizar',$this->module));
        $this               ->setLabelWidth(SAGU::getParameter('BASIC', 'FIELD_LABEL_SIZE'));
        $this               ->setFields($fields);
        $this               ->setValidators($validators);
    }


    /**
    * Function called when user click Search
    */
    public function btnSearch_click()
    {
        $data           = getTypesData('ccpPeriod');
        $data           ->printerName = MIOLO::_REQUEST('printerName');
        $grdResults     = $this->MIOLO->getUI()->getGrid(MIOLO::getCurrentModule(),'GrdPrinterSearch',$data);
        $result         = $this->business->searchPrinter($data);
        $grdResults     ->setData($result);
        $this           ->addField($grdResults);
    }
}
