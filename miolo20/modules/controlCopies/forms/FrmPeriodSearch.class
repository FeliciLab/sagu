/**
 * Form to search the ccpCopy table
 */
class FrmPeriodSearch extends MForm
{
    public $home;
    public $module;
    public $business;
    public $MIOLO;


    /**
     * Class constructor
     */
    public function __construct($data)
    {
        $this->home     = $data->home;
        $this->MIOLO    = MIOLO::getInstance();
        $this->business = new BusinessControlCopiesBusCcpPeriod();
        parent::__construct(_M('Localizar','basic'));
        $this->setShowPostButton(false);
        $this->setHelp(get_class($this), MIOLO::getCurrentModule(), MIOLO::getCurrentAction());
        $this->eventHandler();
    }


    /**
     *  Default method to define fields
     */
    public function createFields()
    {
        $MIOLO          = MIOLO::getInstance();
        $module         = MIOLO::getCurrentModule();
        $action         = MIOLO::getCurrentAction();
        $toolBar        = new MToolBar('toolBar',$MIOLO->getActionURL($module,$action));
        $toolBar        ->disableButton('tbBtnSave');
        $toolBar        ->disableButton('tbBtnDelete');
        $toolBar        ->disableButton('tbBtnPrint');
        $fields[]       = $toolBar;
        $fields[]       = new MTextField('description', $data->description, _M('Descrio',$module), SAGU::getParameter('BASIC', 'FIELD_DESCRIPTION_SIZE'));
        $fields[]       = new MCalendarField('beginDate', $data->beginDate , _M('Data inicial', $module), SAGU::getParameter('BASIC', 'FIELD_DATE_SIZE'));
        $validators[]   = new MDateDMYValidator('beginDate', _M('Data inicial', $module) );
        $fields[]       = new MCalendarField('endDate', $data-endDate , _M('Data final', $module), SAGU::getParameter('BASIC', 'FIELD_DATE_SIZE'));
        $validators[]   = new MDateDMYValidator('endDate', _M('Data final', $module) );
        $fields[]       = new MButton('btnSearch',_M('Localizar',$module));
        $this           ->setLabelWidth(SAGU::getParameter('BASIC', 'FIELD_LABEL_SIZE'));
        $this           ->setFields($fields);
        $this           ->setValidators($validators);
    }


    /**
    * Function called when user click Search
    */
    public function btnSearch_click()
    {
        $MIOLO      = MIOLO::getInstance();
        $data       = getTypesData('ccpPeriod');
        $grdResults = $MIOLO->getUI()->getGrid(MIOLO::getCurrentModule(),'GrdPeriodSearch',$filters);
        $result     = $this->business->searchPeriod($data);
        $grdResults->setData($result);
        $this->addField($grdResults);
    }
}
