function getTypesData($class)
{
    eval('$data = new '.$class.';');
    $vars = get_object_vars($data);
    foreach ( $vars as $var => $value )
    {
        if ( $var != 'name' )
        {
            eval('$data->' . $var . ' = MIOLO::_REQUEST(\'' . $var . '\');');
        }
    }
    return $data;
}

