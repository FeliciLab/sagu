function getBoolean($value)
{
    $module = MIOLO::getCurrentModule();
    if ($value == 'Yes' || $value == 't' || $value == '1' || $value == true || $value =='true')
    {
        return _M('Sim', $module);
    }
    else
    {
        return _m('No', $module);
    }
}
