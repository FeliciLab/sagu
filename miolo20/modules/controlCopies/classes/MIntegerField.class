class MIntegerField extends MTextField
{
    public function MIntegerField($name , $value = '', $label = '', $size = 10, $hint = '', $validator = NULL, $isReadOnly = false, $required = false)
    {
        parent::__construct($name, $value, $label, $size, $hint, $validator, $isReadOnly);
        $validator = new MIntegerValidator($name, $label, 'optional');
        $this->setValidator($validator);
        $this->addAttribute('onkeypress', 'return OnlyNumbers2(event)');
        if ($required)
        {
            $requiredValidator = new MRequiredValidator($name, $label);
            $this->setValidator($requiredValidator);
        }
        $MIOLO  = MIOLO::getInstance();
        $module = $MIOLO->getCurrentModule();
        $this->page->addScript('MIntegerField.js', $module);
    }
}
