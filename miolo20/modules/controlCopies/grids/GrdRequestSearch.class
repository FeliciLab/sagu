/**
 * Grid used by form to display search results
 **/


class GrdRequestSearch extends MGrid
{
/**
     * Class constructor
     **/
    public function __construct($values)
    {
        $MIOLO   = MIOLO::getInstance();
        $home    = 'main:register:request';
        $module  = MIOLO::_request('module');
        $columns = array(
                            new MGridColumn( _M('Requisio',   $module), 'right', true, '5%', false, null, true ),
                            new MGridColumn( _M('Data',   $module), 'right', true, '5%', true, null, true ),
                            new MGridColumn( _M('Servio',   $module), 'right', true, '5%', false, null, true ),
                            new MGridColumn( _M('Servio',   $module), 'right', true, '5%', true, null, true ),
                            new MGridColumn( _M('Quantidade',   $module), 'left', true, '5%', true, null, true ),
                            new MGridColumn( _M('Setor',   $module), 'left', true, '5%', false, null, true ),
                            new MGridColumn( _M('Setor',   $module), 'left', true, '5%', true, null, true ),
                            new MGridColumn( _M('Centro',   $module), 'left', true, '5%', false, null, true ),
                            new MGridColumn( _M('Projeto',   $module), 'left', true, '5%', false, null, true ),
                            new MGridColumn( _M('Centro de custo',   $module), 'left', false, '10%', true, null, true ),
                            new MGridColumn( _M('referncia',   $module), 'left', true, '5%', true, null, true ),
                            new MGridColumn( _M('Pessoa',   $module), 'right', true, '8%', false, null, true ),
                            new MGridColumn( _M('Nome da pessoa',   $module), 'left', true, '27%', true, null, true ),
                            new MGridColumn( _M('Operador',   $module), 'right', true, '6%', true, null, true ),
                            new MGridColumn( _M('Setor do Operador', $module), 'left', true, '10%', false, null, true ),
                            new MGridColumn( _M('Setor do Operador', $module), 'left', true, '10%', true, null, true ),
                            new MGridColumn( _M('Valor unitrio',   $module), 'left', true, '8%', true, null, true )


//R.requestId , R.date, R.serviceId, S.description, R.amount, R.sectorId, SEC.description, R.centerId, R.projectId, R.costCenterId, R.referring, R.personId, BPP.name, R.operator, R.operatorSectorId, OP.description, R.unitaryValue"
                        );
        //opts    = functions in URL, %0% column in first position
        //href(s) = get URL, module and option from URL, passeds in opts
        $opts = array('function'=>'update','requestId' =>'%0%');
        $href_edit = $MIOLO->getActionURL( $module, $home, null, $opts );
        $opts = array('function'=>'delete', 'requestId'=>'%0%', 'event'=> 'tbBtnDelete_click');
        $href_delete = $MIOLO->getActionURL( $module, $home, null, $opts );
        unset($opts); //destroy the variable opts
        $url = $MIOLO->getActionURL($module,"$home:search",null,$opts);
        parent::__construct( null, $columns, $url, SAGU::getParameter('BASIC', 'LISTING_NREGS'), 0, 'gridRequest' );
        $this->setIsScrollable();
        $this->addActionUpdate( $href_edit );
        $this->addActionDelete( $href_delete );
        $this->eventHandler();
    }
}
?>