/**
 * Grid used by form to display search results
 **/


class GrdPeriodSearch extends MGrid
{
     /**
     * Class constructor
     **/
    public function __construct($values)
    {
        $MIOLO   = MIOLO::getInstance();
        $home    = 'main:register:period';
        $module  = MIOLO::_request('module');
        $columns = array(
                          new MGridColumn( _M('Setor', $module),    'center', true, null, false, null, true ),
                          new MGridColumn( _M('Descrio', $module),  'left',   true, null, true, null, true ),
                          new MGridColumn( _M('Data inicial', $module),   'left',   true, null, true, null, true ),
                          new MGridColumn( _M('Data final', $module),      'left',  true, null, true, null, true ),
                        );
        $opts = array('function' => 'update', '_id' => '%0%');
        $href_edit = $MIOLO->getActionURL( $module, $home, null, $opts );
        $opts = array('function' => 'delete', '_id' => '%0%','event'=> 'tbBtnDelete_click');
        $href_delete = $MIOLO->getActionURL( $module, $home, null, $opts );
        unset($opts);
        $url = $MIOLO->getActionURL($module,"$home:search",null,$opts);
        parent::__construct( null, $columns, $url, SAGU::getParameter('BASIC', 'LISTING_NREGS'), 0, 'gridPeriod' );
        $this->addActionUpdate( $href_edit );
        $this->addActionDelete( $href_delete );
        $this->eventHandler();
    }
}
?>